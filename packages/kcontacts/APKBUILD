# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcontacts
pkgver=99999_git20251022
pkgrel=0
_commit="d366e39cc99b79e02bf76da83dd7c0ccb017a93e"
pkgdesc="Address book API for KDE"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
# TODO: Replace gnupg with specific gnupg subpackages that kcontacts really needs.
depends="
	gnupg
	iso-codes
	"
depends_dev="
	kcodecs-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kcontacts.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/kcontacts-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kcontacts-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# kcontacts-addresstest requires Wayland display
	xvfb-run ctest --test-dir build -E "kcontacts-addresstest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
563f59dc96f5115fe5a5c844fce2864daab97d156aab341d812c04a719a16952d2e63ba77312b12d08140cac6c6e4175bf05885981ad05837aec99cd5318b1f6  kcontacts-d366e39cc99b79e02bf76da83dd7c0ccb017a93e.tar.xz
"
