# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=keepsecret
pkgver=99999_git20251217
pkgrel=0
_commit="1dbe5b62c7c2bba776e5e17b84339c288b3d55a4"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/utilities/keepsecret"
pkgdesc="A password manager GUI intended to be a client for a Secret Service compatible provider"
license="GPL-2.0-only AND (LGPL-2.0-only OR LGPL-2.1-only)"
depends="kirigami-addons"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kirigami-dev
	kitemmodels-dev
	libsecret-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	wayland-dev
	wayland-protocols
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/keepsecret.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-20/keepsecret-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/keepsecret-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d58d92e30f8c0250547027fb67eb19de6bad54b86dc83c3fbd099eee67c313964e406a39b163b65c35d6bb449a89a59bd841ae3cb1692db0ac8ec831ee933a98  keepsecret-1dbe5b62c7c2bba776e5e17b84339c288b3d55a4.tar.xz
"
