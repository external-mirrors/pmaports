# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=keepsecret
pkgver=99999_git20251203
pkgrel=0
_commit="124e45f00bb0410e6847e6669ce18cfc61cb2e6b"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/utilities/keepsecret"
pkgdesc="A password manager GUI intended to be a client for a Secret Service compatible provider"
license="GPL-2.0-only AND (LGPL-2.0-only OR LGPL-2.1-only)"
depends="kirigami-addons"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kirigami-dev
	kitemmodels-dev
	libsecret-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	wayland-dev
	wayland-protocols
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/keepsecret.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-05/keepsecret-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/keepsecret-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
