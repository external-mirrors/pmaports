# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=dolphin-plugins
pkgver=99999_git20260206
pkgrel=0
_commit="7b67e5b9db6742e97897607a00afd3c454ece7de"
pkgdesc="Extra Dolphin plugins"
url="https://www.kde.org/applications/system/dolphin/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	dolphin-dev
	extra-cmake-modules
	ki18n-dev
	kio-dev
	ktexteditor-dev
	ktextwidgets-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/dolphin-plugins.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/dolphin-plugins-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/dolphin-plugins-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_svn=OFF # Broken "error: expected unqualified-id before '(' token"
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
759027c59bf0c0e037fda595eb880efb6e29fe6a5c9532c863942b2d2ec0c4eb7f94d807763ecefd38327f063462d18bb1a0cb3fed204afa1b51dfeac9c650e7  dolphin-plugins-7b67e5b9db6742e97897607a00afd3c454ece7de.tar.xz
"
