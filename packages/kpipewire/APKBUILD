# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpipewire
pkgver=99999_git20251020
pkgrel=0
_commit="cf19875cba991ca6b8f792eb47e46a4b34b71b04"
pkgdesc="Components relating to pipewire use in Plasma"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="BSD-3-Clause AND CC0-1.0 AND LGPL-2.1-only AND LGPL-3.0-only AND LicenseRef-KDE-Accepted-LGPL"
depends="pipewire"
depends_dev="
	ffmpeg-dev
	kcoreaddons-dev
	ki18n-dev
	kwayland-dev
	libdrm-dev
	libepoxy-dev
	libva-dev
	pipewire-dev
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	wayland-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	pipewire-tools
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/plasma/kpipewire.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/kpipewire-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kpipewire-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8b2070114746b634aa43b49b8d99481e31ccd6c703fa7ea680ee4faaa77051939f0adfe07b13e8d966bda2b66db2d49a1fe9f1fae90ff16a9573dc06490c1deb  kpipewire-cf19875cba991ca6b8f792eb47e46a4b34b71b04.tar.xz
"
