# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpipewire
pkgver=99999_git20250716
pkgrel=0
_commit="50b769af03cca4b992a8b3ef2916bd5e50c752c4"
pkgdesc="Components relating to pipewire use in Plasma"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="BSD-3-Clause AND CC0-1.0 AND LGPL-2.1-only AND LGPL-3.0-only AND LicenseRef-KDE-Accepted-LGPL"
depends="pipewire"
depends_dev="
	ffmpeg-dev
	kcoreaddons-dev
	ki18n-dev
	kwayland-dev
	libdrm-dev
	libepoxy-dev
	libva-dev
	pipewire-dev
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	wayland-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	pipewire-tools
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/plasma/kpipewire.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-17/kpipewire-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kpipewire-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
516ee50fe4a436b65fdf493cb380b2a2efc5c2c49f2bc989fa3fe442ff97aa659c810175cc9725d7f50b114aecb752009b1f23d4e4ee4271a2e5fc59e9025c95  kpipewire-50b769af03cca4b992a8b3ef2916bd5e50c752c4.tar.xz
"
