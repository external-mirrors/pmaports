# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=sonnet
pkgver=99999_git20251018
pkgrel=0
_commit="4e209df7f01865df8af9b4baa3b1ce80f26fe921"
pkgdesc="Spelling framework for Qt"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends="hunspell"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	hunspell-dev
	kde-qdoc-common
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/sonnet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/sonnet-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/sonnet-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# sonnet-test_autodetect fails to detect a speller backend
	xvfb-run ctest --test-dir build -E "sonnet-test_autodetect"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
943c6edefbbda1f21aca852c30f7fee1f1ceae6fade1a2fb1b011412fe6f82cd4b92fbba7c8629b10ecf4dbaaf47f0a6982f75b93cb833862891a9280fa367d0  sonnet-4e209df7f01865df8af9b4baa3b1ce80f26fe921.tar.xz
"
