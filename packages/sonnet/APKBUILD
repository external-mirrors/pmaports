# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=sonnet
pkgver=99999_git20251017
pkgrel=0
_commit="994a9b864accaf60442a4ea41c13bdbb04c79044"
pkgdesc="Spelling framework for Qt"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends="hunspell"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	hunspell-dev
	kde-qdoc-common
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/sonnet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/sonnet-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/sonnet-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# sonnet-test_autodetect fails to detect a speller backend
	xvfb-run ctest --test-dir build -E "sonnet-test_autodetect"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
0f7dd75c28eec97c39de59907317dd8a80380ebbce20c66c56211e69efddea8f3b41530167653357177ad64ac8caf27b171d270ccfa350d47f3158d5d191bbb8  sonnet-994a9b864accaf60442a4ea41c13bdbb04c79044.tar.xz
"
