# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-vault
pkgver=99999_git20250922
pkgrel=0
_commit="01c2c7eca7cb54e9626a0d1993159dabee97b940"
pkgdesc="Plasma applet and services for creating encrypted vaults"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="(GPL-2.0-only OR GPL-3.0-only) AND (LGPL-2.1-only AND LGPL-3.0-only)"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kitemmodels-dev
	kwidgetsaddons-dev
	libksysguard-dev
	libplasma-dev
	networkmanager-qt-dev
	plasma-activities-dev
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-vault.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-22/plasma-vault-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasma-vault-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
46f8e47cf0c10e2216c8c1e8c2edef6a1a8da0e41d68543fbbaf3559c26baadb06a39af46232de702864497b4ba2d5a4866436f52c579dbdfb092517c72fe619  plasma-vault-01c2c7eca7cb54e9626a0d1993159dabee97b940.tar.xz
"
