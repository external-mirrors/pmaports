# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-vault
pkgver=99999_git20260204
pkgrel=0
_commit="ebb05cc0d56aa9bc2ff4c9c86b23b31aeadcffab"
pkgdesc="Plasma applet and services for creating encrypted vaults"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="(GPL-2.0-only OR GPL-3.0-only) AND (LGPL-2.1-only AND LGPL-3.0-only)"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kitemmodels-dev
	kwidgetsaddons-dev
	libksysguard-dev
	libplasma-dev
	networkmanager-qt-dev
	plasma-activities-dev
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-vault.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-04/plasma-vault-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasma-vault-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3552fd682d6b2b7aa1202ad673d8d0490747067dd9632feec15d3bc7c6d04820a3a72dc6fe800a3c6e51796d399c74470dc3f36c898beb046be4b883ff782a0f  plasma-vault-ebb05cc0d56aa9bc2ff4c9c86b23b31aeadcffab.tar.xz
"
