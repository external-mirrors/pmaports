# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=filelight
pkgver=99999_git20251109
pkgrel=0
_commit="9da7877cd8f5b95f27822f28d8af632b55a555d8"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/utilities/filelight"
pkgdesc="An application to visualize the disk usage on your computer"
license="(GPL-2.0-only OR GPL-3.0-only) AND GFDL-1.2-only"
depends="kquickcharts"
makedepends="
	extra-cmake-modules
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/filelight.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/filelight-$_commit.tar.xz"
subpackages="$pkgname-dbg $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/filelight-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
30b616cce00fd25ffe8ca90801b0e403be1d46034630fa9f377d4810aa1e08254caedec3df8a48a8f06fc051edfd2deabdc4cda3405a31c38a45650d8f557f0d  filelight-9da7877cd8f5b95f27822f28d8af632b55a555d8.tar.xz
"
