# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=filelight
pkgver=99999_git20260207
pkgrel=0
_commit="3dc828d908a8a49767cc10d1cb8e245152ef70fe"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/utilities/filelight"
pkgdesc="An application to visualize the disk usage on your computer"
license="(GPL-2.0-only OR GPL-3.0-only) AND GFDL-1.2-only"
depends="kquickcharts"
makedepends="
	extra-cmake-modules
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/filelight.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/filelight-$_commit.tar.xz"
subpackages="$pkgname-dbg $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/filelight-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c80628e0f7ba33e75b426623e46970ece81724facea346161d6999ac14091de86dc85c5da7b49f92b05b0db9916d7244f59e398b1c2263f380d18806cf7fb549  filelight-3dc828d908a8a49767cc10d1cb8e245152ef70fe.tar.xz
"
