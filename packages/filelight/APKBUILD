# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=filelight
pkgver=99999_git20251118
pkgrel=0
_commit="44c03e5761270f340fed9b051d6963eea2156406"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/utilities/filelight"
pkgdesc="An application to visualize the disk usage on your computer"
license="(GPL-2.0-only OR GPL-3.0-only) AND GFDL-1.2-only"
depends="kquickcharts"
makedepends="
	extra-cmake-modules
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/filelight.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/filelight-$_commit.tar.xz"
subpackages="$pkgname-dbg $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/filelight-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
88be122291d801207defb6aaaccb88370ca8099bdccfdbfa692af8184f710ceac3353dada2aa49014b02f8bb7b71d8b9b8021f43fc0253ff2559b86409d25c47  filelight-44c03e5761270f340fed9b051d6963eea2156406.tar.xz
"
