# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=filelight
pkgver=99999_git20251203
pkgrel=0
_commit="8b95e32502cd7f572bb0235fbe338cbb77cd05a2"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/utilities/filelight"
pkgdesc="An application to visualize the disk usage on your computer"
license="(GPL-2.0-only OR GPL-3.0-only) AND GFDL-1.2-only"
depends="kquickcharts"
makedepends="
	extra-cmake-modules
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/filelight.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-04/filelight-$_commit.tar.xz"
subpackages="$pkgname-dbg $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/filelight-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f7d22aa396cb7bebf119fe0adc884dbb986a0bbd63949fcbf3b98988ae0920d79cae6a1b2985257a7f94fbd728bd9f1631fae3be77c785f640cfc03c3bd6285b  filelight-8b95e32502cd7f572bb0235fbe338cbb77cd05a2.tar.xz
"
