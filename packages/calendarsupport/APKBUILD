# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=calendarsupport
pkgver=99999_git20260105
pkgrel=0
_commit="1d63e925dfd3e0a8f529daa6c9f042cb9fc7818a"
pkgdesc="Library providing calendar support"
# armhf blocked by qt6-qtdeclarative -> ki18n
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> akonadi
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org"
license="GPL-2.0-or-later AND Qt-GPL-exception-1.0 AND LGPL-2.0-or-later"
depends_dev="
	akonadi-calendar-dev
	akonadi-dev
	akonadi-mime-dev
	kcalendarcore-dev
	kcalutils-dev
	kcodecs-dev
	kguiaddons-dev
	kholidays-dev
	ki18n-dev
	kidentitymanagement-dev
	kio-dev
	kmime-dev
	pimcommon-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/pim/calendarsupport.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-06/calendarsupport-$_commit.tar.xz"

options="!check"
builddir="$srcdir/calendarsupport-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
bf14f239fd0cd78af610899eb0168763d6cf0788ca3e2d42c090ed58d3a5a3fbd2185fdcd37ea957731656dd8435d0de5b7e72f3e0440d8b6c65228c199b42f4  calendarsupport-1d63e925dfd3e0a8f529daa6c9f042cb9fc7818a.tar.xz
"
