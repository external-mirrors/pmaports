# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=mpvqt
pkgver=99999_git20260128
pkgrel=0
_commit="f738053f87a47751989f999fa7dfa6911f56a04b"
pkgdesc="A libmpv wrapper for QtQuick2 and QML"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/libraries/mpvqt"
license="BSD-2-Clause AND BSD-3-Clause AND LGPL-2.1-only AND LGPL-3.0-only AND LicenseRef-KDE-Accepted-LGPL AND MIT"
depends="
	yt-dlp
	"
depends_dev="
	mpv-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/libraries/mpvqt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/mpvqt-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/mpvqt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
