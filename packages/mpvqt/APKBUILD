# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=mpvqt
pkgver=99999_git20251027
pkgrel=0
_commit="2ebbd38bf65d01be9c55d673ecd43c8bb9a6fc8e"
pkgdesc="A libmpv wrapper for QtQuick2 and QML"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/libraries/mpvqt"
license="BSD-2-Clause AND BSD-3-Clause AND LGPL-2.1-only AND LGPL-3.0-only AND LicenseRef-KDE-Accepted-LGPL AND MIT"
depends="
	yt-dlp
	"
depends_dev="
	mpv-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/libraries/mpvqt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-28/mpvqt-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/mpvqt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f1bef38645da99cebfaba7b0a7f1395e1104fdd6b79ae17089d8cdff032107a3f9d7d9e676031210bc3b0a29ee3d0fa022da9d4e3fd9da8ebdd300ecd2dc8a93  mpvqt-2ebbd38bf65d01be9c55d673ecd43c8bb9a6fc8e.tar.xz
"
