# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kiconthemes
pkgver=99999_git20251118
pkgrel=0
_commit="4e637dcbc58f79343100051273e247ffff0b1163"
pkgdesc="Support for icon themes"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends_dev="
	breeze-icons-dev
	karchive-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kitemviews-dev
	kwidgetsaddons-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kiconthemes.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/kiconthemes-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kiconthemes-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# kiconloader_unittest is broken
	xvfb-run ctest --test-dir build -E "(kiconloader_unittest|kiconloader_resourcethemetest)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIr="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
fe51aad7dadf5881bf4cd28a610c7f698405552a15b2fbb6a521cbc3596abf8d5f14faa412d98e95cac2cf1ac6e9598dced849d7ac2851f5c1cc644080094e39  kiconthemes-4e637dcbc58f79343100051273e247ffff0b1163.tar.xz
"
