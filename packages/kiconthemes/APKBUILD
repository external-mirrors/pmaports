# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kiconthemes
pkgver=99999_git20250704
pkgrel=0
_commit="df8f9d4417cd04f5381a404ed7c26f60fe65bc6d"
pkgdesc="Support for icon themes"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends_dev="
	breeze-icons-dev
	karchive-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kitemviews-dev
	kwidgetsaddons-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kiconthemes.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/kiconthemes-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kiconthemes-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# kiconloader_unittest is broken
	xvfb-run ctest --test-dir build -E "(kiconloader_unittest|kiconloader_resourcethemetest)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIr="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
696486725f772bbc873f68826e49c30fe0a009ce853e0067e7434612e6f32224fce649e0e5d8d6eafea8377b49b3fd985f1a986d0784019e0f974d8577eae5a6  kiconthemes-df8f9d4417cd04f5381a404ed7c26f60fe65bc6d.tar.xz
"
