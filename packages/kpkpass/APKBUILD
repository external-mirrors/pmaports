# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpkpass
pkgver=99999_git20260126
pkgrel=0
_commit="ab619b1ba11c7fcd2b2e89e611cb2ba79ff03da7"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kontact.kde.org/"
pkgdesc="Apple Wallet Pass reader"
license="GPL-2.0-or-later"
depends_dev="
	karchive-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/pim/kpkpass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-26/kpkpass-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kpkpass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5236dbe63087abf0ce412f4226fda8ea1bb98b43c53f7e0d9a4389668aa8a56176662bc5d5f376f63c7a10bf5e8433ce716e894d2916e1e91f31a8eeab11bae6  kpkpass-ab619b1ba11c7fcd2b2e89e611cb2ba79ff03da7.tar.xz
"
