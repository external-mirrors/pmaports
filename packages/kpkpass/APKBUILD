# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpkpass
pkgver=99999_git20251222
pkgrel=0
_commit="11b5a3a9b1f7efb0f0dd1b209c73ae1fd7c2cbe7"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kontact.kde.org/"
pkgdesc="Apple Wallet Pass reader"
license="GPL-2.0-or-later"
depends_dev="
	karchive-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/pim/kpkpass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-23/kpkpass-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kpkpass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b4882d8f2e02d6b7cc48f96cb98eb806fa7a9f40989ede4234832fff5597de96484ff24915b78e90a333242d8cca459ae3cf25f6b4e29e581825a37ba4bbf94c  kpkpass-11b5a3a9b1f7efb0f0dd1b209c73ae1fd7c2cbe7.tar.xz
"
