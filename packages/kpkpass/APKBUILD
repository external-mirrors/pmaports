# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpkpass
pkgver=99999_git20260101
pkgrel=0
_commit="0ee1da80f1387bec2c1095f87f954313cc2285f6"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kontact.kde.org/"
pkgdesc="Apple Wallet Pass reader"
license="GPL-2.0-or-later"
depends_dev="
	karchive-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/pim/kpkpass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/kpkpass-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kpkpass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8db5a3cbd53fb9516ffee50876314ba622681a315c3a04ec1d6ad5b7dc7cd91e327c225c1152a00e498bfd46f91fd7e90fc8111d492983ac7d4dbf78cdba1ac5  kpkpass-0ee1da80f1387bec2c1095f87f954313cc2285f6.tar.xz
"
