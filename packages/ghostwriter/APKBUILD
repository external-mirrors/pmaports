# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ghostwriter
pkgver=99999_git20260130
pkgrel=0
_commit="4ecc357c2704fdde19b9cc73050ccd9fe348a9ef"
pkgdesc="Distraction-free markdown editor"
url="https://invent.kde.org/office/ghostwriter/"
arch="aarch64 x86_64"
license="GPL-3.0-or-later"
depends="qt6-qtsvg"
makedepends="
	extra-cmake-modules
	hunspell-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdoctools-dev
	kxmlgui-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	qt6-qtwebchannel-dev
	qt6-qtwebengine-dev
	samurai
	sonnet-dev
	"
subpackages="$pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/office/ghostwriter.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/ghostwriter-$_commit.tar.xz"
options="!check" # no tests

options="!check"
builddir="$srcdir/ghostwriter-$_commit"

build() {
	CXXFLAGS="$CXXFLAGS -flto=auto" \
	cmake -B build -G Ninja -Wno-dev \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
