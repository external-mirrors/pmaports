# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=wacomtablet
pkgver=99999_git20251027
pkgrel=0
_commit="7519e33694f1783440c1361a1fd99d19d72c9b61"
pkgdesc="GUI for Wacom Linux drivers that supports different button/pen layout profiles"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="xinput"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	libplasma-dev
	libwacom-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	xf86-input-wacom-dev
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/system/wacomtablet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-28/wacomtablet-$_commit.tar.xz"
subpackages="$pkgname-lang $pkgname-doc"

options="!check"
builddir="$srcdir/wacomtablet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build -E "Test.KDED.DBusTabletService"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
0451eae15820e875eec1cc6d3c3b8504a91f50192915b449862ea04107bbc3a47d2ca29af78abf6309b1f6758e1d6b95a78e453a46287da3fd74a8a611011489  wacomtablet-7519e33694f1783440c1361a1fd99d19d72c9b61.tar.xz
"
