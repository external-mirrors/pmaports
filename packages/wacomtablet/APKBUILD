# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=wacomtablet
pkgver=99999_git20260220
pkgrel=0
_commit="1bef40ce56495c0f905cddd5eed2d8be28de13db"
pkgdesc="GUI for Wacom Linux drivers that supports different button/pen layout profiles"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="xinput"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	libplasma-dev
	libwacom-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	xf86-input-wacom-dev
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/system/wacomtablet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/wacomtablet-$_commit.tar.xz"
subpackages="$pkgname-lang $pkgname-doc"

options="!check"
builddir="$srcdir/wacomtablet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build -E "Test.KDED.DBusTabletService"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
9bb56fa3f022c17fcc83bf6d58590552cfcc8ed69c686231a3ecc5806d705155c6b9266a239bc4d5d969414d5b42a5840b335256c9e60c189ece88b8da8c0194  wacomtablet-1bef40ce56495c0f905cddd5eed2d8be28de13db.tar.xz
"
