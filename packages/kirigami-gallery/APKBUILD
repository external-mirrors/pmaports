# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kirigami-gallery
pkgver=99999_git20260206
pkgrel=0
_commit="9e4ad448a30d6cfae24ec6b181c86856016e9930"
# armhf blocked by kirigami -> qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/development/org.kde.kirigami2.gallery"
pkgdesc="Gallery application built using Kirigami"
license="LGPL-2.0-or-later"
depends="
	kirigami
	kitemmodels
	"
makedepends="
	extra-cmake-modules
	kirigami-dev
	kitemmodels-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/kirigami-gallery.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/kirigami-gallery-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-gallery-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
11277cd00c7667e179b8c24f56c8f8509a88e53141576fa938bb07c3c6500054a210896a489f198cce7bdb407f56a06135510d2921d31472a156b408e3730ed5  kirigami-gallery-9e4ad448a30d6cfae24ec6b181c86856016e9930.tar.xz
"
