# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kirigami-gallery
pkgver=99999_git20260127
pkgrel=0
_commit="d11ff363a56b55b549703393bd17de05aa5f95c5"
# armhf blocked by kirigami -> qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/development/org.kde.kirigami2.gallery"
pkgdesc="Gallery application built using Kirigami"
license="LGPL-2.0-or-later"
depends="
	kirigami
	kitemmodels
	"
makedepends="
	extra-cmake-modules
	kirigami-dev
	kitemmodels-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/kirigami-gallery.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-28/kirigami-gallery-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-gallery-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
76afb0912757ca007736b7f59916b39522c17d0cbecbc870d5fa84e975de4f02d5065252b3db666ee5596783fd24d857477ef338af4716e4813725bed30b1755  kirigami-gallery-d11ff363a56b55b549703393bd17de05aa5f95c5.tar.xz
"
