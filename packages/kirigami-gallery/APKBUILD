# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kirigami-gallery
pkgver=99999_git20251017
pkgrel=0
_commit="a879ca01eb716459aafaf78b1511b8d1c1cec1fd"
# armhf blocked by kirigami -> qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/development/org.kde.kirigami2.gallery"
pkgdesc="Gallery application built using Kirigami"
license="LGPL-2.0-or-later"
depends="
	kirigami
	kitemmodels
	"
makedepends="
	extra-cmake-modules
	kirigami-dev
	kitemmodels-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/kirigami-gallery.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/kirigami-gallery-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-gallery-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ac58b98b0daacedd7eee8c2afa8f2e341a339c1c721949057252a5aac94875c5711e49762ac39fae584a610405f2229c41615054bf4c1ba4d890501acb17efe3  kirigami-gallery-a879ca01eb716459aafaf78b1511b8d1c1cec1fd.tar.xz
"
