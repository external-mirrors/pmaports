# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kirigami-gallery
pkgver=99999_git20260110
pkgrel=0
_commit="ab44c5c81b067b9bfdd93c7d4b61b9930493ee67"
# armhf blocked by kirigami -> qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/development/org.kde.kirigami2.gallery"
pkgdesc="Gallery application built using Kirigami"
license="LGPL-2.0-or-later"
depends="
	kirigami
	kitemmodels
	"
makedepends="
	extra-cmake-modules
	kirigami-dev
	kitemmodels-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/kirigami-gallery.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-10/kirigami-gallery-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-gallery-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8b592f509cf6f6ad62b632f91cffd41216b3bd2c9a9310e2f2cb2d90ae7d93c4579636b8aa850ec02a0a9fee0afa12c7d6e4a83f9c919c2a9695d528c865f9fa  kirigami-gallery-ab44c5c81b067b9bfdd93c7d4b61b9930493ee67.tar.xz
"
