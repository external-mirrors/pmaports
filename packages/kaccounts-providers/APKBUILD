# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kaccounts-providers
pkgver=99999_git20260220
pkgrel=0
_commit="0bdfd4ded05ebad308704458b36e772b1df82641"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/applications/internet/"
pkgdesc="Small system to administer web accounts for the sites and services across the KDE desktop"
license="GPL-2.0-or-later"
depends="signon-plugin-oauth2"
makedepends="
	extra-cmake-modules
	kaccounts-integration-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kpackage-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwebengine-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/kaccounts-providers.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/kaccounts-providers-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/kaccounts-providers-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9deb273dd9b91fb4a26f9924d1f2c721883ca47ccd64586b3fddeadbd74d2c0d54e71c3c7df5a45694f09b1ba191f5697ffcef1bc7a95890928ff95e4788316c  kaccounts-providers-0bdfd4ded05ebad308704458b36e772b1df82641.tar.xz
"
