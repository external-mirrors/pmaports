# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kaccounts-providers
pkgver=99999_git20250821
pkgrel=0
_commit="e1ac35e4cdfb783846e8b642ba1ff081eb3019ba"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/applications/internet/"
pkgdesc="Small system to administer web accounts for the sites and services across the KDE desktop"
license="GPL-2.0-or-later"
depends="signon-plugin-oauth2"
makedepends="
	extra-cmake-modules
	kaccounts-integration-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kpackage-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwebengine-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/kaccounts-providers.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-29/kaccounts-providers-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/kaccounts-providers-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a448a0152c087ed88c8b9243bc1a6e015b2ae016c61e27ee154359623ad519ddc560e1d3c22a818d67c7a7ff38ed9158d181da3bfe16414c75b7bc6827ef4438  kaccounts-providers-e1ac35e4cdfb783846e8b642ba1ff081eb3019ba.tar.xz
"
