# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kaccounts-providers
pkgver=99999_git20260118
pkgrel=0
_commit="2d4ca5732afa4716a7fe6dc3e3da055ac5d9e5e6"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/applications/internet/"
pkgdesc="Small system to administer web accounts for the sites and services across the KDE desktop"
license="GPL-2.0-or-later"
depends="signon-plugin-oauth2"
makedepends="
	extra-cmake-modules
	kaccounts-integration-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kpackage-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwebengine-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/kaccounts-providers.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-18/kaccounts-providers-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/kaccounts-providers-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
77009e2db6f922a228751bc0be9b9e2d80209c1fd2e2ae1b4bd9eedcf7f0205db6e9b540ef39a6b919064e945568d23c6ecc909b72b9cc17435e480f2c5858fa  kaccounts-providers-2d4ca5732afa4716a7fe6dc3e3da055ac5d9e5e6.tar.xz
"
