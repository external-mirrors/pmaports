# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdeplasma-addons
pkgver=99999_git20260220
pkgrel=0
_commit="7d53b67bcb01328a7b69d0764fea9f8d8e2c301a"
pkgdesc="All kind of addons to improve your Plasma experience"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-only AND GPL-2.0-or-later"
depends="purpose"
depends_dev="
	icu-dev
	karchive-dev
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kdeclarative-dev
	kholidays-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	krunner-dev
	kservice-dev
	kunitconversion-dev
	kwindowsystem-dev
	libplasma-dev
	networkmanager-qt-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtwebengine-dev
	sonnet-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xwayland-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kdeplasma-addons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/kdeplasma-addons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kdeplasma-addons-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# converterrunnertest is broken
	# datetimerunnertest requires running Wayland session
	wlheadless-run -- ctest --test-dir build -E "(converterrunner|datetimerunner)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b05068cd5e2a006c72703e4d91dff33137bb08db8a4d4336c1d39a5b3d3e19dadbaa0e30d6c8b8bb492cedbac49d6e391e1200376a6f14310a5bd06e3ba91675  kdeplasma-addons-7d53b67bcb01328a7b69d0764fea9f8d8e2c301a.tar.xz
"
