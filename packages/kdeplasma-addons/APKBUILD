# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdeplasma-addons
pkgver=99999_git20251030
pkgrel=0
_commit="36ff99596bc189e7bcceffcf647b473f4cd0bfbc"
pkgdesc="All kind of addons to improve your Plasma experience"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-only AND GPL-2.0-or-later"
depends="purpose"
depends_dev="
	icu-dev
	karchive-dev
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kdeclarative-dev
	kholidays-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	krunner-dev
	kservice-dev
	kunitconversion-dev
	kwindowsystem-dev
	libplasma-dev
	networkmanager-qt-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtwebengine-dev
	sonnet-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xwayland-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kdeplasma-addons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-30/kdeplasma-addons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kdeplasma-addons-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# converterrunnertest is broken
	# datetimerunnertest requires running Wayland session
	wlheadless-run -- ctest --test-dir build -E "(converterrunner|datetimerunner)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
52add7f2b2e9510889c60cd0a081b04a4aaac78db6b3048aff6ddcbe4c67694024357f8ddf7e850640df6795687ac16f6cff142682eb615ad25901fb989ed50f  kdeplasma-addons-36ff99596bc189e7bcceffcf647b473f4cd0bfbc.tar.xz
"
