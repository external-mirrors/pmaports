# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdeplasma-addons
pkgver=99999_git20250722
pkgrel=0
_commit="10c32436b027e3258b6ea1e7d798bdca00b7a3a1"
pkgdesc="All kind of addons to improve your Plasma experience"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-only AND GPL-2.0-or-later"
depends="purpose"
depends_dev="
	icu-dev
	karchive-dev
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kdeclarative-dev
	kholidays-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	krunner-dev
	kservice-dev
	kunitconversion-dev
	kwindowsystem-dev
	libplasma-dev
	networkmanager-qt-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtwebengine-dev
	sonnet-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xwayland-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kdeplasma-addons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-23/kdeplasma-addons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kdeplasma-addons-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# converterrunnertest is broken
	# datetimerunnertest requires running Wayland session
	wlheadless-run -- ctest --test-dir build -E "(converterrunner|datetimerunner)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5cdc54316f546e0a82dea4e80c88c9198c2e7389b3a97f1378c1a756b04516b32955ca329f3fecdb44c2e1381d88f4ed415c1c4de9f0339426e2da34eca9f5b5  kdeplasma-addons-10c32436b027e3258b6ea1e7d798bdca00b7a3a1.tar.xz
"
