# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=baloo
pkgver=99999_git20260111
pkgrel=0
_commit="81982d82e5c2e5974bd3d1f5dfb1e2541ddace78"
pkgdesc="A framework for searching and managing metadata"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later AND ( LGPL-2.1-only OR LGPL-3.0-only )"
depends_dev="
	kbookmarks-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kfilemetadata-dev
	ki18n-dev
	kidletime-dev
	kio-dev
	kjobwidgets-dev
	kservice-dev
	lmdb-dev
	qt6-qtdeclarative-dev
	solid-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtbase-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/baloo.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-12/baloo-$_commit.tar.xz"
subpackages="
	$pkgname-dbg
	$pkgname-dev
	$pkgname-lang
	$pkgname-systemd
	"
options="!check" # Tons of broken tests

replaces="baloo5"

builddir="$srcdir/baloo-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
95a5fb094514b5c53bcef65093758a394936cf33114897b97329fd0601c0389eba5cf6e98b0dd01cbe101186595975a6a103700b095be0e71b230c38fd80b623  baloo-81982d82e5c2e5974bd3d1f5dfb1e2541ddace78.tar.xz
"
