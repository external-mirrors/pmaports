# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=baloo
pkgver=99999_git20260206
pkgrel=0
_commit="5c94546f6f246a0e575725c4a2b0191ec94f0ece"
pkgdesc="A framework for searching and managing metadata"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later AND ( LGPL-2.1-only OR LGPL-3.0-only )"
depends_dev="
	kbookmarks-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kfilemetadata-dev
	ki18n-dev
	kidletime-dev
	kio-dev
	kjobwidgets-dev
	kservice-dev
	lmdb-dev
	qt6-qtdeclarative-dev
	solid-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtbase-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/baloo.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/baloo-$_commit.tar.xz"
subpackages="
	$pkgname-dbg
	$pkgname-dev
	$pkgname-lang
	$pkgname-libs
	$pkgname-systemd
	"
options="!check" # Tons of broken tests

replaces="baloo5"

builddir="$srcdir/baloo-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
92843a8fd3098d8eafed6d23dfccb3f014a860047a982a7df85c270efd8f68a353d910d4eb587c0b25988941f6c815abad6a53de35592bca5baf4b36106be6bf  baloo-5c94546f6f246a0e575725c4a2b0191ec94f0ece.tar.xz
"
