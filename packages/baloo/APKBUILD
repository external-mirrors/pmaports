# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=baloo
pkgver=99999_git20250816
pkgrel=0
_commit="b360d892a44c8348acfffaf137064e6e44044fe1"
pkgdesc="A framework for searching and managing metadata"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later AND ( LGPL-2.1-only OR LGPL-3.0-only )"
depends_dev="
	kbookmarks-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kfilemetadata-dev
	ki18n-dev
	kidletime-dev
	kio-dev
	kjobwidgets-dev
	kservice-dev
	lmdb-dev
	qt6-qtdeclarative-dev
	solid-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtbase-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/baloo.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-29/baloo-$_commit.tar.xz"
subpackages="
	$pkgname-dbg
	$pkgname-dev
	$pkgname-lang
	$pkgname-systemd
	"
options="!check" # Tons of broken tests

replaces="baloo5"

builddir="$srcdir/baloo-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e58d1d7b3e92eb50063a27ce7fdb34119132f166dd1af6aa397838a82afe354fdbf4b1e770f9db9fd9e58c1248955f6a29098955f614d09d1aec84a2060f253b  baloo-b360d892a44c8348acfffaf137064e6e44044fe1.tar.xz
"
