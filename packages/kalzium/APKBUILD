# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kalzium
pkgver=99999_git20250916
pkgrel=0
_commit="af4da20069a9a945497e4432f38d80b3b993f2fc"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://edu.kde.org/kalzium/"
pkgdesc="Periodic Table of Elements"
license="GPL-2.0-or-later AND LGPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	eigen-dev
	extra-cmake-modules
	karchive-dev
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	knewstuff-dev
	kparts-dev
	kplotting-dev
	kunitconversion-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtscxml-dev
	qt6-qtsvg-dev
	samurai
	solid-dev
	"
_repo_url="https://invent.kde.org/education/kalzium.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-17/kalzium-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/kalzium-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

