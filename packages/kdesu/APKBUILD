# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdesu
pkgver=99999_git20260110
pkgrel=0
_commit="59ec4833623e7dcc7ae6e205a318a837307cff0b"
pkgdesc="Integration with su for elevated privileges"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends_dev="
	kcoreaddons-dev
	ki18n-dev
	kpty-dev
	kservice-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kdesu.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-10/kdesu-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
# Since the goal of this library is to elevate privileges, suid being needed should be obvious
options="suid"

[ "$CARCH" = "ppc64le" ] && options="$options !check" # kdesutest is broken

options="!check"
builddir="$srcdir/kdesu-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
a4c1b9fc683e6c32cf1faf665c8f9fab29040ce3d928d5f795c0fdb334b7e814fcc458fef7d191bb3989567d90356fc12226ce08e0bab7e6d9d8dd97c3ba382a  kdesu-59ec4833623e7dcc7ae6e205a318a837307cff0b.tar.xz
"
