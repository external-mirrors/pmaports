# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kimageformats
pkgver=99999_git20260111
pkgrel=0
_commit="8d7fb2c3fd1651e70c58daa2f7fbd3b2eeef189b"
pkgdesc="Image format plugins for Qt"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	karchive-dev
	libavif-dev
	libheif-dev
	libraw-dev
	openexr-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kimageformats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-12/kimageformats-$_commit.tar.xz"

case "$CARCH" in
s390x)
	;;
*)
	makedepends="$makedepends libjxl-dev"
	;;
esac

options="!check"
builddir="$srcdir/kimageformats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKIMAGEFORMATS_HEIF=ON
	cmake --build build
}

check() {
	case "$CARCH" in
		armv7) xvfb-run ctest --test-dir build -E "kimageformats-read-(psd|jxl|xcf)" ;;
		s390x) xvfb-run ctest --test-dir build -E "kimageformats-(read-psd|write-avif)" ;;
		*) xvfb-run ctest --test-dir build -E "kimageformats-read-psd" ;;
	esac
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f0efef7d5a137cc80c2df524866a7357a3a223d8f23cccc3868bc3ceb9ee0e483a4934668035852ac3a466716c50ffcbc34f49c0182277085c5b34f804cebe8c  kimageformats-8d7fb2c3fd1651e70c58daa2f7fbd3b2eeef189b.tar.xz
"
