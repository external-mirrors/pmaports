# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kimageformats
pkgver=99999_git20260213
pkgrel=0
_commit="f3de2e77c175acb617f4573847c3000fb027f33f"
pkgdesc="Image format plugins for Qt"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	karchive-dev
	libavif-dev
	libheif-dev
	libraw-dev
	openexr-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kimageformats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-16/kimageformats-$_commit.tar.xz"

case "$CARCH" in
s390x)
	;;
*)
	makedepends="$makedepends libjxl-dev"
	;;
esac

options="!check"
builddir="$srcdir/kimageformats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKIMAGEFORMATS_HEIF=ON
	cmake --build build
}

check() {
	case "$CARCH" in
		armv7) xvfb-run ctest --test-dir build -E "kimageformats-read-(psd|jxl|xcf)" ;;
		s390x) xvfb-run ctest --test-dir build -E "kimageformats-(read-psd|write-avif)" ;;
		*) xvfb-run ctest --test-dir build -E "kimageformats-read-psd" ;;
	esac
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
07762de4eec9fa6379c26e3305890e4163ddfd771ad7400acaf9fc9339624a557eddcbfff78abb61d5d2ab54cb067b150cc223640b2efef159fbc2c07a4bda82  kimageformats-f3de2e77c175acb617f4573847c3000fb027f33f.tar.xz
"
