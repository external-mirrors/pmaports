# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kimageformats
pkgver=99999_git20260203
pkgrel=0
_commit="b7b438f90386494c833f392dfdcbec062bb4a088"
pkgdesc="Image format plugins for Qt"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	karchive-dev
	libavif-dev
	libheif-dev
	libraw-dev
	openexr-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kimageformats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-04/kimageformats-$_commit.tar.xz"

case "$CARCH" in
s390x)
	;;
*)
	makedepends="$makedepends libjxl-dev"
	;;
esac

options="!check"
builddir="$srcdir/kimageformats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKIMAGEFORMATS_HEIF=ON
	cmake --build build
}

check() {
	case "$CARCH" in
		armv7) xvfb-run ctest --test-dir build -E "kimageformats-read-(psd|jxl|xcf)" ;;
		s390x) xvfb-run ctest --test-dir build -E "kimageformats-(read-psd|write-avif)" ;;
		*) xvfb-run ctest --test-dir build -E "kimageformats-read-psd" ;;
	esac
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b1909ee03837866cb6c6a857b2b7eaf7d01cc2a6616604bdde2ef657ed7bbc365b406f2e777e49f544a0cb39acfd3d1603ae2c35c4d01c43c6aef6aee211c09d  kimageformats-b7b438f90386494c833f392dfdcbec062bb4a088.tar.xz
"
