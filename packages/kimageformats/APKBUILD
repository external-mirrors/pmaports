# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kimageformats
pkgver=99999_git20251209
pkgrel=0
_commit="db1cb8de1f7983d7f93b98341038b8eaa6f88a86"
pkgdesc="Image format plugins for Qt"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	karchive-dev
	libavif-dev
	libheif-dev
	libraw-dev
	openexr-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kimageformats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-10/kimageformats-$_commit.tar.xz"

case "$CARCH" in
s390x)
	;;
*)
	makedepends="$makedepends libjxl-dev"
	;;
esac

options="!check"
builddir="$srcdir/kimageformats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKIMAGEFORMATS_HEIF=ON
	cmake --build build
}

check() {
	case "$CARCH" in
		armv7) xvfb-run ctest --test-dir build -E "kimageformats-read-(psd|jxl|xcf)" ;;
		s390x) xvfb-run ctest --test-dir build -E "kimageformats-(read-psd|write-avif)" ;;
		*) xvfb-run ctest --test-dir build -E "kimageformats-read-psd" ;;
	esac
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eb239318e057f676889a3c046812dc8aaebd901874c8b8a7f44240c17e63974b1387cf0d7f428729d20ae179fbabae8cf873e93511d9172314809c7968a40629  kimageformats-db1cb8de1f7983d7f93b98341038b8eaa6f88a86.tar.xz
"
