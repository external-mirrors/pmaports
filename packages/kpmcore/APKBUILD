# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kpmcore
pkgver=99999_git20260206
pkgrel=0
_commit="9cb3d7310616be0561a972cf179e72cdfd1fd330"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/system/org.kde.partitionmanager"
pkgdesc="Library for managing partitions"
license="GPL-3.0-or-later"
depends="
	device-mapper-udev
	sfdisk
	smartmontools
	"
makedepends="
	extra-cmake-modules
	kauth-dev
	kcoreaddons-dev
	ki18n-dev
	kwidgetsaddons-dev
	qca-qt6-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/system/kpmcore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/kpmcore-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # Requires running dbus server

# secfixes:
#   4.2.0-r0:
#     - CVE-2020-27187

options="!check"
builddir="$srcdir/kpmcore-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a7e5b5f2a6495ade72be48f595fa49941910f0048e8f7feeb83d15d704b4127dc1d90c368c2b41fb2842b3d07432e3785802d0d604b7c0a59bb423fbf1dd2351  kpmcore-9cb3d7310616be0561a972cf179e72cdfd1fd330.tar.xz
"
