# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kpmcore
pkgver=99999_git20251014
pkgrel=0
_commit="721611bef3b74ff01423d99a865bceff5ca2b5fe"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/system/org.kde.partitionmanager"
pkgdesc="Library for managing partitions"
license="GPL-3.0-or-later"
depends="
	device-mapper-udev
	sfdisk
	smartmontools
	"
makedepends="
	extra-cmake-modules
	kauth-dev
	kcoreaddons-dev
	ki18n-dev
	kwidgetsaddons-dev
	qca-qt6-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/system/kpmcore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-14/kpmcore-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # Requires running dbus server

# secfixes:
#   4.2.0-r0:
#     - CVE-2020-27187

options="!check"
builddir="$srcdir/kpmcore-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
41c53f89ea60a71a0d4ffd23b80f2cefe61539ee6835cfefd1bd100be1ab69c16c0b31a32227555672f2a724a39d908e2e2fe5a0ac300b9db1ac2c514346725c  kpmcore-721611bef3b74ff01423d99a865bceff5ca2b5fe.tar.xz
"
