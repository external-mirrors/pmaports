# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
pkgname=vakzination
pkgver=99999_git20260130
pkgrel=0
_commit="3c774b47a41e9b641a8326dd4ca4695f065cfdc9"
pkgdesc="Vakzination manages your health certificates like vaccination, test, and recovery certificates"
url="https://invent.kde.org/plasma-mobile/vakzination"
# armhf blocked by extra-cmake-modules
# ppc64le blocked by kitinerary
arch="all !armhf !ppc64le"
license="LGPL-2.0-or-later"
depends="
	kirigami
	prison
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	khealthcertificate-dev
	ki18n-dev
	kirigami-dev
	kitinerary-dev
	prison-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/vakzination.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/vakzination-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/vakzination-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
