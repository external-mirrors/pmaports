# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kde-inotify-survey
pkgver=99999_git20251111
pkgrel=0
_commit="7a28a99c8c70e0f6eb67dba8b9d85ddd57b1788c"
pkgdesc="Tooling for monitoring inotify limits and informing the user when they have been or about to be reached"
url="https://invent.kde.org/system/kde-inotify-survey"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="BSD-3-Clause AND (GPL-2.0-only OR GPL-3.0-only)"
# zstd is purely used to unpack the source archive
makedepends="
	extra-cmake-modules
	kauth-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	knotifications-dev
	polkit-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/system/kde-inotify-survey.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/kde-inotify-survey-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kde-inotify-survey-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a25efa5f79e0a2c3bd36b7065f6a8a399ea9639e3fc93265475068b212a00a05e907831a8cb08b7ded7506090c1e3c3f55e0656dc77ba9953ac88c5a376b3d9e  kde-inotify-survey-7a28a99c8c70e0f6eb67dba8b9d85ddd57b1788c.tar.xz
"
