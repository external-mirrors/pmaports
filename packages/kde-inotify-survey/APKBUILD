# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kde-inotify-survey
pkgver=99999_git20260220
pkgrel=0
_commit="bd4bd641a5ca248ce6c8bf5cad7e16517e746de5"
pkgdesc="Tooling for monitoring inotify limits and informing the user when they have been or about to be reached"
url="https://invent.kde.org/system/kde-inotify-survey"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="BSD-3-Clause AND (GPL-2.0-only OR GPL-3.0-only)"
# zstd is purely used to unpack the source archive
makedepends="
	extra-cmake-modules
	kauth-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	knotifications-dev
	polkit-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/system/kde-inotify-survey.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/kde-inotify-survey-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kde-inotify-survey-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7f9cd46e86e5031cd398a25d66b5a4a3f2ec8e0ab6d1606a109916f4d37939376efa40bdf10c3b1e028f44299e6f680e3f6683dc4c14c62deb693d34e77a586a  kde-inotify-survey-bd4bd641a5ca248ce6c8bf5cad7e16517e746de5.tar.xz
"
