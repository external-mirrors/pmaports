# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kglobalacceld
pkgver=99999_git20260129
pkgrel=0
_commit="700ed62e6664a4124acc2199ccc6183ae69ec856"
pkgdesc="Daemon providing Global Keyboard Shortcut (Accelerator) functionality"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://invent.kde.org/plasma/kglobalacceld"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="$pkgname
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kglobalaccel-dev
	kio-dev
	knotifications-dev
	kservice-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	xcb-util-keysyms-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	"
_repo_url="https://invent.kde.org/plasma/kglobalacceld.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/kglobalacceld-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kglobalacceld-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	dbus-run-session wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
494106191b425b05a7571a7a8f064a81a714b0df91707ef6777e8db6039a89b4169ea155fe4bc6ad8fe344b50c88400ffae4b7d76a79c2f1b800955c82a0a5e6  kglobalacceld-700ed62e6664a4124acc2199ccc6183ae69ec856.tar.xz
"
