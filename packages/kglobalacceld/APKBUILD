# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kglobalacceld
pkgver=99999_git20251106
pkgrel=0
_commit="64d9063178d2b4beb80de5087f55c017910b8570"
pkgdesc="Daemon providing Global Keyboard Shortcut (Accelerator) functionality"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://invent.kde.org/plasma/kglobalacceld"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="$pkgname
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kglobalaccel-dev
	kio-dev
	knotifications-dev
	kservice-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	xcb-util-keysyms-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	"
_repo_url="https://invent.kde.org/plasma/kglobalacceld.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/kglobalacceld-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kglobalacceld-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	dbus-run-session wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
983b26efeb25012f3af25b6418277b69da231de63e47c5fcb00ef7e6fefc4819c686a0a7bee4a78a530a12eede248bcdf6b3bff44de9521f4b91d4ef143429d6  kglobalacceld-64d9063178d2b4beb80de5087f55c017910b8570.tar.xz
"
