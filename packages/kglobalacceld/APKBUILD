# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kglobalacceld
pkgver=99999_git20260208
pkgrel=0
_commit="1bd39d2b9b831c33054cdd4c4714a2bce025ad49"
pkgdesc="Daemon providing Global Keyboard Shortcut (Accelerator) functionality"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://invent.kde.org/plasma/kglobalacceld"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="$pkgname
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kglobalaccel-dev
	kio-dev
	knotifications-dev
	kservice-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	xcb-util-keysyms-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	"
_repo_url="https://invent.kde.org/plasma/kglobalacceld.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-12/kglobalacceld-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kglobalacceld-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	dbus-run-session wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
0b972c5542fec39b6d077bda29d9e8fe07dea2acdfb3b6294097107b630c40bffff518024bbf48e3d3cba7a6f1a395e69462dcf09292faecd77320bea2f4f799  kglobalacceld-1bd39d2b9b831c33054cdd4c4714a2bce025ad49.tar.xz
"
