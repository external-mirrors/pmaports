# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kglobalacceld
pkgver=99999_git20250918
pkgrel=0
_commit="6872506cc43bd735eb41c8112e5a30aaa404a752"
pkgdesc="Daemon providing Global Keyboard Shortcut (Accelerator) functionality"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://invent.kde.org/plasma/kglobalacceld"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="$pkgname
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kglobalaccel-dev
	kio-dev
	knotifications-dev
	kservice-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	xcb-util-keysyms-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/plasma/kglobalacceld.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-20/kglobalacceld-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kglobalacceld-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	dbus-run-session -- xvfb-run -a ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	# We don't ship systemd
	rm -r "$pkgdir"/usr/lib/systemd
}
sha512sums="
f2261c8d79e6c5de6db4fdb30baea64a86a200cbaa5f5ed06c7cc9ad1b2645d378b9040e9edc77bd52ffb93c892b4391f69cbb6b462e33bcfd01c24a89dae2c3  kglobalacceld-6872506cc43bd735eb41c8112e5a30aaa404a752.tar.xz
"
