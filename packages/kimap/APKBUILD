# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kimap
pkgver=99999_git20251017
pkgrel=0
_commit="ba79f55f8bc9099fc45510c3f7b7370a87356f53"
pkgdesc="Job-based API for interacting with IMAP servers"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	cyrus-sasl-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kmime-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/pim/kimap.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/kimap-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kimap-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# loginjobtest is broken
	ctest --test-dir build -E "loginjobtest" -j1
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9fb1afd5a5a4201a08e0fde63bec43e0c57cc7c04d8fc610100de667173f38f2eaa8dd62b240134faa4cfb789cfff6de2fd76cdaaad71ccd6c1bfe1e5e7f81e2  kimap-ba79f55f8bc9099fc45510c3f7b7370a87356f53.tar.xz
"
