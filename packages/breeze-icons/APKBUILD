# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=breeze-icons
pkgver=99999_git20251205
pkgrel=0
_commit="75bbbc767b08ac437097af8b59fb1810ae028cb0"
pkgdesc="Breeze icon themes"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-or-later"
makedepends="
	extra-cmake-modules
	py3-lxml
	python3
	qt6-qtbase-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/breeze-icons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-08/breeze-icons-$_commit.tar.xz"

# Several KDE applications use icons not yet present in most themes
# We want to keep the possibility for users to not use the KDE provided
# breeze-icons theme however, as hopefully in the future this situation changes
# Thus let any theme that provides these icons provide "kde-icons" so the user
# retains their ability to choose their preferred theme
provides="kde-icons"
provider_priority=100

replaces="breeze-icons5"

options="!check"
builddir="$srcdir/breeze-icons-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBINARY_ICONS_RESOURCE=ON
	cmake --build build
}

check() {
	ctest --test-dir build -E '(dupe|symlink)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
35f761785f020db12929ff66d3b7ed5705d965de990d5949a61fd3f00ff1a2f14661b4b6fd3db6e4394d586b8a0ad316a333ffde18be353babb67d2d2d058bcd  breeze-icons-75bbbc767b08ac437097af8b59fb1810ae028cb0.tar.xz
"
