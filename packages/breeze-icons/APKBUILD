# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=breeze-icons
pkgver=99999_git20250628
pkgrel=0
_commit="0ccfe1c60e32aec3ef0ded41b17afa7a06ba8ec7"
pkgdesc="Breeze icon themes"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-or-later"
makedepends="
	extra-cmake-modules
	py3-lxml
	python3
	qt6-qtbase-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/breeze-icons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-30/breeze-icons-$_commit.tar.xz"

# Several KDE applications use icons not yet present in most themes
# We want to keep the possibility for users to not use the KDE provided
# breeze-icons theme however, as hopefully in the future this situation changes
# Thus let any theme that provides these icons provide "kde-icons" so the user
# retains their ability to choose their preferred theme
provides="kde-icons"
provider_priority=100

replaces="breeze-icons5"

options="!check"
builddir="$srcdir/breeze-icons-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBINARY_ICONS_RESOURCE=ON
	cmake --build build
}

check() {
	ctest --test-dir build -E '(dupe|symlink)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3d5b2c4690a711a52b8e8b81e06b441eb038064aaa2041a26a565754e30ba57e6b3b3af6cc47b29208c40eec8f0511e46accdce317e5b787a36db6d5d6bbde60  breeze-icons-0ccfe1c60e32aec3ef0ded41b17afa7a06ba8ec7.tar.xz
"
