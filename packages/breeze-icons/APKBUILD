# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=breeze-icons
pkgver=99999_git20250922
pkgrel=0
_commit="dd5ab86b7bd03ecee08c44b2ab332cc66a451333"
pkgdesc="Breeze icon themes"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-or-later"
makedepends="
	extra-cmake-modules
	py3-lxml
	python3
	qt6-qtbase-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/breeze-icons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-22/breeze-icons-$_commit.tar.xz"

# Several KDE applications use icons not yet present in most themes
# We want to keep the possibility for users to not use the KDE provided
# breeze-icons theme however, as hopefully in the future this situation changes
# Thus let any theme that provides these icons provide "kde-icons" so the user
# retains their ability to choose their preferred theme
provides="kde-icons"
provider_priority=100

replaces="breeze-icons5"

options="!check"
builddir="$srcdir/breeze-icons-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBINARY_ICONS_RESOURCE=ON
	cmake --build build
}

check() {
	ctest --test-dir build -E '(dupe|symlink)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eda9778cf43262785cde771b3eef0c61c4904bbe83518538941d2c19eb53372c250d206bd7bdfb7adb69fc60def300d16c6b4c532419e54ab1201352bda33888  breeze-icons-dd5ab86b7bd03ecee08c44b2ab332cc66a451333.tar.xz
"
