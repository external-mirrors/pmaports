# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcalc
pkgver=99999_git20251011
pkgrel=0
_commit="e50d0ad239db184fe3c4cc98771330772a1e9fae"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kcalc"
pkgdesc="Scientific Calculator"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	gmp-dev
	kconfig-dev
	kconfigwidgets-dev
	kcrash-dev
	kdoctools-dev
	kguiaddons-dev
	ki18n-dev
	knotifications-dev
	kxmlgui-dev
	mpc1-dev
	mpfr-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kcalc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-12/kcalc-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kcalc-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1942d0d49ce0f4b76b8206053150d9c8d7bb433961ba05a524ba829bb449a313a5717422bd6770ebbc00e086da1541d46d424ceb26d4d0d72a77fd9009ff2049  kcalc-e50d0ad239db184fe3c4cc98771330772a1e9fae.tar.xz
"
