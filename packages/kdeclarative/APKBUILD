# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdeclarative
pkgver=99999_git20250704
pkgrel=0
_commit="7489653d9f9e306b4cb6fc21c1853a4ee8cb7ba8"
pkgdesc="Provides integration of QML and KDE Frameworks"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kglobalaccel-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kpackage-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	libepoxy-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kdeclarative.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/kdeclarative-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kdeclarative-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# quickviewsharedengine requires OpenGL
	xvfb-run ctest --test-dir build -E "quickviewsharedengine"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
6f98e50af6666ba0293805c22b7e73d0f62d4663513c03fce2f1363d357931443709c8b5ceb82fea9fb416e79dc18a2570f9c20b84dc1adb9bef8aee3ee17a2e  kdeclarative-7489653d9f9e306b4cb6fc21c1853a4ee8cb7ba8.tar.xz
"
