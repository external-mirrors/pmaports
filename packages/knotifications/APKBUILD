# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=knotifications
pkgver=99999_git20250704
pkgrel=0
_commit="01b995c2fc832531f2c561bf1b7bfd75639a21c0"
pkgdesc="Abstraction for system notifications"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="BSD-3-Clause AND LGPL-2.0-or-later AND LGPL-2.0-only AND (LGPL-2.1-only OR LGPL-3.0-only)"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	libcanberra-dev
	phonon-dev
	qt6-qtbase-dev
	qt6-qtspeech-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/knotifications.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/knotifications-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang py3-$pkgname:_py3"

options="!check"
builddir="$srcdir/knotifications-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
ddc6d44f71d5c1ae2efbbec304efcf71afb33de0e184f6f3c73c2aeb9a004bc693058dfa73152a5af1afa77d1d0c9a784c66dab5fbcb73a2d9e67dd8ffe9f30f  knotifications-01b995c2fc832531f2c561bf1b7bfd75639a21c0.tar.xz
"
