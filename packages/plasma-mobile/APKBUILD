# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-mobile
pkgver=99999_git20251202
pkgrel=0
_commit="a46bf048cec22b13657fb408885df94c38cc61bb"
pkgdesc="Modules providing phone functionality for Plasma"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://www.plasma-mobile.org/"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="
	breeze-icons
	dbus-x11
	feedbackd
	kpipewire
	kquickcharts
	maliit-keyboard
	plasma-activities
	plasma-nano
	plasma-nm
	plasma-pa
	plasma-settings
	plasma-workspace
	qqc2-breeze-style
	"
makedepends="
	eudev-dev
	extra-cmake-modules
	kauth-dev
	kbookmarks-dev
	kcodecs-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kitemviews-dev
	kjobwidgets-dev
	knotifications-dev
	kpackage-dev
	kpeople-dev
	kservice-dev
	kwayland-dev
	kwidgetsaddons-dev
	kwin-dev
	kwindowsystem-dev
	kxmlgui-dev
	libphonenumber-dev
	libplasma-dev
	modemmanager-qt-dev
	networkmanager-qt-dev
	plasma-activities-dev
	plasma-workspace-dev
	qcoro-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	solid-dev
	telepathy-qt-dev
	"

provides="plasma-phone-components=$pkgver-r$pkgrel" # For backwards compatibility
replaces="plasma-phone-components" # For backwards compatibility

subpackages="
	$pkgname-dbg
	$pkgname-lang
	$pkgname-waydroid
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-mobile.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-02/plasma-mobile-$_commit.tar.xz
	0001-plasma-mobile-859.patch::https://invent.kde.org/plasma/plasma-mobile/-/merge_requests/859.patch
	"

options="!check"
builddir="$srcdir/plasma-mobile-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DINSTALL_SYSTEMD_SERVICE=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

waydroid() {
	pkgdesc="$pkgdesc - Waydroid integration"
	install_if="$pkgname=$pkgver-r$pkgrel waydroid"

	amove usr/lib/libexec/kf6/kauth/waydroidhelper
	amove usr/lib/qt6/plugins/plasma/kcms/systemsettings/kcm_waydroidintegration.so
	amove usr/lib/qt6/qml/org/kde/plasma/private/mobileshell/waydroidintegrationplugin
	amove usr/share/applications/kcm_waydroidintegration.desktop
	amove usr/share/dbus-1/system-services/*waydroidhelper.service
	amove usr/share/dbus-1/system.d/*waydroidhelper.conf
	amove usr/share/plasma/quicksettings/*waydroid
	amove usr/share/polkit-1/actions/*waydroidhelper.policy
}

sha512sums="
