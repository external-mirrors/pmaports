# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kgamma5
pkgver=99999_git20250928
pkgrel=0
_commit="a68f062d3c9a09da27173974c89754be06701be4"
pkgdesc="Adjust your monitor's gamma settings"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kgamma5.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-29/kgamma5-$_commit.tar.xz"
subpackages="$pkgname-doc"

options="!check"
builddir="$srcdir/kgamma5-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2ce5abe8159bceeb47e2e26ab8ca5774e884e8d303daeae117a5a19208081bb05d1cf333a801b3f770b58921f5b7536cdef1375d2dcceadd317e799e07f02828  kgamma5-a68f062d3c9a09da27173974c89754be06701be4.tar.xz
"
