# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kgamma5
pkgver=99999_git20260113
pkgrel=0
_commit="c2d48bcd83a43ef9716cc67d2486c031e62adce8"
pkgdesc="Adjust your monitor's gamma settings"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="$pkgname-doc"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kgamma5.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-14/kgamma5-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kgamma5-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3d696d26197d57769d470549464a22cbfae708e24b6433c6f2203f0742bc2b819c314c8821b2e2e843fe045e6dcf77bbb97f6b0f9bd8c27b36caf5d0545b4ab0  kgamma5-c2d48bcd83a43ef9716cc67d2486c031e62adce8.tar.xz
"
