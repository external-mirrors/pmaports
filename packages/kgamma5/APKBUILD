# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kgamma5
pkgver=99999_git20251017
pkgrel=0
_commit="3b6c10c07e35121d7d08716c45f24adb5b8e13f0"
pkgdesc="Adjust your monitor's gamma settings"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kgamma5.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/kgamma5-$_commit.tar.xz"
subpackages="$pkgname-doc"

options="!check"
builddir="$srcdir/kgamma5-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fe791eca25b8db68eb07f55468ae8af61453a7254302f84c26e705a359b1ff5a5aafcd09fd99fab94fd67bdccdcdebcc235416bfabd3ecd3c95cebad38303b17  kgamma5-3b6c10c07e35121d7d08716c45f24adb5b8e13f0.tar.xz
"
