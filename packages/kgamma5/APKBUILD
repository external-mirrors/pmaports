# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kgamma5
pkgver=99999_git20260220
pkgrel=0
_commit="2865cb634ce1ec8b0fcc92a50783999c7044605a"
pkgdesc="Adjust your monitor's gamma settings"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="$pkgname-doc"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kgamma5.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/kgamma5-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kgamma5-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0981b135b8ae991aa93701df9bffe5d20a8c1a43e4ce123a0824b3cd3bf876c0566f57aa58c1329ff013d2708991a08b117b436527b180fe3483198253a4d2c0  kgamma5-2865cb634ce1ec8b0fcc92a50783999c7044605a.tar.xz
"
