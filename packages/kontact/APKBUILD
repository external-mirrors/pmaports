# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kontact
pkgver=99999_git20260101
pkgrel=0
_commit="4bbb367c97282eda81e8ebd4bc44ea152bfe5eab"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
# riscv64 disabled due to missing rust in recursive dependency
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org/"
pkgdesc="Container application to unify several major PIM applications within one application"
license="GPL-2.0-or-later"
makedepends="
	akonadi-dev
	extra-cmake-modules
	grantleetheme-dev
	kcmutils-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kiconthemes-dev
	kontactinterface-dev
	kpimtextedit-dev
	kwindowsystem-dev
	libkdepim-dev
	pimcommon-dev
	qt6-qtbase-dev
	qt6-qtwebengine-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/kontact.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/kontact-$_commit.tar.xz"
subpackages=" $pkgname-lang"

options="!check"
builddir="$srcdir/kontact-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
69e95b307404ad6eb9b7491744210671e2fa5ce5d1594f2a3628ec637639a625d63f4b444c4bb4272dbf6ab688f2b02a5ab5e6ee9d7e79cea57bab5b445fc535  kontact-4bbb367c97282eda81e8ebd4bc44ea152bfe5eab.tar.xz
"
