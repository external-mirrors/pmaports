# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ksmtp
pkgver=99999_git20260108
pkgrel=0
_commit="e628f6b07f6c153b42ec7f7ac1e8bbbaea5bb3b5"
pkgdesc="Job-based library to send email through an SMTP server"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kontact.kde.org"
license="LGPL-2.1-or-later"
depends_dev="
	cyrus-sasl-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/pim/ksmtp.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-09/ksmtp-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # Broken

options="!check"
builddir="$srcdir/ksmtp-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
