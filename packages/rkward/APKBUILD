# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=rkward
pkgver=99999_git20251016
pkgrel=0
_commit="b33215b5902eda251a2d8e392659e885b40f4a1b"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le, riscv64 and loongarch64 blocked by qt5-qtwebengine
arch="all !armhf !s390x !ppc64le !riscv64 !loongarch64"
url="https://rkward.kde.org/"
pkgdesc="Easy extensible and easy-to-use IDE/GUI for R"
license="GPL-2.0-or-later"
depends="R"
makedepends="
	R
	R-dev
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	knotifications-dev
	kparts-dev
	ktexteditor-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtwebengine-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/education/rkward.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-16/rkward-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ff3a2142342231bc1ec2e744a398b6134a8a46285e6629c831995fcbb87d9f08e8da01a853fa14727561b98df0e0ccdf40edff1d8b2f2b8695cd6c7f93a6ea80  rkward-b33215b5902eda251a2d8e392659e885b40f4a1b.tar.xz
"
