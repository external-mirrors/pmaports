# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=rkward
pkgver=99999_git20250921
pkgrel=0
_commit="61bf9c5cd7e36283ec1d448d91b1f286903f8582"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le, riscv64 and loongarch64 blocked by qt5-qtwebengine
arch="all !armhf !s390x !ppc64le !riscv64 !loongarch64"
url="https://rkward.kde.org/"
pkgdesc="Easy extensible and easy-to-use IDE/GUI for R"
license="GPL-2.0-or-later"
depends="R"
makedepends="
	R
	R-dev
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	knotifications-dev
	kparts-dev
	ktexteditor-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtwebengine-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/education/rkward.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-21/rkward-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
44fca95c69e8dfeecd50ccf38b7cd2d32e64ca7f9bb56038ecea8a5f1742f878a75c1caca2471f7e102b5ff848ae5e73154ad021b6a4763610f61e868a983325  rkward-61bf9c5cd7e36283ec1d448d91b1f286903f8582.tar.xz
"
