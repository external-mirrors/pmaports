# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=rkward
pkgver=99999_git20250807
pkgrel=0
_commit="bee78f2bf042dbc4a0cad59d7ecd9b32f12ffca3"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le, riscv64 and loongarch64 blocked by qt5-qtwebengine
arch="all !armhf !s390x !ppc64le !riscv64 !loongarch64"
url="https://rkward.kde.org/"
pkgdesc="Easy extensible and easy-to-use IDE/GUI for R"
license="GPL-2.0-or-later"
depends="R"
makedepends="
	R
	R-dev
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	knotifications-dev
	kparts-dev
	ktexteditor-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtwebengine-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/education/rkward.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-07/rkward-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a29ab19f3f110e71919fee923ee3cac69bd193e94d33ec28c8d162840d6e6182de7a3e976eac4e1310cd81dc23b2d8810d8652cb61c4d33055b2c5cb345dd164  rkward-bee78f2bf042dbc4a0cad59d7ecd9b32f12ffca3.tar.xz
"
