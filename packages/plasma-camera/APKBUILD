# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-camera
pkgver=99999_git20251118
pkgrel=0
_commit="75602aa8d9e0d281db4d3a42823f7cc31dfdbdf8"
pkgdesc="Camera application for Plasma Mobile"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-camera"
license="GPL-3.0-or-later AND BSD-3-Clause"
depends="
	gst-plugins-bad
	gst-plugins-good
	kirigami
	kirigami-addons
	libcamera
	qt6-qtmultimedia
	qt6-qtsensors
	"
makedepends="
	exiv2-dev
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	libcamera-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsensors-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-camera.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/plasma-camera-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7fe76b5e795d183a3bd372875a1c7f9e68224e8af9a0977f9f67d83e3aaebbad69ba80698647692e61676d28886c31a4afaa566c2a001357af4c201d13a127aa  plasma-camera-75602aa8d9e0d281db4d3a42823f7cc31dfdbdf8.tar.xz
"
