# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-camera
pkgver=99999_git20251114
pkgrel=0
_commit="fb332c0eb285bad762a905465bb1dca10f8f036c"
pkgdesc="Camera application for Plasma Mobile"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-camera"
license="GPL-3.0-or-later AND BSD-3-Clause"
depends="
	gst-plugins-bad
	gst-plugins-good
	kirigami
	kirigami-addons
	libcamera
	qt6-qtmultimedia
	qt6-qtsensors
	"
makedepends="
	exiv2-dev
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	libcamera-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsensors-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-camera.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/plasma-camera-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
74758e1002c5600ea7efeb7877d7e9d0d91d1272f889734916b0cbc75f3e527ec40a515a9675d305f955243c91b2f288e105cdc504fa98dfc9a8e5de62c4f948  plasma-camera-fb332c0eb285bad762a905465bb1dca10f8f036c.tar.xz
"
