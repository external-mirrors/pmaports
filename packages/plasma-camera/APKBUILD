# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-camera
pkgver=99999_git20260118
pkgrel=0
_commit="f38f0810ebb4c77d4d14812c89763ba7b7a7659c"
pkgdesc="Camera application for Plasma Mobile"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-camera"
license="GPL-3.0-or-later AND BSD-3-Clause"
depends="
	gst-plugins-bad
	gst-plugins-good
	kirigami
	kirigami-addons
	libcamera
	qt6-qtmultimedia
	qt6-qtsensors
	"
makedepends="
	exiv2-dev
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	libcamera-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsensors-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-camera.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-18/plasma-camera-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e3d4717a7a10d262b748fd43d97730ee7ba7da989ac5f400ff72797eb59cc61b658384dd005b485243db539cf04791a2779b96e3c4f640965ac72499b8cdffec  plasma-camera-f38f0810ebb4c77d4d14812c89763ba7b7a7659c.tar.xz
"
