# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-camera
pkgver=99999_git20251210
pkgrel=0
_commit="df4d144f6c44a816801f5e05df63415691163df3"
pkgdesc="Camera application for Plasma Mobile"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-camera"
license="GPL-3.0-or-later AND BSD-3-Clause"
depends="
	gst-plugins-bad
	gst-plugins-good
	kirigami
	kirigami-addons
	libcamera
	qt6-qtmultimedia
	qt6-qtsensors
	"
makedepends="
	exiv2-dev
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	libcamera-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsensors-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-camera.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-10/plasma-camera-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5ce3114a647d4bd667b699d419812965c132cec0efef9b4109e75c925cd3af6452ccc3fb949cff89c0fe4f9122a520676c899ed8e0f3eb7f3947efacb7cedd7e  plasma-camera-df4d144f6c44a816801f5e05df63415691163df3.tar.xz
"
