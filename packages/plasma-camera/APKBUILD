# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-camera
pkgver=99999_git20250915
pkgrel=0
_commit="31dfe9e24310a0ef0c193d3d16b223f0972fb67d"
pkgdesc="Camera application for Plasma Mobile"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-camera"
license="GPL-3.0-or-later AND BSD-3-Clause"
depends="
	gst-plugins-bad
	gst-plugins-good
	kirigami
	kirigami-addons
	libcamera
	qt6-qtmultimedia
	qt6-qtsensors
	"
makedepends="
	exiv2-dev
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	libcamera-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsensors-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-camera.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-15/plasma-camera-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2ce7aa58b9e0880f395f861fe5b5f625b4ce6a69384d7bc1e9dddbdeebd24cf55563a57df5e3989548fbca6a4fef7c8c2470a9b2abce14cd778a9c502c6c94ce  plasma-camera-31dfe9e24310a0ef0c193d3d16b223f0972fb67d.tar.xz
"
