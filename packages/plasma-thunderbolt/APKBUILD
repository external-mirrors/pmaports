# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-thunderbolt
pkgver=99999_git20260215
pkgrel=0
_commit="22e38df9bd2cf4680a3f497c6fe748ef1fdf5e76"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
pkgdesc="Plasma integration for controlling Thunderbolt devices"
license="GPL-2.0-only OR GPL-3.0-only"
depends="bolt"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	knotifications-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-thunderbolt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-16/plasma-thunderbolt-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # Requires running dbus server

options="!check"
builddir="$srcdir/plasma-thunderbolt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d4a094fd38ca89f32190b6245d5fb51672f56cc079bfbe38a1973e3a106f327d56af159fa1a9b4b7681a6c240ebe6f7f3d33f0feaee6d0e5fbe4d9d444f181f7  plasma-thunderbolt-22e38df9bd2cf4680a3f497c6fe748ef1fdf5e76.tar.xz
"
