# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-thunderbolt
pkgver=99999_git20251125
pkgrel=0
_commit="cde07e87c62b29ebf7c60bdf9cedd547c99957f3"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
pkgdesc="Plasma integration for controlling Thunderbolt devices"
license="GPL-2.0-only OR GPL-3.0-only"
depends="bolt"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	knotifications-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-thunderbolt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-26/plasma-thunderbolt-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # Requires running dbus server

options="!check"
builddir="$srcdir/plasma-thunderbolt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fc3c1a26112f2c355c6a1787774c93dae7e951e8def4d040d700ca04cb2f5aa629ac1d29652f31473816bace44044e7d564ed9ddd3f0b2def15502d77d4489da  plasma-thunderbolt-cde07e87c62b29ebf7c60bdf9cedd547c99957f3.tar.xz
"
