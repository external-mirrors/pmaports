# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-thunderbolt
pkgver=99999_git20251118
pkgrel=0
_commit="cdcd952ecade72f3814bf7d2f402f4c6612407ea"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
pkgdesc="Plasma integration for controlling Thunderbolt devices"
license="GPL-2.0-only OR GPL-3.0-only"
depends="bolt"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	knotifications-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-thunderbolt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/plasma-thunderbolt-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # Requires running dbus server

options="!check"
builddir="$srcdir/plasma-thunderbolt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6a1b19dc9b62acbcfb6030613300e606918c5586e42948750f10d512662d582360021af37bf5ae99dd54b6bead136c8c8b1ecaf02bdcb6caad8e42c7df3af3b0  plasma-thunderbolt-cdcd952ecade72f3814bf7d2f402f4c6612407ea.tar.xz
"
