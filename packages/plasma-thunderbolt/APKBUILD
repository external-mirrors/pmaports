# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-thunderbolt
pkgver=99999_git20260218
pkgrel=0
_commit="339293dd4ec2a8eebc96eea1c7b79dde66970113"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
pkgdesc="Plasma integration for controlling Thunderbolt devices"
license="GPL-2.0-only OR GPL-3.0-only"
depends="bolt"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	knotifications-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-thunderbolt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-19/plasma-thunderbolt-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # Requires running dbus server

options="!check"
builddir="$srcdir/plasma-thunderbolt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a38088dd4023eb531868a50c13f8a64c0aa0a1e00de7c9624c7a2360503155057321d3bd69ce8fde1c4b24d92559c95b8fc94071503d0e59630c1c47aca22b21  plasma-thunderbolt-339293dd4ec2a8eebc96eea1c7b79dde66970113.tar.xz
"
