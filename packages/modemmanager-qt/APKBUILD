# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=modemmanager-qt
pkgver=99999_git20251205
pkgrel=0
_commit="4cdbc97c9098a20ddf974e6b0f3e028d1785aacf"
pkgdesc="Qt wrapper for ModemManager DBus API"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	modemmanager-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz-dev
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="dbus"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/modemmanager-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-08/modemmanager-qt-$_commit.tar.xz"

options="!check"
builddir="$srcdir/modemmanager-qt-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	dbus-run-session -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
71148e940717238cdd259f0d839989c33ba06b5ab3e0e9916427d8e61880c1f715510b1756eb4f24a3f0e79d3e83a2992826209b795fe4f6482db8e9e86f205f  modemmanager-qt-4cdbc97c9098a20ddf974e6b0f3e028d1785aacf.tar.xz
"
