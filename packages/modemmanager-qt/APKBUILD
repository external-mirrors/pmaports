# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=modemmanager-qt
pkgver=99999_git20250721
pkgrel=0
_commit="fb16f67f732ef897549e459a22c80b9e6c2dbdbd"
pkgdesc="Qt wrapper for ModemManager DBus API"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	modemmanager-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz-dev
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="dbus"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/modemmanager-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-23/modemmanager-qt-$_commit.tar.xz"

options="!check"
builddir="$srcdir/modemmanager-qt-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	dbus-run-session -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
780bd170228d8ed568ba185e81db81dc35f0244037789c2af9c088faa84cf0ee7af344f1c9a3f20f5615e955ac1b24acfa10e366370d604bf94f569de25c1ea6  modemmanager-qt-fb16f67f732ef897549e459a22c80b9e6c2dbdbd.tar.xz
"
