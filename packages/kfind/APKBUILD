# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kfind
pkgver=99999_git20251127
pkgrel=0
_commit="fc2f46392eef08c41f092ce08041fd087daaefa4"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/utilities/kfind"
pkgdesc="Find Files/Folders"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	kcoreaddons-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kio-dev
	ktextwidgets-dev
	kwidgetsaddons-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kfind.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-27/kfind-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kfind-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eb91d7a479d8fc8507d0233ff6726fdbf1f465e72acb2efb9ea19f944b0b2c31c4a1cea011d8e27f2a27e785094a934c901e39d04a4368e8a429f405bbc5972c  kfind-fc2f46392eef08c41f092ce08041fd087daaefa4.tar.xz
"
