# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kblocks
pkgver=99999_git20260105
pkgrel=0
_commit="dd8950b65d7d23eeb21b33dc1413d81a5fad4910"
pkgdesc="The classic falling blocks game"
url="https://kde.org/applications/games/kblocks/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/games/kblocks.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-06/kblocks-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kblocks-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1a969c0759d880761024386e25ebc5b1c49d484c95e021ad6ffc7a3b74794652ccab1e4d413f6bfa66ff8960e1b37cb5a281ff332b1110966a804d233d036310  kblocks-dd8950b65d7d23eeb21b33dc1413d81a5fad4910.tar.xz
"
