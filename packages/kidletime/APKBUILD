# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kidletime
pkgver=99999_git20250908
pkgrel=0
_commit="bc0310e6c91d25437ddeecc9ab18d8d55a997e87"
pkgdesc="Monitoring user activity"
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
makedepends="
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	plasma-wayland-protocols
	qt6-qttools-dev
	qt6-qtwayland-dev
	samurai
	wayland-dev
	wayland-protocols
	"
_repo_url="https://invent.kde.org/frameworks/kidletime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-08/kidletime-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kidletime-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# solidmttest is broken
	ctest --test-dir build -E "solidmttest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
73e549ecffaef7b9fc01e28ef52b7a45ebb4cc3f930de00c6dc175e0de6f4b0992c8d58210a7421ce5ad5cc9bd2f30efc03ae61e4b2b032f642e2a516c638fd6  kidletime-bc0310e6c91d25437ddeecc9ab18d8d55a997e87.tar.xz
"
