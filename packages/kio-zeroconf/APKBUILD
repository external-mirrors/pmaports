# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kio-zeroconf
pkgver=99999_git20251030
pkgrel=0
_commit="b193e9ca3dd6b47d17d4387183f26f22655ca18b"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://www.kde.org/applications/internet/"
pkgdesc="Network Monitor for DNS-SD services (Zeroconf)"
license="GPL-2.0-or-later AND LGPL-2.0-only AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	kdnssd-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/kio-zeroconf.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-30/kio-zeroconf-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kio-zeroconf-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_WITH_QT6=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a85c616b36af7628a3ea4744f004ddb565d474e4c04406c4b0b1ecdc00e6aef341cc0651ebcdd237100bc0d07f43b5c25c52678189f5f961188fe1c6848aefcc  kio-zeroconf-b193e9ca3dd6b47d17d4387183f26f22655ca18b.tar.xz
"
