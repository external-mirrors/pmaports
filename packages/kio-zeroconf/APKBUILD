# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kio-zeroconf
pkgver=99999_git20260121
pkgrel=0
_commit="a778e98b3054c4235563da98f9e3d9f1c40be4db"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://www.kde.org/applications/internet/"
pkgdesc="Network Monitor for DNS-SD services (Zeroconf)"
license="GPL-2.0-or-later AND LGPL-2.0-only AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	kdnssd-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/kio-zeroconf.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-22/kio-zeroconf-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kio-zeroconf-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_WITH_QT6=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f5161938114e226b75ee272f938e37ee51241849b268ac3fedb73b8b590b743b67d91331c134c9cc651134d4f3101f99723fea38ed8791ea3e85b3e6ef41f190  kio-zeroconf-a778e98b3054c4235563da98f9e3d9f1c40be4db.tar.xz
"
