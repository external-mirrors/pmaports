	"
_repo_url="https://invent.kde.org/pim/kalarm.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-12/kalarm-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # Tests are broken

options="!check"
builddir="$srcdir/kalarm-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja\
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

