# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kmenuedit
pkgver=99999_git20251214
pkgrel=0
_commit="872c6f5bdfe93fc47fbc2ec5ec3d85d65a3c55cd"
pkgdesc="KDE menu editor"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	kiconthemes-dev

	kio-dev
	kitemviews-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	sonnet-dev
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kmenuedit.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-20/kmenuedit-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmenuedit-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7a2f0fc0aa1db8349168ab5378edc014f3e2b22f37b3b58dee4355d1e0bc9ea6eaf9b5e8d538ae888729d37af47bcf6916e7968324420ac0c6d34abbefb50eb9  kmenuedit-872c6f5bdfe93fc47fbc2ec5ec3d85d65a3c55cd.tar.xz
"
