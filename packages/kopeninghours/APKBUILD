# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kopeninghours
pkgver=99999_git20250705
pkgrel=0
_commit="bc9e54c6bdb39cde2c4dac59ce7938a1560803e3"
pkgdesc="Library for parsing and evaluating OSM opening hours expressions"
url="https://invent.kde.org/libraries/kopeninghours"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="BSD-3-Clause AND CC0-1.0 AND LGPL-2.0-or-later"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	bison
	doxygen
	extra-cmake-modules
	flex
	graphviz
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kopeninghours.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/kopeninghours-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kopeninghours-$_commit"

build() {
	cmake -B build -G Ninja \
		-DBUILD_WITH_QT6=ON \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# evaluatetest and iterationtest are broken
	ctest --test-dir -E "(evaluate|iteration)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
98f2edb6e0f977fdf8d3f2ab64c9bdd955a91d1eabb451672f2296136182a6eb1784ac7452f9a15d3749ee1bd1d3a2b036a534550a613ca6556e52e16c0f4527  kopeninghours-bc9e54c6bdb39cde2c4dac59ce7938a1560803e3.tar.xz
"
