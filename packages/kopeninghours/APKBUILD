# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kopeninghours
pkgver=99999_git20251120
pkgrel=0
_commit="11e0a257960a1448491795fe1d2b5eea322b6028"
pkgdesc="Library for parsing and evaluating OSM opening hours expressions"
url="https://invent.kde.org/libraries/kopeninghours"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="BSD-3-Clause AND CC0-1.0 AND LGPL-2.0-or-later"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	bison
	doxygen
	extra-cmake-modules
	flex
	graphviz
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kopeninghours.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-24/kopeninghours-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kopeninghours-$_commit"

build() {
	cmake -B build -G Ninja \
		-DBUILD_WITH_QT6=ON \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# evaluatetest and iterationtest are broken
	ctest --test-dir -E "(evaluate|iteration)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
430ac6c5563b2845ea3f72618511e33616d64c224334d9439247a455a290507c64cfdbf4cb0c9eea7c2dcb7788c875a4d555b04558975789d41c7c5bd53326c3  kopeninghours-11e0a257960a1448491795fe1d2b5eea322b6028.tar.xz
"
