# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kopeninghours
pkgver=99999_git20260120
pkgrel=0
_commit="67a33e216e4529a1d69eab6de733131837db8e66"
pkgdesc="Library for parsing and evaluating OSM opening hours expressions"
url="https://invent.kde.org/libraries/kopeninghours"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="BSD-3-Clause AND CC0-1.0 AND LGPL-2.0-or-later"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	bison
	doxygen
	extra-cmake-modules
	flex
	graphviz
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kopeninghours.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-22/kopeninghours-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kopeninghours-$_commit"

build() {
	cmake -B build -G Ninja \
		-DBUILD_WITH_QT6=ON \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# evaluatetest and iterationtest are broken
	ctest --test-dir -E "(evaluate|iteration)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6b6a38434f9510b77eca2ca9de562acbd1ae69bd520a80989496d9548f542a87c9f105e86d510f7f591bc122be6e323cb32a285bb8a6f0b99af03efe8e9d6520  kopeninghours-67a33e216e4529a1d69eab6de733131837db8e66.tar.xz
"
