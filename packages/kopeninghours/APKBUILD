# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kopeninghours
pkgver=99999_git20250520
pkgrel=0
_commit="5dd2dd7b0b736e320af5d85c406f321844e141b7"
pkgdesc="Library for parsing and evaluating OSM opening hours expressions"
url="https://invent.kde.org/libraries/kopeninghours"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="BSD-3-Clause AND CC0-1.0 AND LGPL-2.0-or-later"
makedepends="
	bison
	doxygen
	extra-cmake-modules
	flex
	graphviz
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kopeninghours.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-30/kopeninghours-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kopeninghours-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON \
		-DBUILD_WITH_QT6=ON
	cmake --build build
}

check() {
	# evaluatetest and iterationtest are broken
	ctest --test-dir -E "(evaluate|iteration)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
598574a79fe5b68a17e70a5d80acf8d2f8a60bb0586f9da1dca1dcf9f47b3f72ffaf0cdbbfd4c89f362c6e398ffa758abd2fde0add760e4bb0a0308c44bc2917  kopeninghours-5dd2dd7b0b736e320af5d85c406f321844e141b7.tar.xz
"
