# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=qqc2-desktop-style
pkgver=99999_git20260220
pkgrel=0
_commit="bde33186c419faedc4d013b21efe9f6939b358f8"
pkgdesc="A style for Qt Quick Controls 2 to make it follow your desktop theme"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-only AND (GPL-2.0-only OR GPL-3.0-only)"
depends="sonnet"
depends_dev="
	kconfigwidgets-dev
	kiconthemes-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="
	kirigami
	xwayland-run
	"
install_if="kirigami"
_repo_url="https://invent.kde.org/frameworks/qqc2-desktop-style.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/qqc2-desktop-style-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/qqc2-desktop-style-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
56193023f971dcfe6337899b8f9e047522bb9a0953f976e155863291e3fd76a5ca6c27d3b985ec3a58597dbd2d05c683fb4a28686d39f8950f7f709c51327490  qqc2-desktop-style-bde33186c419faedc4d013b21efe9f6939b358f8.tar.xz
"
