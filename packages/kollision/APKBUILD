# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kollision
pkgver=99999_git20251203
pkgrel=0
_commit="7f97c3d7adbdf834ab40f4768a6513e501383db1"
pkgdesc="A simple ball dodging game"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/kollision/"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/kollision.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-05/kollision-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kollision-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
00da031845e420a533d3c04001f1e4937fe06c58b07c751d014e2b2b2236029ac4fad8f4fa3c76de42fc7d12e0a46dd02be7d19fe1caae9319dd3e85fc6c055b  kollision-7f97c3d7adbdf834ab40f4768a6513e501383db1.tar.xz
"
