# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kscreen
pkgver=99999_git20260204
pkgrel=0
_commit="746e7e59e3f9de8706b2853901ebc68ca8a3d95a"
pkgdesc="KDE's screen management software"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="hicolor-icon-theme"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdbusaddons-dev
	kdeclarative-dev
	kglobalaccel-dev
	ki18n-dev
	kiconthemes-dev
	ksvg-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	layer-shell-qt-dev
	libkscreen-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsensors-dev
	samurai
	"
checkdepends="wlheadless-run"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-04/kscreen-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# kscreen-kded-configtest is broken
	# kscreen-kded-osdtest hangs
	wlheadless-run -- ctest --test-dir build -E "kscreen-kded-(config|osd)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2579f114725d047b9ba7f56ce5b5b7f18c46119d901a38f982e3cc46cddf3cfbb096e3656d7e0e12cc85704cf4ec72053d7ed97c888e418a5ca3b4333da67358  kscreen-746e7e59e3f9de8706b2853901ebc68ca8a3d95a.tar.xz
"
