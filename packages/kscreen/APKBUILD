# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kscreen
pkgver=99999_git20250915
pkgrel=0
_commit="9e27b8710c6e275bdd9dbe0d737fdf66e7dc5f5f"
pkgdesc="KDE's screen management software"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="hicolor-icon-theme"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdbusaddons-dev
	kdeclarative-dev
	kglobalaccel-dev
	ki18n-dev
	kiconthemes-dev
	ksvg-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	layer-shell-qt-dev
	libkscreen-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsensors-dev
	samurai
	"
checkdepends="wlheadless-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-17/kscreen-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/kscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# kscreen-kded-configtest is broken
	# kscreen-kded-osdtest hangs
	wlheadless-run -- ctest --test-dir build -E "kscreen-kded-(config|osd)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	# We don't ship systemd
	rm -r "$pkgdir"/usr/lib/systemd
}

sha512sums="
f15c9669d222143110093d711837d6f30f2f9e4ce79f62e9491548bb1b5c49b50b6fa0d878fdbaba5b8f154cd8336e1741ee463c244cdad8ff92680a25187a44  kscreen-9e27b8710c6e275bdd9dbe0d737fdf66e7dc5f5f.tar.xz
"
