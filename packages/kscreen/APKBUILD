# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kscreen
pkgver=99999_git20260106
pkgrel=0
_commit="cb18f4f1349a78d727e3226c0591a32f979f91c9"
pkgdesc="KDE's screen management software"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="hicolor-icon-theme"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdbusaddons-dev
	kdeclarative-dev
	kglobalaccel-dev
	ki18n-dev
	kiconthemes-dev
	ksvg-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	layer-shell-qt-dev
	libkscreen-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsensors-dev
	samurai
	"
checkdepends="wlheadless-run"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-07/kscreen-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# kscreen-kded-configtest is broken
	# kscreen-kded-osdtest hangs
	wlheadless-run -- ctest --test-dir build -E "kscreen-kded-(config|osd)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
380b900da3dbfd28dff8351af9171bbe5b478978d032216b285e0ac8eaf685b99cc41a1c604d2d3485550d4d9008f535c883085ee6207ce6f3ab38b26a0fddbd  kscreen-cb18f4f1349a78d727e3226c0591a32f979f91c9.tar.xz
"
