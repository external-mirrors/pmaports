# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kscreen
pkgver=99999_git20250805
pkgrel=0
_commit="6bf097b11ffb19bc3d2dd63bbac0bce09a41a67a"
pkgdesc="KDE's screen management software"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="hicolor-icon-theme"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdbusaddons-dev
	kdeclarative-dev
	kglobalaccel-dev
	ki18n-dev
	kiconthemes-dev
	ksvg-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	layer-shell-qt-dev
	libkscreen-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsensors-dev
	samurai
	"
checkdepends="wlheadless-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-05/kscreen-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/kscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# kscreen-kded-configtest is broken
	# kscreen-kded-osdtest hangs
	wlheadless-run -- ctest --test-dir build -E "kscreen-kded-(config|osd)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	# We don't ship systemd
	rm -r "$pkgdir"/usr/lib/systemd
}

sha512sums="
1f96b586b61a7060cb1a6a272554229d3c5cb4b9a061df1baacab8db79013de6f7e2af89ab1272d036dcc8c0f255bde5fc1d1b7eb8f0930f8236fcb799e96b3a  kscreen-6bf097b11ffb19bc3d2dd63bbac0bce09a41a67a.tar.xz
"
