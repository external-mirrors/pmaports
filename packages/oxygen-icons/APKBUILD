# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=oxygen-icons
pkgver=99999_git20251003
pkgrel=0
_commit="e4fd64d13a3741e2024ac7695433b0d737025c4f"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Oxygen icon theme"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
makedepends="$depends_dev
	extra-cmake-modules
	fdupes
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/oxygen-icons5.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/oxygen-icons5-$_commit.tar.xz"
builddir="$srcdir/oxygen-icons5-$pkgver"

options="!check"
builddir="$srcdir/oxygen-icons5-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
