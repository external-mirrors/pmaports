# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libkleo
pkgver=99999_git20260208
pkgrel=0
_commit="afed4d5f1ff65a646f23deb40ea835194d4d3e1f"
pkgdesc="KDE PIM cryptographic library"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kontact.kde.org"
license="GPL-2.0-or-later"
# TODO: Maybe replace gnupg with specific gnupg subpackages.
depends="gnupg"
makedepends="
	boost-dev
	doxygen
	extra-cmake-modules
	gpgmepp-dev
	graphviz
	kcodecs-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kitemmodels-dev
	kpimtextedit-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	qgpgme-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/pim/libkleo.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-08/libkleo-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libkleo-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build -E "newkeyapprovaldialogtest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
622d27e61e53ae36f21e2846d2542ef19390c60c5e4a032157cbdb8670f56263f9f92860478427f1e4f738f9b6eaf0443212a9ccc0e1ebc17c0a0c47adfac667  libkleo-afed4d5f1ff65a646f23deb40ea835194d4d3e1f.tar.xz
"
