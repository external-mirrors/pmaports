# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libkleo
pkgver=99999_git20260218
pkgrel=0
_commit="e6e52134e88abd51451bf5c62ba687e5a941f0e6"
pkgdesc="KDE PIM cryptographic library"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kontact.kde.org"
license="GPL-2.0-or-later"
# TODO: Maybe replace gnupg with specific gnupg subpackages.
depends="gnupg"
makedepends="
	boost-dev
	doxygen
	extra-cmake-modules
	gpgmepp-dev
	graphviz
	kcodecs-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kitemmodels-dev
	kpimtextedit-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	qgpgme-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/pim/libkleo.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-19/libkleo-$_commit.tar.xz"

options="!check"
builddir="$srcdir/libkleo-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build -E "newkeyapprovaldialogtest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9d915bc3cffd84f0b48369530cb9d573b3b73e6a1586eb247b90eba3f428b7555d08c3bd60422f9f9f0e2d99ecebfab141ea1fe85721707bb46f0fcbc88c570a  libkleo-e6e52134e88abd51451bf5c62ba687e5a941f0e6.tar.xz
"
