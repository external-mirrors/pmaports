# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=libqaccessibilityclient
pkgver=99999_git20250607
pkgrel=0
_commit="552f57bbaf23d2227afcbbb81ac9316b60d42a45"
pkgdesc="Accessibilty tools helper library, used e.g. by screen readers"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/libraries/libqaccessibilityclient"
license="LicenseRef-KDE-Accepted-LGPL AND LGPL-2.1-only AND LGPL-3.0-only"
makedepends="
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
checkdepends="
	dbus
	xvfb-run
	"
_repo_url="https://invent.kde.org/libraries/libqaccessibilityclient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/libqaccessibilityclient-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # Broken

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	dbus-run-session -- xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1173b52f2ac1af7f3657912d7741b1bf3d84a08845d950071e3c5650ba42b044023248ea728b6234d747ebddb308245a4cfa6b0851131345005aa0a55304c572  libqaccessibilityclient-552f57bbaf23d2227afcbbb81ac9316b60d42a45.tar.xz
"
