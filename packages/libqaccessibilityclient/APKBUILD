# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=libqaccessibilityclient
pkgver=99999_git20260112
pkgrel=0
_commit="783ff72b58aceeb788d0ac2a86f5f6da5a8310e7"
pkgdesc="Accessibilty tools helper library, used e.g. by screen readers"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/libraries/libqaccessibilityclient"
license="LicenseRef-KDE-Accepted-LGPL AND LGPL-2.1-only AND LGPL-3.0-only"
makedepends="
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
checkdepends="
	dbus
	xvfb-run
	"
_repo_url="https://invent.kde.org/libraries/libqaccessibilityclient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-14/libqaccessibilityclient-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # Broken

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	dbus-run-session -- xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6419e89339631b74f9d9abe20f38a2ece90635ccc9932401c6996a418f831ae8643bd414ec86ec7330cc962c55dc3a509f031ca94b8e1d76d934d5e2222c1f9f  libqaccessibilityclient-783ff72b58aceeb788d0ac2a86f5f6da5a8310e7.tar.xz
"
