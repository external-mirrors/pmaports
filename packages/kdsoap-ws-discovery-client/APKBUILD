# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdsoap-ws-discovery-client
pkgver=99999_git20250412
pkgrel=0
_commit="f68a597bfec3b30603cac380b826bfddae3fb214"
pkgdesc="Library for finding WS-Discovery devices in the network using Qt and KDSoap"
arch="all"
url="https://invent.kde.org/libraries/kdsoap-ws-discovery-client"
license="GPL-3.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qtbase-dev
	qt6-qttools-dev
	kdsoap-qt6-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/libraries/kdsoap-ws-discovery-client.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/kdsoap-ws-discovery-client-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kdsoap-ws-discovery-client-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build -E 'kdsoap-ws-discovery-client(core-(kdsoap-ws-discovery-clienttest|kdesktopfiletest|test_kconf_update)|gui-kstandardshortcutwatchertest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
818287601b23de0901c30fccbcd67dd5aabe179d2a2cd654d88a635a7a23ffaf6e6f820ffd7d48821bae40f4cb882f4eb9d5e9bba9f5d181ff4f4ce8b4b1d053  kdsoap-ws-discovery-client-f68a597bfec3b30603cac380b826bfddae3fb214.tar.xz
"
