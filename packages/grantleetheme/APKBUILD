# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=grantleetheme
pkgver=99999_git20260130
pkgrel=0
_commit="48ba8c8785e23b239c670924e28c95e465b96412"
pkgdesc="KDE PIM mail related libraries"
# armhf blocked by qt6-qtdeclarative -> ki18n
# s390x and riscv64 blocked by knewstuff
arch="all !armhf !s390x !riscv64"
url="https://kontact.kde.org/"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	grantlee-dev
	ki18n-dev
	knewstuff-dev
	ktexttemplate-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	samurai
	"
checkdepends="xwayland-run"
subpackages="
	$pkgname-dev
	$pkgname-lang
	"
_repo_url="https://invent.kde.org/pim/grantleetheme.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/grantleetheme-$_commit.tar.xz"

options="!check"
builddir="$srcdir/grantleetheme-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
