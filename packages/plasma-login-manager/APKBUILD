# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-login-manager
pkgver=99999_git20260206
pkgrel=0
_commit="98b002ada8e0f90080ac11c2b796d6016ae77823"
pkgdesc="A display manager for KDE Plasma"
arch="all"
url="https://kde.org/plasma-desktop"
license="GPL-2.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kauth-dev
	kcmutils-dev
	kconfig-dev
	kdbusaddons-dev
	kde-qdoc-common
	ki18n-dev
	kio-dev
	kpackage-dev
	kwindowsystem-dev
	layer-shell-qt-dev
	linux-pam-dev
	libxau-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	samurai
	systemd-dev
	"
subpackages="
	$pkgname-lang
	$pkgname-systemd
	"
_repo_url="https://invent.kde.org/plasma/plasma-login-manager.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/plasma-login-manager-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-login-manager-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DINSTALL_PAM_CONFIGURATION=OFF
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

