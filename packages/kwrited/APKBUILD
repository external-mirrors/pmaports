# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kwrited
pkgver=99999_git20251106
pkgrel=0
_commit="a2b2a39f1e9585ad551a409c378ec359277aee80"
pkgdesc="KDE daemon listening for wall and write messages"
arch="all !armhf" # qt6-qtdeclarative-dev  unavilable on armhf
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	knotifications-dev
	kpty-dev
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kwrited.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/kwrited-$_commit.tar.xz"
options="!check" # No tests available

options="!check"
builddir="$srcdir/kwrited-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dd8b09a0e1a535f5f63377f6b71a511cd62169a9601adce78ff2389dec43be9f7e13d6f7ea0eb522c3ff2b27402fa26aacfb9afe794c8dfcd247acfd8d72b6d7  kwrited-a2b2a39f1e9585ad551a409c378ec359277aee80.tar.xz
"
