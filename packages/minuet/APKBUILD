# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=minuet
pkgver=99999_git20251130
pkgrel=0
_commit="123c31e76094312a2165d7c1cb609100dcc6658a"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://minuet.kde.org/"
pkgdesc="Minuet Music Education"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	fluidsynth-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev

	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/minuet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-01/minuet-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/minuet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1d1e1f1fc7e8ab2827e74a0daaee361d07d84e8d239ae2a87da16ecc8e4fa47a1069fe296c137d2dfcc4023205544f0a823de2757119ea1a5f2274495a47a9a1  minuet-123c31e76094312a2165d7c1cb609100dcc6658a.tar.xz
"
