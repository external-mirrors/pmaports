# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=minuet
pkgver=99999_git20260206
pkgrel=0
_commit="9acc9f2ea338a2b3c834d5f8cff0ae46439ccb4a"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://minuet.kde.org/"
pkgdesc="Minuet Music Education"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="kirigami"
makedepends="
	extra-cmake-modules
	fluidsynth-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kirigami
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
_repo_url="https://invent.kde.org/education/minuet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/minuet-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/minuet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8ca3a8f7f2693ba0c3268582c5e3e446071d7c06fa237a2fcc6b1fffa1a49c70d0430475f23c1b886e22004497ee69414faa6cf283960366d4ebf0a8de9f4bd6  minuet-9acc9f2ea338a2b3c834d5f8cff0ae46439ccb4a.tar.xz
"
