# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=minuet
pkgver=99999_git20260110
pkgrel=0
_commit="5d673fdbac3b76c6e5cb45a54a7a2f266ca9bb77"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://minuet.kde.org/"
pkgdesc="Minuet Music Education"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="kirigami"
makedepends="
	extra-cmake-modules
	fluidsynth-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kirigami
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
_repo_url="https://invent.kde.org/education/minuet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-10/minuet-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/minuet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
56ff0bf033ba869bfd16a9956c4bf2a3c3d10b0c75525368833e753d1c52f498c9fdbb8de99d194040ee8a858dfb2c6aff22afd5964b81892f8f07c65f7f15b2  minuet-5d673fdbac3b76c6e5cb45a54a7a2f266ca9bb77.tar.xz
"
