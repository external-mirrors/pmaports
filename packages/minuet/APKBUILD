# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=minuet
pkgver=99999_git20251101
pkgrel=0
_commit="d7772aea02b2af444e80275fc4d49a431c29d2f4"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://minuet.kde.org/"
pkgdesc="Minuet Music Education"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	fluidsynth-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev

	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/minuet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-02/minuet-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/minuet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dcebfe53314236d4b3f9d96c5ce74bef06a05b5db695b61b1f31d98e49aa517415dbc0a27c0ae09931f3bec2b1f2a66c37fac1e846c8a4fb001ed89ac6ff488b  minuet-d7772aea02b2af444e80275fc4d49a431c29d2f4.tar.xz
"
