# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=minuet
pkgver=99999_git20260108
pkgrel=0
_commit="99af434f301c8579c633cc03b09140ce7a9545d0"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://minuet.kde.org/"
pkgdesc="Minuet Music Education"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="kirigami"
makedepends="
	extra-cmake-modules
	fluidsynth-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kirigami
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
_repo_url="https://invent.kde.org/education/minuet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-09/minuet-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/minuet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
26ecda10e7a4037a2f4d2a0afca875f413cddc4e90791dfeaaaa04e157c3abde68239b5527a81dad7ae2175ad5a20dc463ffd28a710d7a6d52cd74a061607c7f  minuet-99af434f301c8579c633cc03b09140ce7a9545d0.tar.xz
"
