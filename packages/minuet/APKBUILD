# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=minuet
pkgver=99999_git20260130
pkgrel=0
_commit="12e21b9e5bcb3d6ed0d84418eb7c1d3d191b4985"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://minuet.kde.org/"
pkgdesc="Minuet Music Education"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="kirigami"
makedepends="
	extra-cmake-modules
	fluidsynth-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kirigami
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
_repo_url="https://invent.kde.org/education/minuet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/minuet-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/minuet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
70a2f90d3ea09b3ad1ee1de74ea32f9ecca9fe7125504ded39f71564ddf00d819c2d9c573bc42e2cb673c31a637655ef2254f9fee9b051d1a1c56f4a61b675fc  minuet-12e21b9e5bcb3d6ed0d84418eb7c1d3d191b4985.tar.xz
"
