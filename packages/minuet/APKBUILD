# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=minuet
pkgver=99999_git20251018
pkgrel=0
_commit="46e63e722232fb663fda8ac31c65267fee34ca4a"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://minuet.kde.org/"
pkgdesc="Minuet Music Education"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	fluidsynth-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev

	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/minuet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/minuet-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/minuet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ec056a6b3c21fabebbc19ede3ff20a8ca604859bc9ed57b7989fa7bb25e4ec44b8486c2d0ab4a537b727f257f2145c880f3c1026e632721ffdac38aac3eef4b9  minuet-46e63e722232fb663fda8ac31c65267fee34ca4a.tar.xz
"
