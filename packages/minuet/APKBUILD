# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=minuet
pkgver=99999_git20251111
pkgrel=0
_commit="f82f817ed0a849ef6b7c1b40aeacd03229e90c20"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://minuet.kde.org/"
pkgdesc="Minuet Music Education"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	fluidsynth-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev

	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/minuet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/minuet-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/minuet-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
841b8539cf715211488a748d17d70de5579c183b82199465965b556d72c8caa048c936420c58315636c034beabf7dd65683cee160d3aafb2c71efbc3ea66acac  minuet-f82f817ed0a849ef6b7c1b40aeacd03229e90c20.tar.xz
"
