# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kdebugsettings
pkgver=99999_git20251019
pkgrel=0
_commit="53d7b35e07cc6d6f976254071d5a81c8edf1fe6a"
arch="all !armhf"
url="https://kde.org/applications/utilities/"
pkgdesc="An application to enable/disable qCDebug"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kitemviews-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/utilities/kdebugsettings.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/kdebugsettings-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/kdebugsettings-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
208ac8efe20875ac32ae21122fefc714cb12d5702f1197e308fc7bac876a0dbcde0fb35610a5e336ac12c429b2f4a321fc6a95cb0f5dcf0143d63ae91cf44f0d  kdebugsettings-53d7b35e07cc6d6f976254071d5a81c8edf1fe6a.tar.xz
"
