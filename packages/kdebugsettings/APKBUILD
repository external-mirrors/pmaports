# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kdebugsettings
pkgver=99999_git20251222
pkgrel=0
_commit="703570624de8dd1eaa485fa5c555bf5c39b5fe9f"
arch="all !armhf"
url="https://kde.org/applications/utilities/"
pkgdesc="An application to enable/disable qCDebug"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kitemviews-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/utilities/kdebugsettings.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-23/kdebugsettings-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/kdebugsettings-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
76d00ccfc89f7c823be295aebc9bd01fe53b96b7ce9b6f1e0a518459363a1a521dac8923e29f8169e9c9439aea5ba7de0284f053fd725ee503283a5a814b0c94  kdebugsettings-703570624de8dd1eaa485fa5c555bf5c39b5fe9f.tar.xz
"
