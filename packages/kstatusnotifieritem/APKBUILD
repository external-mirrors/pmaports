# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kstatusnotifieritem
pkgver=99999_git20250908
pkgrel=0
_commit="6b1ab55104de86cfd2e64450534185e9fd5b4b0f"
pkgdesc="Implementation of Status Notifier Items"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	kwindowsystem-dev
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kstatusnotifieritem.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-08/kstatusnotifieritem-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang py3-$pkgname:_py3"

options="!check"
builddir="$srcdir/kstatusnotifieritem-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
abe5d1fe6639c8ebf79f942ade870e536521dcb02c219a5798270b2a4dd820db55360c7f700ee76f83197ae5803ba2ed1f3e1c1305daba05930c30056478dd8a  kstatusnotifieritem-6b1ab55104de86cfd2e64450534185e9fd5b4b0f.tar.xz
"
