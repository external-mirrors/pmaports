# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kstatusnotifieritem
pkgver=99999_git20251222
pkgrel=0
_commit="2148984fff1011c0915a302c1c74ada23a889b9b"
pkgdesc="Implementation of Status Notifier Items"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	kwindowsystem-dev
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kstatusnotifieritem.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-23/kstatusnotifieritem-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang py3-$pkgname:_py3"

options="!check"
builddir="$srcdir/kstatusnotifieritem-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
