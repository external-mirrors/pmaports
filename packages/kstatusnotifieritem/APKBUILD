# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kstatusnotifieritem
pkgver=99999_git20260106
pkgrel=0
_commit="af367e64bfd58983ae84ae70bd472ab60b107720"
pkgdesc="Implementation of Status Notifier Items"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	kwindowsystem-dev
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kstatusnotifieritem.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-07/kstatusnotifieritem-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang py3-$pkgname:_py3"

options="!check"
builddir="$srcdir/kstatusnotifieritem-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
a2233b90de33c97d0d23649dcfd7e8fbefe1332589db3cbb57c65178028589c17abf245d6c833031e5526a54c6462e5e4a3bdd268268a103dca3a1fd594c4db4  kstatusnotifieritem-af367e64bfd58983ae84ae70bd472ab60b107720.tar.xz
"
