# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=extra-cmake-modules
pkgver=99999_git20260118
pkgrel=0
_commit="9e6ab6e52f22b3c15ce402f004ed511873bf9601"
pkgdesc="Extra CMake modules"
url="https://invent.kde.org/frameworks/extra-cmake-modules"
arch="noarch"
license="BSD-3-Clause"
depends="cmake"
makedepends="
	cmake
	py3-sphinx
	qt6-qtbase-dev
	samurai
	"
checkdepends="
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
_repo_url="https://invent.kde.org/frameworks/extra-cmake-modules.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-18/extra-cmake-modules-$_commit.tar.xz"
subpackages="$pkgname-doc"

options="!check"
builddir="$srcdir/extra-cmake-modules-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DSphinx_BUILD_EXECUTABLE=/usr/bin/sphinx-build \
		-DBUILD_QTHELP_DOCS=ON
	cmake --build build
}

check() {
	# KDEFetchTranslations expects KDE's git setup
	ctest --test-dir build -E "KDEFetchTranslations"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
91289860d5a2432594fceebad58219d60554f6a95469c53754acf3ddfecfcb2fe93fb4ffe70f3008956ef568d3931dcbabcb6c22df3bc05620885dbc6f91affc  extra-cmake-modules-9e6ab6e52f22b3c15ce402f004ed511873bf9601.tar.xz
"
