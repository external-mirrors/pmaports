# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-integration
pkgver=99999_git20251020
pkgrel=0
_commit="18eef883dd4871911b3f25f150f2fcdee9f7d7f7"
pkgdesc="Qt Platform Theme integration plugins for the Plasma workspace"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="(LGPL-2.1-only OR LGPL-3.0-only) AND LGPL-2.1-only AND ((LGPL-2.1-only WITH Nokia-Qt-exception-1.1) OR (GPL-3.0-only WITH Nokia-Qt-exception-1.1))"
depends="
	font-hack
	font-noto
	qqc2-desktop-style
	"
makedepends="
	breeze-dev
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knotifications-dev
	kstatusnotifieritem-dev
	kwayland-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	libxcursor-dev
	plasma-wayland-protocols
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-integration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/plasma-integration-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # Broken

options="!check"
builddir="$srcdir/plasma-integration-$_commit"

build() {
	cmake -B build -DBUILD_QT5=OFF -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_DISABLE_FIND_PACKAGE_FontNotoSans=true \
		-DCMAKE_DISABLE_FIND_PACKAGE_FontHack=true
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
bde87be26bcb937fc78f600135ac1c166c076cb9a044349b29c1ac93f96d02a66be642ff643d33e0d5dcb6c3705a3c51e17ce07425be2b1c93544e1469b9a0ed  plasma-integration-18eef883dd4871911b3f25f150f2fcdee9f7d7f7.tar.xz
"
