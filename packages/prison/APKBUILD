# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=prison
pkgver=99999_git20260129
pkgrel=0
_commit="092531232269b4d7f0e86421aeab8760078047e6"
pkgdesc="A barcode API to produce QRCode barcodes and DataMatrix barcodes"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="MIT"
depends_dev="
	libdmtx-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	zxing-cpp-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	libqrencode-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/prison.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/prison-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/prison-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# prison-datamatrixtest and prison-qrtest are broken on s390x
	case "$CARCH" in
		s390x) ctest --test-dir build -E "prison-(datamatrix|qr)test" ;;
		*) ctest --test-dir build ;;
	esac
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build biuld --target install_qch_docs
}

sha512sums="
