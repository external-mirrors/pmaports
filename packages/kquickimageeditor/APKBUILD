# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kquickimageeditor
pkgver=99999_git20251112
pkgrel=0
_commit="887bf3a093c2d5d59ac31bf3ef6e360874a985c1"
pkgdesc="Simple image editor for QtQuick applications"
url="https://invent.kde.org/libraries/kquickimageeditor"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="BSD-2-Clause AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	opencv-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kquickimageeditor.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/kquickimageeditor-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

builddir="$srcdir/kquickimageeditor-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
01b84fab6ea1ba6e3fc2361689034c7d3512a89c43762002a69de6c1d683501cd98725ceb9dd3732beb471447530339bfff9075502258e95a86f2542c14a0cd5  kquickimageeditor-887bf3a093c2d5d59ac31bf3ef6e360874a985c1.tar.xz
"
