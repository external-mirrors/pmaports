# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kquickimageeditor
pkgver=99999_git20251120
pkgrel=0
_commit="e162498d86873a1f1a30fcdad564846651519072"
pkgdesc="Simple image editor for QtQuick applications"
url="https://invent.kde.org/libraries/kquickimageeditor"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="BSD-2-Clause AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	opencv-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kquickimageeditor.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-20/kquickimageeditor-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

builddir="$srcdir/kquickimageeditor-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
cea98dff60b4183e0b5809ea0128d49e104acc1dd29a3299d1ee60a5f771c4884ce48f265b80cc8a401ed094f00bc58daf1c519c05901c6a028bd3631206ba1d  kquickimageeditor-e162498d86873a1f1a30fcdad564846651519072.tar.xz
"
