# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kquickimageeditor
pkgver=99999_git20250821
pkgrel=0
_commit="71d2e5fdde24ce940db2122aab17305043d5067b"
pkgdesc="Simple image editor for QtQuick applications"
url="https://invent.kde.org/libraries/kquickimageeditor"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="BSD-2-Clause AND LGPL-2.1-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kquickimageeditor.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-29/kquickimageeditor-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

builddir="$srcdir/kquickimageeditor-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
af67e0a3260065ecb26d6be331a40bc9e8673d80986a1e3c419a0abe299e19235930e73873c9eed2046e9f4ae734305d4be97411c337bf2d5cfc37bdb617f567  kquickimageeditor-71d2e5fdde24ce940db2122aab17305043d5067b.tar.xz
"
