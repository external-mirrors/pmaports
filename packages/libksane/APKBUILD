# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libksane
pkgver=99999_git20251111
pkgrel=0
_commit="104c8d0d5ca5c3cf547338acea613e2d62e591e3"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/graphics/"
pkgdesc="An image scanning library"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	ki18n-dev
	ksanecore-dev
	ktextwidgets-dev
	kwallet-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/graphics/libksane.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/libksane-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/libksane-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a1be81d38b785ab6a007d127fdf3182add320d1f8003437d64088262300e36610eb82d6f94862f0092d67afb9262523cd8178deff30df2ca47e48322f2a5c79f  libksane-104c8d0d5ca5c3cf547338acea613e2d62e591e3.tar.xz
"
