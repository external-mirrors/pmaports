# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kalgebra
pkgver=99999_git20260120
pkgrel=0
_commit="dbeb9ae191349fcc371bdc86d4fd23484ea72d07"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://edu.kde.org/kalgebra/"
pkgdesc="2D and 3D Graph Calculator"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	analitza-dev
	extra-cmake-modules
	kconfigwidgets-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	libplasma-dev
	ncurses-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	readline-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/kalgebra.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-22/kalgebra-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kalgebra-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fbc7b1ab3a59e6bd68ecb401e90d1d4bb5f3cff9bdbdfcf064c841479d291b9f2ba92e20c6a023410a8ddc5714e8a9e0a30e2106116a69c20ec72d90c8207aa3  kalgebra-dbeb9ae191349fcc371bdc86d4fd23484ea72d07.tar.xz
"
