# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=konsole
pkgver=99999_git20251111
pkgrel=0
_commit="cf7cf04acdf0efd7c8b6cfb7ca752a1d05307c4e"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/system/konsole"
pkgdesc="KDE's terminal emulator"
license="GPL-2.0-only AND LGPL-2.1-or-later AND Unicode-DFS-2016"
depends="ncurses-terminfo-base"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kglobalaccel-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	knotifyconfig-dev
	kparts-dev
	kpty-dev
	kservice-dev
	ktextwidgets-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtmultimedia-dev
	samurai
	"
checkdepends="mesa-dri-gallium xvfb-run"
_repo_url="https://invent.kde.org/utilities/konsole.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/konsole-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/konsole-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DENABLE_PLUGIN_SSHMANAGER=ON
	cmake --build build
}

check() {
	# DBusTest requires running DBus
	local skipped_tests="("
	local tests="
		DBus
		History
		"
	case "$CARCH" in
		armv7)
			tests="$tests Part"
			;;
	esac
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)Test"
	xvfb-run ctest --test-dir build -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fdddabdb820039b36c2233351f5e574efff04afa1ac51783771363f2da70697cc19d17cc5f7b6c0a0ded0e85dbbcd91ee87005db59a0756c1cfc1d2574c6d7ee  konsole-cf7cf04acdf0efd7c8b6cfb7ca752a1d05307c4e.tar.xz
"
