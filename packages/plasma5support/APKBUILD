# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma5support
pkgver=99999_git20250909
pkgrel=0
_commit="0c7f6435b92d2e50abfc6118b2eaa14c562b60d8"
pkgdesc="Support components for porting from KF5/Qt5 to KF6/Qt6"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kholidays-dev
	ki18n-dev
	kidletime-dev
	kio-dev
	kpackage-dev
	kservice-dev
	kunitconversion-dev
	kxmlgui-dev
	libksysguard-dev
	networkmanager-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	doxygen
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma5support.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-12/plasma5support-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/plasma5support-$_commit"

replaces="plasma-workspace"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)" \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

lang() {
	replaces="plasma-workspace-lang"
	default_lang
}
sha512sums="
1d474b1f299f9408803952beaef1aeb9903175bc0fac6f9425564069718e963cc22d026efb76962577d5945a8c7a517dfae6261332ca6a91bd98cfcafdcb5aa5  plasma5support-0c7f6435b92d2e50abfc6118b2eaa14c562b60d8.tar.xz
"
