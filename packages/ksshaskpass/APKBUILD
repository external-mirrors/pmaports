# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksshaskpass
pkgver=99999_git20251118
pkgrel=0
_commit="d77456ed52e2ca9a5801a11d334f58cc804cfe82"
pkgdesc="ssh-add helper that uses kwallet and kpassworddialog"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	kwallet-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qtkeychain-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/ksshaskpass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/ksshaskpass-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/ksshaskpass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8f222c2a1843db01d063d519a11cc7d5ba6810d2f152367c94fb90a989d4c4192b18c60161c9dd90d8e82346195e84dfd49d9bb7efc72ec3b1e0f3271a30cd84  ksshaskpass-d77456ed52e2ca9a5801a11d334f58cc804cfe82.tar.xz
"
