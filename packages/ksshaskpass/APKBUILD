# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksshaskpass
pkgver=99999_git20260110
pkgrel=0
_commit="570e213fb03d70d98d6397511295a5ed6440ec48"
pkgdesc="ssh-add helper that uses kwallet and kpassworddialog"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	kwallet-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qtkeychain-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/ksshaskpass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-10/ksshaskpass-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/ksshaskpass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
63ad8b622b44b94a71b614d25bb90281a4bb1f739beac1384b46e103d8934607bebf52a7cfc34f36f82a37d87b98310d95bcc8d4c0342aef0e35ea0e6690bec8  ksshaskpass-570e213fb03d70d98d6397511295a5ed6440ec48.tar.xz
"
