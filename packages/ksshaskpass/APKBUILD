# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksshaskpass
pkgver=99999_git20251210
pkgrel=0
_commit="e4ab0587e28d7f3029a874d2f93c1689853fc573"
pkgdesc="ssh-add helper that uses kwallet and kpassworddialog"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	kwallet-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qtkeychain-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/ksshaskpass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-10/ksshaskpass-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/ksshaskpass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
521e44776020e3ffca6649f0484efd7235481b7a91bbea3aa5f37f897b588b155bca8a293bebb643227bb0e8ff9061c6d71380e5b3c70f7b1e005bfbae7b7ea4  ksshaskpass-e4ab0587e28d7f3029a874d2f93c1689853fc573.tar.xz
"
