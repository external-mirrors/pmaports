# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kaddressbook
pkgver=99999_git20250727
pkgrel=0
_commit="324a528fc52c668930c1bc90062f8ecee36d88cd"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://apps.kde.org/kaddressbook/"
pkgdesc="Address Book application to manage your contacts"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
depends="kdepim-runtime"
makedepends="
	akonadi-dev
	akonadi-search-dev
	extra-cmake-modules
	gpgme-dev
	grantleetheme-dev
	kcmutils-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kontactinterface-dev
	kpimtextedit-dev
	kuserfeedback-dev
	kuserfeedback-dev
	libkdepim-dev
	libkleo-dev
	pimcommon-dev
	prison-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/kaddressbook.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-27/kaddressbook-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kaddressbook-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja\
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8e67fcefb17a0e69e96b4306ce2a76d51599e31ae41b37055268e00fe87b197dc304a8baa26de184fc6afafddee4f7505cfa7ac67e9a1a5918bebda83e9e36be  kaddressbook-324a528fc52c668930c1bc90062f8ecee36d88cd.tar.xz
"
