# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kde-gtk-config
pkgver=99999_git20250918
pkgrel=0
_commit="03869d3441aa59af6a6dc3c93007304b262ca87f"
pkgdesc="GTK2 and GTK3 Configurator for KDE"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma/kde-gtk-config"
license="GPL-2.0 AND LGPL-2.1-only OR LGPL-3.0-only"
depends="
	gsettings-desktop-schemas
	xdg-desktop-portal-gtk
	xsettingsd
	"
makedepends="
	extra-cmake-modules
	gsettings-desktop-schemas-dev
	gtk+2.0-dev
	gtk+3.0-dev
	karchive-dev
	kcmutils-dev
	kconfigwidgets-dev
	kdecoration-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	sassc
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kde-gtk-config.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-20/kde-gtk-config-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kde-gtk-config-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c64050f3f8f8505e3f153c3d165b05f566e51c2f17f04021bee237255a62973a44d8191727ec60cca1a55e74f2eabdc3d0eeb65bd2b3798b5c2f076f1055d193  kde-gtk-config-03869d3441aa59af6a6dc3c93007304b262ca87f.tar.xz
"
