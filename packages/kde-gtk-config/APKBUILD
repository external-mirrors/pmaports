# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kde-gtk-config
pkgver=99999_git20251114
pkgrel=0
_commit="a12a2a4b13d5400852aa0c12d70755cf87fd2105"
pkgdesc="GTK2 and GTK3 Configurator for KDE"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma/kde-gtk-config"
license="GPL-2.0 AND LGPL-2.1-only OR LGPL-3.0-only"
depends="
	gsettings-desktop-schemas
	xdg-desktop-portal-gtk
	xsettingsd
	"
makedepends="
	extra-cmake-modules
	gsettings-desktop-schemas-dev
	gtk+2.0-dev
	gtk+3.0-dev
	karchive-dev
	kcmutils-dev
	kconfigwidgets-dev
	kdecoration-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	sassc
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kde-gtk-config.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/kde-gtk-config-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kde-gtk-config-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dd04ba0863d52e5e4a01aabcab67a356601f09fe0aaef72565e1cb62d18292abc704fdc8f09b01511066326bb4900bf4f7f90a01ba0615ba8ba899c7795e92b9  kde-gtk-config-a12a2a4b13d5400852aa0c12d70755cf87fd2105.tar.xz
"
