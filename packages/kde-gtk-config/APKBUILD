# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kde-gtk-config
pkgver=99999_git20260216
pkgrel=0
_commit="a61fc60d6f12ad77edb2658bc5c1b1a22139cb6b"
pkgdesc="GTK2 and GTK3 Configurator for KDE"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma/kde-gtk-config"
license="GPL-2.0 AND LGPL-2.1-only OR LGPL-3.0-only"
depends="
	gsettings-desktop-schemas
	xdg-desktop-portal-gtk
	xsettingsd
	"
makedepends="
	extra-cmake-modules
	gsettings-desktop-schemas-dev
	gtk+2.0-dev
	gtk+3.0-dev
	karchive-dev
	kcmutils-dev
	kconfigwidgets-dev
	kdecoration-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	sassc
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kde-gtk-config.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/kde-gtk-config-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kde-gtk-config-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ef60da7af47480d5175a8ee16dfa30d20e19ae82691fae71a9139635af131ada301db571e8e0b51b4448b1f5d4768d3ac3b4268e64990280c48ebea35f464f13  kde-gtk-config-a61fc60d6f12ad77edb2658bc5c1b1a22139cb6b.tar.xz
"
