# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kitinerary
pkgver=99999_git20251115
pkgrel=0
_commit="e39ced1233c9ce5cc4f243d52f31d2dad3df500d"
# armhf blocked by qt6-qtdeclarative
# ppc64le FTBFS
arch="all !armhf !ppc64le"
url="https://kontact.kde.org/"
pkgdesc="Data model and extraction system for travel reservation information"
license="LGPL-2.0-or-later"
depends_dev="
	kcalendarcore-dev
	kcontacts-dev
	kmime-dev
	kpkpass-dev
	libphonenumber-dev
	zxing-cpp-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	ki18n-dev
	libxml2-dev
	poppler-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	shared-mime-info
	zlib-dev
	"
_repo_url="https://invent.kde.org/pim/kitinerary.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/kitinerary-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kitinerary-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	cd build

	# jsonlddocumenttest, mergeutiltest, airportdbtest, pkpassextractortest,
	# postprocessortest, calendarhandlertest, extractortest and knowledgedbtest are broken
	local skipped_tests="(jsonlddocument"
	local tests="
		mergeutil
		airportdb
		pkpassextractor
		postprocessor
		calendarhandler
		extractor
		knowledgedb
		"
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
97e59b01a502e6aab481bf16906b283cb6e311af3ee8756c7aea86f359638b188d5202dfa3f0a2f0484b0037123c7b11b706d44071da44e0592b9f99f31d5e30  kitinerary-e39ced1233c9ce5cc4f243d52f31d2dad3df500d.tar.xz
"
