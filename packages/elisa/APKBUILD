# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=elisa
pkgver=99999_git20260130
pkgrel=0
_commit="df228f2bab46d570f1950167f5ce9646d28ee4bf"
# armhf blocked by qt6-qtdeclarative
# s390x blocked by vlc
arch="all !armhf !s390x"
url="https://kde.org/applications/multimedia/org.kde.elisa"
pkgdesc="A simple music player aiming to provide a nice experience for its users"
license="LGPL-3.0-or-later"
depends="
	kirigami
	kirigami-addons
	vlc
	"
makedepends="
	baloo-dev
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	kpackage-dev
	kxmlgui-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	samurai
	vlc-dev
	"
checkdepends="
	cmd:dbus-run-session
	xvfb-run
	"
_repo_url="https://invent.kde.org/multimedia/elisa.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/elisa-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/elisa-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build

	# mediaplaylistproxymodelTest, elisaqmltests and localfilelistingtest are broken
	CTEST_OUTPUT_ON_FAILURE=TRUE dbus-run-session xvfb-run ctest -E "(viewManagerTest|mediaplaylistproxymodelTest|elisaqmltests|localfilelistingtest)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
aa91f36275effeba7f6ee2f0c11bdb127d22557b2f10584913626d021c4ae65b84a8679ae20c947b45966270d47972405fc39632544dcb9056eb2d4c52c125c3  elisa-df228f2bab46d570f1950167f5ce9646d28ee4bf.tar.xz
"
