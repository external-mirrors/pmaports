# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=elisa
pkgver=99999_git20260106
pkgrel=0
_commit="fa944186bc3f4e625d4e75350071c69828587e45"
# armhf blocked by qt6-qtdeclarative
# s390x blocked by vlc
arch="all !armhf !s390x"
url="https://kde.org/applications/multimedia/org.kde.elisa"
pkgdesc="A simple music player aiming to provide a nice experience for its users"
license="LGPL-3.0-or-later"
depends="
	kirigami
	kirigami-addons
	vlc
	"
makedepends="
	baloo-dev
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	kpackage-dev
	kxmlgui-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	samurai
	vlc-dev
	"
checkdepends="
	cmd:dbus-run-session
	xvfb-run
	"
_repo_url="https://invent.kde.org/multimedia/elisa.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-07/elisa-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/elisa-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build

	# mediaplaylistproxymodelTest, elisaqmltests and localfilelistingtest are broken
	CTEST_OUTPUT_ON_FAILURE=TRUE dbus-run-session xvfb-run ctest -E "(viewManagerTest|mediaplaylistproxymodelTest|elisaqmltests|localfilelistingtest)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f8483cf8d4cb8937719c1a0b09f375a9c4da583190ec78d39d203696d3d296595e73ec6d2410eb364dd6830d9722f35a8d2329ac9ab15161c80b98e189ea379d  elisa-fa944186bc3f4e625d4e75350071c69828587e45.tar.xz
"
