# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=elisa
pkgver=99999_git20260220
pkgrel=0
_commit="75d9cdc5ffd01feff47aaa3e947fb2d295741fc8"
# armhf blocked by qt6-qtdeclarative
# s390x blocked by vlc
arch="all !armhf !s390x"
url="https://kde.org/applications/multimedia/org.kde.elisa"
pkgdesc="A simple music player aiming to provide a nice experience for its users"
license="LGPL-3.0-or-later"
depends="
	kirigami
	kirigami-addons
	vlc
	"
makedepends="
	baloo-dev
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	kpackage-dev
	kxmlgui-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	samurai
	vlc-dev
	"
checkdepends="
	cmd:dbus-run-session
	xvfb-run
	"
_repo_url="https://invent.kde.org/multimedia/elisa.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/elisa-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/elisa-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build

	# mediaplaylistproxymodelTest, elisaqmltests and localfilelistingtest are broken
	CTEST_OUTPUT_ON_FAILURE=TRUE dbus-run-session xvfb-run ctest -E "(viewManagerTest|mediaplaylistproxymodelTest|elisaqmltests|localfilelistingtest)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
69ec0fc739d75c571363ed72f3b8edbe807ca6904feadedfc568bc65300a1e4178b7bfd25ec2dbc9e4858e1c8ea06d6db3c6d6d2a8a5ea05ac18a50a65ed71a3  elisa-75d9cdc5ffd01feff47aaa3e947fb2d295741fc8.tar.xz
"
