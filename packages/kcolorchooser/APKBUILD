# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcolorchooser
pkgver=99999_git20260127
pkgrel=0
_commit="2cbb06d5131b3f0db99829eca6e5db050fe3bc7a"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/graphics/org.kde.kcolorchooser"
pkgdesc="A color palette tool, used to mix colors and create custom color palettes"
license="MIT"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/graphics/kcolorchooser.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-28/kcolorchooser-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kcolorchooser-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3fbc68cf77469e5e83c0fa99fe523a11e09cabf745bb9c2e5c2d482af4967fefdc3efc7182c29d04e540b00e6eedd0bba7596dd99d42e0d3ca474f0a935a6faa  kcolorchooser-2cbb06d5131b3f0db99829eca6e5db050fe3bc7a.tar.xz
"
