# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcolorchooser
pkgver=99999_git20251207
pkgrel=0
_commit="bd53ee8cb8ff925926d649b40ad72e6ba4a2447c"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/graphics/org.kde.kcolorchooser"
pkgdesc="A color palette tool, used to mix colors and create custom color palettes"
license="MIT"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/graphics/kcolorchooser.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-08/kcolorchooser-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kcolorchooser-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
53afdcaadcd1a107c09f290587dc947a529eaf14949050fef1656f3795bd2961e1c0b5d1b02eae53c4e6f2615d39a5fc05e5b75743ece203a63dcd8e65b5888a  kcolorchooser-bd53ee8cb8ff925926d649b40ad72e6ba4a2447c.tar.xz
"
