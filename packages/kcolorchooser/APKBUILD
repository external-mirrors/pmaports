# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcolorchooser
pkgver=99999_git20260220
pkgrel=0
_commit="e4c165f992c78eddb315ec84df9d68b145784d6e"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/graphics/org.kde.kcolorchooser"
pkgdesc="A color palette tool, used to mix colors and create custom color palettes"
license="MIT"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/graphics/kcolorchooser.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/kcolorchooser-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kcolorchooser-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2a1bab62ef636e0160508b5b8beecc5f6f5bb66381460b5bd59fd490970e1d3ff3b3afdaf00e178a19e53a514cc8f4417eec642f8a7241d3fe38d84dc78478f7  kcolorchooser-e4c165f992c78eddb315ec84df9d68b145784d6e.tar.xz
"
