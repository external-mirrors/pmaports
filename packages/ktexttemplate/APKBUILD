# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=ktexttemplate
pkgver=99999_git20250908
pkgrel=0
_commit="738fd0de116f24d66e712b5f40838ec410286199"
pkgdesc="Library to allow application developers to separate the structure of documents from the data they contain"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtbase-dev
	samurai
	graphviz
	qt6-qttools-dev
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/ktexttemplate.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-08/ktexttemplate-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/ktexttemplate-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
eb7c24ddaa5fdf475c9754167794fc56bfa33f2c2e43eb11b60fc508ee8bf7eae575badd6792948b6fc3b9b03b6357d81fbb1c80ca1298af17b525226b226432  ktexttemplate-738fd0de116f24d66e712b5f40838ec410286199.tar.xz
"
