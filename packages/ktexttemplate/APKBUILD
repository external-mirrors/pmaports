# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=ktexttemplate
pkgver=99999_git20260206
pkgrel=0
_commit="16170c1fbc81ff72312bded5b4f95b9ba97b9ee1"
pkgdesc="Library to allow application developers to separate the structure of documents from the data they contain"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtbase-dev
	samurai
	graphviz
	qt6-qttools-dev
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/ktexttemplate.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/ktexttemplate-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/ktexttemplate-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
2c5535ede278e06076ac097e9cfedf4c27e4d671fbd64aaa1e1973d4664a095bf9855c50b142a2edf91e64987a32ad51b1093aaa52ab4787cb08c2d042f2eb05  ktexttemplate-16170c1fbc81ff72312bded5b4f95b9ba97b9ee1.tar.xz
"
