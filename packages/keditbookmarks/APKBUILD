# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=keditbookmarks
pkgver=99999_git20260220
pkgrel=0
_commit="89b158917adfa366c9ee5277f5c6d7f39254bc83"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/"
pkgdesc="Bookmark Organizer and Editor"
license="GPL-2.0-only AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kparts-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/utilities/keditbookmarks.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/keditbookmarks-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/keditbookmarks-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fb69c56e10c05d937136c0f50350de3b4c6db8ccd98a8d572974bc51c4d06deccda82acfd8dc99e33785aee743d0d77f4d421fc9568cc35312a23a8b77ca8f35  keditbookmarks-89b158917adfa366c9ee5277f5c6d7f39254bc83.tar.xz
"
