# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=keditbookmarks
pkgver=99999_git20251020
pkgrel=0
_commit="1528ffe5508d8e87d5fb7255ae3f0a5688404f87"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/"
pkgdesc="Bookmark Organizer and Editor"
license="GPL-2.0-only AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kparts-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/utilities/keditbookmarks.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/keditbookmarks-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/keditbookmarks-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d4f4ef8685a301a07cf2f80332e1dde0b63a0403e3d8fc22a048a91cfc1250ea5e3d3cea9cf9afb4ac3dde7b379e6694bdde8f7713924b2a038597c9863c2d06  keditbookmarks-1528ffe5508d8e87d5fb7255ae3f0a5688404f87.tar.xz
"
