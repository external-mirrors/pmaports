# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=keditbookmarks
pkgver=99999_git20250915
pkgrel=0
_commit="cc0dd7b9cd25501249a2541836d855466fdff2bf"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/"
pkgdesc="Bookmark Organizer and Editor"
license="GPL-2.0-only AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kparts-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/utilities/keditbookmarks.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-15/keditbookmarks-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/keditbookmarks-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6ad6851bb2cc4513acea961574ef864118a0ad66f4967a7d521e91fa6dcc61db710d5ca7377f807d52de5d48b4bf3563cd258c16677b0ef8fb264df033926864  keditbookmarks-cc0dd7b9cd25501249a2541836d855466fdff2bf.tar.xz
"
