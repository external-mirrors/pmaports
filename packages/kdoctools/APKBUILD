# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdoctools
pkgver=99999_git20250716
pkgrel=0
_commit="93c1b6f8a2b91db759fc809ffeb9032260977783"
pkgdesc="Documentation generation from docbook"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends="
	docbook-xml
	docbook-xsl
	"
depends_dev="
	karchive-dev
	ki18n-dev
	libxml2-dev
	libxml2-utils
	libxslt-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	perl-uri
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kdoctools.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-17/kdoctools-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kdoctools-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fd11f163260cf77c449911879ed3b094cb60ea055ce1313647226a46bfa27a35b3a51547ceb9b0c3b7d5af02c8c0f17f4e2ede83587a640625ddf4f7841b58e7  kdoctools-93c1b6f8a2b91db759fc809ffeb9032260977783.tar.xz
"
