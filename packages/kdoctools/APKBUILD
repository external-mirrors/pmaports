# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdoctools
pkgver=99999_git20251005
pkgrel=0
_commit="fdc17bf805631b30fb032bc0fb73afcab93f86d7"
pkgdesc="Documentation generation from docbook"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends="
	docbook-xml
	docbook-xsl
	"
depends_dev="
	karchive-dev
	ki18n-dev
	libxml2-dev
	libxml2-utils
	libxslt-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	perl-uri
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kdoctools.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/kdoctools-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kdoctools-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5994a24b44ed5f76f8b091476ceedc9874e77a454b9840c04c9e6c36ea621661267774cd4d8a867d2e1c780b8ee00f0f0aac05184949b8ca1b6555a09874b4b6  kdoctools-fdc17bf805631b30fb032bc0fb73afcab93f86d7.tar.xz
"
