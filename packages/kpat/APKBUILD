# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kpat
pkgver=99999_git20250828
pkgrel=0
_commit="5ed9026c74e69ee7787d9efe94b111d12d663e1e"
pkgdesc="KPatience offers a selection of solitaire card games"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/kpat/"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="carddecks"
makedepends="
	black-hole-solver-dev
	extra-cmake-modules
	freecell-solver-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kguiaddons-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/games/kpat.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-29/kpat-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
# Broken tests
options="!check"

options="!check"
builddir="$srcdir/kpat-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7d45ffc3287fc9ff9ddd73b172af48f1ec1174a8e93223c1551a3b0b22f6df6c4b268f6d6c66b0fafe1ed0f9e5e73d0d2abb08e8b02e5f9272cd70f4aea9fb08  kpat-5ed9026c74e69ee7787d9efe94b111d12d663e1e.tar.xz
"
