# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkmahjongg
pkgver=99999_git20250706
pkgrel=0
_commit="2de0db58e7b3a3945f47f810573bae7f918aa3b7"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games"
pkgdesc="Common code, backgrounds and tile sets for games using Mahjongg tiles"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/libkmahjongg.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/libkmahjongg-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests found

options="!check"
builddir="$srcdir/libkmahjongg-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6157eeee2bcadf825fd0e856b828fe128388f757c578d86c86e2014c4741658704ba1773a1ee6516c7b3400895f4cdd2a4ab4ee5f37639feb0c38387afb9460a  libkmahjongg-2de0db58e7b3a3945f47f810573bae7f918aa3b7.tar.xz
"
