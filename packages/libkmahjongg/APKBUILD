# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkmahjongg
pkgver=99999_git20251011
pkgrel=0
_commit="7d252b9c125ec211129c9a5b0750ad73093be8f7"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games"
pkgdesc="Common code, backgrounds and tile sets for games using Mahjongg tiles"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/libkmahjongg.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-12/libkmahjongg-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests found

options="!check"
builddir="$srcdir/libkmahjongg-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7b51b305dedfdf3c349f9b2ae6b0bdf4f691b695f323a6cfece147073dac328dbc126dc3785004da60beeb5286dd5fc5ac37a2e6a31d5142f5fc7354190ec06b  libkmahjongg-7d252b9c125ec211129c9a5b0750ad73093be8f7.tar.xz
"
