# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkmahjongg
pkgver=99999_git20250609
pkgrel=0
_commit="1a4a9bfb6e189866d042f7c1afbd7d7894321aef"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games"
pkgdesc="Common code, backgrounds and tile sets for games using Mahjongg tiles"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/libkmahjongg.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-30/libkmahjongg-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests found

options="!check"
builddir="$srcdir/libkmahjongg-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1f14fa0326aec9b08e85a53bf705d08eab5e489e00047139a9a8448d9935f62386847afe9ad088581e10e9c20f290722631c0e4e9ddf3e5be8379a4211a061f1  libkmahjongg-1a4a9bfb6e189866d042f7c1afbd7d7894321aef.tar.xz
"
