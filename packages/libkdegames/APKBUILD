# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libkdegames
pkgver=99999_git20251118
pkgrel=0
_commit="29627d9c528063ecf21df7c32a6bfadb74438fd9"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/games"
pkgdesc="Common code and data for many KDE games"
license="LGPL-2.0-only AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	kbookmarks-dev
	kcodecs-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdnssd-dev
	kglobalaccel-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kitemviews-dev
	kjobwidgets-dev
	knewstuff-dev
	kservice-dev
	ktextwidgets-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libsndfile-dev
	openal-soft-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/games/libkdegames.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/libkdegames-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang carddecks::noarch"

options="!check"
builddir="$srcdir/libkdegames-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

carddecks() {
	pkgdesc="Contains all carddecks for KDE cardgames"
	depends="$pkgname=$pkgver-r$pkgrel"

	amove usr/share/carddecks
}

sha512sums="
404ca7c25ff190abef73572aa741cf545c480b3823f65929753d2ae04bc6be25c098c5099f1fce907ea898229343cbf6fa0931e1521999e92c83ad9f3ca62b02  libkdegames-29627d9c528063ecf21df7c32a6bfadb74438fd9.tar.xz
"
