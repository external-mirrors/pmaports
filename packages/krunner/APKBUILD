# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=krunner
pkgver=99999_git20251018
pkgrel=0
_commit="e2b8bc0a7ba011effe5f27f65f39a9a881fc26d6"
pkgdesc="Framework for providing different actions given a string query"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kitemmodels-dev
	kservice-dev
	qt6-qtbase-dev
	threadweaver-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="
	dbus
	xvfb-run
	"
_repo_url="https://invent.kde.org/frameworks/krunner.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/krunner-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/krunner-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# dbusrunnertest and runnermanagertest is broken
	dbus-run-session -- xvfb-run ctest --test-dir build -E "(dbusrunner|runnermanager)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
024249a605f168932c7dcf46bb4f26f648aa742442226f4917198f6a9ad7840375b11e44db0b94640efee257d5c32706b9118400a81acce699f5e7821f1cb6b8  krunner-e2b8bc0a7ba011effe5f27f65f39a9a881fc26d6.tar.xz
"
