# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=krunner
pkgver=99999_git20251005
pkgrel=0
_commit="411dd58af08f211692d9223205022f4473392894"
pkgdesc="Framework for providing different actions given a string query"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kitemmodels-dev
	kservice-dev
	qt6-qtbase-dev
	threadweaver-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="
	dbus
	xvfb-run
	"
_repo_url="https://invent.kde.org/frameworks/krunner.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/krunner-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/krunner-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# dbusrunnertest and runnermanagertest is broken
	dbus-run-session -- xvfb-run ctest --test-dir build -E "(dbusrunner|runnermanager)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
a3e3eb793cb282637ccf5d415d0d44e9a84d36ec581e64950631d19f048e265a4346e30ebbc9dcaf1ea7c8de0ff1ffcf1c5d80a304f1d7d60feaebef9f9bca68  krunner-411dd58af08f211692d9223205022f4473392894.tar.xz
"
