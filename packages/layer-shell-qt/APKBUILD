# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=layer-shell-qt
pkgver=99999_git20251025
pkgrel=0
_commit="b9e12609492d14c5271affa5a986572b45e0266f"
pkgdesc="Qt component to allow applications to make use of the Wayland wl-layer-shell protocol"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	wayland-protocols
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/layer-shell-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-28/layer-shell-qt-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/layer-shell-qt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DENABLE_TESTING=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
96c232f732c33b5a3b5fb09060e8a9459ab433ab4017e99997ed39f1b33835fff58916bc0e6c1634ba04473051211472ead8f98fc008f2579add1f8cc68ff682  layer-shell-qt-b9e12609492d14c5271affa5a986572b45e0266f.tar.xz
"
