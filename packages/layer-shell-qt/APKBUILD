# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=layer-shell-qt
pkgver=99999_git20250803
pkgrel=0
_commit="d436a779d7f8dab974137324e2af3166edff2634"
pkgdesc="Qt component to allow applications to make use of the Wayland wl-layer-shell protocol"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	wayland-protocols
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/layer-shell-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-03/layer-shell-qt-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/layer-shell-qt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DENABLE_TESTING=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5d1f6af5f75c7c17d436126d328745a3a789ce91d521d267e364a20049f147e39d1a2dcbf5ce7f6b42ca24ec33faf1448c9ef8971d3ad8af57d6bd12d40c4e6a  layer-shell-qt-d436a779d7f8dab974137324e2af3166edff2634.tar.xz
"
