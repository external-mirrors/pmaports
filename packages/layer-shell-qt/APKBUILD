# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=layer-shell-qt
pkgver=99999_git20251016
pkgrel=0
_commit="2b8544f5a03b83f18873b884878bea57fc71dcee"
pkgdesc="Qt component to allow applications to make use of the Wayland wl-layer-shell protocol"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	wayland-protocols
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/layer-shell-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/layer-shell-qt-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/layer-shell-qt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DENABLE_TESTING=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f3dae94dd6e92fe5a1ef64d9a3b668a62d700a4a2ebb62041bf87227e4b99dfc8f7beac967aba06d561ddaf08f8bee2bff22c34fa3cf7ac5d3ce6fb2372cef87  layer-shell-qt-2b8544f5a03b83f18873b884878bea57fc71dcee.tar.xz
"
