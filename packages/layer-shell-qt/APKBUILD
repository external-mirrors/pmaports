# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=layer-shell-qt
pkgver=99999_git20260113
pkgrel=0
_commit="68df2852947a5066c6001845c694c737ca43e0c6"
pkgdesc="Qt component to allow applications to make use of the Wayland wl-layer-shell protocol"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	wayland-protocols
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/layer-shell-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-14/layer-shell-qt-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/layer-shell-qt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DENABLE_TESTING=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
50e8c1d73297aa4c672c9a1ae1cc639cb0aefebef36d59e675f0a5042b20eeffa1e4dbc03badefe07422d3cadcbc91d9adf25a0007a867fe662bd6b5ff85566f  layer-shell-qt-68df2852947a5066c6001845c694c737ca43e0c6.tar.xz
"
