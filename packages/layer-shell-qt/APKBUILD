# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=layer-shell-qt
pkgver=99999_git20250918
pkgrel=0
_commit="e4b5bdbf1bfd604968785154a1d9b39d71a91d31"
pkgdesc="Qt component to allow applications to make use of the Wayland wl-layer-shell protocol"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	wayland-protocols
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/layer-shell-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-20/layer-shell-qt-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/layer-shell-qt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DENABLE_TESTING=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b219f3b89bc52fe329900deba086c581c1c51036d1723b55669d2baf447640e7ddaccf292c22da99b391c2da1d9e5438dc8f742434935291a23b00d32e1bc908  layer-shell-qt-e4b5bdbf1bfd604968785154a1d9b39d71a91d31.tar.xz
"
