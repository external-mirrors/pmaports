# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-disks
pkgver=99999_git20260209
pkgrel=0
_commit="a95c446e7c7ec9c16b65a38b8450242e849ff851"
pkgdesc="Monitors S.M.A.R.T. capable devices for imminent failure"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="
	kirigami
	smartmontools
	"
makedepends="
	extra-cmake-modules
	kauth-dev
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	knotifications-dev
	kservice-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-disks.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-09/plasma-disks-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/plasma-disks-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
22c4d2b039aafc55bdc2adca78cd3740afc0c413a11db01b9c6c01afc60f61b9db88110f205b565eb361fb666fb2bf698a3f1b58b6ee825d7c6f01921f5ed770  plasma-disks-a95c446e7c7ec9c16b65a38b8450242e849ff851.tar.xz
"
