# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=itinerary
pkgver=99999_git20251116
pkgrel=0
_commit="b2c9cf2be2eaf92f02ddd2457e0560ac04951c78"
# armhf and s390x blocked by qt6-qtdeclarative
# ppc64le blocked by kitinerary
arch="aarch64 armv7 x86_64 x86"
url="https://invent.kde.org/pim/itinerary"
pkgdesc="Itinerary and boarding pass management application"
license="BSD-3-Clause AND LGPL-2.0-or-later"
depends="
	kirigami-addons
	kirigami
	kitemmodels
	kopeninghours
	prison
	qt6-qtlocation
	tzdata
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	kirigami-addons-dev
	kitinerary-dev
	knotifications-dev
	kosmindoormap-dev
	kpkpass-dev
	kpublictransport-dev
	kunitconversion-dev
	libquotient-dev
	networkmanager-qt-dev
	qcoro-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtlocation-dev
	qtkeychain-dev
	samurai
	shared-mime-info
	solid-dev
	zlib-dev
	"
checkdepends="
	dbus
	xvfb-run
	"
_repo_url="https://invent.kde.org/pim/itinerary.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/itinerary-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/itinerary-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# tripgrouptest and timelinemodel test are broken
	dbus-run-session xvfb-run ctest --test-dir build -E "(tripgroup|timelinemodel)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8500306543515fe9bcc1375f0dd6a742164f31518e4f34febce180c1a46d97f2e4968f3ec238182c7287b8b8d5ff76866b89c1db3d0b7ab975b8fe4545c1cfc5  itinerary-b2c9cf2be2eaf92f02ddd2457e0560ac04951c78.tar.xz
"
