# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=itinerary
pkgver=99999_git20260108
pkgrel=0
_commit="5e0407df6c64f4fae22b4122371c1a019f2eab01"
# armhf and s390x blocked by qt6-qtdeclarative
# ppc64le blocked by kitinerary
arch="aarch64 armv7 x86_64 x86"
url="https://invent.kde.org/pim/itinerary"
pkgdesc="Itinerary and boarding pass management application"
license="BSD-3-Clause AND LGPL-2.0-or-later"
depends="
	kirigami-addons
	kirigami
	kitemmodels
	kopeninghours
	prison
	qt6-qtlocation
	tzdata
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	kirigami-addons-dev
	kitinerary-dev
	knotifications-dev
	kosmindoormap-dev
	kpkpass-dev
	kpublictransport-dev
	kunitconversion-dev
	libquotient-dev
	networkmanager-qt-dev
	qcoro-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtlocation-dev
	qtkeychain-dev
	samurai
	shared-mime-info
	solid-dev
	zlib-dev
	"
checkdepends="
	dbus
	xvfb-run
	"
_repo_url="https://invent.kde.org/pim/itinerary.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-09/itinerary-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/itinerary-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# tripgrouptest and timelinemodel test are broken
	dbus-run-session xvfb-run ctest --test-dir build -E "(tripgroup|timelinemodel)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e89ac2df1f7c3640ce4a54d43821d1c48262daad7dbb51467410e432b4d3918e2b3a76406fe4f757304b65a0c1fbd8cf730bc4ffd439d29f6908c3eec7e4a3c3  itinerary-5e0407df6c64f4fae22b4122371c1a019f2eab01.tar.xz
"
