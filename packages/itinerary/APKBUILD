# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=itinerary
pkgver=99999_git20260118
pkgrel=0
_commit="b2191976edd3421a6fa2b86b6b8cefa83dba8a11"
# armhf and s390x blocked by qt6-qtdeclarative
# ppc64le blocked by kitinerary
arch="aarch64 armv7 x86_64 x86"
url="https://invent.kde.org/pim/itinerary"
pkgdesc="Itinerary and boarding pass management application"
license="BSD-3-Clause AND LGPL-2.0-or-later"
depends="
	kirigami-addons
	kirigami
	kitemmodels
	kopeninghours
	prison
	qt6-qtlocation
	tzdata
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	kirigami-addons-dev
	kitinerary-dev
	knotifications-dev
	kosmindoormap-dev
	kpkpass-dev
	kpublictransport-dev
	kunitconversion-dev
	libquotient-dev
	networkmanager-qt-dev
	qcoro-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtlocation-dev
	qtkeychain-dev
	samurai
	shared-mime-info
	solid-dev
	zlib-dev
	"
checkdepends="
	dbus
	xvfb-run
	"
_repo_url="https://invent.kde.org/pim/itinerary.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-18/itinerary-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/itinerary-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# tripgrouptest and timelinemodel test are broken
	dbus-run-session xvfb-run ctest --test-dir build -E "(tripgroup|timelinemodel)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6f0088096ba6b3579a2b71ee2934e668b1d7b6602fe982e4fee4f08b4b9c8f602f8ac46f3ff0979c650ef4768a26468737c06f4c183920bc4960bed39a16798a  itinerary-b2191976edd3421a6fa2b86b6b8cefa83dba8a11.tar.xz
"
