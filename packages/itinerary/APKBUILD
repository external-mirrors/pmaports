# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=itinerary
pkgver=99999_git20260204
pkgrel=0
_commit="48d347f3bfe383e8b278eccbb278e03cd0f4ee4b"
# armhf and s390x blocked by qt6-qtdeclarative
# ppc64le blocked by kitinerary
arch="aarch64 armv7 x86_64 x86"
url="https://invent.kde.org/pim/itinerary"
pkgdesc="Itinerary and boarding pass management application"
license="BSD-3-Clause AND LGPL-2.0-or-later"
depends="
	kirigami-addons
	kirigami
	kitemmodels
	kopeninghours
	prison
	qt6-qtlocation
	tzdata
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	kirigami-addons-dev
	kitinerary-dev
	knotifications-dev
	kosmindoormap-dev
	kpkpass-dev
	kpublictransport-dev
	kunitconversion-dev
	libquotient-dev
	networkmanager-qt-dev
	qcoro-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtlocation-dev
	qtkeychain-dev
	samurai
	shared-mime-info
	solid-dev
	zlib-dev
	"
checkdepends="
	dbus
	xvfb-run
	"
_repo_url="https://invent.kde.org/pim/itinerary.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-04/itinerary-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/itinerary-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# tripgrouptest and timelinemodel test are broken
	dbus-run-session xvfb-run ctest --test-dir build -E "(tripgroup|timelinemodel)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4fa91966aa58ca0d0bab57718be1a049ba0664a6981b3b0c3cfcfc4b1b911deaeb774886a0aa39e1a05180411cbe482ebff3598f3445c6145a9649ee1ad3f20c  itinerary-48d347f3bfe383e8b278eccbb278e03cd0f4ee4b.tar.xz
"
