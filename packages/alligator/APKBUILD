# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=alligator
pkgver=99999_git20251031
pkgrel=0
_commit="b0e9a4f98670199389f7360d3c759bd92b85b431"
pkgdesc="A convergent RSS/Atom feed reader"
url="https://invent.kde.org/plasma-mobile/alligator/"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-2.0-only OR GPL-3.0-only"
depends="
	kirigami-addons
	kirigami
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	kirigami-addons-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	syndication-dev
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/alligator.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-02/alligator-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/alligator-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
bb36fd1e2a40cbaa8cc028e259ffb5c73cc66244e29cbf41eb8ff5343b01a0411fe7a85af6f29c6bd673fbb77192407018e56611fb9b7f6a692a6760e7b52b7f  alligator-b0e9a4f98670199389f7360d3c759bd92b85b431.tar.xz
"
