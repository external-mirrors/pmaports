# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=alligator
pkgver=99999_git20260220
pkgrel=0
_commit="516c2f0636877141a48696ae7447312a11179906"
pkgdesc="A convergent RSS/Atom feed reader"
url="https://invent.kde.org/plasma-mobile/alligator/"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-2.0-only OR GPL-3.0-only"
depends="
	kirigami-addons
	kirigami
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	ki18n-dev
	kirigami-dev
	kirigami-addons-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	syndication-dev
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/alligator.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/alligator-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/alligator-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

