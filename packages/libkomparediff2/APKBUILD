# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkomparediff2
pkgver=99999_git20251011
pkgrel=0
_commit="5ddfe36475d2b72140fa22d4b93eb551cfcddca2"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/development"
pkgdesc="Library to compare files and strings"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcodecs-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/libkomparediff2.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-12/libkomparediff2-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/libkomparediff2-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8c1d311b77be7b3786414dfb43721bf5c795f3e57b1d3b45858c6d52bea7223792a5dac0c3aba1271c6bb936bf5d392afa9df25d4416d38f349256598a65b665  libkomparediff2-5ddfe36475d2b72140fa22d4b93eb551cfcddca2.tar.xz
"
