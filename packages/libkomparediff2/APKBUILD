# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkomparediff2
pkgver=99999_git20250805
pkgrel=0
_commit="95c6eddd2be854c21ed7b5053be697e25cf80b64"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/development"
pkgdesc="Library to compare files and strings"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcodecs-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/libkomparediff2.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-05/libkomparediff2-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/libkomparediff2-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1d33cbc1adf5b509416fa2402800e7fe04211686322e9c41104b6d06014dedb94c30f18668680fe33fd8e1f90872d0c6f307d1caf26487aafe18ce4d51877828  libkomparediff2-95c6eddd2be854c21ed7b5053be697e25cf80b64.tar.xz
"
