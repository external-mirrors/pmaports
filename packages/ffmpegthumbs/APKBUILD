# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ffmpegthumbs
pkgver=99999_git20260103
pkgrel=0
_commit="0d37b1ddb28c1def56ce24972628a2887b2cef13"
# armhf blocked by extra-cmake-modules
# not useful on s390x
arch="all !s390x !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="FFmpeg-based thumbnail creator for video files"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	ffmpeg-dev
	kconfig-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	taglib-dev
	"
_repo_url="https://invent.kde.org/multimedia/ffmpegthumbs.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-06/ffmpegthumbs-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/ffmpegthumbs-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
76ed78ceb84733de474c16f45ad8f4db192a5148ad299acc4cefaa863e3925676d72e0efde1c89852197b32c851ca36eaed35b2e56c5ce477f2afefba69f5fb6  ffmpegthumbs-0d37b1ddb28c1def56ce24972628a2887b2cef13.tar.xz
"
