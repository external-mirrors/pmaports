# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ffmpegthumbs
pkgver=99999_git20250827
pkgrel=0
_commit="32cee09f67c3269d9be4c8d745dd49ffc61bc326"
# armhf blocked by extra-cmake-modules
# not useful on s390x
arch="all !s390x !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="FFmpeg-based thumbnail creator for video files"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	ffmpeg-dev
	kconfig-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	taglib-dev
	"
_repo_url="https://invent.kde.org/multimedia/ffmpegthumbs.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-29/ffmpegthumbs-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/ffmpegthumbs-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
bc701124d92d4ed9a22650d97e5465256cd68aa4158c88f84dcbb464bee3d0c403a82e35a924f039905259cfec4faa143a224da1c93cf36a8a30730e27bd561f  ffmpegthumbs-32cee09f67c3269d9be4c8d745dd49ffc61bc326.tar.xz
"
