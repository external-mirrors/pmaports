# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ffmpegthumbs
pkgver=99999_git20260127
pkgrel=0
_commit="8eb38b146e36a5501e800a141977a3e18e6a2a6f"
# armhf blocked by extra-cmake-modules
# not useful on s390x
arch="all !s390x !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="FFmpeg-based thumbnail creator for video files"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	ffmpeg-dev
	kconfig-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	taglib-dev
	"
_repo_url="https://invent.kde.org/multimedia/ffmpegthumbs.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-28/ffmpegthumbs-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/ffmpegthumbs-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
40f2d497754201bdae7555578db905a4bae26a2918a186205f08e31d924eb21a5781b8cced25df9eddcb633170c8f551db3ce8ffcda45a632dedd3991b51d1d1  ffmpegthumbs-8eb38b146e36a5501e800a141977a3e18e6a2a6f.tar.xz
"
