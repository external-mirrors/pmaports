# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kidentitymanagement
pkgver=99999_git20250805
pkgrel=0
_commit="a02f123f0e56b665a88a0978dd9549a644037f9d"
pkgdesc="KDE PIM libraries"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kontact.kde.org"
license="LGPL-2.0-or-later"
depends_dev="
	kcodecs-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kiconthemes-dev
	kio-dev
	kpimtextedit-dev
	ktextwidgets-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kirigami-addons-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/pim/kidentitymanagement.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-05/kidentitymanagement-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kidentitymanagement-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build

	# kpimidentity-signaturetest is broken
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest -E "kpimidentity-signaturetest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e74cb636cc54ca1ff86526fa831f8ef4d7b0a1c0387e2700d035dc4e35e8abcc2765221fb3dbbb52f32c0d5d70437a832c06e5455180a03199d63d84c9fb4c38  kidentitymanagement-a02f123f0e56b665a88a0978dd9549a644037f9d.tar.xz
"
