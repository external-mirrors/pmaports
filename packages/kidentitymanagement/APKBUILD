# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kidentitymanagement
pkgver=99999_git20250802
pkgrel=0
_commit="eb7392432a6a6d875c4201d018374265b0747fc9"
pkgdesc="KDE PIM libraries"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kontact.kde.org"
license="LGPL-2.0-or-later"
depends_dev="
	kcodecs-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kiconthemes-dev
	kio-dev
	kpimtextedit-dev
	ktextwidgets-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kirigami-addons-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/pim/kidentitymanagement.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-03/kidentitymanagement-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kidentitymanagement-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build

	# kpimidentity-signaturetest is broken
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest -E "kpimidentity-signaturetest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
38cc00f88c2df1cec2e4a29afacc747cb33755a20ab1d2db525bba4ac5d4f6a447ac14ea92d79530a567ace28f2b34b5ee91a5cfd76cd61c4f79fcf35beb18c3  kidentitymanagement-eb7392432a6a6d875c4201d018374265b0747fc9.tar.xz
"
