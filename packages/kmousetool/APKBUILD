# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmousetool
pkgver=99999_git20251011
pkgrel=0
_commit="60947b9eba8b3b5569f2d93c60036ee0a0a8b814"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kmousetool"
pkgdesc="A program that clicks the mouse for you"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	kstatusnotifieritem-dev
	kxmlgui-dev
	libxt-dev
	libxtst-dev
	phonon-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/accessibility/kmousetool.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-12/kmousetool-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmousetool-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eed0b493b8e0aa96c533a45bd36864b6e0cf768822b2c2c8bf4ad4e1de74b72ddf8a6ffb40e796cda1f3301e55bb1b6b1806351d77f167e40dc8b9e134bbca6e  kmousetool-60947b9eba8b3b5569f2d93c60036ee0a0a8b814.tar.xz
"
