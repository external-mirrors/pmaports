# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmousetool
pkgver=99999_git20251204
pkgrel=0
_commit="0f111d15588115564b0e8abc3165d9da73383e56"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kmousetool"
pkgdesc="A program that clicks the mouse for you"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	kstatusnotifieritem-dev
	kxmlgui-dev
	libxt-dev
	libxtst-dev
	phonon-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/accessibility/kmousetool.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-05/kmousetool-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmousetool-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
