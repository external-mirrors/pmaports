# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmplot
pkgver=99999_git20251210
pkgrel=0
_commit="40c9a4babda0ca9c5ac08223828ca63c8a1f20b8"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://edu.kde.org/kmplot"
pkgdesc="Mathematical Function Plotter"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kguiaddons-dev
	ki18n-dev
	kparts-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/kmplot.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-10/kmplot-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kmplot-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3c90155b2eaaadc71a1470214e18a84a487a459f554c981c74dbb021f74e8e7faa62b06cf1f903749fcd93d32d50d4cee7b97a57f3318e704b5c5db8cf64c7f5  kmplot-40c9a4babda0ca9c5ac08223828ca63c8a1f20b8.tar.xz
"
