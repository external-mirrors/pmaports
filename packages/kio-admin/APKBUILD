# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kio-admin
pkgver=99999_git20260218
pkgrel=0
_commit="c8a873ff8624bf0e48c48350ffc5aa3499a605f1"
pkgdesc="Manage files as administrator using the admin:// KIO protocol"
url="https://invent.kde.org/system/kio-admin"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="BSD-3-Clause AND (GPL-2.0-only OR GPL-3.0-only)"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kio-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/system/kio-admin.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-19/kio-admin-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kio-admin-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_WITH_QT6=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4f1f0296d29855725a31bc3343f494c0a9a22063ee30370ce380b814aaed1c36089d327711ad94ac0a520e5d92dd8a35f4a102be26636d6a3cf97ddc154b6a69  kio-admin-c8a873ff8624bf0e48c48350ffc5aa3499a605f1.tar.xz
"
