# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kio-admin
pkgver=99999_git20260127
pkgrel=0
_commit="07e4cb6d8d320ea4ca76712340df938b891f7d86"
pkgdesc="Manage files as administrator using the admin:// KIO protocol"
url="https://invent.kde.org/system/kio-admin"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="BSD-3-Clause AND (GPL-2.0-only OR GPL-3.0-only)"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kio-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/system/kio-admin.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-28/kio-admin-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kio-admin-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_WITH_QT6=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b2786f44764231112c125de7179003af95ffbe97e65366ca3826e0165717de966b15ab3eb0af2b6ca6c428ae0d04c60ea0519d533f49a0887fad111346c0caa9  kio-admin-07e4cb6d8d320ea4ca76712340df938b891f7d86.tar.xz
"
