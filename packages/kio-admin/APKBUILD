# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kio-admin
pkgver=99999_git20251223
pkgrel=0
_commit="72d2ff879b6f5c43d00157dd129ad758e53609df"
pkgdesc="Manage files as administrator using the admin:// KIO protocol"
url="https://invent.kde.org/system/kio-admin"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="BSD-3-Clause AND (GPL-2.0-only OR GPL-3.0-only)"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kio-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/system/kio-admin.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-23/kio-admin-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kio-admin-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_WITH_QT6=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7b9f906729c46796aa568846fac0e3d4bdecb78c0322bdaf0ac660eb4baf4a5b7ee83f7f31ded138f1de92be1359ca72f1cc1c5781d3cd08c803996cd35c649b  kio-admin-72d2ff879b6f5c43d00157dd129ad758e53609df.tar.xz
"
