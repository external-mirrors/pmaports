# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=oxygen-sounds
pkgver=99999_git20260113
pkgrel=0
_commit="0d4e803128a9f6bafcda85b2811c3c8fec886e5f"
pkgdesc="The Oxygen Sound Theme"
# armhf blocked by extra-cmake-modules
arch="noarch !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/oxygen-sounds.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-14/oxygen-sounds-$_commit.tar.xz"

options="!check"
builddir="$srcdir/oxygen-sounds-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
bbd02db6eac23d5f38600120c31f8609afece2e5da23e944d1051f3c528201c780fddfecc551b9e37db502ff32bb62816e7c5815f33a56ade9e692c402dc96a1  oxygen-sounds-0d4e803128a9f6bafcda85b2811c3c8fec886e5f.tar.xz
"
