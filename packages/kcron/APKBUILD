# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcron
pkgver=99999_git20260111
pkgrel=0
_commit="73132cafe62bb1dfb43086f606ece76781825351"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/system/"
pkgdesc="Configure and schedule tasks"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/system/kcron.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-12/kcron-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kcron-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
92ebd91b866e9a35816c6878c5518b395511dbcd5444f41e37ae47abaf1dabe3afc057cee9855b355b472267fb053c4856727b95877f2006426bdf97d044acd3  kcron-73132cafe62bb1dfb43086f606ece76781825351.tar.xz
"
