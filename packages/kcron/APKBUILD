# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcron
pkgver=99999_git20260201
pkgrel=0
_commit="f44162ad27944632ec5adcba38d6139dc65d3b92"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/system/"
pkgdesc="Configure and schedule tasks"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/system/kcron.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-03/kcron-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kcron-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
89d96cd0c196b67aeb18cb1ef5528b274e80116437bfa9dbd6d9dd7de2e7afaee6a1c52fda82c9ce3b95ab6a1724719f451e35a2fe30e47272c502e13c0e6a9b  kcron-f44162ad27944632ec5adcba38d6139dc65d3b92.tar.xz
"
