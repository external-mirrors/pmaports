# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcron
pkgver=99999_git20251201
pkgrel=0
_commit="5880e43cc0ca608f1e36fca7ebc5b03d8b290d3a"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/system/"
pkgdesc="Configure and schedule tasks"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/system/kcron.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-02/kcron-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kcron-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d75945cf7aff4962718e473e665a9a637098d133042b0306a2e15351119dd189a07e45adfeea838e156e11511cbe484a6d6385b0a18313920d5ec1d96e73fad4  kcron-5880e43cc0ca608f1e36fca7ebc5b03d8b290d3a.tar.xz
"
