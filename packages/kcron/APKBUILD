# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcron
pkgver=99999_git20251207
pkgrel=0
_commit="fe3dbf55b3c89dfa21a4f96dfd02f19fcb184809"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/system/"
pkgdesc="Configure and schedule tasks"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/system/kcron.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-08/kcron-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kcron-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
82d91af9f7083810c43133f2d556d2502f3d03906c35ece60844b8c5104b553681c9f9f166a29761897468fab6523ecbb9bee1256bab81c7f657794968d1f300  kcron-fe3dbf55b3c89dfa21a4f96dfd02f19fcb184809.tar.xz
"
