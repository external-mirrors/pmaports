# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=threadweaver
pkgver=99999_git20260206
pkgrel=0
_commit="19f61aa5f2e87095f3a852420489c28976129563"
pkgdesc="High-level multithreading framework"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/threadweaver.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/threadweaver-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/threadweaver-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
53d120f6c25e8fe947f34c804f60c4812d3393683e9e5a2aa65155edf92acc560379eefd5636884a29f7cc211f536e2969879ee3ef2e9657dfedbcc597cc6ad1  threadweaver-19f61aa5f2e87095f3a852420489c28976129563.tar.xz
"
