# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=threadweaver
pkgver=99999_git20251005
pkgrel=0
_commit="f33415e80f13937c226038df05c75e1b7af45b2a"
pkgdesc="High-level multithreading framework"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/threadweaver.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/threadweaver-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/threadweaver-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
582109d3b0156d4d8375d6fbb068b90931b363acbf7ab5ff3308dc70fbd32c39f9f8ef587ecadfd8e974eeb3cff743ba184c1aa5c4447b6c0a7388c4616408bb  threadweaver-f33415e80f13937c226038df05c75e1b7af45b2a.tar.xz
"
