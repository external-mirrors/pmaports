# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=threadweaver
pkgver=99999_git20251020
pkgrel=0
_commit="745d0d02a75e958b45594ce013756785d5988b9c"
pkgdesc="High-level multithreading framework"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/threadweaver.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/threadweaver-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/threadweaver-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
bd7e77768811d288be259cad791355e04a8bd888dd8e2956ed30747eb100e75cc1072a9f939f8a4973830829421b73a9ab6116708abf0ba717b0c13d77267cc5  threadweaver-745d0d02a75e958b45594ce013756785d5988b9c.tar.xz
"
