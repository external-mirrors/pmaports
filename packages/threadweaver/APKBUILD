# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=threadweaver
pkgver=99999_git20250721
pkgrel=0
_commit="348c90e166c0832fb36b088bf0121ae0e1ee3052"
pkgdesc="High-level multithreading framework"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/threadweaver.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-23/threadweaver-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/threadweaver-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
1a858809614f536fee1c6b184eec43490f7362f5d694096bff1edb03882077d10742a3fa810a78d2b6b1b93b5feb4cc66483e6cc2096c7ca21fbea782d2a8457  threadweaver-348c90e166c0832fb36b088bf0121ae0e1ee3052.tar.xz
"
