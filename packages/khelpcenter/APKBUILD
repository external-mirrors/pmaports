# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=khelpcenter
pkgver=99999_git20251017
pkgrel=0
_commit="bafe3ee4d25be48c94f20ebdcc46df34fcfc5e08"
pkgdesc="Application to show KDE Applications' documentation"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://userbase.kde.org/KHelpCenter"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	grantlee-dev
	karchive-dev
	kbookmarks-dev
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kservice-dev
	ktexttemplate-dev
	kwindowsystem-dev
	libxml2-dev
	qt6-qtbase-dev
	qt6-qtwebengine-dev
	samurai
	xapian-core-dev
	"
_repo_url="https://invent.kde.org/system/khelpcenter.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/khelpcenter-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/khelpcenter-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
95985bca157d6b261f2b58c83e55f28a0dc98afa1477f52d61385d7a823b3473fcaa22045d62c659ad241ac96087e817963d2e0f53bc7fe80402ec57f5e2db87  khelpcenter-bafe3ee4d25be48c94f20ebdcc46df34fcfc5e08.tar.xz
"
