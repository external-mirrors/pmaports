# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=khelpcenter
pkgver=99999_git20251223
pkgrel=0
_commit="fd4c91391b5f476c519c8da4fd8c37a42883828f"
pkgdesc="Application to show KDE Applications' documentation"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://userbase.kde.org/KHelpCenter"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	grantlee-dev
	karchive-dev
	kbookmarks-dev
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kservice-dev
	ktexttemplate-dev
	kwindowsystem-dev
	libxml2-dev
	qt6-qtbase-dev
	qt6-qtwebengine-dev
	samurai
	xapian-core-dev
	"
_repo_url="https://invent.kde.org/system/khelpcenter.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-23/khelpcenter-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/khelpcenter-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fcf2150eb297454c03cabc59c1d8100bab3e5e72fa84da55675fbf19da030e13a694691cd432a8335455c77b7cffe9f996a7fda6b0ee657d25487ffa90c1e136  khelpcenter-fd4c91391b5f476c519c8da4fd8c37a42883828f.tar.xz
"
