# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=analitza
pkgver=99999_git20251107
pkgrel=0
_commit="15b3c39376dca71fb21e40d7ff7a16e7dbbd72e7"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://edu.kde.org/"
pkgdesc="A library to add mathematical features to your program"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends_dev="
	eigen-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/education/analitza.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/analitza-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/analitza-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e7033d9994586ba086c01c891fcc590e6b8d550e654acd4e147b9c10fa1c91af60c70678136eacb63bc079d348b794dbc1d202c70b7baea7e41f098751986ccd  analitza-15b3c39376dca71fb21e40d7ff7a16e7dbbd72e7.tar.xz
"
