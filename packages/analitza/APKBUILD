# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=analitza
pkgver=99999_git20250611
pkgrel=0
_commit="4fd77d167102d379b3741cea894fc5ca048e2f4d"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://edu.kde.org/"
pkgdesc="A library to add mathematical features to your program"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends_dev="
	eigen-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/education/analitza.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-22/analitza-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/analitza-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
46553e0d387b373bfec938c0ccde7b300c416edce9eb30974abd53cfeff02c0ba41847a0e38bc8a9fc6002415058329ea8a5ed0613b0d8c1787b72bfb769220a  analitza-4fd77d167102d379b3741cea894fc5ca048e2f4d.tar.xz
"
