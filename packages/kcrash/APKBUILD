# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcrash
pkgver=99999_git20250721
pkgrel=0
_commit="3b7af0265fcc83bb2617ba8c6ba980896115978d"
pkgdesc="Support for application crash analysis and bug report from apps"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	kwindowsystem-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kcrash.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-23/kcrash-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kcrash-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# kcrashtest is broken
	xvfb-run ctest --test-dir build -E "kcrashtest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
efa9bed201606639a522ff9c6471bfb6dc7e309b887c696bf99c2416557fa451eac645764d1f54399e71fc7ca1f6e08bfb0b1b6bb0f727c9b18ad826379072b8  kcrash-3b7af0265fcc83bb2617ba8c6ba980896115978d.tar.xz
"
