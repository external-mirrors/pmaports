# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kdesdk-kio
pkgver=99999_git20250716
pkgrel=0
_commit="7a570bd2b920a5493dad572ed938117a45f9ba79"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/development"
pkgdesc="KIO-Slaves"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kio-dev
	perl-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/kdesdk-kio.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-17/kdesdk-kio-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kdesdk-kio-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3f3ff57279ec4fb63ea103006bf361aece5a8cef68cb62ef00b3664aecd05f97c409c79f306bbdb933be5a99df3dccce7491c9cc203a62657b51cb23badc0368  kdesdk-kio-7a570bd2b920a5493dad572ed938117a45f9ba79.tar.xz
"
