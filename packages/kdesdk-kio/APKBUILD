# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kdesdk-kio
pkgver=99999_git20251201
pkgrel=0
_commit="0a9ccaf7aa4786176e131dd6ad5c46a3e8d9409c"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/development"
pkgdesc="KIO-Slaves"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kio-dev
	perl-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/kdesdk-kio.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-02/kdesdk-kio-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kdesdk-kio-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0f563066ec5d815929ceaad4f07d9540e6f6da16b96d8f21f98c47f9e7e3b4395c2501f4ecc19e6c6cb4a2add0cb6d8f7c57dfdea2eeb43cdc6dd7e0f0fefedb  kdesdk-kio-0a9ccaf7aa4786176e131dd6ad5c46a3e8d9409c.tar.xz
"
