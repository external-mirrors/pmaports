# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kded
pkgver=99999_git20260110
pkgrel=0
_commit="64acd4b3a87f51fad0378b9aebe78e0a4cb2b9a4"
pkgdesc="Extensible deamon for providing system level services"
# armhf blocked by qt6-qtdeclarative -> kconfig
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kservice-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kdoctools-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	$pkgname-doc
	"
_repo_url="https://invent.kde.org/frameworks/kded.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-10/kded-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kded-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8b5ced4f3d73c60141eb140e3ab86e8a825d3b4f5348f6a355fbd1e25b0e101009829a9175489d70b030b1dea66e26655f74f5bc8c298348c98dfd319732ac4e  kded-64acd4b3a87f51fad0378b9aebe78e0a4cb2b9a4.tar.xz
"
