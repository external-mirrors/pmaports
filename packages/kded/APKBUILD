# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kded
pkgver=99999_git20251205
pkgrel=0
_commit="8d2ee89db9ff696a0c3a836b73daeac6dbc25729"
pkgdesc="Extensible deamon for providing system level services"
# armhf blocked by qt6-qtdeclarative -> kconfig
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kservice-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kdoctools-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	$pkgname-doc
	"
_repo_url="https://invent.kde.org/frameworks/kded.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-08/kded-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kded-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
bed59e4278706c9e28bd2cc593449af01d02d90f908c56423d2d0ef1716a6cbd2038fdfbb10e4057267943bf5e41c70d3cee5a359010fb6a16e5e95b71002187  kded-8d2ee89db9ff696a0c3a836b73daeac6dbc25729.tar.xz
"
