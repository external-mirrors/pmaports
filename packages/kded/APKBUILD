# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kded
pkgver=99999_git20251130
pkgrel=0
_commit="d73c6190ba34d22e02551bff40552ca7c1f15b72"
pkgdesc="Extensible deamon for providing system level services"
# armhf blocked by qt6-qtdeclarative -> kconfig
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kservice-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kdoctools-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	$pkgname-doc
	"
_repo_url="https://invent.kde.org/frameworks/kded.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-01/kded-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kded-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
aa5c962c7b433c2a1a685c8cdee403c36bc5a7ec65f9a78332b1043aa2115591b87617c76d511be69009e56c1228ce8c39a6e8306d73e40deacb317cfdb7dbc4  kded-d73c6190ba34d22e02551bff40552ca7c1f15b72.tar.xz
"
