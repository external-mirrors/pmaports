# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kded
pkgver=99999_git20251223
pkgrel=0
_commit="73726a84d948dec64c24e5c01e259255d61bfafc"
pkgdesc="Extensible deamon for providing system level services"
# armhf blocked by qt6-qtdeclarative -> kconfig
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kservice-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kdoctools-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	$pkgname-doc
	"
_repo_url="https://invent.kde.org/frameworks/kded.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-23/kded-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kded-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b6dfa85abc48433edaf66f8a16f087edddb4a09a45af82287196c28ce41859b0a3cfcdb78be0d86cf585042e854b100af6f342cf6324b21323f2b22a40978963  kded-73726a84d948dec64c24e5c01e259255d61bfafc.tar.xz
"
