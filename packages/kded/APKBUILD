# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kded
pkgver=99999_git20260206
pkgrel=0
_commit="cc62f6e631660e5a093df68b6f1db1af78e7061f"
pkgdesc="Extensible deamon for providing system level services"
# armhf blocked by qt6-qtdeclarative -> kconfig
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kservice-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kdoctools-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	$pkgname-doc
	"
_repo_url="https://invent.kde.org/frameworks/kded.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/kded-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kded-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
824aef04f84934ba2b4da65cafa13f4b91fee8eba25bd9b1eb3327cf024c84024f28490b590302b37b6bee1bf20b7d39eab7df6feb6332c190af6d092f01e07e  kded-cc62f6e631660e5a093df68b6f1db1af78e7061f.tar.xz
"
