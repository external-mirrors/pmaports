# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=mailimporter
pkgver=99999_git20251102
pkgrel=0
_commit="e20517ba0b52ce060e2bb14b012f2e26e5525eeb"
pkgdesc="KDE PIM library providing support for mail applications"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> akonadi
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org/"
license="GPL-2.0-or-later"
depends_dev="
	akonadi-dev
	akonadi-mime-dev
	karchive-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kmime-dev
	libkdepim-dev
	pimcommon-dev
	qt6-qtbase-dev
	"
makedepends="
	$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/pim/mailimporter.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-03/mailimporter-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/mailimporter-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4af03cc83bf305e027254c6a07f6ebea3504997fc0a52701709283a2117af2adc36945f6d7e83bd188241d7c291592311b0003c5b67b9736c15ef3edc03dc0a1  mailimporter-e20517ba0b52ce060e2bb14b012f2e26e5525eeb.tar.xz
"
