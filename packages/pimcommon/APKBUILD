# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=pimcommon
pkgver=99999_git20260101
pkgrel=0
_commit="62ed030abf9f40ed1a60ec7cd9610b7e0430ec72"
pkgdesc="Common lib for KDEPim"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> akonadi
arch="all !armhf !ppc64le !s390x !riscv64"
url='https://community.kde.org/KDE_PIM'
license="GPL-2.0-or-later"
depends_dev="
	akonadi-contacts-dev
	akonadi-dev
	karchive-dev
	kcodecs-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcontacts-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	kimap-dev
	kio-dev
	kitemmodels-dev
	kjobwidgets-dev
	kmime-dev
	knewstuff-dev
	kpimtextedit-dev
	kservice-dev
	ktextaddons-dev
	ktexttemplate-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdepim-dev
	plasma-activities-dev
	purpose-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/pim/pimcommon.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/pimcommon-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="net" # net required for tests

options="!check"
builddir="$srcdir/pimcommon-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_DESIGNERPLUGIN=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
020750ec46409431aaccf6987d8839424b02e857a61590a72469388a78bb37258fe4f1ed0b513d2a6b043aeabd0b461b931d0cad4e19a434ca9f6b0e8361c7bc  pimcommon-62ed030abf9f40ed1a60ec7cd9610b7e0430ec72.tar.xz
"
