# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=pimcommon
pkgver=99999_git20251210
pkgrel=0
_commit="a3c8fb85d5f9dfbbacdb887375e2d22542e59fc2"
pkgdesc="Common lib for KDEPim"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> akonadi
arch="all !armhf !ppc64le !s390x !riscv64"
url='https://community.kde.org/KDE_PIM'
license="GPL-2.0-or-later"
depends_dev="
	akonadi-contacts-dev
	akonadi-dev
	karchive-dev
	kcodecs-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcontacts-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	kimap-dev
	kio-dev
	kitemmodels-dev
	kjobwidgets-dev
	kmime-dev
	knewstuff-dev
	kpimtextedit-dev
	kservice-dev
	ktextaddons-dev
	ktexttemplate-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdepim-dev
	plasma-activities-dev
	purpose-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/pim/pimcommon.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-10/pimcommon-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="net" # net required for tests

options="!check"
builddir="$srcdir/pimcommon-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_DESIGNERPLUGIN=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
3036ef57befe62b70ebf3fdaa0fe1f3a9823fcaf2f6621d78dacc98d67c25d443c8f83268eb2addbfb3a0ad19df22c40fec1f28042e5caea88c05ccc33ea56c1  pimcommon-a3c8fb85d5f9dfbbacdb887375e2d22542e59fc2.tar.xz
"
