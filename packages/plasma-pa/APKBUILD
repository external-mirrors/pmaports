# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-pa
pkgver=99999_git20251118
pkgrel=0
_commit="c996ce67e285b66355473f16a929ef01e3991e1a"
pkgdesc="Plasma applet for audio volume management using PulseAudio"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-only OR LGPL-3.0-only AND GPL-2.0-only"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdeclarative-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	knotifications-dev
	kstatusnotifieritem-dev
	ksvg-dev
	libcanberra-dev
	libplasma-dev
	plasma-workspace-dev
	pulseaudio-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-pa.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/plasma-pa-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-pa-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4dd0e91a8849868b6c7b4532c894ebb58c0b3fa6590648a43dca072f23900937ca0f231fe8b79c63acc8ac590dd851bbc5f1fdb7c21b19daa338c41d9e4d1b91  plasma-pa-c996ce67e285b66355473f16a929ef01e3991e1a.tar.xz
"
