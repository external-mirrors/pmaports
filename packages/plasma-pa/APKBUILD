# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-pa
pkgver=99999_git20260220
pkgrel=0
_commit="707a99f0bf0b3ade4c61cc67462f0265fecd493a"
pkgdesc="Plasma applet for audio volume management using PulseAudio"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-only OR LGPL-3.0-only AND GPL-2.0-only"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdeclarative-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	knotifications-dev
	kstatusnotifieritem-dev
	ksvg-dev
	libcanberra-dev
	libplasma-dev
	plasma-workspace-dev
	pulseaudio-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-pa.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/plasma-pa-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-pa-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
71e39d54fd32c20fe707ff9978ace7737ad4afccbbc0fff290ad40ea95f77b28a710014254ec165a43cecfd4e4798ec1bf948d56716936b68002c801770cfc1b  plasma-pa-707a99f0bf0b3ade4c61cc67462f0265fecd493a.tar.xz
"
