# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-pa
pkgver=99999_git20260208
pkgrel=0
_commit="7a2b630a383d4aeae289afb494211602f81d8e43"
pkgdesc="Plasma applet for audio volume management using PulseAudio"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-only OR LGPL-3.0-only AND GPL-2.0-only"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdeclarative-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	knotifications-dev
	kstatusnotifieritem-dev
	ksvg-dev
	libcanberra-dev
	libplasma-dev
	plasma-workspace-dev
	pulseaudio-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-pa.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-08/plasma-pa-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-pa-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
32965c45682b33db963103665bc13ffdeeecfbddf7c9ef57716e0964189cc85998fe77cf212fa6f0c8a89570e1b92558ec701ca21b1a0945e9ac4ee160811021  plasma-pa-7a2b630a383d4aeae289afb494211602f81d8e43.tar.xz
"
