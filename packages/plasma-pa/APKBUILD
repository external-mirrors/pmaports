# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-pa
pkgver=99999_git20251011
pkgrel=0
_commit="664a595fb090d6e7b8a832f938477afbb7bb2c00"
pkgdesc="Plasma applet for audio volume management using PulseAudio"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-only OR LGPL-3.0-only AND GPL-2.0-only"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdeclarative-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	knotifications-dev
	kstatusnotifieritem-dev
	ksvg-dev
	libcanberra-dev
	libplasma-dev
	plasma-workspace-dev
	pulseaudio-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-pa.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-12/plasma-pa-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/plasma-pa-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DUSE_GCONF=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
56d71def043a4241e76e508b340400533ffe622d96a488d8698a65d00cb34a9edd5099b371d12a56765cd405d21558b7857451a0a46d3fdf0aa39b89c2a041df  plasma-pa-664a595fb090d6e7b8a832f938477afbb7bb2c00.tar.xz
"
