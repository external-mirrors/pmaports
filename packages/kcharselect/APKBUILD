# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcharselect
pkgver=99999_git20260121
pkgrel=0
_commit="36a4500bab810544ea7a6fe197cf0f9021c394ce"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kcharselect"
pkgdesc="A tool to select special characters from all installed fonts and copy them into the clipboard"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kcharselect.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-22/kcharselect-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kcharselect-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
58cd95ee561e3c5331f31169278b9d71ed341e7862b0cf1e5535f83c5c2229aec9d145040553ed058bc310e73b1ed0c834127e725769b74905725d8c160c8d4c  kcharselect-36a4500bab810544ea7a6fe197cf0f9021c394ce.tar.xz
"
