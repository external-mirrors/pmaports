# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcharselect
pkgver=99999_git20251118
pkgrel=0
_commit="452c5e4e5f8ad534dc6f2ad29a7d3e35979f9046"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kcharselect"
pkgdesc="A tool to select special characters from all installed fonts and copy them into the clipboard"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kcharselect.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/kcharselect-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kcharselect-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b0e5ace3b8e4a8e1947c964eb3593437e7927749f2a9d1a43254dce795cf5a62f900453b8c93ec81f35da7024fd5fa54a6bff8c3a2ddbf8c6e8f70b8363c18f7  kcharselect-452c5e4e5f8ad534dc6f2ad29a7d3e35979f9046.tar.xz
"
