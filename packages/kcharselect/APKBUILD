# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kcharselect
pkgver=99999_git20260220
pkgrel=0
_commit="3f63275814d34b3277cfed8efa8be8d71a56b888"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kcharselect"
pkgdesc="A tool to select special characters from all installed fonts and copy them into the clipboard"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kcharselect.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/kcharselect-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kcharselect-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7704fbd8174fd70f7a493bafa4b3c5c116e28cae94e3959e804f3cf6a87964eb00c96b6b931d763dd19ab2523e6d9bc71acaa01ab9e58bcd67d75cbc8e6c510c  kcharselect-3f63275814d34b3277cfed8efa8be8d71a56b888.tar.xz
"
