# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kconfig
pkgver=99999_git20251020
pkgrel=0
_commit="953c685981ec5f361074c155263e5fe6cba1f2a0"
pkgdesc="Configuration system"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qtdeclarative-private-dev
	qt6-qttools
	qt6-qttools-dev
	samurai
	"
checkdepends="xwayland-run"
_repo_url="https://invent.kde.org/frameworks/kconfig.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/kconfig-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kconfig-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	local _home="${srcdir:?}"/home
	mkdir "$_home"
	chmod 0700 "$_home"
	XDG_RUNTIME_DIR="$_home" \
		HOME="$_home" \
		wlheadless-run -- ctest --test-dir build -E 'kconfig(core-(kconfigtest|kdesktopfiletest|test_kconf_update)|gui-kstandardshortcutwatchertest)'
	rm -rf "$_home"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
a23f780ce61590fe1e9d36e5cec33c48b2df011fdd583f0dbfcb2aa452cc3e9ff9ab5a65e565da4a4916bbebe98dc7a9d9b117af56c4441c344e19d46ff7ba5d  kconfig-953c685981ec5f361074c155263e5fe6cba1f2a0.tar.xz
"
