# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kaccounts-integration
pkgver=99999_git20251231
pkgrel=0
_commit="ea0ce6396acfdc1c37c1afef580d6fb3136b0f62"
# armhf blocked by qt6-qtdeclarative
# s390x, ppc64le, riscv64 blocked by qt6-qtwebengine -> signon-ui
arch="all !armhf !s390x !ppc64le !riscv64"
url="https://kde.org/applications/internet/"
pkgdesc="Small system to administer web accounts for the sites and services across the KDE desktop"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="
	accounts-qml-module
	signon-ui
	"
depends_dev="
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	libaccounts-qt-dev
	qcoro-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	signond-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/network/kaccounts-integration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/kaccounts-integration-$_commit.tar.xz"
options="!check" # No tests available

builddir="$srcdir/kaccounts-integration-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
acff07d5979cc3535e69697412499694a1d960f4aaf150a7014c965f37e4e90f6b559e125297d3f41207cbfbe4d2322adf7235853bc7fc781b688a2c60ac08e8  kaccounts-integration-ea0ce6396acfdc1c37c1afef580d6fb3136b0f62.tar.xz
"
