# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kaccounts-integration
pkgver=99999_git20251021
pkgrel=0
_commit="041bf3c2ed5f15389ebb4317bec021efc73d02ac"
# armhf blocked by qt6-qtdeclarative
# s390x, ppc64le, riscv64 blocked by qt6-qtwebengine -> signon-ui
arch="all !armhf !s390x !ppc64le !riscv64"
url="https://kde.org/applications/internet/"
pkgdesc="Small system to administer web accounts for the sites and services across the KDE desktop"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="
	accounts-qml-module
	signon-ui
	"
depends_dev="
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	libaccounts-qt-dev
	qcoro-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	signond-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/network/kaccounts-integration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/kaccounts-integration-$_commit.tar.xz"
options="!check" # No tests available

builddir="$srcdir/kaccounts-integration-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
262566c5518d58d32b5d4cc158fc61b8d9ec043708e9db637b39abb276995c56eb0d7ab7f36ed2c1c5a2fceb1fac94f709e5e322b36ca0cb837255c2e9ea9ca7  kaccounts-integration-041bf3c2ed5f15389ebb4317bec021efc73d02ac.tar.xz
"
