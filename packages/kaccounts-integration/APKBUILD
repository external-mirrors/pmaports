# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kaccounts-integration
pkgver=99999_git20260206
pkgrel=0
_commit="c01d82fe5db1eaa5e1d014562935e75f64d7b0ae"
# armhf blocked by qt6-qtdeclarative
# s390x, ppc64le, riscv64 blocked by qt6-qtwebengine -> signon-ui
arch="all !armhf !s390x !ppc64le !riscv64"
url="https://kde.org/applications/internet/"
pkgdesc="Small system to administer web accounts for the sites and services across the KDE desktop"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="
	accounts-qml-module
	signon-ui
	"
depends_dev="
	intltool
	kcmutils-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	libaccounts-qt-dev
	qcoro-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	signond-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/network/kaccounts-integration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/kaccounts-integration-$_commit.tar.xz"
options="!check" # No tests available

builddir="$srcdir/kaccounts-integration-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6edeebc50f6c5d2f458e80e3b623ff4a46a4aaf81b42d81171cece674fc58628ea3ddc1ca4643c1c29f2cafa3ef7451498819c0b8636a0b7adca0d7f0f51e324  kaccounts-integration-c01d82fe5db1eaa5e1d014562935e75f64d7b0ae.tar.xz
"
