# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=akonadi-mime
pkgver=99999_git20260220
pkgrel=0
_commit="b4cfb11ca6301087d8b2c467296718624f4dc245"
pkgdesc="Libraries and daemons to implement basic email handling"
# armhf blocked by qt6-qtdeclarative
# s390x and riscv64 blocked by akonadi
# ppc64le blocked by qt6-qtwebengine -> kaccounts-integration
arch="all !armhf !s390x !riscv64 !ppc64le"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	akonadi-dev
	kcodecs-dev
	kconfigwidgets-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kitemmodels-dev
	kmime-dev
	kxmlgui-dev
	libxslt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	shared-mime-info
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/akonadi-mime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/akonadi-mime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/akonadi-mime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# mailserializerplugintest is broken
	ctest -E "mailserializerplugintest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
ec8c619a6bac22c97c4b4006c76ea63123d1e737e724365a27388b15ec7dca65a2bd54a8199ae5a966ced19e0c7796a4cb5e6742cde717e86cecc50bc3c4f201  akonadi-mime-b4cfb11ca6301087d8b2c467296718624f4dc245.tar.xz
"
