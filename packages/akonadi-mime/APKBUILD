# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=akonadi-mime
pkgver=99999_git20251015
pkgrel=0
_commit="781f4e505a37e73e0f3abe4566d223a30380fa88"
pkgdesc="Libraries and daemons to implement basic email handling"
# armhf blocked by qt6-qtdeclarative
# s390x and riscv64 blocked by akonadi
# ppc64le blocked by qt6-qtwebengine -> kaccounts-integration
arch="all !armhf !s390x !riscv64 !ppc64le"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	akonadi-dev
	kcodecs-dev
	kconfigwidgets-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kitemmodels-dev
	kmime-dev
	kxmlgui-dev
	libxslt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	shared-mime-info
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/akonadi-mime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-16/akonadi-mime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/akonadi-mime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# mailserializerplugintest is broken
	ctest -E "mailserializerplugintest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
4b1914d91de7cf1b484316874ec0d6639d8ca2e745435eb109c002ade2c2fd1614f9b3fed6da06a73aadfdda424991d909998e0bd1849a4b1e290101ba5a2b72  akonadi-mime-781f4e505a37e73e0f3abe4566d223a30380fa88.tar.xz
"
