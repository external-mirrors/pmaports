# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=akonadi-mime
pkgver=99999_git20251021
pkgrel=0
_commit="a59c982e8b78a8074c069b476c769ccf93e66b8a"
pkgdesc="Libraries and daemons to implement basic email handling"
# armhf blocked by qt6-qtdeclarative
# s390x and riscv64 blocked by akonadi
# ppc64le blocked by qt6-qtwebengine -> kaccounts-integration
arch="all !armhf !s390x !riscv64 !ppc64le"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	akonadi-dev
	kcodecs-dev
	kconfigwidgets-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kitemmodels-dev
	kmime-dev
	kxmlgui-dev
	libxslt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	shared-mime-info
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/akonadi-mime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/akonadi-mime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/akonadi-mime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# mailserializerplugintest is broken
	ctest -E "mailserializerplugintest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
58423e3009ba6925022539d602ad6ce98901d42d4d89b5f432f88b6f7c03bcf055932fb85e59e5861fc933e3a5e536dff7ae4091c999ad13b52d3bc27c81ebb4  akonadi-mime-a59c982e8b78a8074c069b476c769ccf93e66b8a.tar.xz
"
