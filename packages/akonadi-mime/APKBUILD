# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=akonadi-mime
pkgver=99999_git20260101
pkgrel=0
_commit="9c529d1a38057b1ce82dcbc94384fa7004ef8cea"
pkgdesc="Libraries and daemons to implement basic email handling"
# armhf blocked by qt6-qtdeclarative
# s390x and riscv64 blocked by akonadi
# ppc64le blocked by qt6-qtwebengine -> kaccounts-integration
arch="all !armhf !s390x !riscv64 !ppc64le"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	akonadi-dev
	kcodecs-dev
	kconfigwidgets-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kitemmodels-dev
	kmime-dev
	kxmlgui-dev
	libxslt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	shared-mime-info
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/akonadi-mime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/akonadi-mime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/akonadi-mime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# mailserializerplugintest is broken
	ctest -E "mailserializerplugintest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
8bed0b4a8b9b766b5d9f10681f7ceb39eabb6548abe251f551f1ed284c1c45bc8e85e7d2e53548e719695d3a142a90d7dacc457a27ad9d67ea39868738edea2e  akonadi-mime-9c529d1a38057b1ce82dcbc94384fa7004ef8cea.tar.xz
"
