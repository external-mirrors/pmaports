# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=libkscreen
pkgver=99999_git20260130
pkgrel=0
_commit="156d576bbbdef6c0ef3a0ab5ef90175db3779b87"
pkgdesc="KDE screen management software"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later AND GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	kconfig-dev
	kwayland-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	plasma-wayland-protocols
	qt6-qttools-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/libkscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/libkscreen-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"
options="!check" # Fails due to requiring dbus-x11 and it running

options="!check"
builddir="$srcdir/libkscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir python
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	rm -rf "$pkgdir"/usr/lib/systemd
}

sha512sums="
884f1f28c53195b9bddf687a554406b7c888353f47d6eca7931660815e39a791aa411893efea1d54d461b42b950712edae8014cd574736b4f2f8ebb9882611c9  libkscreen-156d576bbbdef6c0ef3a0ab5ef90175db3779b87.tar.xz
"
