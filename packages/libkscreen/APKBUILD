# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=libkscreen
pkgver=99999_git20251017
pkgrel=0
_commit="8a536819e9c5a48cf21fb7106381372837fe01da"
pkgdesc="KDE screen management software"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later AND GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	kconfig-dev
	kwayland-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	plasma-wayland-protocols
	qt6-qttools-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/libkscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/libkscreen-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"
options="!check" # Fails due to requiring dbus-x11 and it running

options="!check"
builddir="$srcdir/libkscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir python
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	rm -rf "$pkgdir"/usr/lib/systemd
}

sha512sums="
7809cd4686f283c55d2cb470488afe6a92b319d12cddd148a38ca03a7c264ad6347d7ca76700fc28a7ef2c052d5e8d52a98531ea255cd263b5e437a75185ee52  libkscreen-8a536819e9c5a48cf21fb7106381372837fe01da.tar.xz
"
