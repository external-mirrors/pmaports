# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=libkscreen
pkgver=99999_git20250926
pkgrel=0
_commit="0e174b8b575eb8299bd6223955823ddf4314c5ad"
pkgdesc="KDE screen management software"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later AND GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	kconfig-dev
	kwayland-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	plasma-wayland-protocols
	qt6-qttools-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/libkscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-29/libkscreen-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"
options="!check" # Fails due to requiring dbus-x11 and it running

options="!check"
builddir="$srcdir/libkscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir python
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	rm -rf "$pkgdir"/usr/lib/systemd
}

sha512sums="
3c7931e170e7767d2c58d814cbc74894d0bfc32697f99896a466fa1bc89642d7f0b5132ad8f05f7043fea6739791c1123068352b1a0c378f0482bf7fe9eb6fb7  libkscreen-0e174b8b575eb8299bd6223955823ddf4314c5ad.tar.xz
"
