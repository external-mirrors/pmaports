# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=libkscreen
pkgver=99999_git20260212
pkgrel=0
_commit="7756590f82e901130f64877f51ab27fae53313d3"
pkgdesc="KDE screen management software"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later AND GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	kconfig-dev
	kwayland-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	plasma-wayland-protocols
	qt6-qttools-dev
	samurai
	"
subpackages="
	$pkgname-dev
	$pkgname-doc
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/libkscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-13/libkscreen-$_commit.tar.xz"
options="!check" # Fails due to requiring dbus-x11 and it running

options="!check"
builddir="$srcdir/libkscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir python
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	rm -rf "$pkgdir"/usr/lib/systemd
}

sha512sums="
f9d8da13bfb8f8a844870ab3c8b8ff37655c8a963ed40af37609f22a68b1fab2bdb0759b37e04261f7a5e193a959b79b4d0db4b58eda0dd7ecc32dd557d1bc9b  libkscreen-7756590f82e901130f64877f51ab27fae53313d3.tar.xz
"
