# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=libkscreen
pkgver=99999_git20260204
pkgrel=0
_commit="860aa15d58eaba37c5c30ac9bfbd0acfb9758c89"
pkgdesc="KDE screen management software"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later AND GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	kconfig-dev
	kwayland-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	plasma-wayland-protocols
	qt6-qttools-dev
	samurai
	"
subpackages="
	$pkgname-dev
	$pkgname-doc
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/libkscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-04/libkscreen-$_commit.tar.xz"
options="!check" # Fails due to requiring dbus-x11 and it running

options="!check"
builddir="$srcdir/libkscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir python
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	rm -rf "$pkgdir"/usr/lib/systemd
}

sha512sums="
b459022b7d30d08b60c62de81e9307e0a3ae00efaeec432dbf34161f3916ff2e09d3e42204eb19f8da8318b089ca43339302760950801f34eee93df216a907e0  libkscreen-860aa15d58eaba37c5c30ac9bfbd0acfb9758c89.tar.xz
"
