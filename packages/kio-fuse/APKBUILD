# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kio-fuse
pkgver=99999_git20251014
pkgrel=0
_commit="6b06dd4c9989d45abbfca093a03694281eb7b2a7"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://kde.org/"
pkgdesc="FUSE interface for KIO"
license="GPL-3.0-only"
makedepends="
	extra-cmake-modules
	fuse3-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="dbus"
subpackages="$pkgname-systemd"
_repo_url="https://invent.kde.org/system/kio-fuse.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-24/kio-fuse-$_commit.tar.xz
	modules-load.conf
	kio-fuse.desktop
	"
install="$pkgname.post-install"
options="!check" # Only test is broken
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DBUILD_WITH_QT6=ON \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	install -Dm644 "$srcdir"/modules-load.conf "$pkgdir"/usr/lib/modules-load.d/kio-fuse.conf
	install -Dm644 "$srcdir"/kio-fuse.desktop -t "$pkgdir"/etc/xdg/autostart/
}

sha512sums="
