# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdeconnect
pkgver=99999_git20250802
pkgrel=0
_commit="070fe4013d805c0ebf1260b0c75fb1ab5b8108a2"
pkgdesc="Adds communication between KDE and your smartphone"
url="https://community.kde.org/KDEConnect"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-2.0-only OR GPL-3.0-only"
depends="
	kirigami
	sshfs
	"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfigwidgets-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	kitemmodels-dev
	knotifications-dev
	kpeople-dev
	kservice-dev
	kstatusnotifieritem-dev
	kwayland-dev
	libfakekey-dev
	modemmanager-qt-dev
	pulseaudio-qt-dev
	pulseaudio-qt-dev
	qca-qt6-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtconnectivity-dev
	qt6-qtmultimedia-dev
	samurai
	"
checkdepends="xvfb-run"
subpackages="$pkgname-lang $pkgname-nftables::noarch $pkgname-zsh-completion"
_repo_url="https://invent.kde.org/network/kdeconnect-kde.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-03/kdeconnect-kde-$_commit.tar.xz
	60_kdeconnect.nft
	"
builddir="$srcdir/$pkgname-kde-$pkgver"

# secfixes:
#   20.08.2-r0:
#     - CVE-2020-26164

options="!check"
builddir="$srcdir/kdeconnect-kde-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_LIBEXECDIR=lib
	cmake --build build
}

check() {
	# testsslsocketlinereader, testnotificationlistener and sendfiletest are broken
	xvfb-run ctest --test-dir build -E "testsslsocketlinereader|testnotificationlistener|sendfiletest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

nftables() {
	pkgdesc="$pkgdesc (nftables rules)"
	install_if="$pkgname=$pkgver-r$pkgrel nftables"

	install -Dm644 -t "$subpkgdir"/etc/nftables.d "$srcdir"/60_kdeconnect.nft
}

