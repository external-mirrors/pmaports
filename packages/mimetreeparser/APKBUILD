# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=mimetreeparser
pkgver=99999_git20260111
pkgrel=0
_commit="f2961e05b4c1c355a08eed5957c882f7d68598c3"
pkgdesc="Parser for MIME trees"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later AND BSD-3-Clause AND GPL-2.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	gpgme-dev
	graphviz
	kcalendarcore-dev
	kcodecs-dev
	kcolorscheme-dev
	kconfig-dev
	ki18n-dev
	kmbox-dev
	kmime-dev
	kwidgetsaddons-dev
	libkleo-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/pim/mimetreeparser.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-12/mimetreeparser-$_commit.tar.xz"

options="!check"
builddir="$srcdir/mimetreeparser-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
