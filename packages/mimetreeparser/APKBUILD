# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=mimetreeparser
pkgver=99999_git20250905
pkgrel=0
_commit="c016d4df9d708a4e360ec5c1bad9c840c0078a23"
pkgdesc="Parser for MIME trees"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later AND BSD-3-Clause AND GPL-2.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	gpgme-dev
	graphviz
	kcalendarcore-dev
	kcodecs-dev
	kcolorscheme-dev
	kconfig-dev
	ki18n-dev
	kmbox-dev
	kmime-dev
	kwidgetsaddons-dev
	libkleo-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/mimetreeparser.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-06/mimetreeparser-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/mimetreeparser-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
f9db7749b5e7ce39c45a2a9fdcf52515755c8d5e213fdb56aef989f7a5d0cdf557c5388508a01b082416ecf26021927f845cef45c0a8ed304e7b44fabeb5e073  mimetreeparser-c016d4df9d708a4e360ec5c1bad9c840c0078a23.tar.xz
"
