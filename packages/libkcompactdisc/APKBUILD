# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkcompactdisc
pkgver=99999_git20250716
pkgrel=0
_commit="13bc2f2d4d9f2a99b1aea4f871b759374048346c"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="Library for interfacing with CDs"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	phonon-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
_repo_url="https://invent.kde.org/multimedia/libkcompactdisc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-17/libkcompactdisc-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/libkcompactdisc-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
08a49a6d93bcadcaad7407a73c2b928d2f24107a0f73d2228648cb35ba23d6aa5bdd81bb1d87a334164e4f8ac4e73c0c77c03e35f92c92f7a5f1dedd9992d411  libkcompactdisc-13bc2f2d4d9f2a99b1aea4f871b759374048346c.tar.xz
"
