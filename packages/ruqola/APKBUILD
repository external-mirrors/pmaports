# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=ruqola
pkgver=99999_git20250921
pkgrel=0
_commit="f21b0e6e31aa6bdb6e9ec4fd31b2d3cd1e32f711"
pkgdesc="A Qt client for Rocket Chat"
url="https://invent.kde.org/network/ruqola"
# armhf blocked by qt6-qtdeclarative-dev
arch="all !armhf"
license="GPL-2.0-only OR GPL-3.0-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kidletime-dev
	kio-dev
	knotifications-dev
	knotifyconfig-dev
	kstatusnotifieritem-dev
	ktextaddons-dev
	ktextwidgets-dev
	kuserfeedback-dev
	kxmlgui-dev
	libsecret-dev
	networkmanager-qt-dev
	plasma-activities-dev
	prison-dev
	purpose-dev
	qt6-qtbase-dev
	qt6-qtmultimedia-dev
	qt6-qtnetworkauth-dev
	qt6-qtwebsockets-dev
	qtkeychain-dev
	samurai
	sonnet-dev
	syntax-highlighting-dev
	"
checkdepends="xvfb-run"
subpackages="$pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/network/ruqola.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-21/ruqola-$_commit.tar.xz"

options="!check"
builddir="$srcdir/ruqola-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# Skip broken tests
	local skipped_tests="("
	local tests="
		roomscleanhistoryjob
		roomsexportjob
		user
		channelcounterinfo
		roomheaderwidget
		messagelinewidget
		messagelistdelegate
		inviteuserswidget
		showvideowidget
		"
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)test"
	xvfb-run ctest --test-dir build -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0a1a3e23cfbe6a998b5ab8c29f2530153b0dd34d29f275eb11b94760fd9811161d0f8e0d6d75f75abb99801f12013af0d4bd88c3ee86f53658b1d15d7ec15ae5  ruqola-f21b0e6e31aa6bdb6e9ec4fd31b2d3cd1e32f711.tar.xz
"
