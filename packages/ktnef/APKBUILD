# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ktnef
pkgver=99999_git20260215
pkgrel=0
_commit="bae0ea0ac7ffe6b61a1b3a3eadfde1d70fddc4e5"
pkgdesc="API for handling TNEF data"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="
	kcalendarcore-dev
	kcalutils-dev
	kcontacts-dev
	ki18n-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/pim/ktnef.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-16/ktnef-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/ktnef-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
8ec00836ca1634eb358a7c9d15f6c601de9925b159a892924d9b528bc43705a401c80d230230f1fe15d5dea8ee196b2f95c0627a8a9db7493d120cffc28cc6df  ktnef-bae0ea0ac7ffe6b61a1b3a3eadfde1d70fddc4e5.tar.xz
"
