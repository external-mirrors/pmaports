# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=systemsettings
pkgver=99999_git20251005
pkgrel=0
_commit="4ccec3bfe9e2723a2f9b2f2681956977bd426464"
pkgdesc="Plasma system manager for hardware, software, and workspaces"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	kitemviews-dev
	kpackage-dev
	kservice-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	plasma-activities-dev
	plasma-activities-stats-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/systemsettings.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/systemsettings-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-zsh-completion $pkgname-lang"

options="!check"
builddir="$srcdir/systemsettings-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
265f137d6082225fc5ea3da493e4be4dda57011f3e90acc08c961d9586e892056c8722fd90256df1d98565b008aabaa006d2a0a4767b02b1129087d69b3cf715  systemsettings-4ccec3bfe9e2723a2f9b2f2681956977bd426464.tar.xz
"
