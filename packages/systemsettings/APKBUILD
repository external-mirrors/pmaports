# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=systemsettings
pkgver=99999_git20251230
pkgrel=0
_commit="17713f9851e54e9bfe9ef70835c53aa89f7d3711"
pkgdesc="Plasma system manager for hardware, software, and workspaces"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	kitemviews-dev
	kpackage-dev
	kservice-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	plasma-activities-dev
	plasma-activities-stats-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/systemsettings.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/systemsettings-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-zsh-completion $pkgname-lang"

options="!check"
builddir="$srcdir/systemsettings-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5cb1ff0e8a38e0f1a2a0ed264f08f5c88ec99e8aa6e956f4d70270cea739b828d7fe33509fbcbfe7ceac85eb02890403dd308f3a2d8f175926331cc1ab8fdd3d  systemsettings-17713f9851e54e9bfe9ef70835c53aa89f7d3711.tar.xz
"
