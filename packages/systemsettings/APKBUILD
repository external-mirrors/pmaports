# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=systemsettings
pkgver=99999_git20251011
pkgrel=0
_commit="732c644ee139690d15154d2cd2f7efeef29aa78c"
pkgdesc="Plasma system manager for hardware, software, and workspaces"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	kitemviews-dev
	kpackage-dev
	kservice-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	plasma-activities-dev
	plasma-activities-stats-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/systemsettings.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-12/systemsettings-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-zsh-completion $pkgname-lang"

options="!check"
builddir="$srcdir/systemsettings-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
51b7ff2ad9cef0f62fa1b0e72a3c1e648dc22bc80e5cd93a08553cfc5d80a9d7a56d31f38b439b485cf9f52d6691c9d5ed5351f0c7d2d75ebc01f25685c99bc0  systemsettings-732c644ee139690d15154d2cd2f7efeef29aa78c.tar.xz
"
