# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ksanecore
pkgver=99999_git20260220
pkgrel=0
_commit="6ec9220c1a731674b61eb9ef54bb54fc92658be5"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/graphics/"
pkgdesc="Library providing logic to interface scanners"
license="BSD-2-Clause AND BSD-3-Clause AND CC0-1.0 AND (LGPL-2.1-only OR LGPL-3.0-only) AND LicenseRef-KDE-Accepted-LGPL"
depends_dev="
	ki18n-dev
	qt6-qtbase-dev
	sane-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/libraries/ksanecore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/ksanecore-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/ksanecore-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a64c6a08fff3853350e66bd7ec1b2143056b9dee281cfc4ca5041e8b859a154eb0fcd2b92830815197ce0b36c6eb1175b996435bd13c23f70ccfb3977f6157b5  ksanecore-6ec9220c1a731674b61eb9ef54bb54fc92658be5.tar.xz
"
