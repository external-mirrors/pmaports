# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plymouth-kcm
pkgver=99999_git20260118
pkgrel=0
_commit="1265d9a5d854d9f7e5d6bdc20e2e2aba6c71a452"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma/plymouth-kcm"
pkgdesc="KCM to manage the Plymouth (Boot) theme"
license="GPL-2.0-or-later"
depends="plymouth"
makedepends="
	extra-cmake-modules
	karchive-dev
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	plymouth-dev
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plymouth-kcm.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-18/plymouth-kcm-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/plymouth-kcm-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dfb78fba3be97740ab501a6ff935d5a8a9b50a6d3305138f77b2ecebc5f73b21c3983009f0c21f5da2d1d5d4bf6d0d3962e3f6b0554504af66e4e9db59c351f2  plymouth-kcm-1265d9a5d854d9f7e5d6bdc20e2e2aba6c71a452.tar.xz
"
