# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kapptemplate
pkgver=99999_git20251120
pkgrel=0
_commit="1b42eabb85119b1d98b97d64415172386346d72c"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/development/org.kde.kapptemplate"
pkgdesc="Factory for the easy creation of KDE/Qt components and programs"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	kcompletion-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/kapptemplate.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-20/kapptemplate-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kapptemplate-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4abb48eccf65f5315c833121f2ace462b5b67698dc3fecef1930605849f70d7233064b66e62f1d19ac056ab8c025ddbde593b377a513feb966595ce687e7c70e  kapptemplate-1b42eabb85119b1d98b97d64415172386346d72c.tar.xz
"
