# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkeduvocdocument
pkgver=99999_git20251118
pkgrel=0
_commit="70e033c546b9ec9040383cc62f6a718ef07cafb4"
arch="all !armhf"
url="https://edu.kde.org"
pkgdesc="Library to parse, convert, and manipulate KVTML files"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/libkeduvocdocument.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/libkeduvocdocument-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/libkeduvocdocument-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c89b460358c8973d38d4706077488b13fdc75c30ecec568d068aa3c6df843d35f50af8bf014b5c24584d95ca4f8b0411bb335822ecabdca8bdb9e4ebe4d38ad0  libkeduvocdocument-70e033c546b9ec9040383cc62f6a718ef07cafb4.tar.xz
"
