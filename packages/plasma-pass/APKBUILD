# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-pass
pkgver=99999_git20260108
pkgrel=0
_commit="aed5ccc9a8e5ea4f25ab734ca295ce2db5a82c09"
pkgdesc="Plasma applet for the Pass password manager"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	gpgme-dev
	ki18n-dev
	kitemmodels-dev
	libplasma-dev
	oath-toolkit-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/plasma-pass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-08/plasma-pass-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/plasma-pass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
14c1ba863a114e017d3d196ba972dca3a9570249ab3b20a3b5a9b5ff901bafd2694b7f2c1722434cf93305340bfd33eb5bda0698974301de1f43cfdb7c613aa8  plasma-pass-aed5ccc9a8e5ea4f25ab734ca295ce2db5a82c09.tar.xz
"
