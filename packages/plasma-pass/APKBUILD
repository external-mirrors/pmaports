# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-pass
pkgver=99999_git20250930
pkgrel=0
_commit="9bac4125855f2f59eeafd3f14030e8c298b55c3c"
pkgdesc="Plasma applet for the Pass password manager"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	gpgme-dev
	ki18n-dev
	kitemmodels-dev
	libplasma-dev
	oath-toolkit-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/plasma-pass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/plasma-pass-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/plasma-pass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
31b0dbe760736e809552c38a6720f1fa982e1efbeff37e694d8d18c75ff4def02057b56bf6bf82ac9b1370e0adfc022173c328102789a0653e7c2cc83c3f1396  plasma-pass-9bac4125855f2f59eeafd3f14030e8c298b55c3c.tar.xz
"
