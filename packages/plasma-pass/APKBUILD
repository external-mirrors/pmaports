# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-pass
pkgver=99999_git20260126
pkgrel=0
_commit="004a8c6ce9c14a275b710352c4361e0c79dc8749"
pkgdesc="Plasma applet for the Pass password manager"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	qgpgme-dev
	ki18n-dev
	kitemmodels-dev
	libplasma-dev
	oath-toolkit-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/plasma-pass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-28/plasma-pass-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/plasma-pass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e4d36815ae2481cf5b2496853cde8737222dfbde37a4374075cffc5e723249d8be29da2387b246e2813fb953b4ef0b608d8c8b749b1d818ecb050c0b270e6f86  plasma-pass-004a8c6ce9c14a275b710352c4361e0c79dc8749.tar.xz
"
