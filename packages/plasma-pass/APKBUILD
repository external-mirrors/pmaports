# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-pass
pkgver=99999_git20260106
pkgrel=0
_commit="2cce929592f982b5166994e3a96c1d47005797a2"
pkgdesc="Plasma applet for the Pass password manager"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	gpgme-dev
	ki18n-dev
	kitemmodels-dev
	libplasma-dev
	oath-toolkit-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/plasma-pass.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-07/plasma-pass-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/plasma-pass-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b12fc518d567c61e74372b91fcc94b29c5ad21733b629560838573fae10b1b94da980821e8f04b856502a678e3d65770adce41b7d56277fb18f3d2c9206bbc0e  plasma-pass-2cce929592f982b5166994e3a96c1d47005797a2.tar.xz
"
