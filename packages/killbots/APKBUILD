# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=killbots
pkgver=99999_git20250923
pkgrel=0
_commit="c9d6e87b73861de113b3f17801e288d39bf581a6"
pkgdesc="A simple game of evading killer robots"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/killbots/"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/killbots.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-24/killbots-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/killbots-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
63d97096602df913f1a4f393c2babcb007002dacd2084bc11142a78a4edf29afef0112964985e02785efa4b9a61aed92b0f7ecf6cdce3aa71154c3d1ef4928aa  killbots-c9d6e87b73861de113b3f17801e288d39bf581a6.tar.xz
"
