# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=killbots
pkgver=99999_git20251018
pkgrel=0
_commit="cbc42e68023a1d5cf7808e496fd372d2ef7c8ed2"
pkgdesc="A simple game of evading killer robots"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/killbots/"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/killbots.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/killbots-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/killbots-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
