# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=syndication
pkgver=99999_git20260102
pkgrel=0
_commit="c575476d29cfd61556a33f338f7c56ec41ae624d"
pkgdesc="An RSS/Atom parser library"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND BSD-3-Clause"
depends_dev="
	kcodecs-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	doxygen
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/syndication.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-06/syndication-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/syndication-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
5529b3e89ffcb8f557987d75431ff8e4fc2708bb7ff1c17810e7e62c4ed0451fead273873e374210e077880af66dcbffd4700d9142034a6751c1ef49e84699e6  syndication-c575476d29cfd61556a33f338f7c56ec41ae624d.tar.xz
"
