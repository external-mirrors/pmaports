# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=syndication
pkgver=99999_git20251114
pkgrel=0
_commit="e5d7935fc7fbe0c9b1c7deed5cab2907c23ef10f"
pkgdesc="An RSS/Atom parser library"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND BSD-3-Clause"
depends_dev="
	kcodecs-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	doxygen
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/syndication.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/syndication-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/syndication-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
b42a9694414fb37029dc716cda5551649f930386243d89277e3ffc748d10b495939f57e8ca7a9efdaf025444076cb1aa904e6603f843064c4a74e26b35f66fac  syndication-e5d7935fc7fbe0c9b1c7deed5cab2907c23ef10f.tar.xz
"
