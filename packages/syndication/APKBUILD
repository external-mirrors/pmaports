# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=syndication
pkgver=99999_git20260210
pkgrel=0
_commit="13cd3df0958da745ec7c8f133a92b90ff944631a"
pkgdesc="An RSS/Atom parser library"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND BSD-3-Clause"
depends_dev="
	kcodecs-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	doxygen
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/syndication.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-12/syndication-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/syndication-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
e4a83bd61ddb06ce296cfa45f392a736ff5e9c10ef1e7381bf23408acec9d308ab090157ce4c3c552f46fdafdd2a7662c8d371affc8a66e74fabe89b78cd0d86  syndication-13cd3df0958da745ec7c8f133a92b90ff944631a.tar.xz
"
