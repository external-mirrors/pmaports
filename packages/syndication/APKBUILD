# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=syndication
pkgver=99999_git20251016
pkgrel=0
_commit="01a3a5a48516a5c2fab5bc967a9b6d0918ab248e"
pkgdesc="An RSS/Atom parser library"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND BSD-3-Clause"
depends_dev="
	kcodecs-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	doxygen
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/syndication.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/syndication-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/syndication-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
5dbbf091c4a6dc051c19e93163dee362398bedfe2d0af2f9e39bf9522c518de2a83277b6c58e8cd5aece58ffb36be7efc7b022dc3895bd53d38574325bdc7bf0  syndication-01a3a5a48516a5c2fab5bc967a9b6d0918ab248e.tar.xz
"
