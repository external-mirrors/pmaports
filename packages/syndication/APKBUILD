# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=syndication
pkgver=99999_git20251218
pkgrel=0
_commit="407825b5f96c57e4f47eeb3c24d42c28c0d33820"
pkgdesc="An RSS/Atom parser library"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND BSD-3-Clause"
depends_dev="
	kcodecs-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	doxygen
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/syndication.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-20/syndication-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/syndication-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
5e080662581d087d3f030343fc4e7d9bf130a6ff7f381bb4d2ae4d782e387ef0229a8f5be26ed87c30ac670e62d587f42940ac6ce5e609b8ffbdc5c92c03dd1a  syndication-407825b5f96c57e4f47eeb3c24d42c28c0d33820.tar.xz
"
