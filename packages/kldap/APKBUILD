# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kldap
pkgver=99999_git20260111
pkgrel=0
_commit="9af446496a9a4aff74bd6e91b0c4d6b2d57a4c64"
pkgdesc="LDAP access API for KDE"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="
	kcompletion-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	openldap-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	cyrus-sasl-dev
	samurai
	"
subpackages="
	$pkgname-dev
	$pkgname-doc
	$pkgname-lang
	"
_repo_url="https://invent.kde.org/pim/kldap.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-12/kldap-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kldap-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
76eb547ac78464d6df0532aae680de404d4e583a2f1a7b5990944e95ad029a7336bdebe519669c6ed1c01733e2e7b988ace5e0fead08fc6ad573d7764265ebd5  kldap-9af446496a9a4aff74bd6e91b0c4d6b2d57a4c64.tar.xz
"
