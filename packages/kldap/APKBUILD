# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kldap
pkgver=99999_git20251210
pkgrel=0
_commit="4c3e746d61ac4d32c0eea285f5b3f7c1e32f506d"
pkgdesc="LDAP access API for KDE"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="
	kcompletion-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	openldap-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	cyrus-sasl-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/kldap.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-10/kldap-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kldap-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
db399d78becf869e190098e631af054ffc9909989c4f16623cdd3d965a0fe9acef6cf6fc32b69d6447c4ce1448d21412fc98e63faedbb4aeaf17efa725deeda9  kldap-4c3e746d61ac4d32c0eea285f5b3f7c1e32f506d.tar.xz
"
