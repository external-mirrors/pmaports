# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kldap
pkgver=99999_git20260202
pkgrel=0
_commit="bd90db9ff35bbd75bd783224687d9d1de7b21022"
pkgdesc="LDAP access API for KDE"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="
	kcompletion-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	openldap-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	cyrus-sasl-dev
	samurai
	"
subpackages="
	$pkgname-dev
	$pkgname-doc
	$pkgname-lang
	"
_repo_url="https://invent.kde.org/pim/kldap.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-03/kldap-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kldap-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e6bac7b5aa66186d1759082e63b639e6f91ff41efb14cce2173232f27e7450147c3f37e993eb4a0ecd4226fe9d684c1982f4b9ccf16c5b809b9aa7d7ab846924  kldap-bd90db9ff35bbd75bd783224687d9d1de7b21022.tar.xz
"
