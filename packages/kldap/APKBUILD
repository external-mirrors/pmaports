# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kldap
pkgver=99999_git20260101
pkgrel=0
_commit="345427fa14cb573882a308171366460d5a409dd2"
pkgdesc="LDAP access API for KDE"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="
	kcompletion-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	openldap-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	cyrus-sasl-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/kldap.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/kldap-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kldap-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
381024346dfe085afdbaed8a27145a3ce3ec0d901934f57f755990bca7a84ce7e6c25f4964f145eb9ce3c6dd947d850a2768f491b223e3143c026aab3adc602f  kldap-345427fa14cb573882a308171366460d5a409dd2.tar.xz
"
