# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=powerdevil
pkgver=99999_git20251104
pkgrel=0
_commit="1c6eea49dd9ca5dc22b94ace8f380f6a0f256db7"
pkgdesc="Manages the power consumption settings of a Plasma Shell"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later AND (LGPL-2.1-only OR LGPL-3.0-only)"
depends="upower"
depends_dev="
	bluez-qt-dev
	ddcutil-dev
	eudev-dev
	kauth-dev
	kconfig-dev
	kcrash-dev
	kdbusaddons-dev
	kglobalaccel-dev
	ki18n-dev
	kidletime-dev
	kio-dev
	knotifications-dev
	knotifyconfig-dev
	kwayland-dev
	libkscreen-dev
	networkmanager-qt-dev
	plasma-activities-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	solid-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kdoctools-dev
	libcap-utils
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/powerdevil.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-04/powerdevil-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-libs $pkgname-doc $pkgname-lang $pkgname-systemd"

options="!check"
builddir="$srcdir/powerdevil-$_commit"

build() {
	# HAVE_DDCUTIL needs to be set manually for now but is enabled by default in the next
	# (post 5.28.x) powerdevil version. Nothing changed in particular warranting it to be
	# enabled again, but upstream mentions the reasons for originally disabling it by default
	# aren't known anymore and it's time to re-enable again
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
420f6602fb4b8d0c784f50bbc22a720a18d8e61955ad13046b9c6e094ef5e7ca6573fe9644b7f6b8deec4cc97fb69cbbfa2d7795bb4e89d1f4d4cdb558b416e1  powerdevil-1c6eea49dd9ca5dc22b94ace8f380f6a0f256db7.tar.xz
"
