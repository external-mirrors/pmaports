# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=powerdevil
pkgver=99999_git20251124
pkgrel=0
_commit="a9acc39502b2a3ccba173e206eb3a653086a89a3"
pkgdesc="Manages the power consumption settings of a Plasma Shell"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later AND (LGPL-2.1-only OR LGPL-3.0-only)"
depends="upower"
depends_dev="
	bluez-qt-dev
	ddcutil-dev
	eudev-dev
	kauth-dev
	kconfig-dev
	kcrash-dev
	kdbusaddons-dev
	kglobalaccel-dev
	ki18n-dev
	kidletime-dev
	kio-dev
	knotifications-dev
	knotifyconfig-dev
	kwayland-dev
	libkscreen-dev
	networkmanager-qt-dev
	plasma-activities-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	solid-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kdoctools-dev
	libcap-utils
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	$pkgname-libs
	$pkgname-doc
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/powerdevil.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-24/powerdevil-$_commit.tar.xz"

options="!check"
builddir="$srcdir/powerdevil-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d2b7993d9064024d69fbc44fbd2f2d084d8b2306c897f17b40f35b43155f0e51eb95aaddf686f6de9610a407cb834434e6c110c85de7a28c50ed1eda4d44b5ec  powerdevil-a9acc39502b2a3ccba173e206eb3a653086a89a3.tar.xz
"
