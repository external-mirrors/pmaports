# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kuserfeedback
pkgver=99999_git20251231
pkgrel=0
_commit="82bf80aa00ff1ceafc97ddb8e4f4f498036d227c"
pkgdesc="Framework for collecting user feedback for applications via telemetry and surveys"
url="https://kde.org/products/frameworks/"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="MIT"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kuserfeedback.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/kuserfeedback-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kuserfeedback-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# openglinfosourcetest requires OpenGL
	wlheadless-run -- ctest --test-dir build -E "openglinfosourcetest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
77f559d47366d6faf03e9fb3f1a7052f53786fddb85860b3976246be15c78952becd5ef39232a0aeb2070afe500cbd1b83938f6806fc0c907c2cdf5a89796362  kuserfeedback-82bf80aa00ff1ceafc97ddb8e4f4f498036d227c.tar.xz
"
