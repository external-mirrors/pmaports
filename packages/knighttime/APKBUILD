# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=knighttime
pkgver=99999_git20250725
pkgrel=0
_commit="b264f05edd7e58f74e12c2d13846d24de778fcaf"
pkgdesc="Helpers for scheduling the dark-light cycle"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtpositioning-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	samurai
	"
_repo_url="https://invent.kde.org/plasma/knighttime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-25/knighttime-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/knighttime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5d0192149bdc55677cd9ca18d89e724fe06d1bae672745ca545702318f8a882fbba43b591ec94ad9b63bb4c72365552fa6ffb7b77fdf1b45bcf36d84b8cb984a  knighttime-b264f05edd7e58f74e12c2d13846d24de778fcaf.tar.xz
"
