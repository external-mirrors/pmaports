# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=knighttime
pkgver=99999_git20250902
pkgrel=0
_commit="4d5b34bc78039015809422ce0d3a9809dfd3ba16"
pkgdesc="Helpers for scheduling the dark-light cycle"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtpositioning-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	samurai
	"
_repo_url="https://invent.kde.org/plasma/knighttime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-03/knighttime-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/knighttime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b8a9309a00d060fa74026feb6de39924d7e14cda96a78fdd05c6ca7fc0aa0dca102c06d384bc7ad31653830fd31d784efbc7e3d17c1e4caa721388324879c610  knighttime-4d5b34bc78039015809422ce0d3a9809dfd3ba16.tar.xz
"
