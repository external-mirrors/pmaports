# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=knighttime
pkgver=99999_git20250812
pkgrel=0
_commit="e4e3440d187c523da6f73c2b3a47f472317592ab"
pkgdesc="Helpers for scheduling the dark-light cycle"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtpositioning-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	samurai
	"
_repo_url="https://invent.kde.org/plasma/knighttime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-12/knighttime-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/knighttime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b62b0b498f591d095fb6fb292b21dbd1e774e567c2787d3ebe8ccbbe7a11bd7843d9eaf6929b571e2cf6ffe7f3b56b4bcaf34fe76e9c931f2ff811147b0fb5db  knighttime-e4e3440d187c523da6f73c2b3a47f472317592ab.tar.xz
"
