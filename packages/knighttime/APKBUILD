# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=knighttime
pkgver=99999_git20251014
pkgrel=0
_commit="4cb788e8f89b2f449552637c2600fc02eff02859"
pkgdesc="Helpers for scheduling the dark-light cycle"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtpositioning-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	samurai
	"
_repo_url="https://invent.kde.org/plasma/knighttime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-14/knighttime-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/knighttime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f00a34bc3123b8f6b4d3d22cf052d3f768697a0a19e5222768c5a89b1bd2244587ad7612b812888db849826b19f0d0913a9a25e06e86aa79dcad5e9c2916ac58  knighttime-4cb788e8f89b2f449552637c2600fc02eff02859.tar.xz
"
