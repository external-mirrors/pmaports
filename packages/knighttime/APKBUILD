# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=knighttime
pkgver=99999_git20250720
pkgrel=0
_commit="5440af2a2ad4da3e85c471d759eec4382a2799fc"
pkgdesc="Helpers for scheduling the dark-light cycle"
arch="all"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtpositioning-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	samurai
	"
_repo_url="https://invent.kde.org/plasma/knighttime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-23/knighttime-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/knighttime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c8bdbe0258053fcdd87088fe7dd66d77a578fb571f85dd3bdbaa2051c8b4af4e4acb1fe4dcf127301f39964ede4513a70daf31f83e1c430674ccd99ead97c137  knighttime-5440af2a2ad4da3e85c471d759eec4382a2799fc.tar.xz
"
