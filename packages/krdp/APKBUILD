# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=krdp
pkgver=99999_git20251030
pkgrel=0
_commit="0a62a8c8585db32ffbab39bdb69f9a29a00bc077"
pkgdesc="An application for monitoring system resources"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma/krdp/"
pkgdesc="Library and examples for creating an RDP server"
license="LGPL-2.0-or-later"
depends="freerdp"
makedepends="
	extra-cmake-modules
	freerdp
	freerdp-dev
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	ki18n-dev
	kirigami-dev
	kpipewire-dev
	kstatusnotifieritem-dev
	libxkbcommon-dev
	linux-pam-dev
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	qtkeychain-dev
	wayland-dev
	samurai
	"
subpackages="$pkgname-lang"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

_repo_url="https://invent.kde.org/plasma/krdp.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-30/krdp-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
39a0c9e808d31e7b9a1dd14f5a1e8ddd828eee56480430ecff740090246cc5d5c8f373564a026beee1718762a4d4e7bdc959b62f4d4d95cf431bf82d438148dc  krdp-0a62a8c8585db32ffbab39bdb69f9a29a00bc077.tar.xz
"
