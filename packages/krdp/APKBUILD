# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=krdp
pkgver=99999_git20251026
pkgrel=0
_commit="89bea7a43e1aa0b7a78bafd0fc4339907296d4d1"
pkgdesc="An application for monitoring system resources"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma/krdp/"
pkgdesc="Library and examples for creating an RDP server"
license="LGPL-2.0-or-later"
depends="freerdp"
makedepends="
	extra-cmake-modules
	freerdp
	freerdp-dev
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	ki18n-dev
	kirigami-dev
	kpipewire-dev
	kstatusnotifieritem-dev
	libxkbcommon-dev
	linux-pam-dev
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	qtkeychain-dev
	wayland-dev
	samurai
	"
subpackages="$pkgname-lang"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

_repo_url="https://invent.kde.org/plasma/krdp.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-28/krdp-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
702072f0ad18566269f60ec4c54e5935d8f72d780a4b2a4810d4bc93f27de173ae0ec23d03ce00d53df3be7a5fd03dd39d85c27f8de5b3e3e0e7a37e124afd66  krdp-89bea7a43e1aa0b7a78bafd0fc4339907296d4d1.tar.xz
"
