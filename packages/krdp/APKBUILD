# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=krdp
pkgver=99999_git20250906
pkgrel=0
_commit="cd9ced032947e89a672dec093c38db7f1789b713"
pkgdesc="An application for monitoring system resources"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma/krdp/"
pkgdesc="Library and examples for creating an RDP server"
license="LGPL-2.0-or-later"
depends="freerdp"
makedepends="
	extra-cmake-modules
	freerdp
	freerdp-dev
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	ki18n-dev
	kirigami-dev
	kpipewire-dev
	kstatusnotifieritem-dev
	libxkbcommon-dev
	linux-pam-dev
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	qtkeychain-dev
	wayland-dev
	samurai
	"
subpackages="$pkgname-lang"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

_repo_url="https://invent.kde.org/plasma/krdp.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-06/krdp-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
452e5ddb89f92db5260ed0c49e244cda923e7b309dfd3b2c17f05e2816636d9d837e6a07dc78de18987cbf42d9b0321769f0204d333e52e231b67f3b780334cb  krdp-cd9ced032947e89a672dec093c38db7f1789b713.tar.xz
"
