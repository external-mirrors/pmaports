# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdecoration
pkgver=99999_git20251018
pkgrel=0
_commit="aebf31c4e1da24090cd352ef6075d9b458e2a668"
pkgdesc="Plugin based library to create window decorations"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	kcoreaddons-dev
	ki18n-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xwayland-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kdecoration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/kdecoration-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kdecoration-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8c9ad413d1a0027acbea15ae7d5fabcf08450c99c8d821b138932fe2341b3fd0e9bebedd640dfbb2e2dd52259fca11579570f063caf13938f50b8e319e72e5c4  kdecoration-aebf31c4e1da24090cd352ef6075d9b458e2a668.tar.xz
"
