# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=knavalbattle
pkgver=99999_git20251118
pkgrel=0
_commit="7b0748a2d12cacdd5651ea9ede562c6788d2ebf3"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/knavalbattle/"
pkgdesc="A ship sinking game"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcrash-dev
	kdbusaddons-dev
	kdnssd-dev
	kdoctools-dev
	ki18n-dev
	ktextwidgets-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/knavalbattle.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/knavalbattle-$_commit.tar.xz"
subpackages="$pkgname-doc "
options="!check" # No tests

options="!check"
builddir="$srcdir/knavalbattle-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
