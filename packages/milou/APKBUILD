# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=milou
pkgver=99999_git20260215
pkgrel=0
_commit="825b5c1063445365aebadbab6137fa23fbd05c6e"
pkgdesc="A dedicated search application built on top of Baloo"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only) AND (LGPL-2.1-only OR LGPL-3.0-only)"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdeclarative-dev
	ki18n-dev
	kitemmodels-dev
	krunner-dev
	kservice-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/milou.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-16/milou-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/milou-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
758933e0317d7ba9c183ff01eddc8eeb214f572463fd9994ba3a5c28f036800e1aaad5f1ddbb4dbaa0a4f673daa99b4b1b492aa84bdccd5e9445d50fd0fef9e3  milou-825b5c1063445365aebadbab6137fa23fbd05c6e.tar.xz
"
