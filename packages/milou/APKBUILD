# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=milou
pkgver=99999_git20260118
pkgrel=0
_commit="26c66f8f67675f012aa664461554546c7355a4ff"
pkgdesc="A dedicated search application built on top of Baloo"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only) AND (LGPL-2.1-only OR LGPL-3.0-only)"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdeclarative-dev
	ki18n-dev
	kitemmodels-dev
	krunner-dev
	kservice-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/milou.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-18/milou-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/milou-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5621bcb7d657c6029f42018f7c7c29eef1cf89fc0da5eb3998bbe68c31f04950fc81f42e89abcd593d0019ec3f30fdf51b92f5d768554ddec3db84c870d30aa7  milou-26c66f8f67675f012aa664461554546c7355a4ff.tar.xz
"
