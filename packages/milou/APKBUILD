# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=milou
pkgver=99999_git20250724
pkgrel=0
_commit="c9225a4df1eaf055910b1d262eccbf9fd32b48d4"
pkgdesc="A dedicated search application built on top of Baloo"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only) AND (LGPL-2.1-only OR LGPL-3.0-only)"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdeclarative-dev
	ki18n-dev
	kitemmodels-dev
	krunner-dev
	kservice-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/milou.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-25/milou-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/milou-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
450094fb33a5a23c841fdfdc7d210be8087c3ae3812f420cecb9fbf60ceb39d7488a81c37344c2920a52260fd5b773711d1306c0672af378791e8086b95a0d66  milou-c9225a4df1eaf055910b1d262eccbf9fd32b48d4.tar.xz
"
