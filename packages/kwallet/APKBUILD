# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kwallet
pkgver=99999_git20251118
pkgrel=0
_commit="d260e51306647cce19664973775003e0bfd39441"
pkgdesc="Secure and unified container for user passwords"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	gpgme-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	kservice-dev
	kwindowsystem-dev
	libgcrypt-dev
	libsecret-dev
	qca-qt6-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	kdoctools-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kwallet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/kwallet-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang $pkgname-bin"
provides="dbus:org.freedesktop.Secrets"
# 2nd highst priority after gnome-keyring, mainly for KDE
provider_priority=10

options="!check"
builddir="$srcdir/kwallet-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	local excluded_checks=
	case "$CARCH" in
		s390x) excluded_checks="(blowfishtest)";;
	esac
	ctest --test-dir build -E "$excluded_checks"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs

	rm "$pkgdir"/usr/share/dbus-1/services/org.kde.kwalletd5.service
}

bin() {
	amove usr/bin/kwallet-query
}

sha512sums="
b0b84c4a71366e99f11f284b875f566793fb2da5c39bfb6df45a98ad817b60797a10c6d1c4539ce6a8e7b4a584ebe04efccf34ec9ee3000f066442220a08c4a2  kwallet-d260e51306647cce19664973775003e0bfd39441.tar.xz
"
