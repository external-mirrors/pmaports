# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kbackup
pkgver=99999_git20260110
pkgrel=0
_commit="3d6ceaabc50c9eb440535bbd81e44901c3132ff3"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kbackup"
pkgdesc="An application which lets you back up your data in a simple, user friendly way"
license="GPL-2.0-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knotifications-dev
	kstatusnotifieritem-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libarchive-dev
	qt6-qtbase-dev
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/utilities/kbackup.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-10/kbackup-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kbackup-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ac9dabf19836c815704d9fb7e9eaa110cb51e5f6dec3c3a21507fa15bf152eb638bac76145a76daf2d1b05b60f2234bfd3bddf33db406c741fe37ea7e69714a4  kbackup-3d6ceaabc50c9eb440535bbd81e44901c3132ff3.tar.xz
"
