# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-wayland-protocols
pkgver=99999_git20251128
pkgrel=0
_commit="862694f8341d92d9ebd99d574c56d65729cc1541"
pkgdesc="Plasma Specific Protocols for Wayland"
# armhf blocked by extra-cmake-modules
arch="noarch !armhf"
url="https://www.kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only) AND LGPL-2.1-only"
makedepends="
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/plasma-wayland-protocols.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-02/plasma-wayland-protocols-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasma-wayland-protocols-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

