# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=breeze
pkgver=99999_git20250719
pkgrel=0
_commit="77c86b7d8916e756ab197ba4a93a8851a80bcc1f"
pkgdesc="Artwork, styles and assets for the Breeze visual style for the Plasma Desktop"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="$pkgname-cursors=$pkgver-r$pkgrel"
depends_dev="
	frameworkintegration-dev
	frameworkintegration5-dev
	kcmutils-dev
	kcolorscheme-dev
	kconfig-dev
	kconfig5-dev
	kconfigwidgets5-dev
	kcoreaddons-dev
	kcoreaddons5-dev
	kdecoration-dev
	kguiaddons-dev
	kguiaddons5-dev
	ki18n-dev
	kiconthemes-dev
	kiconthemes5-dev
	kirigami-dev
	kirigami2-dev
	kwindowsystem-dev
	kwindowsystem5-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtx11extras-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
subpackages="
	$pkgname-dev
	$pkgname-lang
	$pkgname-cursors::noarch
	"
_repo_url="https://invent.kde.org/plasma/breeze.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-19/breeze-$_commit.tar.xz"

options="!check"
builddir="$srcdir/breeze-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

cursors() {
	pkgdesc="$pkgdesc (cursors)"
	depends=""
	amove usr/share/icons/Breeze_Light
	amove usr/share/icons/breeze_cursors
}

sha512sums="
baaaa2bdcfcf563726a2c9ccd2d5d577f118d555039a9c1ccdeab86fa6bd03dec453fdb480bb0fd2f78abe19f740307246e71a0b457da5338186513861c9d9fa  breeze-77c86b7d8916e756ab197ba4a93a8851a80bcc1f.tar.xz
"
