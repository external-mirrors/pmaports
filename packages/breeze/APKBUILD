# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=breeze
pkgver=99999_git20250807
pkgrel=0
_commit="7b2a00053c5531077f470a9b1d8cce60446f9965"
pkgdesc="Artwork, styles and assets for the Breeze visual style for the Plasma Desktop"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="$pkgname-cursors=$pkgver-r$pkgrel"
depends_dev="
	frameworkintegration-dev
	frameworkintegration5-dev
	kcmutils-dev
	kcolorscheme-dev
	kconfig-dev
	kconfig5-dev
	kconfigwidgets5-dev
	kcoreaddons-dev
	kcoreaddons5-dev
	kdecoration-dev
	kguiaddons-dev
	kguiaddons5-dev
	ki18n-dev
	kiconthemes-dev
	kiconthemes5-dev
	kirigami-dev
	kirigami2-dev
	kwindowsystem-dev
	kwindowsystem5-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtx11extras-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
subpackages="
	$pkgname-dev
	$pkgname-lang
	$pkgname-cursors::noarch
	"
_repo_url="https://invent.kde.org/plasma/breeze.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-07/breeze-$_commit.tar.xz"

options="!check"
builddir="$srcdir/breeze-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

cursors() {
	pkgdesc="$pkgdesc (cursors)"
	depends=""
	amove usr/share/icons/Breeze_Light
	amove usr/share/icons/breeze_cursors
}

sha512sums="
e0049fec89bd03239ee19e0ccdee3262ce6a67f6d351d21dfc6590c8f754e9ce6878d1ed7d5c2fd11beb6c15cd840307dfec96143884ef3ba2be4dbdcdbf8454  breeze-7b2a00053c5531077f470a9b1d8cce60446f9965.tar.xz
"
