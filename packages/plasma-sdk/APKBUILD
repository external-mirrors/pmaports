# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-sdk
pkgver=99999_git20250724
pkgrel=0
_commit="f652fd6824b12248ebdebda19507bda9877866c4"
pkgdesc="Applications useful for Plasma Development"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	karchive-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kitemmodels-dev
	kparts-dev
	kservice-dev
	ksvg-dev
	ktexteditor-dev
	kwidgetsaddons-dev
	libplasma-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-sdk.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-25/plasma-sdk-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang $pkgname-zsh-completion"

options="!check"
builddir="$srcdir/plasma-sdk-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# iconmodeltest is broken
	xvfb-run ctest --test-dir build -E "iconmodeltest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
66bb26055b5b176b7e31f8ed3d1930a647f1ab4b661966576716524a32efa9799b0d79bc970fbd7c47713cfde6612abc57e012098f8fc4b12dca358e63452ccf  plasma-sdk-f652fd6824b12248ebdebda19507bda9877866c4.tar.xz
"
