# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmime
pkgver=99999_git20251015
pkgrel=0
_commit="5dfc191e1175cd1a65b1b03c3965275956a78037"
pkgdesc="Library for handling mail messages and newsgroup articles"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	kcodecs-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
_repo_url="https://invent.kde.org/pim/kmime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-16/kmime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# kmime-headertest and kmime-messagetest are broken
	ctest --test-dir build -E "kmime-(header|message)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ab7be406a86233081a969df33cc830de26fc029f70ea5a14a21a606c1819d7cbda5eda4d9949da969f7170bcf00c62020d54928fe95a5ebf5f76ebf427961b20  kmime-5dfc191e1175cd1a65b1b03c3965275956a78037.tar.xz
"
