# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmime
pkgver=99999_git20250831
pkgrel=0
_commit="baecb0e4506397b6ad693cfcf0c4c3dad921b758"
pkgdesc="Library for handling mail messages and newsgroup articles"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	kcodecs-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
_repo_url="https://invent.kde.org/pim/kmime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-01/kmime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# kmime-headertest and kmime-messagetest are broken
	ctest --test-dir build -E "kmime-(header|message)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
89ae2e239c4bcd1c5d6a0716c0249141a5d2a779751b54d95f1677dad8baa834e9a4f56df87f8328ea8f15db463521f32a455f30852980d24d804fd43adbe933  kmime-baecb0e4506397b6ad693cfcf0c4c3dad921b758.tar.xz
"
