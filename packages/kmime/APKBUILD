# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmime
pkgver=99999_git20250811
pkgrel=0
_commit="5b31db163d6352f9c14d9e0972c26039d952d36f"
pkgdesc="Library for handling mail messages and newsgroup articles"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	kcodecs-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
_repo_url="https://invent.kde.org/pim/kmime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-11/kmime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# kmime-headertest and kmime-messagetest are broken
	ctest --test-dir build -E "kmime-(header|message)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
42a5438090eae178f72e5dddbc5296eb2464a78c905138f04bb08a1e10d1c4439de13a578648512d165828d638282ac2a04706f9cd89fb887edcc03fb6c4086a  kmime-5b31db163d6352f9c14d9e0972c26039d952d36f.tar.xz
"
