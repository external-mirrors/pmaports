# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmime
pkgver=99999_git20250706
pkgrel=0
_commit="6ca60fc5024bf3591ce8819db521af10fcd05a99"
pkgdesc="Library for handling mail messages and newsgroup articles"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	kcodecs-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
_repo_url="https://invent.kde.org/pim/kmime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/kmime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# kmime-headertest and kmime-messagetest are broken
	ctest --test-dir build -E "kmime-(header|message)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c91a39cce25f5e5f9171af9b22bfa35ba37254773cd877d09d6dca383e8440cf0669a5ed332cc58550bc8d5f859d260246ae364ae34355815a70cfa749d38ac1  kmime-6ca60fc5024bf3591ce8819db521af10fcd05a99.tar.xz
"
