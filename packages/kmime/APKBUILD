# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmime
pkgver=99999_git20250905
pkgrel=0
_commit="0aadf332f00bb35f2545c5b497386ae36e91c4e3"
pkgdesc="Library for handling mail messages and newsgroup articles"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	kcodecs-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
_repo_url="https://invent.kde.org/pim/kmime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-06/kmime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# kmime-headertest and kmime-messagetest are broken
	ctest --test-dir build -E "kmime-(header|message)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d331800e74f540b042d49c81b73879979947cd2cd057fb0e0176bcb968bac9095227a818a87d4da1e79003707695b78381d54aa38a6c0d8a29fe624447e8597f  kmime-0aadf332f00bb35f2545c5b497386ae36e91c4e3.tar.xz
"
