# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ktexteditor
pkgver=99999_git20250803
pkgrel=0
_commit="a8aae58cd686723735b7fa5947f8c98e2e6ed3b8"
pkgdesc="Advanced embeddable text editor"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND (LGPL-2.0-only OR LGPL-3.0-only)"
depends_dev="
	karchive-dev
	kauth-dev
	kconfig-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kparts-dev
	sonnet-dev
	syntax-highlighting-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/ktexteditor.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-03/ktexteditor-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/ktexteditor-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
