# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=xdg-desktop-portal-kde
pkgver=99999_git20260218
pkgrel=0
_commit="de4668b590199cb61760f17c59b8d6bec0c449f0"
pkgdesc="A backend implementation for xdg-desktop-portal that is using Qt/KDE"
# armhf blocked by qt6-qtdeclarative-dev
arch="all !armhf"
url="https://phabricator.kde.org/source/xdg-desktop-portal-kde"
license="LGPL-2.0-or-later"
depends="xdg-desktop-portal"
makedepends="
	cups-dev
	extra-cmake-modules
	glib-dev
	kcoreaddons-dev
	kdeclarative-dev
	kio-dev
	kirigami-dev
	kstatusnotifieritem-dev
	kwayland-dev
	libepoxy-dev
	libplasma-dev
	pipewire-dev
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	xdg-desktop-portal-dev
	"
checkdepends="
	dbus-x11
	py3-gobject3
	xwayland-run
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/xdg-desktop-portal-kde.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-19/xdg-desktop-portal-kde-$_commit.tar.xz"

options="!check"
builddir="$srcdir/xdg-desktop-portal-kde-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKDE_INSTALL_LIBEXECDIR=libexec
	cmake --build build
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c5a9236b6ec74551e0674d1a9360b79acc400fe91b2c1b7d4add9b7ec0b1157f1eb6569497b4c77388df578d6ac8dae60806cdc4813a3cf4cf3da44f8c362371  xdg-desktop-portal-kde-de4668b590199cb61760f17c59b8d6bec0c449f0.tar.xz
"
