# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=xdg-desktop-portal-kde
pkgver=99999_git20260110
pkgrel=0
_commit="5dd0c4c3e2b8130b78a2780261d9e451174abd42"
pkgdesc="A backend implementation for xdg-desktop-portal that is using Qt/KDE"
# armhf blocked by qt6-qtdeclarative-dev
arch="all !armhf"
url="https://phabricator.kde.org/source/xdg-desktop-portal-kde"
license="LGPL-2.0-or-later"
depends="xdg-desktop-portal"
makedepends="
	cups-dev
	extra-cmake-modules
	glib-dev
	kcoreaddons-dev
	kdeclarative-dev
	kio-dev
	kirigami-dev
	kstatusnotifieritem-dev
	kwayland-dev
	libepoxy-dev
	libplasma-dev
	pipewire-dev
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	xdg-desktop-portal-dev
	"
checkdepends="
	dbus-x11
	py3-gobject3
	xwayland-run
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/xdg-desktop-portal-kde.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-12/xdg-desktop-portal-kde-$_commit.tar.xz"

options="!check"
builddir="$srcdir/xdg-desktop-portal-kde-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKDE_INSTALL_LIBEXECDIR=libexec
	cmake --build build
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8b13ae1b773a283d5d885d2fb71ba40b1e6b1f88dd4b4f93492836959cfa7ba949ce5e9fb266cccecfac936a5e11455489c7c96beaf4ed05e02b2fa110674164  xdg-desktop-portal-kde-5dd0c4c3e2b8130b78a2780261d9e451174abd42.tar.xz
"
