# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=xdg-desktop-portal-kde
pkgver=99999_git20251130
pkgrel=0
_commit="f3c89f39e3d2b5526ab716a2c0ee12ae611a6271"
pkgdesc="A backend implementation for xdg-desktop-portal that is using Qt/KDE"
# armhf blocked by qt6-qtdeclarative-dev
arch="all !armhf"
url="https://phabricator.kde.org/source/xdg-desktop-portal-kde"
license="LGPL-2.0-or-later"
depends="xdg-desktop-portal"
makedepends="
	cups-dev
	extra-cmake-modules
	glib-dev
	kcoreaddons-dev
	kdeclarative-dev
	kio-dev
	kirigami-dev
	kstatusnotifieritem-dev
	kwayland-dev
	libepoxy-dev
	libplasma-dev
	pipewire-dev
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	xdg-desktop-portal-dev
	"
checkdepends="
	dbus-x11
	py3-gobject3
	xwayland-run
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/xdg-desktop-portal-kde.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-01/xdg-desktop-portal-kde-$_commit.tar.xz"

options="!check"
builddir="$srcdir/xdg-desktop-portal-kde-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKDE_INSTALL_LIBEXECDIR=libexec
	cmake --build build
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
96edb4c44ce24e2365597b86f8d884ccccdbb921512b135d4303bf1466805da08a349eb078f95f7eb12ab59049981f353ac1b61a7e463d5b61fab8dfee8bd04c  xdg-desktop-portal-kde-f3c89f39e3d2b5526ab716a2c0ee12ae611a6271.tar.xz
"
