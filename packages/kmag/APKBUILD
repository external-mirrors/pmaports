# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmag
pkgver=99999_git20260103
pkgrel=0
_commit="8bd881e0237b16aeedb3bc50e1e8d2f100efc645"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kmag"
pkgdesc="A screen magnifier"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdoctools-dev
	ki18n-dev
	kio-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/accessibility/kmag.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-06/kmag-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmag-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
25e8a1dd6ad83a454cb9e11860672c7164a2727535a4d8c2349740ad8dc3b27a620d2d51c5fca8d223ba8a737bcaccb8aa43db3cb083fefd9befdb4d5197ddad  kmag-8bd881e0237b16aeedb3bc50e1e8d2f100efc645.tar.xz
"
