# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kruler
pkgver=99999_git20251118
pkgrel=0
_commit="8acad0a2fd1b4826eb1f3beabc911643f77474b3"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/graphics/org.kde.kruler"
pkgdesc="An on-screen ruler for measuring pixels"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdoctools-dev
	ki18n-dev
	knotifications-dev
	kstatusnotifieritem-dev
	kwindowsystem-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/graphics/kruler.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/kruler-$_commit.tar.xz"
subpackages=" $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kruler-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8123d38db0184f1efd1d5c30074c43b87eaa22720916a03b86c7fb4e2604b103e7e2955dd4483ea26331fb7bbf43c25846aa3b6ad3191523daefa613ce427a66  kruler-8acad0a2fd1b4826eb1f3beabc911643f77474b3.tar.xz
"
