# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami
pkgver=99999_git20250913
pkgrel=0
_commit="f89bf63a34c910feaa92a5c7c0e99540f0f27a69"
pkgdesc="A QtQuick based components set"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
depends="qt6-qtsvg"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kirigami.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-14/kirigami-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-libs $pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
726e8038fb300cb64d9d36b1e096367b220a0f68766a0d5412c6880c933593aa67bcd36dbabab3347974b3ccdd5b93fd8426b20d5ca9842ba842076033ec02a0  kirigami-f89bf63a34c910feaa92a5c7c0e99540f0f27a69.tar.xz
"
