# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami
pkgver=99999_git20251208
pkgrel=0
_commit="25b44f3763184461df509b2d1e0485dc391f0731"
pkgdesc="A QtQuick based components set"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
depends="qt6-qtsvg"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kirigami.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-08/kirigami-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-libs $pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e97885d9db5b8cc5ab205c864f176bf99a2a3b54af92e90f1f25ba4ee0ee23d82dc8cc44a7c50f43236af4e9ec92406cd11d5d168836e636610cab5fe3e1260a  kirigami-25b44f3763184461df509b2d1e0485dc391f0731.tar.xz
"
