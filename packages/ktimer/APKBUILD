# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ktimer
pkgver=99999_git20251203
pkgrel=0
_commit="ff1cad413d201e8b2db4ed41278d67dff4e26c5c"
pkgdesc="A little tool to execute programs after some time"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.ktimer"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	knotifications-dev
	kstatusnotifieritem-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/ktimer.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-05/ktimer-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/ktimer-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKF_IGNORE_PLATFORM_CHECK=ON # does not have metainfo.yaml
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2e63a2ffcff5d9fd20e236e3a20362a264b468d0fdf0a7ec241af2b9fa3b02179ff3b47ab381d17bc857fb6f422d1440f9c96279e55d5ae4365d5fac590c0895  ktimer-ff1cad413d201e8b2db4ed41278d67dff4e26c5c.tar.xz
"
