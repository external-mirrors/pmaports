# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpublictransport
pkgver=99999_git20250922
pkgrel=0
_commit="80c7d8e1cd81c0334da4f2412237aec8a449d2cb"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/libraries/kpublictransport"
pkgdesc="Library to assist with accessing public transport timetables and other data"
license="BSD-3-Clause AND LGPL-2.0-or-later AND MIT"
depends_dev="
	ki18n-dev
	kirigami-addons-dev
	networkmanager-qt-dev
	protobuf-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	zlib-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kpublictransport.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-22/kpublictransport-$_commit.tar.xz"
options="!check" # Broken for now
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kpublictransport-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f93cf0b49e9be72e4439fa3a8e144d4893dc0a249327f3fdc2f9387b2c9dd95f3c556bfa6540a991a858627a5de4e5e98c514a5a07586ecfbd1bf532eebf565e  kpublictransport-80c7d8e1cd81c0334da4f2412237aec8a449d2cb.tar.xz
"
