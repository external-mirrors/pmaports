# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpublictransport
pkgver=99999_git20250905
pkgrel=0
_commit="8909b99e975b8fcce446f96a92b97dce401cb0ff"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/libraries/kpublictransport"
pkgdesc="Library to assist with accessing public transport timetables and other data"
license="BSD-3-Clause AND LGPL-2.0-or-later AND MIT"
depends_dev="
	ki18n-dev
	kirigami-addons-dev
	networkmanager-qt-dev
	protobuf-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	zlib-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kpublictransport.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-06/kpublictransport-$_commit.tar.xz"
options="!check" # Broken for now
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kpublictransport-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9e545b9795505128cbf9b3004dc7864b3ed3032edddb1ba5a2cb2ec21f829b20ccef78ec1f7cc09c63dc54aba1dbc1efe3b5aada28cb85087a73a5dc3240c1ad  kpublictransport-8909b99e975b8fcce446f96a92b97dce401cb0ff.tar.xz
"
