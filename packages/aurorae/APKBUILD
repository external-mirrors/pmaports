# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=aurorae
pkgver=99999_git20251017
pkgrel=0
_commit="75a002aef138038ff368eab332ef6fb2ba98bd25"
pkgdesc="Themeable window decoration for KWin"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	cmake
	extra-cmake-modules
	kcmutils-dev
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	kdecoration-dev
	ki18n-dev
	knewstuff-dev
	ksvg-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-lang"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

_repo_url="https://invent.kde.org/plasma/aurorae.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/aurorae-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e9d4ec6f2b23a633848bbca0e50932c7dffc9afa0a620adb9881bf3c8c27411cda96535636a9df46d8b535c0a7c8871b20074167872bfa8d9bf1df11da699bd2  aurorae-75a002aef138038ff368eab332ef6fb2ba98bd25.tar.xz
"
