# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=aurorae
pkgver=99999_git20251120
pkgrel=0
_commit="264afebfb44ad0681bc782c844cfd5936bad3cc5"
pkgdesc="Themeable window decoration for KWin"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	cmake
	extra-cmake-modules
	kcmutils-dev
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	kdecoration-dev
	ki18n-dev
	knewstuff-dev
	ksvg-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-lang"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

_repo_url="https://invent.kde.org/plasma/aurorae.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-20/aurorae-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
62a8fad895b76903894ec7291e53a327691b54dcb20afa651a6a885079141bfde91da9da89f7a2b1f79fd13a78660a1da169a44dc3831243d5a40f2eb0075642  aurorae-264afebfb44ad0681bc782c844cfd5936bad3cc5.tar.xz
"
