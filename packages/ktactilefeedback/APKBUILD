# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ktactilefeedback
pkgver=99999_git20250711
pkgrel=0
_commit="bcca8187b59b08eae894f1b1d1bf765a61003ac4"
pkgdesc="Qt6 fork of QtFeedback"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="(LGPL-2.1-only OR LGPL-3.0-only) AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	feedbackd-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/jbbgameich/ktactilefeedback.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-17/ktactilefeedback-$_commit.tar.xz"

options="!check"
builddir="$srcdir/ktactilefeedback-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
62b2f8862776277e12e3df7fae3f5390447538386c139f9808fd3067bc34d337bfdef0b95d2964001d38f2b04ee54099ca2d55f8f6f051f49902a1c48aa0f63b  ktactilefeedback-bcca8187b59b08eae894f1b1d1bf765a61003ac4.tar.xz
"
