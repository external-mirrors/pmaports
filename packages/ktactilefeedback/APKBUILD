# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ktactilefeedback
pkgver=99999_git20250725
pkgrel=0
_commit="da7858aaa125588d4c309f273afefff93222e8f9"
pkgdesc="Qt6 fork of QtFeedback"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="(LGPL-2.1-only OR LGPL-3.0-only) AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	feedbackd-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/jbbgameich/ktactilefeedback.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-27/ktactilefeedback-$_commit.tar.xz"

options="!check"
builddir="$srcdir/ktactilefeedback-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dadca16fd50328a622014e34e6aa9a62ac0c9bb381bc3e8fe951b6ecb4b6040206e703b172e0de0528e0d6d6f44b21c2a199af80d427f6ef5f489a24a2cad92e  ktactilefeedback-da7858aaa125588d4c309f273afefff93222e8f9.tar.xz
"
