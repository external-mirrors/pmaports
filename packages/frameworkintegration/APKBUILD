# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=frameworkintegration
pkgver=99999_git20260109
pkgrel=0
_commit="9525438cba52c847d2bb78d10c30897bf7844599"
pkgdesc="Framework providing components to allow applications to integrate with a KDE Workspace"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org"
license="LGPL-2.1-or-later"
depends_dev="
	appstream-dev
	kconfig-dev
	kconfigwidgets-dev
	ki18n-dev
	kiconthemes-dev
	knewstuff-dev
	knotifications-dev
	kpackage-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/frameworkintegration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-10/frameworkintegration-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/frameworkintegration-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
378988ddc936fb125b761756585f2d71febc8574a4923ef81a549105dd024c1a9f421a143d5df19f1636459f0d59469e5d7a49e5cfd9d78d36ba658d10a66a42  frameworkintegration-9525438cba52c847d2bb78d10c30897bf7844599.tar.xz
"
