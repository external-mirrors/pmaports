# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=frameworkintegration
pkgver=99999_git20250914
pkgrel=0
_commit="f2db379abe09f48a88fcd26dfedb25d628481654"
pkgdesc="Framework providing components to allow applications to integrate with a KDE Workspace"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org"
license="LGPL-2.1-or-later"
depends_dev="
	appstream-dev
	kconfig-dev
	kconfigwidgets-dev
	ki18n-dev
	kiconthemes-dev
	knewstuff-dev
	knotifications-dev
	kpackage-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/frameworkintegration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-14/frameworkintegration-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/frameworkintegration-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5e3f36bfa0cea9f86b58f64fd7792dc328b702d351464f7f58b79bbd5b97e48ab4da62244ee57281df7fdaf05b02509f497bcae0c0157ebf6b3aeb7850d845c6  frameworkintegration-f2db379abe09f48a88fcd26dfedb25d628481654.tar.xz
"
