# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=frameworkintegration
pkgver=99999_git20250704
pkgrel=0
_commit="885f4440722f0ef1d0d158e290ff3d59acbabc35"
pkgdesc="Framework providing components to allow applications to integrate with a KDE Workspace"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org"
license="LGPL-2.1-or-later"
depends_dev="
	appstream-dev
	kconfig-dev
	kconfigwidgets-dev
	ki18n-dev
	kiconthemes-dev
	knewstuff-dev
	knotifications-dev
	kpackage-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/frameworkintegration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/frameworkintegration-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/frameworkintegration-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
bd87cd0ceaab46d85a857a4041cdfa6cd2cd98721d1dbe9eef99c6c34704c6e63396aee291fe1c5f98a9d90881013fa73638eefbe0a1ddaa101bf211cbf44b38  frameworkintegration-885f4440722f0ef1d0d158e290ff3d59acbabc35.tar.xz
"
