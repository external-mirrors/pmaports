# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=frameworkintegration
pkgver=99999_git20251201
pkgrel=0
_commit="c10dddcceba0cb032bf16dd8297e20fcf83d452e"
pkgdesc="Framework providing components to allow applications to integrate with a KDE Workspace"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org"
license="LGPL-2.1-or-later"
depends_dev="
	appstream-dev
	kconfig-dev
	kconfigwidgets-dev
	ki18n-dev
	kiconthemes-dev
	knewstuff-dev
	knotifications-dev
	kpackage-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/frameworkintegration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-02/frameworkintegration-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/frameworkintegration-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d902b50e14e83d9ac556fcbcf3ffab9f8d70cfcf9b0befd7b2077dfd86101a1ab89bb8a1b82b61a50c70c3673be22af0350a0d334365411568c8c89f5a665915  frameworkintegration-c10dddcceba0cb032bf16dd8297e20fcf83d452e.tar.xz
"
