# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=frameworkintegration
pkgver=99999_git20260210
pkgrel=0
_commit="5f169a32eb1a6042b23eed75978aea973ea55094"
pkgdesc="Framework providing components to allow applications to integrate with a KDE Workspace"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org"
license="LGPL-2.1-or-later"
depends_dev="
	appstream-dev
	kconfig-dev
	kconfigwidgets-dev
	ki18n-dev
	kiconthemes-dev
	knewstuff-dev
	knotifications-dev
	kpackage-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/frameworkintegration.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-10/frameworkintegration-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/frameworkintegration-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2f7158822ceb5ebfcbf0619c82fa688edb4849f552d9330b75ab9a9cd4eabebaa1f619573661b15d89ad8d1331abb8c0b2f58584ae74f0e36d7a0c0a200a2ffe  frameworkintegration-5f169a32eb1a6042b23eed75978aea973ea55094.tar.xz
"
