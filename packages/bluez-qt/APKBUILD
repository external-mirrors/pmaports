# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=bluez-qt
pkgver=99999_git20250921
pkgrel=0
_commit="bd7c5b6bf8ac67f6f2317a74a435dd53c2f924cf"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
pkgdesc="Qt wrapper for Bluez 5 DBus API"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/bluez-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-21/bluez-qt-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # Multiple tests either hang or fail completely

options="!check"
builddir="$srcdir/bluez-qt-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
5f67a835e721ca15124a114475616e8fb560ec2d5e7961fb368686add0617679fbf4857cf3351b57a497571ad573b2e9b64334b46f0221c54606b92d44fcc4ca  bluez-qt-bd7c5b6bf8ac67f6f2317a74a435dd53c2f924cf.tar.xz
"
