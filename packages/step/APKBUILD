# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=step
pkgver=99999_git20251125
pkgrel=0
_commit="32e664674143eceead289b308453ef33e2285e27"
# armhf blocked by extra-cmake-modules
# s390x blocked by 
# riscv64 disabled due to missing rust in recursive dependency
arch="all !armhf !s390x !riscv64"
url="https://edu.kde.org/step/"
pkgdesc="Interactive Physics Simulator"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	eigen-dev
	extra-cmake-modules
	kconfig-dev
	kcrash-dev
	kdoctools-dev

	kiconthemes-dev
	knewstuff-dev
	kplotting-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/education/step.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-26/step-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/step-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e9f6124c14ab301a11d91699d3c758f08dc5821dcdd03bf294db92286769bc8d395ae2e004863990e1812906aadbc5508379539b8edc6ae96ab77c7b60c02afc  step-32e664674143eceead289b308453ef33e2285e27.tar.xz
"
