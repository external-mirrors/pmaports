# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=breeze-plymouth
pkgver=99999_git20250918
pkgrel=0
_commit="bd21984fd279a92867fd04de7c3930fb311c14f4"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://kde.org/"
pkgdesc="Breeze theme for Plymouth"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	plymouth-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/breeze-plymouth.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-20/breeze-plymouth-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/breeze-plymouth-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DDISTRO_NAME="$(grep PRETTY_NAME /etc/os-release | awk -F  = '{ print $2 }')" \
		-DDISTRO_VERSION="$(grep VERSION_ID /etc/os-release | awk -F  = '{ print $2 }')"
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
756ca6d207a7adeb0c7a2883ccd8afb5dd9b86c8d90d22f0978e63d9e92ff6be6d444e7d48f223d093a96d7529cd169ead5c6d0203e5ceb075f1426e316ce372  breeze-plymouth-bd21984fd279a92867fd04de7c3930fb311c14f4.tar.xz
"
