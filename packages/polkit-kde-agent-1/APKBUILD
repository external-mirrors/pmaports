# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=polkit-kde-agent-1
pkgver=99999_git20251118
pkgrel=0
_commit="4d880eee9182d30b1cbfc6818d9d1d537abe1896"
pkgdesc="Daemon providing a polkit authentication UI for KDE"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="polkit"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/polkit-kde-agent-1.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/polkit-kde-agent-1-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/polkit-kde-agent-1-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a24090114086b8f66e7acd6cc055afc5beda20fb2645b90f7a63a4545225c32920694c465e9ef5c083f2632201b7140de3ec060a270675fdc169315b8316c7bc  polkit-kde-agent-1-4d880eee9182d30b1cbfc6818d9d1d537abe1896.tar.xz
"
