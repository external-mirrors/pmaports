# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=polkit-kde-agent-1
pkgver=99999_git20250908
pkgrel=0
_commit="61bb919ee21db9c84dd5f199de8bc39d88a3306d"
pkgdesc="Daemon providing a polkit authentication UI for KDE"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="polkit"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="$pkgname-systemd $pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/polkit-kde-agent-1.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-08/polkit-kde-agent-1-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/polkit-kde-agent-1-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e7a1280ce89e4ec8dd09536014a81c4fe356ca18a50929c27f548433c94f74c809e3e519e01f4d7b5d8f786c14990df4759f24ba619258750d242ac6759902a2  polkit-kde-agent-1-61bb919ee21db9c84dd5f199de8bc39d88a3306d.tar.xz
"
