# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=polkit-kde-agent-1
pkgver=99999_git20251111
pkgrel=0
_commit="8f87a367e4d996a22f447a91ca6f1e6ae91c59fe"
pkgdesc="Daemon providing a polkit authentication UI for KDE"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="polkit"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/polkit-kde-agent-1.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/polkit-kde-agent-1-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/polkit-kde-agent-1-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2926a11e68dcb1f1fd1597932db9e03b1db88f6b3bf058ea9be28a2724cd533d0b086c4d5d1b67d1464c6b739846622c79e996709c0cf76f90b6cace11e154a9  polkit-kde-agent-1-8f87a367e4d996a22f447a91ca6f1e6ae91c59fe.tar.xz
"
