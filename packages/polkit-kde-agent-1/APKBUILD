# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=polkit-kde-agent-1
pkgver=99999_git20260220
pkgrel=0
_commit="c35281b885c0c1f302b4fc12288131fc8d087b91"
pkgdesc="Daemon providing a polkit authentication UI for KDE"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="polkit"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/polkit-kde-agent-1.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/polkit-kde-agent-1-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/polkit-kde-agent-1-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
383a81d265a1c78c838983ebf0ebea2c0190a19ae48f9997c8b9727aa8c6a17c57b2380ce9149bc6129e512b3388f0449a01b8772e4f4c5e1c6d977959b49ec1  polkit-kde-agent-1-c35281b885c0c1f302b4fc12288131fc8d087b91.tar.xz
"
