# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=sweeper
pkgver=99999_git20250724
pkgrel=0
_commit="5c8cc891c5a290d608e58e9af5104273c2fa666a"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.sweeper"
pkgdesc="System cleaner to help clean unwanted traces the user leaves on the system"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	ktextwidgets-dev
	kxmlgui-dev
	plasma-activities-stats-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/sweeper.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-25/sweeper-$_commit.tar.xz"
subpackages=" $pkgname-lang"

options="!check"
builddir="$srcdir/sweeper-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7031872e7fd591cfbadfeeee6bdc88e7c1de738c10c0ac8ed21e15f2da810933ce54762b65ecc2dd0395a9c3e6ce61ea285a122ddbec82fcb92923933d8b5d8f  sweeper-5c8cc891c5a290d608e58e9af5104273c2fa666a.tar.xz
"
