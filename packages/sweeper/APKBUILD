# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=sweeper
pkgver=99999_git20250630
pkgrel=0
_commit="971455922a530a0d1f28fc15d9fdaf8f02a288cc"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.sweeper"
pkgdesc="System cleaner to help clean unwanted traces the user leaves on the system"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	ktextwidgets-dev
	kxmlgui-dev
	plasma-activities-stats-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/sweeper.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-30/sweeper-$_commit.tar.xz"
subpackages=" $pkgname-lang"

options="!check"
builddir="$srcdir/sweeper-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
82953b1dd02d3219d44fba4fa58f2eb04ed1402f758591c9a38aed9b0d86d31038467c3e0d39bb73563d4f73bd7b24655861bc0b75ca99626eb01ba9f14f926f  sweeper-971455922a530a0d1f28fc15d9fdaf8f02a288cc.tar.xz
"
