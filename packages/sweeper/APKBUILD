# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=sweeper
pkgver=99999_git20251011
pkgrel=0
_commit="e2d87857832e4f01bf97b985396465e71672f3f1"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.sweeper"
pkgdesc="System cleaner to help clean unwanted traces the user leaves on the system"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	kbookmarks-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	ktextwidgets-dev
	kxmlgui-dev
	plasma-activities-stats-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/sweeper.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-12/sweeper-$_commit.tar.xz"
subpackages=" $pkgname-lang"

options="!check"
builddir="$srcdir/sweeper-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fa6d4ed4e81e056cfc8eb7f2f2d4502b92040cfd1cf22156deaf11a72abf37cf476c5bdbdcb473ab1a3a13b71da32a8965fe44095ecc47c6f4e07b3aec21e54e  sweeper-e2d87857832e4f01bf97b985396465e71672f3f1.tar.xz
"
