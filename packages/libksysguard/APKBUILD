# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libksysguard
pkgver=99999_git20250922
pkgrel=0
_commit="184aa00b6df6406bcf2016b4a1fe7a6f55dc4665"
pkgdesc="KDE system monitor library"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.1-or-later AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	kauth-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kglobalaccel-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	kservice-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	libcap-dev
	libnl3-dev
	libpcap-dev
	libplasma-dev
	lm-sensors-dev
	qt6-qttools-dev
	qt6-qtwebchannel-dev
	zlib-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/libksysguard.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-22/libksysguard-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

replaces="ksysguard<5.22"

options="!check"
builddir="$srcdir/libksysguard-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# processtest requires working OpenGL
	xvfb-run ctest --test-dir build -E "processtest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
15b83d423ea74faedd1a44d7fa4e5a87e92299afca5582a3b297db05e72ae9def2d186de8b9ba311534ae4c3f6a0fe905ee9249b4800a62ed9481ad65df569bb  libksysguard-184aa00b6df6406bcf2016b4a1fe7a6f55dc4665.tar.xz
"
