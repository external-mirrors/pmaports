# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kdenetwork-filesharing
pkgver=99999_git20251015
pkgrel=0
_commit="655388e7c6ab5cbee0c7074a6bc0233c6ae1e72b"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/internet/"
pkgdesc="Properties dialog plugin to share a directory with the local network"
license="GPL-2.0-only OR GPL-3.0-only"
depends="samba"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kcoreaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	qcoro-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/kdenetwork-filesharing.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-16/kdenetwork-filesharing-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kdenetwork-filesharing-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DSAMBA_INSTALL=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b57e0679808dc7cb3dad44155962e57ec773d60cec3d3f9a2457b69be44f3de8898c655d242b2b8a6fac1b40049c16e20fc975ee8368a547f6806701da5c4117  kdenetwork-filesharing-655388e7c6ab5cbee0c7074a6bc0233c6ae1e72b.tar.xz
"
