# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kdenetwork-filesharing
pkgver=99999_git20251118
pkgrel=0
_commit="49c8d2fe66397dd07cb641751e5bb306220c0363"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/internet/"
pkgdesc="Properties dialog plugin to share a directory with the local network"
license="GPL-2.0-only OR GPL-3.0-only"
depends="samba"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kcoreaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	qcoro-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/kdenetwork-filesharing.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/kdenetwork-filesharing-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kdenetwork-filesharing-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DSAMBA_INSTALL=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
17ebb71c0298bd77682d6ff5f1a97d140057cf5dbbcade8cd6e3a29df3be11b74dbd30375528c284e85343dca4ec9c2e60edd5061781f1503452fbc4c2a11e6b  kdenetwork-filesharing-49c8d2fe66397dd07cb641751e5bb306220c0363.tar.xz
"
