# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpty
pkgver=99999_git20251118
pkgrel=0
_commit="b51e5c5a797e592296bd384cc1f897a1a62b4244"
pkgdesc="Pty abstraction"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	ki18n-dev
	libutempter-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kpty.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/kpty-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # The one test it has fails: "Can't open a pseudo teletype"

builddir="$srcdir/kpty-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
0f60f6d562913f68cf81ae921b2a885a4b33e126e7d669ee3cda4ef124340a629cfeebf56c8a9385c176c5b3199473eb1227c40d1dcbecad845d2a39eb39e962  kpty-b51e5c5a797e592296bd384cc1f897a1a62b4244.tar.xz
"
