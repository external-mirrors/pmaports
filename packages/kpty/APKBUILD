# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpty
pkgver=99999_git20251005
pkgrel=0
_commit="41581eb89fbc09ff5aee9a3f208cf4c2f1518cca"
pkgdesc="Pty abstraction"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	ki18n-dev
	libutempter-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kpty.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/kpty-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # The one test it has fails: "Can't open a pseudo teletype"

builddir="$srcdir/kpty-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
a3629a525addff2d28c2e8ff632720c6ceea1dff0d3dfe120766e02c10d7dc28d671b7d7a8878fa0fa6cc9200fcb0f8a856b07c3962eea29fa3509bb322d2871  kpty-41581eb89fbc09ff5aee9a3f208cf4c2f1518cca.tar.xz
"
