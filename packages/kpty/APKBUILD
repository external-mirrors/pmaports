# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpty
pkgver=99999_git20251018
pkgrel=0
_commit="03880e5f7291385fd1ca5e386e10f9d48fcac4ab"
pkgdesc="Pty abstraction"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	ki18n-dev
	libutempter-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kpty.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/kpty-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # The one test it has fails: "Can't open a pseudo teletype"

builddir="$srcdir/kpty-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
6dbe3e60f3b1d2ed01601fe13852b5e93104713efb23eb36f76290f1e54c517da197a6ebe51f69bfe988e966dfc1a832a6388a985ef51390b07f4527fcfef4f7  kpty-03880e5f7291385fd1ca5e386e10f9d48fcac4ab.tar.xz
"
