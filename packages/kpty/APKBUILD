# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpty
pkgver=99999_git20250908
pkgrel=0
_commit="ca5c6ed0e4fabc72df416706649bfd1c74d87ccb"
pkgdesc="Pty abstraction"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	ki18n-dev
	libutempter-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kpty.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-08/kpty-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # The one test it has fails: "Can't open a pseudo teletype"

builddir="$srcdir/kpty-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
af259ab68d78b5eb7a28e9f8a4f54760c3e040b930d43c9817838e7f920238ddd3759d935c73292d555cdd61f6abb00c3c2faf5b60d3604883fbafe6a3751882  kpty-ca5c6ed0e4fabc72df416706649bfd1c74d87ccb.tar.xz
"
