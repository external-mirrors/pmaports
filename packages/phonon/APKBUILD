# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=phonon
pkgver=99999_git20250916
pkgrel=0
_commit="0884efd67ac67ad665e5ee5197d2541502f30801"
pkgdesc="KDE multimedia backend"
url="https://userbase.kde.org/Phonon"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
license="LGPL-2.1-or-later"
depends_dev="
	glib-dev
	qt5-qtdeclarative-dev
	qt6-qt5compat-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt5-qtbase-dev
	qt5-qttools-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-lang $pkgname-qt5 $pkgname-qt6"
_repo_url="https://invent.kde.org/libraries/phonon.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-17/phonon-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/phonon-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DPHONON_INSTALL_QT_EXTENSIONS_INTO_SYSTEM_QT=FALSE
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

qt5() {
	amove usr/lib/libphonon4qt5*
	amove usr/lib/qt5/plugins/designer/phonon4qt5widgets.so
}

qt6() {
	amove usr/lib/libphonon4qt6*
	amove usr/lib/qt5/plugins/designer/phonon4qt6widgets.so
}

sha512sums="
0719b1d8b3c5a6c016f33c46940ca625e01eea7566829523484a68992c2f1eba0738f2afba6810e71042f852204bad5f3c249d931e73653d42133db2755483ad  phonon-0884efd67ac67ad665e5ee5197d2541502f30801.tar.xz
"
