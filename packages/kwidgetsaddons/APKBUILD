# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kwidgetsaddons
pkgver=99999_git20250805
pkgrel=0
_commit="b79df24cacf4e604a0d5644ba82860904f7ba1f2"
pkgdesc="Addons to QtWidgets"
arch="all"
url="https://community.kde.org/Frameworks"
license="GPL-2.0-only AND LGPL-2.1-only AND Unicode-DFS-2016"
depends_dev="qt6-qtbase-dev"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="
	mesa-dri-gallium
	xvfb-run
	"
_repo_url="https://invent.kde.org/frameworks/kwidgetsaddons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-05/kwidgetsaddons-$_commit.tar.xz"
subpackages="
	$pkgname-dev
	$pkgname-lang
	py3-$pkgname:_py3
	"

options="!check"
builddir="$srcdir/kwidgetsaddons-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

#	cmake --build build --target prepare_docs
#	cmake --build build --target generate_docs
#	cmake --build build --target generate_qch
}

check() {
	# ktwofingertaptest, ktwofingerswipetest and and ksqueezedtextlabelautotest are broken
	xvfb-run ctest --test-dir build -E '(ktooltipwidget|ktwofingertap|ktwofingerswipe|ksqueezedtextlabelauto)test'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
#	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
#	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
23b31b8820aff0cab7fbaff220a55bae03bd55ca0e15be203f0f5cbe3e4f8dda4b7b77ec4fd5471319ddfaca54e152d8cc6abe644e607c57717ae59b19b3283e  kwidgetsaddons-b79df24cacf4e604a0d5644ba82860904f7ba1f2.tar.xz
"
