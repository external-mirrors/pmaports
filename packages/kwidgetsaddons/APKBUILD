# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kwidgetsaddons
pkgver=99999_git20250630
pkgrel=0
_commit="3885fe5ec817da075e5eabf3eed797e008e3f4db"
pkgdesc="Addons to QtWidgets"
arch="all"
url="https://community.kde.org/Frameworks"
license="GPL-2.0-only AND LGPL-2.1-only AND Unicode-DFS-2016"
depends_dev="qt6-qtbase-dev"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="
	mesa-dri-gallium
	xvfb-run
	"
_repo_url="https://invent.kde.org/frameworks/kwidgetsaddons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-30/kwidgetsaddons-$_commit.tar.xz"
subpackages="
	$pkgname-dev
	$pkgname-lang
	py3-$pkgname:_py3
	"

options="!check"
builddir="$srcdir/kwidgetsaddons-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

#	cmake --build build --target prepare_docs
#	cmake --build build --target generate_docs
#	cmake --build build --target generate_qch
}

check() {
	# ktwofingertaptest, ktwofingerswipetest and and ksqueezedtextlabelautotest are broken
	xvfb-run ctest --test-dir build -E '(ktooltipwidget|ktwofingertap|ktwofingerswipe|ksqueezedtextlabelauto)test'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
#	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
#	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
749d0eb81d429946fe79fa3cb72fb6dfb0f6a4cf5d68c6da40613f190ba6e3c90ac9a56f20db30f90bbcfb2ccbad55d155613fa26d7ad243c27a336ad2f211b0  kwidgetsaddons-3885fe5ec817da075e5eabf3eed797e008e3f4db.tar.xz
"
