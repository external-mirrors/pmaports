# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kwidgetsaddons
pkgver=99999_git20250721
pkgrel=0
_commit="034625ed5122291da7e35cbeb1ca915a1aff7cd4"
pkgdesc="Addons to QtWidgets"
arch="all"
url="https://community.kde.org/Frameworks"
license="GPL-2.0-only AND LGPL-2.1-only AND Unicode-DFS-2016"
depends_dev="qt6-qtbase-dev"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="
	mesa-dri-gallium
	xvfb-run
	"
_repo_url="https://invent.kde.org/frameworks/kwidgetsaddons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-23/kwidgetsaddons-$_commit.tar.xz"
subpackages="
	$pkgname-dev
	$pkgname-lang
	py3-$pkgname:_py3
	"

options="!check"
builddir="$srcdir/kwidgetsaddons-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

#	cmake --build build --target prepare_docs
#	cmake --build build --target generate_docs
#	cmake --build build --target generate_qch
}

check() {
	# ktwofingertaptest, ktwofingerswipetest and and ksqueezedtextlabelautotest are broken
	xvfb-run ctest --test-dir build -E '(ktooltipwidget|ktwofingertap|ktwofingerswipe|ksqueezedtextlabelauto)test'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
#	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
#	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
1ab033d3299172fe7b352e792d63553109f391a7a7bbd2122dd5bab4b530f53d40729d9074ac94753a85ff4e812c8651a84c9e4a13c68e468645027b17b5598c  kwidgetsaddons-034625ed5122291da7e35cbeb1ca915a1aff7cd4.tar.xz
"
