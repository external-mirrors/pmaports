# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmailtransport
pkgver=99999_git20260220
pkgrel=0
_commit="07f6a3f88f74a22864b79e872f3458c16dbe98aa"
pkgdesc="Manage mail transport"
# armhf blocked by extra-cmake-modules
# ppc64le and s390x blocked by libkgapi
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="
	akonadi-dev
	akonadi-mime-dev
	kcmutils-dev
	kconfigwidgets-dev
	ki18n-dev
	kio-dev
	kmime-dev
	ksmtp-dev
	kwallet-dev
	libkgapi-dev
	qtkeychain-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/pim/kmailtransport.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/kmailtransport-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # Requires OpenGL and running dbus

options="!check"
builddir="$srcdir/kmailtransport-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
cf0ef2b409054eaa73cabbd64a018924d6bcb310f5c9ba2d1bb0a52f536edd9578be1451ce683af8298cb8ff8f09c544b2c479442a28f90b7a68fe94106ce76c  kmailtransport-07f6a3f88f74a22864b79e872f3458c16dbe98aa.tar.xz
"
