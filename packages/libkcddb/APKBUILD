# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkcddb
pkgver=99999_git20251221
pkgrel=0
_commit="de1f80f891090922f972581cb538fb306c3c7140"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="KDE CDDB library"
license="LGPL-2.0-or-later AND GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kcodecs-dev
	kconfig-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	libmusicbrainz-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/multimedia/libkcddb.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-21/libkcddb-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
options="net" # Required for tests

options="!check"
builddir="$srcdir/libkcddb-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=ON
	cmake --build build
}

check() {
	# musicbrainztest-severaldiscs fails due to utf16/8 (?)
	# synchttplookuptest hangs
	# asyncmusicbrainztest http request
	# utf8test seems to fail to start dbus-daemon
	xvfb-run -a ctest --test-dir build \
		-E "(asyncmusicbrainztest|synchttplookuptest|musicbrainztest-severaldiscs|utf8test)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f929087fb46cb358601ff8505d235d74664e7aa1601c11b70a26c7eb0931b050a713c4a18a923b9312660dd816533d6b0a6fbb97415dfdc5fa6571c3be5d25a6  libkcddb-de1f80f891090922f972581cb538fb306c3c7140.tar.xz
"
