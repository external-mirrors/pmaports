# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-remotecontrollers
pkgver=99999_git20251221
pkgrel=0
_commit="dbc884f732e17a10a9cab99a9c0e7f0c2b996cb2"
pkgdesc="Translate various input device events into keyboard and pointer events"
url="https://invent.kde.org/plasma-bigscreen/plasma-remotecontrollers"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="BSD-2-Clause AND (GPL-2.0-only OR GPL-3.0-only) AND CC0-1.0"
# For some reason there is no dep on so:libcec but it crashes without it
depends="libcec"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kdeclarative-dev
	ki18n-dev
	knotifications-dev
	kpackage-dev
	kstatusnotifieritem-dev
	kwindowsystem-dev
	libcec-dev
	libevdev-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtwayland-dev
	samurai
	solid-dev
	"
case "$CARCH" in
	ppc64le) ;;
	*) makedepends="$makedepends xwiimote-dev" ;;
esac

subpackages="$pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma-bigscreen/plasma-remotecontrollers.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-21/plasma-remotecontrollers-$_commit.tar.xz
	uinput.conf
	"
options="!check" # No tests

builddir="$srcdir/plasma-remotecontrollers-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	install -Dm644 \
		"$srcdir"/uinput.conf \
		-t "$pkgdir"/etc/modules-load.d
}

sha512sums="
6c189ea179d09f7877c1c559af2c0248fd54c8cdb05bae73d5b740b20f21b426469ccf661b2a644838ef4338dfd6409fe3705cab6c772ed2f8d1adff08aa4dfe  plasma-remotecontrollers-dbc884f732e17a10a9cab99a9c0e7f0c2b996cb2.tar.xz
a9b069ed121ffeee887e0583d8cb46035ecf1fa90a26a4ecb3aa11ff03178b2b08621f6676db6b2350f290694c04aabcf36f2ce3e0813a76dde9a33555edb112  uinput.conf
"
