# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-remotecontrollers
pkgver=99999_git20260121
pkgrel=0
_commit="309f1515a03ff8e27f813c140e08b8daecd5a8f9"
pkgdesc="Translate various input device events into keyboard and pointer events"
url="https://invent.kde.org/plasma-bigscreen/plasma-remotecontrollers"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="BSD-2-Clause AND (GPL-2.0-only OR GPL-3.0-only) AND CC0-1.0"
# For some reason there is no dep on so:libcec but it crashes without it
depends="libcec"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kdeclarative-dev
	ki18n-dev
	knotifications-dev
	kpackage-dev
	kstatusnotifieritem-dev
	kwindowsystem-dev
	libcec-dev
	libevdev-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtwayland-dev
	samurai
	solid-dev
	"
case "$CARCH" in
	ppc64le) ;;
	*) makedepends="$makedepends xwiimote-dev" ;;
esac

subpackages="$pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma-bigscreen/plasma-remotecontrollers.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-22/plasma-remotecontrollers-$_commit.tar.xz
	uinput.conf
	"
options="!check" # No tests

builddir="$srcdir/plasma-remotecontrollers-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	install -Dm644 \
		"$srcdir"/uinput.conf \
		-t "$pkgdir"/etc/modules-load.d
}

sha512sums="
a164dd8d2da8b371dd06c44beb0ea54bb28ae5c4be5e02c502e613426488cbc15a6d930b5c57b02497ddaf96f40af6203b5a55010b7d1fe9a38c42b63eff4496  plasma-remotecontrollers-309f1515a03ff8e27f813c140e08b8daecd5a8f9.tar.xz
a9b069ed121ffeee887e0583d8cb46035ecf1fa90a26a4ecb3aa11ff03178b2b08621f6676db6b2350f290694c04aabcf36f2ce3e0813a76dde9a33555edb112  uinput.conf
"
