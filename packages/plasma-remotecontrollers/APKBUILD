# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-remotecontrollers
pkgver=99999_git20260215
pkgrel=0
_commit="2d2655c92da6a90c11e1e1f07f24011ef34b0d8b"
pkgdesc="Translate various input device events into keyboard and pointer events"
url="https://invent.kde.org/plasma-bigscreen/plasma-remotecontrollers"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="BSD-2-Clause AND (GPL-2.0-only OR GPL-3.0-only) AND CC0-1.0"
# For some reason there is no dep on so:libcec but it crashes without it
depends="libcec"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kdeclarative-dev
	ki18n-dev
	knotifications-dev
	kpackage-dev
	kstatusnotifieritem-dev
	kwindowsystem-dev
	libcec-dev
	libevdev-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtwayland-dev
	samurai
	solid-dev
	"
case "$CARCH" in
	ppc64le) ;;
	*) makedepends="$makedepends xwiimote-dev" ;;
esac

subpackages="$pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma-bigscreen/plasma-remotecontrollers.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-16/plasma-remotecontrollers-$_commit.tar.xz
	uinput.conf
	"
options="!check" # No tests

builddir="$srcdir/plasma-remotecontrollers-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	install -Dm644 \
		"$srcdir"/uinput.conf \
		-t "$pkgdir"/etc/modules-load.d
}

sha512sums="
e7b04429591ff167d0658e03bb87f565e02e1ce9d67f0545af20614efeab0c95949fd61ca8aff2bb7577239f77087e9ac201c65e3d8fe815e761dc256bcbcd57  plasma-remotecontrollers-2d2655c92da6a90c11e1e1f07f24011ef34b0d8b.tar.xz
a9b069ed121ffeee887e0583d8cb46035ecf1fa90a26a4ecb3aa11ff03178b2b08621f6676db6b2350f290694c04aabcf36f2ce3e0813a76dde9a33555edb112  uinput.conf
"
