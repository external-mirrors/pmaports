# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=krecorder
pkgver=99999_git20250916
pkgrel=0
_commit="0d778712be013e9dad8c7ab9e560ec635655326d"
pkgdesc="Audio recorder for Plasma Mobile (and other platforms)"
url="https://invent.kde.org/plasma-mobile/krecorder"
arch="all !armhf" # armhf blocked by extra-cmake-modules
license="GPL-3.0-or-later"
depends="
	kirigami-addons
	kirigami2
	"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/krecorder.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-17/krecorder-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
921c469b1806411546c4c7cb76847c5c8ee8c479e32383573a7f27b748a9fd5fde449110d2b25810e0030b3cc24ced4bdde00d7b27b5f6375e2ec8f82406bcdf  krecorder-0d778712be013e9dad8c7ab9e560ec635655326d.tar.xz
"
