# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=krecorder
pkgver=99999_git20260217
pkgrel=0
_commit="0b2a82c3749f025653cd3041ec42177cc81277d7"
pkgdesc="Audio recorder for Plasma Mobile (and other platforms)"
url="https://invent.kde.org/plasma-mobile/krecorder"
arch="all !armhf" # armhf blocked by extra-cmake-modules
license="GPL-3.0-or-later"
depends="
	kirigami-addons
	kirigami2
	"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/krecorder.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-17/krecorder-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dcea110fdf95345e7647ac21a5dfe3e74c577e20578dfd8325f7629aafc0f9e36c8d91ecfffcc8796a392865251f82bb599a5cb20ed795e22d6ae1eb4db6fe8e  krecorder-0b2a82c3749f025653cd3041ec42177cc81277d7.tar.xz
"
