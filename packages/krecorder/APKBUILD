# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=krecorder
pkgver=99999_git20250725
pkgrel=0
_commit="aba165c8e9bafcb99496628d17db46ee66f42e1e"
pkgdesc="Audio recorder for Plasma Mobile (and other platforms)"
url="https://invent.kde.org/plasma-mobile/krecorder"
arch="all !armhf" # armhf blocked by extra-cmake-modules
license="GPL-3.0-or-later"
depends="
	kirigami-addons
	kirigami2
	"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/krecorder.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-25/krecorder-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
80ec3fb389eb66ae5d6ac1b14ae46cccad0a1095b236eab98bfa02d29cc9197bba2d0f608ea74b8d763c891b4f44fd4d163ad279bde66f07a5781126d68fec94  krecorder-aba165c8e9bafcb99496628d17db46ee66f42e1e.tar.xz
"
