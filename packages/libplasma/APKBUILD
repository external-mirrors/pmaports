# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libplasma
pkgver=99999_git20250912
pkgrel=0
_commit="2909676cffa9079ffd0021f424e32e3bff316b8c"
pkgdesc="Plasma library and runtime components based upon KDE Frameworks and Qt"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma/libplasma"
license="LGPL-2.1-or-later AND GPL-2.0-or-later"
depends_dev="
	karchive-dev
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	kglobalaccel-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	knotifications-dev
	kpackage-dev
	kservice-dev
	ksvg-dev
	kwayland-dev
	kwindowsystem-dev
	kxmlgui-dev
	mesa-dev
	plasma-activities-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kdoctools-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="
	hicolor-icon-theme
	xvfb-run
	"
_repo_url="https://invent.kde.org/plasma/libplasma.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-14/libplasma-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
options="!check" # 8 out of 13 tests fail

replaces="plasma-framework5"

options="!check"
builddir="$srcdir/libplasma-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eee3c59a058a2467235fe47ec293110364d437b6ce55a721f3b04211fd7312a77e7408ad854b9dce37c76b4fbf6ba2ae9cdc68583fc5af00f650b7d77cc8694a  libplasma-2909676cffa9079ffd0021f424e32e3bff316b8c.tar.xz
"
