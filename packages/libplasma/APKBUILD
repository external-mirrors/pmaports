# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libplasma
pkgver=99999_git20251020
pkgrel=0
_commit="8b5774965ea9e6d69a69735706123bfebaa63025"
pkgdesc="Plasma library and runtime components based upon KDE Frameworks and Qt"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma/libplasma"
license="LGPL-2.1-or-later AND GPL-2.0-or-later"
depends_dev="
	karchive-dev
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	kglobalaccel-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	knotifications-dev
	kpackage-dev
	kservice-dev
	ksvg-dev
	kwayland-dev
	kwindowsystem-dev
	kxmlgui-dev
	mesa-dev
	plasma-activities-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kdoctools-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="
	hicolor-icon-theme
	xwayland-run
	"
_repo_url="https://invent.kde.org/plasma/libplasma.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/libplasma-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
options="!check" # 8 out of 13 tests fail

replaces="plasma-framework5"

builddir="$srcdir/libplasma-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d99ccac4a0a498d16988dbdf118ba288cc5bf886901ad067c4ef0ad098127facd9433a00c8639847ae89962d55f0eee7b67a0e248009dfc35b43421d013a3a5d  libplasma-8b5774965ea9e6d69a69735706123bfebaa63025.tar.xz
"
