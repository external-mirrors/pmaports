# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kweathercore
pkgver=99999_git20251212
pkgrel=0
_commit="5bdd33534e283556ffec9e3a975a03ac1aefaeda"
pkgdesc="Library to facilitate retrieval of weather information including forecasts and alerts"
url="https://invent.kde.org/libraries/kweathercore"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="LGPL-2.0-or-later AND CC-BY-4.0"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtlocation-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kweathercore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-20/kweathercore-$_commit.tar.xz"
options="!check" # No tests
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kweathercore-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1aa89ef4137018c19ea96bd1118bc0d573e87a34a63f39c020e1a1d8212fcd5a0b59e26994b2a22249959992128bf8adeffa0bc4eb9833a5644f1fe2407212d9  kweathercore-5bdd33534e283556ffec9e3a975a03ac1aefaeda.tar.xz
"
