# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kweathercore
pkgver=99999_git20250902
pkgrel=0
_commit="80cf73afd6b8f8907c3aa47071b8b4e02257906c"
pkgdesc="Library to facilitate retrieval of weather information including forecasts and alerts"
url="https://invent.kde.org/libraries/kweathercore"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="LGPL-2.0-or-later AND CC-BY-4.0"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtlocation-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kweathercore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-03/kweathercore-$_commit.tar.xz"
options="!check" # No tests
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kweathercore-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4afc576d02a34e5184e1a516ece52cd00decfb0daa04bae59c32f2284bc5e8027d47f18a25dedf9d2d1cb83f74ad4f4951dab8e5817b98174c5185c3c7c4b6cb  kweathercore-80cf73afd6b8f8907c3aa47071b8b4e02257906c.tar.xz
"
