# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kweathercore
pkgver=99999_git20251210
pkgrel=0
_commit="b53748a966db6f8f825c93f30813414b34bd4dc4"
pkgdesc="Library to facilitate retrieval of weather information including forecasts and alerts"
url="https://invent.kde.org/libraries/kweathercore"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="LGPL-2.0-or-later AND CC-BY-4.0"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtlocation-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kweathercore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-10/kweathercore-$_commit.tar.xz"
options="!check" # No tests
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kweathercore-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1a7910a258b0aec9ea98c1e960b9fbb022a14add7014071ea516f256e93763dddd94fec2bc6465fb37fc18be233bb92e31e7ce8d09c0ace458a5f8451cd770ef  kweathercore-b53748a966db6f8f825c93f30813414b34bd4dc4.tar.xz
"
