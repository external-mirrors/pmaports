# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=spectacle
pkgver=99999_git20250918
pkgrel=0
_commit="efd8bef200c5d49e6a0d7e77a921bcef2b10af25"
pkgdesc="Application for capturing desktop screenshots"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> purpose
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/applications/utilities/org.kde.spectacle"
license="GPL-2.0-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	kpipewire-dev
	kstatusnotifieritem-dev
	kwayland-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	layer-shell-qt-dev
	libxcb-dev
	opencv-dev
	pipewire-dev
	prison-dev
	purpose-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtimageformats-dev
	samurai
	xcb-util-cursor-dev
	xcb-util-image-dev
	xcb-util-renderutil-dev
	zxing-cpp-dev
	"
_repo_url="https://invent.kde.org/graphics/spectacle.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-20/spectacle-$_commit.tar.xz
	spectacle.desktop
	"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/spectacle-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	install -Dm644 "$srcdir"/spectacle.desktop -t "$pkgdir"/etc/xdg/autostart/
}
