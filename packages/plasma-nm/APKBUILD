# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-nm
pkgver=99999_git20250831
pkgrel=0
_commit="8c69031bf1f5d28f891b46f491cd49446efe8a67"
pkgdesc="Plasma applet written in QML for managing network connections"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="(LGPL-2.1-only OR LGPL-3.0-only) AND LGPL-2.0-or-later"
depends="
	kirigami
	networkmanager
	"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kcompletion-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knotifications-dev
	kservice-dev
	ksvg-dev
	kwallet-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	libplasma-dev
	mobile-broadband-provider-info
	modemmanager-qt-dev
	networkmanager-qt-dev
	prison-dev
	qca-qt6-dev
	qcoro-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	solid-dev
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-nm.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-01/plasma-nm-$_commit.tar.xz"
subpackages="$pkgname-lang"

replaces="plasma-mobile<=6.4.0-r0"

options="!check"
builddir="$srcdir/plasma-nm-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

mobile() {
	pkgdesc="$pkgdesc (mobile KCM's)"
	depends="$depends $pkgname"

	amove usr/share/kpackage
	amove usr/lib/qt6/plugins/kcms
}

sha512sums="
92358b4f98cb69383f0f0bea356fbae67fee55933e30dbe5b044c99971315ddeba80911364f990ea4edc48bfa4c05cb9d1aef5f2d79759ff4c70e7a6f8a7d8b2  plasma-nm-8c69031bf1f5d28f891b46f491cd49446efe8a67.tar.xz
"
