# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kigo
pkgver=99999_git20260103
pkgrel=0
_commit="0b944eaae783f2b9634f8ed85bdcce7fbd1e0fee"
pkgdesc="An open-source implementation of the popular Go game"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/kigo/"
license="LicenseRef-KDE-Accepted-GPL AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	ktextwidgets-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/kigo.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-06/kigo-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kigo-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

