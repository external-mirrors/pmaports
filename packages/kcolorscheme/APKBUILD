# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kcolorscheme
pkgver=99999_git20260215
pkgrel=0
_commit="23e778eabbd7b96e816a4bda7d182b6696c27eb3"
pkgdesc="Classes to read and interact with KColorScheme"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kconfig-dev
	kde-qdoc-common
	kguiaddons-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kcolorscheme.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-16/kcolorscheme-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kcolorscheme-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
093f5342cfa31a11161c9dd12c3a6b6a29eb3c5d40192f3d1231a5d015cd84adb28eefe59de1b42d0bafd665e54c141add54bdd1c4927b529ac598671bd9c5e5  kcolorscheme-23e778eabbd7b96e816a4bda7d182b6696c27eb3.tar.xz
"
