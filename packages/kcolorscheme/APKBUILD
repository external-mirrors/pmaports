# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kcolorscheme
pkgver=99999_git20251118
pkgrel=0
_commit="cad2f446ba5f38e1fb4ad598b3661fbafcf9b5df"
pkgdesc="Classes to read and interact with KColorScheme"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kconfig-dev
	kde-qdoc-common
	kguiaddons-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kcolorscheme.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/kcolorscheme-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kcolorscheme-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
b60bbeabd29b8d4aaf25a47559a2fea423564c0f051bef820f9dd1452c1a48e4c05226245eb570a4ba1d2896591a2a815cd0fdf1317d5f8392fbf86915684faf  kcolorscheme-cad2f446ba5f38e1fb4ad598b3661fbafcf9b5df.tar.xz
"
