# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=skanlite
pkgver=99999_git20251118
pkgrel=0
_commit="0ff3db03c2d7fe558924b852153f298ad86d860f"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/graphics/skanlite"
pkgdesc="Lite image scanning application"
license="LicenseRef-KDE-Accepted-GPL"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kxmlgui-dev
	libksane-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/graphics/skanlite.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/skanlite-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/skanlite-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d978aed7c2c79c82ca704de6cfa4eafb2ada4b239cddd460974cc8a456356019ecfd9092fee4aef19adef816990749293d9a7ab565ffa75f5a9eb6881ce901de  skanlite-0ff3db03c2d7fe558924b852153f298ad86d860f.tar.xz
"
