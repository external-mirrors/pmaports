# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=knights
pkgver=99999_git20260129
pkgrel=0
_commit="312a6a83412d617935bcde871c7f9c6745a91895"
pkgdesc="Chess board by KDE with XBoard protocol support"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/games/knights/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kconfigwidgets-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kio-dev
	kplotting-dev
	ktextwidgets-dev
	kwallet-dev
	kxmlgui-dev
	libkdegames-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/games/knights.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/knights-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9edb92d31c0edef722a49faa6d7c09413df2fbaed443e22a4c516e23edb572ec3643fb8619af0fbeb4510f24a65a670718ea4f5fc7973c196d1cd22337a7a6f4  knights-312a6a83412d617935bcde871c7f9c6745a91895.tar.xz
"
