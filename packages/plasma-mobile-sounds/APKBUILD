# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-mobile-sounds
pkgver=99999_git20250908
pkgrel=0
_commit="83a5290889f612ee921b61a22008d2ccefe62be9"
pkgdesc="Sounds for Plasma Mobile devices"
url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds"
# armhf blocked by extra-cmake-modules
arch="noarch !armhf"
license="CC-BY-4.0 AND CC-BY-SA-4.0 AND CC0-1.0"
makedepends="
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-08/plasma-mobile-sounds-$_commit.tar.xz"
options="!check" # No code to test

options="!check"
builddir="$srcdir/plasma-mobile-sounds-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
