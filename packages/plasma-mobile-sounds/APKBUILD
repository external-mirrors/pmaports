# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-mobile-sounds
pkgver=99999_git20260109
pkgrel=0
_commit="d40f16f58e145be7fdfdddcc95d0dca7f0f15617"
pkgdesc="Sounds for Plasma Mobile devices"
url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds"
# armhf blocked by extra-cmake-modules
arch="noarch !armhf"
license="CC-BY-4.0 AND CC-BY-SA-4.0 AND CC0-1.0"
makedepends="
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-10/plasma-mobile-sounds-$_commit.tar.xz"
options="!check" # No code to test

options="!check"
builddir="$srcdir/plasma-mobile-sounds-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

