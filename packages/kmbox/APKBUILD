# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmbox
pkgver=99999_git20260211
pkgrel=0
_commit="b6fcd4edd38fdfba06169ce3665a4c113f30d026"
pkgdesc="Library for accessing mail storages in MBox format"
# armhf blocked by extra-cmake-modules
# s390x blocked by kmime
arch="all !armhf !s390x"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="kmime-dev"
makedepends="$depends_dev extra-cmake-modules samurai"
_repo_url="https://invent.kde.org/pim/kmbox.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-12/kmbox-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kmbox-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eedf33b44a86ab68cadd24e99eaf4f5d8bc2821cfaf4d9afa82248ca3faa0a4e880302d76ae0c0e86110129feb5747dc4643ec2dabf1287b8b2fbf5e0f5154d2  kmbox-b6fcd4edd38fdfba06169ce3665a4c113f30d026.tar.xz
"
