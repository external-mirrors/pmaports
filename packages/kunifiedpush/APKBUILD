# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kunifiedpush
pkgver=99999_git20260120
pkgrel=0
_commit="bcf7e05989dd6723ae870f388062ac910664f9a6"
# armhf blocked by qt6-qtdeclarative -> kdeclarative
arch="all !armhf"
url="https://invent.kde.org/libraries/kunifiedpush"
pkgdesc="UnifiedPush client library and distributor daemon"
license="BSD-2-Clause AND BSD-3-Clause AND LGPL-2.0-or-later"
depends_dev="
	kcmutils-dev
	kcoreaddons-dev
	kdeclarative-dev
	kpackage-dev
	kservice-dev
	qt6-qtbase-dev
	qt6-qtwebsockets-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	"
_repo_url="https://invent.kde.org/libraries/kunifiedpush.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-22/kunifiedpush-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kunifiedpush-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eb66bec918fc4c8c44b5e0f2a95bc004e4faa1e203a747e223110c6eb0363037598a468f970382cf4c1257e9e06ddef1f6ce8c4e9b1eb44c64ec4c611f83cae7  kunifiedpush-bcf7e05989dd6723ae870f388062ac910664f9a6.tar.xz
"
