# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kunifiedpush
pkgver=99999_git20260106
pkgrel=0
_commit="f77ca106892d9da6310a0938f3d83246f5a09065"
# armhf blocked by qt6-qtdeclarative -> kdeclarative
arch="all !armhf"
url="https://invent.kde.org/libraries/kunifiedpush"
pkgdesc="UnifiedPush client library and distributor daemon"
license="BSD-2-Clause AND BSD-3-Clause AND LGPL-2.0-or-later"
depends_dev="
	kcmutils-dev
	kcoreaddons-dev
	kdeclarative-dev
	kpackage-dev
	kservice-dev
	qt6-qtbase-dev
	qt6-qtwebsockets-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	"
_repo_url="https://invent.kde.org/libraries/kunifiedpush.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-07/kunifiedpush-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kunifiedpush-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1344df8c140d74b9e1927c993589ebd33aefa68e60e44c997045ca82543ddee4878f9c4fe43e8655e3d86b2a7c7a26951d1868d0a9a733a183344c3cdfccb2eb  kunifiedpush-f77ca106892d9da6310a0938f3d83246f5a09065.tar.xz
"
