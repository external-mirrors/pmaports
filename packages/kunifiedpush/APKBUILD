# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kunifiedpush
pkgver=99999_git20251231
pkgrel=0
_commit="68c1b51a5e0ae3e797c59ab41d8d06b0ad6aa037"
# armhf blocked by qt6-qtdeclarative -> kdeclarative
arch="all !armhf"
url="https://invent.kde.org/libraries/kunifiedpush"
pkgdesc="UnifiedPush client library and distributor daemon"
license="BSD-2-Clause AND BSD-3-Clause AND LGPL-2.0-or-later"
depends_dev="
	kcmutils-dev
	kcoreaddons-dev
	kdeclarative-dev
	kpackage-dev
	kservice-dev
	qt6-qtbase-dev
	qt6-qtwebsockets-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	"
_repo_url="https://invent.kde.org/libraries/kunifiedpush.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/kunifiedpush-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kunifiedpush-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
38d67350e73057a8a80af8a44589e5472c84ec0a4ff2ac5ea53382b88b79667fcdfeefca45a1d415f55eaa419831f4a3c0f3b281e67a9bc15202f55c3d3e0fb4  kunifiedpush-68c1b51a5e0ae3e797c59ab41d8d06b0ad6aa037.tar.xz
"
