# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=flatpak-kcm
pkgver=99999_git20251031
pkgrel=0
_commit="821aa46c1ceb3c3afddb06588939d2009235105d"
pkgdesc="Flatpak Permissions Management KCM"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	flatpak-dev
	kcmutils-dev
	kconfig-dev
	kdeclarative-dev
	ki18n-dev
	kitemmodels-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/flatpak-kcm.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-02/flatpak-kcm-$_commit.tar.xz"
subpackages="$pkgname-lang"
install_if="flatpak systemsettings"

options="!check"
builddir="$srcdir/flatpak-kcm-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build

	# flatpakpermissiontest is broken
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest -E "flatpakpermissiontest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5ddb5a5df7fbbda754ead05ae2c890ddecc9301d384b4e61a3f2e84f10fa58897a5f60a7ec261a14045cc0c8af26f3dd1aff3f0d43c3c06b421ae26bf37ee13e  flatpak-kcm-821aa46c1ceb3c3afddb06588939d2009235105d.tar.xz
"
