# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=flatpak-kcm
pkgver=99999_git20251116
pkgrel=0
_commit="e28aeb400a1561c176b6b77fac0b9c57ab2d1d2a"
pkgdesc="Flatpak Permissions Management KCM"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	flatpak-dev
	kcmutils-dev
	kconfig-dev
	kdeclarative-dev
	ki18n-dev
	kitemmodels-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/flatpak-kcm.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/flatpak-kcm-$_commit.tar.xz"
subpackages="$pkgname-lang"
install_if="flatpak systemsettings"

options="!check"
builddir="$srcdir/flatpak-kcm-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build

	# flatpakpermissiontest is broken
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest -E "flatpakpermissiontest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e9807c69d6dbecb12fe707d2ecf07ee53db00dcc49791301ebf510ab8aecc53e0f6d0a0f6014186eab8dbab4d54fa069ae151c1422b0fede33c7cd4eab575fe9  flatpak-kcm-e28aeb400a1561c176b6b77fac0b9c57ab2d1d2a.tar.xz
"
