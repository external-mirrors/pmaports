# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=keysmith
pkgver=99999_git20260204
pkgrel=0
_commit="81d025fae1492f09a1167a2036f93c597ddfc140"
pkgdesc="OTP client for Plasma Mobile and Desktop"
url="https://invent.kde.org/kde/keysmith"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-3.0-or-later"
depends="
	kirigami
	kirigami-addons
	prison
	"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	ki18n-dev
	kirigami-dev
	kirigami-addons-dev
	libsodium-dev
	prison-dev
	qqc2-desktop-style-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/keysmith.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-04/keysmith-$_commit.tar.xz"

options="!check"
builddir="$srcdir/keysmith-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1bcc061b29b5d3db776a229f6b020ebacbec0fd1816a1f7ecade4f0d47734344f684f1f97cb1a550b83befdcaa4b314e7241c87a529a2fbf08eb05714de3f559  keysmith-81d025fae1492f09a1167a2036f93c597ddfc140.tar.xz
"
