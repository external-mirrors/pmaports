# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=keysmith
pkgver=99999_git20251204
pkgrel=0
_commit="f57f68a1447cb103c4d96a3ecc45e825e48d35f5"
pkgdesc="OTP client for Plasma Mobile and Desktop"
url="https://invent.kde.org/kde/keysmith"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-3.0-or-later"
depends="
	kirigami
	kirigami-addons
	prison
	"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	ki18n-dev
	kirigami-dev
	kirigami-addons-dev
	libsodium-dev
	prison-dev
	qqc2-desktop-style-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/keysmith.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-05/keysmith-$_commit.tar.xz"

options="!check"
builddir="$srcdir/keysmith-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6006df049dc6ab00acfeab8ac18e7798f77d29edc287d81aca176c8d237388b6f1b1249c6e98aec1f9ed7c43bcad6219e4bd38321de8e14ec82eced305c6a90f  keysmith-f57f68a1447cb103c4d96a3ecc45e825e48d35f5.tar.xz
"
