# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=keysmith
pkgver=99999_git20260217
pkgrel=0
_commit="8e9ebfda22855064cd5ecf18ad4ccdb8d970273c"
pkgdesc="OTP client for Plasma Mobile and Desktop"
url="https://invent.kde.org/kde/keysmith"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-3.0-or-later"
depends="
	kirigami
	kirigami-addons
	prison
	"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	ki18n-dev
	kirigami-dev
	kirigami-addons-dev
	libsodium-dev
	prison-dev
	qqc2-desktop-style-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/keysmith.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-17/keysmith-$_commit.tar.xz"

options="!check"
builddir="$srcdir/keysmith-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c9eeb5864764b80dc49ff724e622228d1c9997c11f8f01a885a386f6c403ddfb1dc8d6995fcd01e4181582732b86d36e6eac6e7733dd9280938a9d48a8586685  keysmith-8e9ebfda22855064cd5ecf18ad4ccdb8d970273c.tar.xz
"
