# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kontactinterface
pkgver=99999_git20260220
pkgrel=0
_commit="97e9574a6c3bc0d284724f930af706cc62726db7"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kontact.kde.org/"
pkgdesc="Kontact Plugin Interface Library"
license="LGPL-2.0-only OR LGPL-3.0-only"
depends_dev="
	kcoreaddons-dev
	ki18n-dev
	kiconthemes-dev
	kparts-dev
	kwindowsystem-dev
	kxmlgui-dev
	"
makedepends="
	$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/pim/kontactinterface.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/kontactinterface-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kontactinterface-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7b00586d0713fa731b7203c7908c8d16ae72c12b160f046a846ac2f1055bf7d4944b04756c118005b3e23b20e0521563e6e7ccdff2ac59b96fe63ac137149b6f  kontactinterface-97e9574a6c3bc0d284724f930af706cc62726db7.tar.xz
"
