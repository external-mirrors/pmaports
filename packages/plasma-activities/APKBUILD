# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-activities
pkgver=99999_git20251023
pkgrel=0
_commit="abd8437d9bf301ac468a4005f3b4ee80ef7d66ad"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
pkgdesc="Core components for the KDE's Activities"
url="https://invent.kde.org/plasma/plasma-activities.git"
license="GPL-2.0-or-later AND LGPL-2.1-or-later AND (LGPL-2.1-only OR LGPL-3.0-only)"
depends="qt6-qtbase-sqlite"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	boost-dev
	doxygen
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-libs $pkgname-doc"
_repo_url="https://invent.kde.org/plasma/plasma-activities.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-28/plasma-activities-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-activities-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
435a42e4b6c0c0ec154f9ed7a3fb680e509eb277b0c42250fc0ab6fe28106b6382283a32e98bd6d5bab48afe7db7ce57f47def13d8f4089b8bdfb02664d65e7d  plasma-activities-abd8437d9bf301ac468a4005f3b4ee80ef7d66ad.tar.xz
"
