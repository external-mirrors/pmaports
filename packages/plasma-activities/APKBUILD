# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-activities
pkgver=99999_git20250921
pkgrel=0
_commit="25fd29196c249fb79f9ae116f7f56252cd825e7d"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
pkgdesc="Core components for the KDE's Activities"
url="https://invent.kde.org/plasma/plasma-activities.git"
license="GPL-2.0-or-later AND LGPL-2.1-or-later AND (LGPL-2.1-only OR LGPL-3.0-only)"
depends="qt6-qtbase-sqlite"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	boost-dev
	doxygen
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-libs $pkgname-doc"
_repo_url="https://invent.kde.org/plasma/plasma-activities.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-24/plasma-activities-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-activities-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0a2439e6bcd79089f75ceeb9bb1909d1d9076c8d5a185665f2d872618a3265ef4afef2cb060452461eac370044cda07eef0f32cba088550020961ed26e6b5aa1  plasma-activities-25fd29196c249fb79f9ae116f7f56252cd825e7d.tar.xz
"
