# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kapidox
pkgver=99999_git20260102
pkgrel=0
_commit="c2ebe75d0810e7ba1ac6c1bd178533fb4bf67afc"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Scripts and data for building API documentation (dox) in a standard format and style"
url="https://community.kde.org/Frameworks"
license="BSD-3-Clause"
depends="
	doxygen
	py3-jinja2
	py3-yaml
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-pyc"
_repo_url="https://invent.kde.org/frameworks/kapidox.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-06/kapidox-$_commit.tar.xz"
options="!check" # No useful tests

options="!check"
builddir="$srcdir/kapidox-$_commit"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
f7bee105fd3e1d707b537eedd4bc9290e2aca548ac33d6ced48abe9f25bea6f7cd18776359217dc0144e7204296e81f99cd89697f82dea4e0d9d42b1b8e8784d  kapidox-c2ebe75d0810e7ba1ac6c1bd178533fb4bf67afc.tar.xz
"
