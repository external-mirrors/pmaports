# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kapidox
pkgver=99999_git20251205
pkgrel=0
_commit="1a0c795b3d0ef9ec02c4556fb3a736bee92fabe2"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Scripts and data for building API documentation (dox) in a standard format and style"
url="https://community.kde.org/Frameworks"
license="BSD-3-Clause"
depends="
	doxygen
	py3-jinja2
	py3-yaml
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-pyc"
_repo_url="https://invent.kde.org/frameworks/kapidox.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-08/kapidox-$_commit.tar.xz"
options="!check" # No useful tests

options="!check"
builddir="$srcdir/kapidox-$_commit"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
eea6a82020520c612777908c783408630fcc450838f60b7bd8ec968e642626d3069513ccaee631b18e1fa0e8b4e2c469049eb757380701e8952439729b7f06b8  kapidox-1a0c795b3d0ef9ec02c4556fb3a736bee92fabe2.tar.xz
"
