# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-activities-stats
pkgver=99999_git20251201
pkgrel=0
_commit="b9b976a60c574d07a165090774564b00620580c6"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
pkgdesc="A library for accessing the usage data collected by the activities system"
url="https://invent.kde.org/plasma/plasma-activities-stats"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	boost-dev
	graphviz-dev
	kconfig-dev
	plasma-activities-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/plasma-activities-stats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-05/plasma-activities-stats-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/plasma-activities-stats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
75bdc14757b5d1b275959fd1da4659b703c4c0d22cf91cc109e8d198838769bc3ed09b87a4d334b518ca48fb8aed6707ae0c8b5cadcc98b2b01e12d812dde4c9  plasma-activities-stats-b9b976a60c574d07a165090774564b00620580c6.tar.xz
"
