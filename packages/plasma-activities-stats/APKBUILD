# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-activities-stats
pkgver=99999_git20251210
pkgrel=0
_commit="66062bb89aaba33984585eea9635218e1cbedbea"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
pkgdesc="A library for accessing the usage data collected by the activities system"
url="https://invent.kde.org/plasma/plasma-activities-stats"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	boost-dev
	graphviz-dev
	kconfig-dev
	plasma-activities-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/plasma-activities-stats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/plasma-activities-stats-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/plasma-activities-stats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f565f8c226321e727a57d57e428a6c1e3b96c5ed721895dfd4f2f8f32c35a7468c04662db4dcf475627a5b669508d34830918f3cbf63ebed6144e9280fb71733  plasma-activities-stats-66062bb89aaba33984585eea9635218e1cbedbea.tar.xz
"
