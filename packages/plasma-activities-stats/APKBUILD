# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-activities-stats
pkgver=99999_git20260113
pkgrel=0
_commit="1c086d136f169e48f579c158926e780f4d907e86"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
pkgdesc="A library for accessing the usage data collected by the activities system"
url="https://invent.kde.org/plasma/plasma-activities-stats"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	boost-dev
	graphviz-dev
	kconfig-dev
	plasma-activities-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/plasma-activities-stats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-14/plasma-activities-stats-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/plasma-activities-stats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d8de3b5ee296d13201b52541d2d0e17aa51abb1567eafe6c67ddf60e1112b2f724084a45a0ac35b98d900653a6f6ad5d846f7e448eb70e0502cf0cfb9050d2fc  plasma-activities-stats-1c086d136f169e48f579c158926e780f4d907e86.tar.xz
"
