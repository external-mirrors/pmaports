# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-welcome
pkgver=99999_git20250719
pkgrel=0
_commit="1ec8da221c276d502c5f54975720f4ee165253b8"
pkgdesc="A friendly onboarding wizard for Plasma"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> kaccounts-integration
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	knewstuff-dev
	knotifications-dev
	kservice-dev
	ksvg-dev
	kuserfeedback-dev
	kwindowsystem-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-welcome.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-19/plasma-welcome-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/plasma-welcome-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1bd48ebbfc6ba5af186814f0c2ea1e93705b41858ad4a9442614efb7078c9a2c670d44cfa1c1db447e37f93f6052ab4b39981692f8b5ebd58272a51e854b8728  plasma-welcome-1ec8da221c276d502c5f54975720f4ee165253b8.tar.xz
"
