# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=networkmanager-qt
pkgver=99999_git20260206
pkgrel=0
_commit="1f334217b809d6fee49b80996b7a17825a6c2c43"
pkgdesc="Qt wrapper for NetworkManager API"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends="networkmanager"
depends_dev="
	networkmanager-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/networkmanager-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/networkmanager-qt-$_commit.tar.xz"

options="!check"
builddir="$srcdir/networkmanager-qt-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# The excluded tests currently fail
	ctest --test-dir build -E '(manager|settings|activeconnection)test'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
