# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=networkmanager-qt
pkgver=99999_git20251226
pkgrel=0
_commit="6801e8d20945e3b1eb033b978928c7e48e0dfa71"
pkgdesc="Qt wrapper for NetworkManager API"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends="networkmanager"
depends_dev="
	networkmanager-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/networkmanager-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-01/networkmanager-qt-$_commit.tar.xz"

options="!check"
builddir="$srcdir/networkmanager-qt-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# The excluded tests currently fail
	ctest --test-dir build -E '(manager|settings|activeconnection)test'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
57c5b2f5775acfa6e875e937213129a8930f47c82202210bbe2d3c297fee7082d3f65ecfc6d15f7ee1785762b3125a5b873e27a8206a4dceea6d8ca53daf0db2  networkmanager-qt-6801e8d20945e3b1eb033b978928c7e48e0dfa71.tar.xz
"
