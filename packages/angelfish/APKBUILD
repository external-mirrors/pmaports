# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=angelfish
pkgver=99999_git20260206
pkgrel=0
_commit="e5ebf534c1933306dac059d477128271bac9c537"
pkgdesc="Small Webbrowser for Plasma Mobile"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
arch="all !ppc64le !s390x !armhf !riscv64"
url="https://apps.kde.org/angelfish/"
license="GPL-3.0-or-later"
depends="
	kirigami
	kirigami-addons
	libplasma
	purpose
	qt6-qtbase-sqlite
	"
makedepends="
	cargo
	corrosion
	extra-cmake-modules
	futuresql-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	libplasma
	purpose-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtwebengine-dev
	samurai
	sccache
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/angelfish.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/angelfish-$_commit.tar.xz"
options="net" # net required to download Rust dependencies

provides="plasma-angelfish=$pkgver-r$pkgrel" # Backwards compatibility
replaces="plasma-angelfish" # Backwards compatibility

options="!check"
builddir="$srcdir/angelfish-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True
	cmake --build build
}

check() {
	ctest --test-dir build -j1
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8c005ab74d14219851c0ca8a7d985d2f917e3df359dc500be356160cb548f22b5cf8eb630ca3f10b0a3353bb80d94bafa2cd051bbafe96121c61b057975825ce  angelfish-e5ebf534c1933306dac059d477128271bac9c537.tar.xz
"
