# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kunitconversion
pkgver=99999_git20251005
pkgrel=0
_commit="95d4e0ab26f0eeb0b345234bceca8bcff54d2b90"
pkgdesc="Support for unit conversion"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	ki18n-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kunitconversion.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/kunitconversion-$_commit.tar.xz"
subpackages="
	$pkgname-dev
	$pkgname-lang
	py3-$pkgname:_py3
	"
options="net" # net required for tests

options="!check"
builddir="$srcdir/kunitconversion-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build -j1
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
a9b826a13dc9856a9639ee087f8bb2daaf458edf75c40089f0e9d53e74050c75aaef0b037b79644222530d1ed23b9c35a55d1a1e450153c6ea747e3a81c457f5  kunitconversion-95d4e0ab26f0eeb0b345234bceca8bcff54d2b90.tar.xz
"
