# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kunitconversion
pkgver=99999_git20250829
pkgrel=0
_commit="c7bfc09e063f99c44d88da27b5aea16369fffba0"
pkgdesc="Support for unit conversion"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	ki18n-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kunitconversion.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-29/kunitconversion-$_commit.tar.xz"
subpackages="
	$pkgname-dev
	$pkgname-lang
	py3-$pkgname:_py3
	"
options="net" # net required for tests

options="!check"
builddir="$srcdir/kunitconversion-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build -j1
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
161ecea119ecd3a434d610049657f1a48e3d5cd96d7cf16a6814d25c40ac60010096fa320df5668ecdd7983656ee980f57af866c4068dee4f9ad2ddfa5e7904b  kunitconversion-c7bfc09e063f99c44d88da27b5aea16369fffba0.tar.xz
"
