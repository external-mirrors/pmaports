# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-phonebook
pkgver=99999_git20250909
pkgrel=0
_commit="7a9d75ddc3ea2c34c1c40a193ca69584bb0d80c0"
pkgdesc="Contacts application which allows adding, modifying and removing contacts"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-phonebook"
license="LicenseRef-KDE-Accepted-GPL"
depends="
	kirigami-addons
	kirigami
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kirigami-addons-dev
	kirigami-dev
	kpeople-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-phonebook.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-12/plasma-phonebook-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

builddir="$srcdir/plasma-phonebook-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e0f77808ce06864fb21f3096418bf7fd1561b48674fb81604df1be72863ce2aeeb4c73a34c1e1bfd007753b1de3ca1ba119d1f111c386e48abecb389a20989ce  plasma-phonebook-7a9d75ddc3ea2c34c1c40a193ca69584bb0d80c0.tar.xz
"
