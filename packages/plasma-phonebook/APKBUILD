# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-phonebook
pkgver=99999_git20251017
pkgrel=0
_commit="4013f3279a26c92eac438e4dc843945ca499e1fa"
pkgdesc="Contacts application which allows adding, modifying and removing contacts"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-phonebook"
license="LicenseRef-KDE-Accepted-GPL"
depends="
	kirigami-addons
	kirigami
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kirigami-addons-dev
	kirigami-dev
	kpeople-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-phonebook.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-17/plasma-phonebook-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

builddir="$srcdir/plasma-phonebook-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b7476992becbd5f867e32b83424357ccdf5f937746f10192ea346ac8516edc41e91769428f278679ef27512fa34b82ae6dce17f77036a9d16f7b78439940cfcb  plasma-phonebook-4013f3279a26c92eac438e4dc843945ca499e1fa.tar.xz
"
