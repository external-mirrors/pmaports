# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=dolphin
pkgver=99999_git20260203
pkgrel=0
_commit="162bfd6b34572e0cdefd5ea5ab31a2b1c5a2ca39"
# armhf blocked by qt6-qtdeclarative -> plasma-activities
arch="all !armhf"
url="https://kde.org/applications/system/dolphin"
pkgdesc="KDE File Manager"
license="GPL-2.0-only"
depends="
	udisks2
	kio-extras
	"
depends_dev="
	baloo-dev
	baloo-widgets-dev
	kbookmarks-dev
	kcmutils-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	kparts-dev
	ktextwidgets-dev
	kuserfeedback-dev
	kwindowsystem-dev
	musl-fts-dev
	phonon-dev
	plasma-activities-dev
	qt6-qtbase-dev
	solid-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kmoretools-dev
	ruby-test-unit
	samurai
	"
checkdepends="
	dbus
	xwayland-run
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	$pkgname-doc
	$pkgname-lang
	$pkgname-zsh-completion
	"
_repo_url="https://invent.kde.org/system/dolphin.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-03/dolphin-$_commit.tar.xz"

options="!check"
builddir="$srcdir/dolphin-$_commit"

build() {
	LDFLAGS="$LDFLAGS -Wl,-z,stack-size=0x100000" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# kfileitemmodeltest, placesitemmodeltest, dolphinmainwindowtest and kitemlistcontrollertest are broken
	wlheadless-run -- ctest --test-dir build -E "(kfileitemmodel|placesitemmodel|dolphinmainwindow|kitemlistcontroller)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
