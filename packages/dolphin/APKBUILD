# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=dolphin
pkgver=99999_git20251130
pkgrel=0
_commit="8dd8a7c24a22751d8a34a8eb48dc8920fd4ad7bf"
# armhf blocked by qt6-qtdeclarative -> plasma-activities
arch="all !armhf"
url="https://kde.org/applications/system/dolphin"
pkgdesc="KDE File Manager"
license="GPL-2.0-only"
depends="
	udisks2
	kio-extras
	"
depends_dev="
	baloo-dev
	baloo-widgets-dev
	kbookmarks-dev
	kcmutils-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	kparts-dev
	ktextwidgets-dev
	kuserfeedback-dev
	kwindowsystem-dev
	musl-fts-dev
	phonon-dev
	plasma-activities-dev
	qt6-qtbase-dev
	solid-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kmoretools-dev
	ruby-test-unit
	samurai
	"
checkdepends="
	dbus
	xwayland-run
	"
subpackages="
	$pkgname-systemd
	$pkgname-dev
	$pkgname-doc
	$pkgname-lang
	$pkgname-zsh-completion
	"
_repo_url="https://invent.kde.org/system/dolphin.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-01/dolphin-$_commit.tar.xz"

options="!check"
builddir="$srcdir/dolphin-$_commit"

build() {
	LDFLAGS="$LDFLAGS -Wl,-z,stack-size=0x100000" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# kfileitemmodeltest, placesitemmodeltest, dolphinmainwindowtest and kitemlistcontrollertest are broken
	wlheadless-run -- ctest --test-dir build -E "(kfileitemmodel|placesitemmodel|dolphinmainwindow|kitemlistcontroller)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
31cf172c830e6924b491b53b264205209330b594ec8d9edda250d6855c7fefda722b1c13726ede5c4cfbdfc6ab9d58d8a3691f5f8bb09d9c89d2641d0493e942  dolphin-8dd8a7c24a22751d8a34a8eb48dc8920fd4ad7bf.tar.xz
"
