# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=raven
pkgver=99999_git20260128
pkgrel=0
_commit="77a82da804b187ae0968b60f551b21494541c50a"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://invent.kde.org/plasma-mobile/raven"
pkgdesc="A mail client for Plasma Mobile"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	corrosion
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-dev
	kirigami-addons-dev
	kitemmodels-dev
	qcoro-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	qt6-qtwebengine-dev
	samurai
	sccache
	"
_repo_url="https://invent.kde.org/plasma-mobile/raven.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-28/raven-$_commit.tar.xz"
options="net !check" # net required to download Rust crates

builddir="$srcdir/raven-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
