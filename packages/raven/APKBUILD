# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=raven
pkgver=99999_git20260108
pkgrel=0
_commit="16ade65f9d357c3c1c079ee54e65dc10e74fe2b6"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://invent.kde.org/plasma-mobile/raven"
pkgdesc="A mail client for Plasma Mobile"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	corrosion
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-dev
	kirigami-addons-dev
	kitemmodels-dev
	qcoro-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	qt6-qtwebengine-dev
	samurai
	sccache
	"
_repo_url="https://invent.kde.org/plasma-mobile/raven.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-08/raven-$_commit.tar.xz"
options="net !check" # net required to download Rust crates

builddir="$srcdir/raven-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
889c15c47ce0b3b90ba0fda0752fb521458ae77e1f60c2ceea64ac01e6ee52cb3f3259728dda999ea88bf26e7a8d661497e46ecbc0ce550beb7e9af672f9ccf0  raven-16ade65f9d357c3c1c079ee54e65dc10e74fe2b6.tar.xz
"
