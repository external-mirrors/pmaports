# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=raven
pkgver=99999_git20260121
pkgrel=0
_commit="f910141ceef6eb5cc0c0dd425d5d25cadba8525b"
# armhf blocked by qt6-qtdeclarative
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://invent.kde.org/plasma-mobile/raven"
pkgdesc="A mail client for Plasma Mobile"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	corrosion
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-dev
	kirigami-addons-dev
	kitemmodels-dev
	qcoro-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	qt6-qtwebengine-dev
	samurai
	sccache
	"
_repo_url="https://invent.kde.org/plasma-mobile/raven.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-22/raven-$_commit.tar.xz"
options="net !check" # net required to download Rust crates

builddir="$srcdir/raven-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fd8ad3c22371bf09b146fbcd55290d0c25c4a9fd7e340a4aed6a6690c67405a984541a193513aac530aaab8304a7c2bb40742e28b312cdcba54a2b5eeef566d0  raven-f910141ceef6eb5cc0c0dd425d5d25cadba8525b.tar.xz
"
