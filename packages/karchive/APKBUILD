# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=karchive
pkgver=99999_git20260118
pkgrel=0
_commit="4acfd16dcfb06d602687ca86d90b2236c9b6f395"
pkgdesc="Qt addon providing access to numerous types of archives"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	bzip2-dev
	qt6-qtbase-dev
	xz-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/karchive.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-18/karchive-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/karchive-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
57d58b0355be12ddd21b92e96442a19b1f18ef2f74c42d36ce0d5fe0c327a30053359506aabc746aa5b4256d736f3e60b6cb0b140fcd003b320357f59c870ffb  karchive-4acfd16dcfb06d602687ca86d90b2236c9b6f395.tar.xz
"
