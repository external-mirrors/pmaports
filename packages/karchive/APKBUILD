# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=karchive
pkgver=99999_git20250812
pkgrel=0
_commit="6595fcd9af7e310fd58937c1148c5c5428202993"
pkgdesc="Qt addon providing access to numerous types of archives"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	bzip2-dev
	qt6-qtbase-dev
	xz-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/karchive.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-12/karchive-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/karchive-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
f5d7f70d08cd851a0bf220e6a09aecd76e678a9e828bc7af439c726d60841cf77bb7203ab12dc2161a7a88647e5565216b00da6fb1948b70befb45e2b69698ea  karchive-6595fcd9af7e310fd58937c1148c5c5428202993.tar.xz
"
