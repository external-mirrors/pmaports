# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=karchive
pkgver=99999_git20250811
pkgrel=0
_commit="35096627921554881368447e9b6686798a7926bb"
pkgdesc="Qt addon providing access to numerous types of archives"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	bzip2-dev
	qt6-qtbase-dev
	xz-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/karchive.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-11/karchive-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/karchive-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
ed1422e2f95dd93ea85a7a4283757a15a33fbf92af4a9379cf8d6897a4ade4edc1b0032c555dee56a55bab5cc168d3e2f80e901578d0c2eab34bbc213a4c5484  karchive-35096627921554881368447e9b6686798a7926bb.tar.xz
"
