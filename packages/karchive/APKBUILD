# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=karchive
pkgver=99999_git20250809
pkgrel=0
_commit="6ba9ea3022702b058f497bc9671777447364bd23"
pkgdesc="Qt addon providing access to numerous types of archives"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	bzip2-dev
	qt6-qtbase-dev
	xz-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/karchive.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-09/karchive-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/karchive-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
c02b5663bf41682103f9e242432cfc57bbd1e1805aea1cb4237b0a2c293c496226190ea6f7ccc9a36a319270f291798197fee86c4e3daf41451d2b937d75225f  karchive-6ba9ea3022702b058f497bc9671777447364bd23.tar.xz
"
