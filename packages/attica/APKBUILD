# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=attica
pkgver=99999_git20250704
pkgrel=0
_commit="e18bece81e00777bef8d0c30a66ad8b68bd539f2"
pkgdesc="Freedesktop OCS binding for Qt"
url="https://www.kde.org/"
arch="all"
license="LGPL-2.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/frameworks/attica.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/attica-$_commit.tar.xz"

options="!check"
builddir="$srcdir/attica-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	# providertest requires network access
	ctest --test-dir build -E "providertest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
235d0b173e002d44b5fa65a7dc0d2476ef47de3a177d922475b000b18b0e9da83de5dc0b7363345cd93efcf7ff4eca5387ce0c018dee5b24eda340c9c808d4a7  attica-e18bece81e00777bef8d0c30a66ad8b68bd539f2.tar.xz
"
