# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-nano
pkgver=99999_git20250831
pkgrel=0
_commit="1b16b53e3f47d3eb5a27b9d286c63a1de04fd6f3"
pkgdesc="A minimal Plasma shell package intended for embedded devices"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/kde/plasma-nano"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	kitemmodels-dev
	kwayland-dev
	kwindowsystem-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-nano.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-01/plasma-nano-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/plasma-nano-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
054ef1933736e960e6cb987dfa8e3cf5b7a55b96916be961f0956501608dc565b9a4340c6b9053cc1d582b593fe8032064acf91c6414b5eb80060d11a6907174  plasma-nano-1b16b53e3f47d3eb5a27b9d286c63a1de04fd6f3.tar.xz
"
