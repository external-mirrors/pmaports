# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-nano
pkgver=99999_git20251109
pkgrel=0
_commit="03ce0dc90a28de0d28fcd9ff675f280740e19829"
pkgdesc="A minimal Plasma shell package intended for embedded devices"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/kde/plasma-nano"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	kitemmodels-dev
	kwayland-dev
	kwindowsystem-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-nano.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-16/plasma-nano-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/plasma-nano-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c99c78c5eadf3e62a0dd11aac553ab58dde2e3c748f547b24379016ad4b80caf34e3d1caa6a57dcca74867d13f6287d1ababb0e3625dd5d7720262985fce4c83  plasma-nano-03ce0dc90a28de0d28fcd9ff675f280740e19829.tar.xz
"
