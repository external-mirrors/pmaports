# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-nano
pkgver=99999_git20251118
pkgrel=0
_commit="6bed34af57c38ade819e9a98399a4d51f871b748"
pkgdesc="A minimal Plasma shell package intended for embedded devices"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/kde/plasma-nano"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	kitemmodels-dev
	kwayland-dev
	kwindowsystem-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-nano.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/plasma-nano-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/plasma-nano-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d8230cd277c3fc81dab6a5cb77d6d845b2e3a224cd722ed279ce84ebced0184afd01934ff65944923f1e098f6088ec944af234b43b25731959e661b98d8b3c14  plasma-nano-6bed34af57c38ade819e9a98399a4d51f871b748.tar.xz
"
