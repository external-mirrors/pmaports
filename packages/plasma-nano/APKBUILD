# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-nano
pkgver=99999_git20260220
pkgrel=0
_commit="e89d5199dcd9a81c2957040c2b4c96a747cb5067"
pkgdesc="A minimal Plasma shell package intended for embedded devices"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/kde/plasma-nano"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	kitemmodels-dev
	kwayland-dev
	kwindowsystem-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-nano.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/plasma-nano-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/plasma-nano-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7a95d4873cb61848b822d928ca3e0338ef7d85bd6f4a5aeac73807c3a70103280aaac34be6ebb3f575dae02e3631d9ff0eb15dd790140a947f96cccce569b109  plasma-nano-e89d5199dcd9a81c2957040c2b4c96a747cb5067.tar.xz
"
