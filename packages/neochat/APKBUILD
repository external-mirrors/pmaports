# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=neochat
pkgver=99999_git20251014
pkgrel=0
_commit="d1d3c43c6f88d4a4d046161e5e1b482f6346088a"
pkgdesc="A client for Matrix, the decentralized communication protocol"
url="https://invent.kde.org/network/neochat/"
# armhf blocked by qt6-qtdeclarative
# riscv64, s390x, ppc64le and loongarch64 blocked by qt6-qtwebengine -> qt6-qtwebview
arch="all !armhf !riscv64 !s390x !ppc64le !loongarch64"
license="GPL-2.0-or-later AND GPL-3.0-only AND GPL-3.0-or-later AND BSD-2-Clause"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	kquickcharts
	kquickimageeditor
	qqc2-desktop-style
	qt6-qtlocation
	"
makedepends="
	cmark-dev
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	kitemmodels-dev
	knotifications-dev
	kquickimageeditor-dev
	kstatusnotifieritem-dev
	kunifiedpush-dev
	libquotient-dev
	purpose-dev
	qcoro-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtmultimedia-dev
	qt6-qtspeech-dev
	qt6-qtsvg-dev
	qt6-qtwebview-dev
	qtkeychain-dev
	samurai
	sonnet-dev
	syntax-highlighting-dev
	"
checkdepends="qt6-qthttpserver-dev"
subpackages="$pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/network/neochat.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-14/neochat-$_commit.tar.xz"

options="!check"
builddir="$srcdir/neochat-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)" \
		-DRECOMMENDED_SPACE_ID="#space:postmarketos.org" \
		-DRECOMMENDED_SPACE_DISPLAYNAME="postmarketOS" \
		-DRECOMMENDED_SPACE_DESCRIPTION="Official postmarketOS space"
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8fa048c4889582023227e87f7fb1f79d30c32b82fb2379e209aa51aec1defc707b95f5cc33c33a3d388f93d38b161666b6817c4928bb2e95a679b5aa43e5dcd1  neochat-d1d3c43c6f88d4a4d046161e5e1b482f6346088a.tar.xz
"
