# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=neochat
pkgver=99999_git20250809
pkgrel=0
_commit="c6f0879c9c827ecfc4eb7a2a73a103f24fe1421a"
pkgdesc="A client for Matrix, the decentralized communication protocol"
url="https://invent.kde.org/network/neochat/"
# armhf blocked by qt6-qtdeclarative
# riscv64, s390x, ppc64le and loongarch64 blocked by qt6-qtwebengine -> qt6-qtwebview
arch="all !armhf !riscv64 !s390x !ppc64le !loongarch64"
license="GPL-2.0-or-later AND GPL-3.0-only AND GPL-3.0-or-later AND BSD-2-Clause"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	kquickcharts
	kquickimageeditor
	qqc2-desktop-style
	qt6-qtlocation
	"
makedepends="
	cmark-dev
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	kitemmodels-dev
	knotifications-dev
	kquickimageeditor-dev
	kstatusnotifieritem-dev
	kunifiedpush-dev
	libquotient-dev
	purpose-dev
	qcoro-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtmultimedia-dev
	qt6-qtspeech-dev
	qt6-qtsvg-dev
	qt6-qtwebview-dev
	qtkeychain-dev
	samurai
	sonnet-dev
	syntax-highlighting-dev
	"
checkdepends="qt6-qthttpserver-dev"
subpackages="$pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/network/neochat.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-09/neochat-$_commit.tar.xz"

options="!check"
builddir="$srcdir/neochat-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)" \
		-DRECOMMENDED_SPACE_ID="#space:postmarketos.org" \
		-DRECOMMENDED_SPACE_DISPLAYNAME="postmarketOS" \
		-DRECOMMENDED_SPACE_DESCRIPTION="Official postmarketOS space"
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
27acbc3a4d4830c9f0ea1471e4b6c352b75839a1c40d8798aa51757ed5a9422c260b091f1eaff7d2256d73f7c2553fa6146260836d4fe4d0a91e77959c1a8ffb  neochat-c6f0879c9c827ecfc4eb7a2a73a103f24fe1421a.tar.xz
"
