# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=plasmatube
pkgver=99999_git20251001
pkgrel=0
_commit="c5cfd8f63596ed7a59d79525dc37ba491b0045a0"
pkgdesc="Kirigami YouTube video player based on Invidious"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasmatube"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	gst-libav
	gst-plugins-good
	gst-plugins-good-qt
	kcoreaddons
	kdeclarative
	kirigami
	kirigami-addons
	kitemmodels
	purpose
	qt6-qtimageformats
	"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	mpvqt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qtkeychain-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/multimedia/plasmatube.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/plasmatube-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasmatube-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9a49c03c3221737a63033d6f801a714bf5f3add48430a359b7e0aff474953d43e0d5fa8abda4dca3bff113997fe81c8da967e014b6d8de062d80f73ba8b1cee2  plasmatube-c5cfd8f63596ed7a59d79525dc37ba491b0045a0.tar.xz
"
