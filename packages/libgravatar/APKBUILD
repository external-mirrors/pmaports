# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libgravatar
pkgver=99999_git20251220
pkgrel=0
_commit="abdd45316c945067d46365603a957844c31c9e9c"
pkgdesc="KDE PIM library providing Gravatar support"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> pimcommon
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="
	kconfig-dev
	ki18n-dev
	kio-dev
	ktextwidgets-dev
	kwidgetsaddons-dev
	pimcommon-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/pim/libgravatar.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-20/libgravatar-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="net" # net required for tests

options="!check"
builddir="$srcdir/libgravatar-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
fd3a2f1978c7d54c1de4d133b2caed9791e9fda44d0456272adce054e76f3fedc2deade173d6022fd5720a22faf498973ab850d8d4a39983d6da16073e066532  libgravatar-abdd45316c945067d46365603a957844c31c9e9c.tar.xz
"
