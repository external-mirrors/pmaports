# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libgravatar
pkgver=99999_git20260208
pkgrel=0
_commit="846ec7de3c6c552444dd4a13727348067d750004"
pkgdesc="KDE PIM library providing Gravatar support"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> pimcommon
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="
	kconfig-dev
	ki18n-dev
	kio-dev
	ktextwidgets-dev
	kwidgetsaddons-dev
	pimcommon-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/pim/libgravatar.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-09/libgravatar-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="net" # net required for tests

options="!check"
builddir="$srcdir/libgravatar-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
98455868de0e5c84be31f5aba72b78dd62aa5a7427debba376bde160ef87a96d2cddf5bc6e778143780ca973c07adee013c1f04c04fcf860ec2f0ee82ec91cdf  libgravatar-846ec7de3c6c552444dd4a13727348067d750004.tar.xz
"
