# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=klettres
pkgver=99999_git20250716
pkgrel=0
_commit="1e65f1259bf61b4ad4bf594e24c84e4bbfe66a0a"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://edu.kde.org/klettres"
pkgdesc="Learn the Alphabet"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	knewstuff-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/klettres.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-17/klettres-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/klettres-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
240290ecaf73a076beb6037b2140b630298b12dea71cf5d2d2c2b02f1496596b277ce8ee3b7e00140c1fb9bb63a9f4a7216e8ad0a4a25e67c9b2f83b1874f496  klettres-1e65f1259bf61b4ad4bf594e24c84e4bbfe66a0a.tar.xz
"
