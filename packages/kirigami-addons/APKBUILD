# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami-addons
pkgver=99999_git20251102
pkgrel=0
_commit="dde2a1f92ada18e967bbe27a214323a124919cb1"
pkgdesc="Add-ons for the Kirigami framework"
url="https://invent.kde.org/libraries/kirigami-addons"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="LGPL-2.0-or-later AND GPL-2.0-or-later"
depends="
	kirigami
	qt6-qtmultimedia
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kglobalaccel-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kirigami-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kirigami-addons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-02/kirigami-addons-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kirigami-addons-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# tst_sounds.qml is broken
	wlheadless-run -- ctest --test-dir build -E "tst_sounds.qml"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a0d77bc88c988df279782baf1354a2e47cce69f07953dbc1c734e68787f4cae3e05be7499665f413e359e14b9fcde89da23885ba6b7d21b96c86e47b0d213759  kirigami-addons-dde2a1f92ada18e967bbe27a214323a124919cb1.tar.xz
"
