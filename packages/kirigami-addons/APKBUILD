# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami-addons
pkgver=99999_git20251018
pkgrel=0
_commit="a19af40b1cc35c9232475d9487f3779efe9bdb24"
pkgdesc="Add-ons for the Kirigami framework"
url="https://invent.kde.org/libraries/kirigami-addons"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="LGPL-2.0-or-later AND GPL-2.0-or-later"
depends="
	kirigami
	qt6-qtmultimedia
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kglobalaccel-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kirigami-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kirigami-addons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/kirigami-addons-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kirigami-addons-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# tst_sounds.qml is broken
	wlheadless-run -- ctest --test-dir build -E "tst_sounds.qml"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d87a4cf0f9386adccd27e6efc7da3307eb02edf21bd79d4987cd23f71b289e91e40a0341557f30d2b4985b14ec6b6a7e4f0b9ee0ccb0546146cede5250f6924f  kirigami-addons-a19af40b1cc35c9232475d9487f3779efe9bdb24.tar.xz
"
