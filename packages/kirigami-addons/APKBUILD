# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami-addons
pkgver=99999_git20260211
pkgrel=0
_commit="5dcb0facda35a3aca1fefca6eb2dbebfb94e085c"
pkgdesc="Add-ons for the Kirigami framework"
url="https://invent.kde.org/libraries/kirigami-addons"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="LGPL-2.0-or-later AND GPL-2.0-or-later"
depends="
	kirigami
	qt6-qtmultimedia
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kglobalaccel-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kirigami-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kirigami-addons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-12/kirigami-addons-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kirigami-addons-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# tst_sounds.qml is broken
	wlheadless-run -- ctest --test-dir build -E "tst_sounds.qml"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
41127b330e50039728b10d1d64aa5482b6883930c3a1d3a74200192d13f99764f7f62e0da36b801556db8279cf3fb19eade1257858a5c0d2e9cc23696ed50c6c  kirigami-addons-5dcb0facda35a3aca1fefca6eb2dbebfb94e085c.tar.xz
"
