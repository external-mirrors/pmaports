# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami-addons
pkgver=99999_git20260128
pkgrel=0
_commit="59fc581dede6c3b9ecfec6e2f7f30d2061fbf082"
pkgdesc="Add-ons for the Kirigami framework"
url="https://invent.kde.org/libraries/kirigami-addons"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
license="LGPL-2.0-or-later AND GPL-2.0-or-later"
depends="
	kirigami
	qt6-qtmultimedia
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kglobalaccel-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kirigami-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kirigami-addons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-28/kirigami-addons-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kirigami-addons-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# tst_sounds.qml is broken
	wlheadless-run -- ctest --test-dir build -E "tst_sounds.qml"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ba191e8dbd4276630be6b709a43b63541d3e8d3064332a4ad3d487b441b93cf4ca10d17c8ff424123fed652565bf7a25a5c87dc6c54c39238ff650a15d6edc31  kirigami-addons-59fc581dede6c3b9ecfec6e2f7f30d2061fbf082.tar.xz
"
