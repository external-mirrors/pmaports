# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=krdc
pkgver=99999_git20250916
pkgrel=0
_commit="fb257f0fd0bc5d829ea2be2a1b12d79c7632a817"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/internet/krdc/"
pkgdesc="Remote Desktop Client"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="freerdp"
makedepends="
	extra-cmake-modules
	freerdp
	freerdp-dev
	fuse3-dev
	kbookmarks-dev
	kcmutils-dev
	kcompletion-dev
	kconfig-dev
	kdnssd-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	knotifyconfig-dev
	knotifyconfig-dev
	kstatusnotifieritem-dev
	kwallet-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	libssh-dev
	libvncserver-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/krdc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-17/krdc-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/krdc-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
79caa7c67d9264af98983d660e26b3905067143fbc96cb45bfd07f28df5d5c9ed20b5b1abac060faa9e4635f87f97b47b9bd20b0cfc40c6c9e64c57ea9e55056  krdc-fb257f0fd0bc5d829ea2be2a1b12d79c7632a817.tar.xz
"
