# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=krdc
pkgver=99999_git20251031
pkgrel=0
_commit="4a9b38506e7e314c37c86e6b1f0bbdb72c6fc604"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/internet/krdc/"
pkgdesc="Remote Desktop Client"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="freerdp"
makedepends="
	extra-cmake-modules
	freerdp
	freerdp-dev
	fuse3-dev
	kbookmarks-dev
	kcmutils-dev
	kcompletion-dev
	kconfig-dev
	kdnssd-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	knotifyconfig-dev
	knotifyconfig-dev
	kstatusnotifieritem-dev
	kwallet-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	libssh-dev
	libvncserver-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/krdc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-02/krdc-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/krdc-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4c59b126d0efe27ce03222d90dd1a09d1cfe7e417cfa6cb12dc1a60b864850b8cc03c6eeb694a62723c222798a9810ca9f7f16ce8120ec296bd4fd58e840a615  krdc-4a9b38506e7e314c37c86e6b1f0bbdb72c6fc604.tar.xz
"
