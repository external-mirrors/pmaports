# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=krdc
pkgver=99999_git20251022
pkgrel=0
_commit="366e7ad5a28769f9b16ac9389a005db6c250fe23"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/internet/krdc/"
pkgdesc="Remote Desktop Client"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="freerdp"
makedepends="
	extra-cmake-modules
	freerdp
	freerdp-dev
	fuse3-dev
	kbookmarks-dev
	kcmutils-dev
	kcompletion-dev
	kconfig-dev
	kdnssd-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	knotifyconfig-dev
	knotifyconfig-dev
	kstatusnotifieritem-dev
	kwallet-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	libssh-dev
	libvncserver-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/krdc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/krdc-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/krdc-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a1ba0d6b0151d7b0adb3541a4a39df92f43dc6d886fd5aa2fb82ec5bedb05da23927f99878a1b60f2b392e3a21430d3bf7f2874d3bbb15bafc7a3415562c89c2  krdc-366e7ad5a28769f9b16ac9389a005db6c250fe23.tar.xz
"
