# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=pulseaudio-qt
pkgver=99999_git20251201
pkgrel=0
_commit="ca38d276b119ea36847107b714a30d73eba81578"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://invent.kde.org/libraries/pulseaudio-qt"
pkgdesc="Pulseaudio bindings for Qt"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	glib-dev
	pulseaudio-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/pulseaudio-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-02/pulseaudio-qt-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/pulseaudio-qt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
753c2067dbd42827f0c401543df98d6d5273bb9d4e8df6dcfd6461083392f403df8146b2288873a7f4af0a9d596c3f5ce1c9d18353f2b7fc156adc049a419b86  pulseaudio-qt-ca38d276b119ea36847107b714a30d73eba81578.tar.xz
"
