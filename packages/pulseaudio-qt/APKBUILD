# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=pulseaudio-qt
pkgver=99999_git20260131
pkgrel=0
_commit="ed225b5d2fb016f71d59a1a86aa04a8ac6719c4b"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://invent.kde.org/libraries/pulseaudio-qt"
pkgdesc="Pulseaudio bindings for Qt"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	glib-dev
	pulseaudio-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/pulseaudio-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-03/pulseaudio-qt-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/pulseaudio-qt-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b18bc05ff41b07aa4773d0a6507d3ec0c75789d45bc3fbab3910d7efe193121ca6f2946df8362fda540d6a5294da3784d35b52b6ab59019ecee5486f093b0fa7  pulseaudio-qt-ed225b5d2fb016f71d59a1a86aa04a8ac6719c4b.tar.xz
"
