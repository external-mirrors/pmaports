# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-bigscreen
pkgver=99999_git20250619
pkgrel=0
_commit="f51b24e5be8f796231ffc2f87d6182113bf5b87a"
pkgdesc="A 10-feet interface made for TVs"
url="https://invent.kde.org/plasma/plasma-bigscreen/"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
license="LGPL-2.1-only OR LGPL-3.0-only OR LicenseRef-KDE-Accepted-LGPL"
depends="
	kde-cli-tools
	kdeconnect
	kirigami
	plasma-nano
	plasma-nm
	plasma-pa
	plasma-remotecontrollers
	plasma-settings
	plasma-workspace
	"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-dev
	knotifications-dev
	kwayland-dev
	kwindowsystem-dev
	libplasma-dev
	plasma-activities-dev
	plasma-activities-stats-dev
	plasma-workspace-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
subpackages="$pkgname-lang"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-bigscreen.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-19/plasma-bigscreen-$_commit.tar.xz"

options="!check"
builddir="$srcdir/plasma-bigscreen-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
37017236093e51e83860a1a66fcfce27acbfb5e4adf6c0d2005fbeb0676b218d82bbf02bdd159f5541ba78ebc7f213b6e6c85771abbd4eb003a6817b6d0bad22  plasma-bigscreen-f51b24e5be8f796231ffc2f87d6182113bf5b87a.tar.xz
"
