# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=phonon-backend-vlc
pkgver=99999_git20250630
pkgrel=0
_commit="2bbab2a08d0de05d5aca446e0e4721bbf02d4c50"
pkgdesc="Phonon VLC backend"
url="https://userbase.kde.org/Phonon"
# armhf blocked by extra-cmake-modules
# s390x blocked by vlc
arch="all !armhf !s390x"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	phonon-dev
	qt5-qtbase-dev
	qt5-qttools-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	vlc-dev
	"
subpackages="$pkgname-qt5 $pkgname-qt6"
_repo_url="https://invent.kde.org/libraries/phonon-vlc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-06-30/phonon-vlc-$_commit.tar.xz"
options="!check" # No tests available

options="!check"
builddir="$srcdir/phonon-vlc-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

qt5() {
	amove usr/lib/qt5/plugins/phonon4qt5_backend
}

qt6() {
	amove usr/lib/qt6/plugins/phonon4qt6_backend
}

sha512sums="
9ea5741948b3ffaa6766c1e5d14a33ad858b267f3f0182445e4c3f687acf7d12cc390b1d474b65ca0b28ea8f53174a3ac21bb9ec2d38413d088c27331c7c5b4e  phonon-vlc-2bbab2a08d0de05d5aca446e0e4721bbf02d4c50.tar.xz
"
