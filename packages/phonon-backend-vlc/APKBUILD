# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=phonon-backend-vlc
pkgver=99999_git20250716
pkgrel=0
_commit="f2d714c0c10991d5835174bf10bc3b03b9ee72fd"
pkgdesc="Phonon VLC backend"
url="https://userbase.kde.org/Phonon"
# armhf blocked by extra-cmake-modules
# s390x blocked by vlc
arch="all !armhf !s390x"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	phonon-dev
	qt5-qtbase-dev
	qt5-qttools-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	vlc-dev
	"
subpackages="$pkgname-qt5 $pkgname-qt6"
_repo_url="https://invent.kde.org/libraries/phonon-vlc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-17/phonon-vlc-$_commit.tar.xz"
options="!check" # No tests available

options="!check"
builddir="$srcdir/phonon-vlc-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

qt5() {
	amove usr/lib/qt5/plugins/phonon4qt5_backend
}

qt6() {
	amove usr/lib/qt6/plugins/phonon4qt6_backend
}

sha512sums="
ce37e3b09e5f8c61e76c12d58cd9862adef5544867300f3d9835d49e979491a25786145b79a0845ff28f3b7b8182747a561911896fdcf954e37e96853eb9a9e1  phonon-vlc-f2d714c0c10991d5835174bf10bc3b03b9ee72fd.tar.xz
"
