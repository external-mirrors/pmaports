# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=3rdparty
maintainer="team/kde <bribbers@disroot.org>"
pkgname=libkonsoleqml
pkgver=99999_git20231229
pkgrel=0
_commit="bcaacdecb8830d9ae4e6dd17b2d12eadcb036426"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/jbbgameich/libkonsoleqml"
license="GPL-2.0-or-later"
pkgdesc="QML port of qtermwidget"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kpty-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
_repo_url="https://invent.kde.org/jbbgameich/libkonsoleqml.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/libkonsoleqml-$_commit.tar.xz"
options="!check" # Has no tests

builddir="$srcdir/libkonsoleqml-$_commit"

build() {
	cmake -B build -G Ninja \
		-DBUILD_WITH_QT6=ON \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
