# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdepim-runtime
pkgver=99999_git20251118
pkgrel=0
_commit="9612ba3a1c180c89fc9d55461ab3aefd7776549c"
pkgdesc="Extends the functionality of kdepim"
url="https://kontact.kde.org/"
# armhf blocked by qt6-qtdeclarative -> kconfig
# ppc64le, s390x and riscv64 blocked by qt6-qtwebengine -> akonadi
arch="all !armhf !ppc64le !s390x !riscv64"
license="LGPL-2.0-or-later"
makedepends="
	akonadi-calendar-dev
	akonadi-contacts-dev
	akonadi-dev
	akonadi-mime-dev
	akonadi-notes-dev
	extra-cmake-modules
	kcalendarcore-dev
	kcalutils-dev
	kcodecs-dev
	kconfig-dev
	kconfigwidgets-dev
	kcontacts-dev
	kdav-dev
	kdoctools-dev
	kholidays-dev
	kidentitymanagement-dev
	kimap-dev
	kio-dev
	kitemmodels-dev
	kmailtransport-dev
	kmbox-dev
	kmime-dev
	knotifications-dev
	knotifyconfig-dev
	ktextwidgets-dev
	kwindowsystem-dev
	libkgapi-dev
	libxslt-dev
	pimcommon-dev
	qca-qt6-dev
	qt6-qtbase-dev
	qt6-qtnetworkauth-dev
	qt6-qtspeech-dev
	samurai
	shared-mime-info
	"
subpackages="$pkgname-dbg $pkgname-lang"
_repo_url="https://invent.kde.org/pim/kdepim-runtime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-18/kdepim-runtime-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kdepim-runtime-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)"
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b12357e77cc83e0a9f92a0c3c43f32fb09a07cbd91b9a8b658b1df19aee51eab1abbae36cc008df8e5021f1a1bded60c3aff5d84230ff4cd04bd2e0e337faef2  kdepim-runtime-9612ba3a1c180c89fc9d55461ab3aefd7776549c.tar.xz
"
