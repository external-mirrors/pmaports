# The group tag is just to easily find this apkbuild by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kguiaddons
pkgver=99999_git20250908
pkgrel=0
_commit="61e6469fe1295efd8e7bdf6af7b98c7ffbba1e15"
pkgdesc="Addons to QtGui"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	plasma-wayland-protocols
	qt6-qttools-dev
	qt6-qtwayland-dev
	wayland-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kguiaddons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-08/kguiaddons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-bin py3-$pkgname:_py3"

options="!check"
builddir="$srcdir/kguiaddons-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

bin() {
	amove usr/bin/kde-geo-uri-handler
	amove usr/share/applications
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
03934bd9fa04b5b4740b7ac1d63cc112b04e2b85bdf71cac97387a7b54b1860625cdf9429901cc4461497c5be579fd59ede65883b20d37892c3e6e7f112093dc  kguiaddons-61e6469fe1295efd8e7bdf6af7b98c7ffbba1e15.tar.xz
"
