# The group tag is just to easily find this apkbuild by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kguiaddons
pkgver=99999_git20251014
pkgrel=0
_commit="20b032c87b8d15228d99d162818e51c216054010"
pkgdesc="Addons to QtGui"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	plasma-wayland-protocols
	qt6-qttools-dev
	qt6-qtwayland-dev
	wayland-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kguiaddons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-14/kguiaddons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-bin py3-$pkgname:_py3"

options="!check"
builddir="$srcdir/kguiaddons-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	#cmake --build build --target prepare_docs
	#cmake --build build --target generate_docs
	#cmake --build build --target generate_qch
}

check() {
	xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	#DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	#DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

bin() {
	amove usr/bin/kde-geo-uri-handler
	amove usr/share/applications
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
5bc24628e717cd31be6045791a8b7fc549c67e20dcf1b7b2ae6f61563be74fa73176a8d5508c59c5f089c1c37fdeeed727d73f9984333cdc83490500978def2a  kguiaddons-20b032c87b8d15228d99d162818e51c216054010.tar.xz
"
