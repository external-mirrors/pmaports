checkdepends="xwayland-run"

subpackages="
	$pkgname-dbg
	$pkgname-dev
	$pkgname-doc
	$pkgname-lang
	$pkgname-systemd
	"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

# strip fourth version component for source URL
case "$pkgver" in
	*.*.*.*) _pkgver="${pkgver%.*}" ;;
	*) _pkgver="$pkgver" ;;
esac

_repo_url="https://invent.kde.org/plasma/kwin.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-11-26/kwin-$_commit.tar.xz
	https://invent.kde.org/plasma/kwin/-/commit/ac7e23826642dffd7a2d0b3f7338352e327e200c.patch
	"
# Broken, fails to setup due to missing or invalid XDG_RUNTIME_DIR?
options="!check"

builddir="$srcdir/kwin-$_commit"

build() {
	# significantly reduce debug symbol size
	# use None here to not make cmake pass bare -g (-g2)
	CFLAGS="$CFLAGS -O2 -g1" CXXFLAGS="$CXXFLAGS -O2 -g1" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	XDG_RUNTIME_DIR="$(mktemp -p -d "$builddir")" \
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
