# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kamera
pkgver=99999_git20251021
pkgrel=0
_commit="d8d7faad54b0d47ec3d8793271ff2b5ca7ae9fe8"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/graphics"
pkgdesc="KDE integration for gphoto2 cameras"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kxmlgui-dev
	libgphoto2-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/graphics/kamera.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-22/kamera-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kamera-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
027eefdf405a4e0d774e703d55307ffcca9a1f6f17d67cfc685d9600eb3da6b87d8ee5f5ab5a47b91ce3651ce8675c72904c987fd4999932fe498fdacfc1b200  kamera-d8d7faad54b0d47ec3d8793271ff2b5ca7ae9fe8.tar.xz
"
