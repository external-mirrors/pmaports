# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcodecs
pkgver=99999_git20250801
pkgrel=0
_commit="779e13b551aa89e8443c266d4f111384380fad30"
pkgdesc="Provide a collection of methods to manipulate strings using various encodings"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	gperf
	graphviz
	kde-qdoc-common
	qt6-qttools
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kcodecs.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-08-03/kcodecs-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kcodecs-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

#	cmake --build build --target prepare_docs
#	cmake --build build --target generate_docs
#	cmake --build build --target generate_qch
}

check() {
	xvfb-run ctest --test-dir build build -E "(rfc2047|kcharsets)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
#	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
#	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
58419053490d705665acc68faf13b5ea29a8b453b52a519e39e4f62a49c83817de042064d62da40eb94d2c3c39ba92edcfd0bcbd612c9ff4070bbfb74fd77773  kcodecs-779e13b551aa89e8443c266d4f111384380fad30.tar.xz
"
