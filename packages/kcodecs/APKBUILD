# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcodecs
pkgver=99999_git20250721
pkgrel=0
_commit="da1683325f397cefb8ba20a6d7217d6d60827159"
pkgdesc="Provide a collection of methods to manipulate strings using various encodings"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	gperf
	graphviz
	kde-qdoc-common
	qt6-qttools
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kcodecs.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-25/kcodecs-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kcodecs-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

#	cmake --build build --target prepare_docs
#	cmake --build build --target generate_docs
#	cmake --build build --target generate_qch
}

check() {
	xvfb-run ctest --test-dir build build -E "(rfc2047|kcharsets)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
#	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
#	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
f7e12baff2eeab999a5df56582188aa108f91b66a350b9b55f258d92343d7d8f017da9c8018fb58dd727a7d97d13eabc10fc789cde4fb352c99dc57a31de57a1  kcodecs-da1683325f397cefb8ba20a6d7217d6d60827159.tar.xz
"
