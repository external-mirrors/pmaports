# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcodecs
pkgver=99999_git20260210
pkgrel=0
_commit="dd638582b1ff4b0862f0fa29bd90c0fefa62351b"
pkgdesc="Provide a collection of methods to manipulate strings using various encodings"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	gperf
	graphviz
	kde-qdoc-common
	qt6-qttools
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kcodecs.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-12/kcodecs-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kcodecs-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

#	cmake --build build --target prepare_docs
#	cmake --build build --target generate_docs
#	cmake --build build --target generate_qch
}

check() {
	xvfb-run ctest --test-dir build build -E "(rfc2047|kcharsets)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
#	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
#	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
9ff977ec16668299a33cf2d39cf1dff6ff1451d9f45db3000ff05f05e97a0f8357965e2bb88ecd0b89e452cf1dae7ba5c410905da6d6bf9749aec481eaedec50  kcodecs-dd638582b1ff4b0862f0fa29bd90c0fefa62351b.tar.xz
"
