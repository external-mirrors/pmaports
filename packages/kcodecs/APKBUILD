# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcodecs
pkgver=99999_git20251011
pkgrel=0
_commit="53721af3218cef1aa9750aec542e7f6a616dac7c"
pkgdesc="Provide a collection of methods to manipulate strings using various encodings"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	gperf
	graphviz
	kde-qdoc-common
	qt6-qttools
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kcodecs.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-12/kcodecs-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/kcodecs-$_commit"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

#	cmake --build build --target prepare_docs
#	cmake --build build --target generate_docs
#	cmake --build build --target generate_qch
}

check() {
	xvfb-run ctest --test-dir build build -E "(rfc2047|kcharsets)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
#	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
#	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
942875fadc120c4c1409f0b7ee721383e99be43e459de417407bde57c833efd0cda4cdfef4d032b74bc118565bfd5cc4b8e1fadddcc2ab4957bfbbedd004f241  kcodecs-53721af3218cef1aa9750aec542e7f6a616dac7c.tar.xz
"
