# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kwayland
pkgver=99999_git20260113
pkgrel=0
_commit="fe88d160a9b3d6edc86138acfd17d998da3d7ac8"
pkgdesc="Qt-style Client and Server library wrapper for the Wayland libraries"
arch="all"
url="https://www.kde.org"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	qt6-qtwayland-dev
	wayland-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qttools-dev
	wayland-protocols
	samurai
	"
checkdepends="xwayland-run"
_repo_url="https://invent.kde.org/plasma/kwayland.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-14/kwayland-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-dbg"

options="!check"
builddir="$srcdir/kwayland-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
726c031d64b91272ce9b64db5769b79c5439a0f1f9e29dfd623304f9c5fdf9b9ed2e65227b2db8d5cf6f4cfbc4ca2ec3d0e0d520836efac6cd5cbc852ab93dbe  kwayland-fe88d160a9b3d6edc86138acfd17d998da3d7ac8.tar.xz
"
