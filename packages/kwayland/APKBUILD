# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kwayland
pkgver=99999_git20250923
pkgrel=0
_commit="d4a26b8b748e999b1c9c8d7d97becf546ab12e83"
pkgdesc="Qt-style Client and Server library wrapper for the Wayland libraries"
arch="all"
url="https://www.kde.org"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	qt6-qtwayland-dev
	wayland-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	plasma-wayland-protocols
	qt6-qtbase-dev
	qt6-qttools-dev
	wayland-protocols
	samurai
	"
checkdepends="xwayland-run"
_repo_url="https://invent.kde.org/plasma/kwayland.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-24/kwayland-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-dbg"

options="!check"
builddir="$srcdir/kwayland-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2f57a9590c273e0be15a6a5160faf938e8873b31891e1e0f357a22b5adbd91ce0de7e509f9ecad38e9e083e521050838520254ae4ff6f556dfe2310892220286  kwayland-d4a26b8b748e999b1c9c8d7d97becf546ab12e83.tar.xz
"
