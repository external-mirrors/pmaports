# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=polkit-qt
pkgver=99999_git20250212
pkgrel=0
_commit="61ebab0cf4f78ecc49662870976e9f57692c9abc"
pkgdesc="Qt wrapper around polkit-1 client libraries"
arch="all"
url="https://www.kde.org"
license="LGPL-2.1-only"
depends_dev="polkit-elogind-dev"
makedepends="$depends_dev
	cmake
	qt5-qtbase-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/polkit-qt-1.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-09/polkit-qt-1-$_commit.tar.xz"
subpackages="$pkgname-dev ${pkgname}5:_qt5 ${pkgname}6:_qt6"

replaces="polkit-qt-1<=0.114.0-r2"

options="!check"
builddir="$srcdir/polkit-qt-1-$_commit"

build() {
	cmake -B build-qt5 -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build-qt5

	cmake -B build-qt6 -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DQT_MAJOR_VERSION=6
	cmake --build build-qt6
}

check() {
	ctest --test-dir build-qt5
	ctest --test-dir build-qt6

}

package() {
	DESTDIR="$pkgdir" cmake --install build-qt5
	DESTDIR="$pkgdir" cmake --install build-qt6
}

_qt5() {
	amove usr/lib/libpolkit-qt5*
}

_qt6() {
	amove usr/lib/libpolkit-qt6*
}

sha512sums="
044ff2e4420cb8c19b012db71b0b885d21dd8713427445ea967adcdecc8c285fc2892e2f0e1a77182d451cbe842519090e69166a9fa99bff68bbb3db462f99a0  polkit-qt-1-61ebab0cf4f78ecc49662870976e9f57692c9abc.tar.xz
"
