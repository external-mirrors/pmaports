# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=marknote
pkgver=99999_git20250716
pkgrel=0
_commit="0110103d8415dfaf80ec32d8f87f81ee50a15e0e"
pkgdesc="A simple markdown note management app"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://apps.kde.org/marknote/"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	qqc2-desktop-style
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	kmime-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/office/marknote.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-17/marknote-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
bfe11b9e213380b6d5099e10efbcac92ea74212f02bd220c6487fc49c0803ce3d87dbc7bc47c1cb27a3c63d3588965cc77d41191556c630d7bda2b96f30397cd  marknote-0110103d8415dfaf80ec32d8f87f81ee50a15e0e.tar.xz
"
