# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=marknote
pkgver=99999_git20250905
pkgrel=0
_commit="c0231c6d20be190eb55947651530ea003ca8a7e1"
pkgdesc="A simple markdown note management app"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://apps.kde.org/marknote/"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	qqc2-desktop-style
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	kmime-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/office/marknote.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-06/marknote-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
805c176c5ccbc038c08bbb63007c14411504282ac8ff42c47d39ed139afd66f4ddb76ab305e6db24183c8445e14978675ae9b8d849cd9996d1a690c3fdfa52ff  marknote-c0231c6d20be190eb55947651530ea003ca8a7e1.tar.xz
"
