# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=marknote
pkgver=99999_git20250928
pkgrel=0
_commit="3069d6dadae32ca381ba41e6da4bcd50ff58122c"
pkgdesc="A simple markdown note management app"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://apps.kde.org/marknote/"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	qqc2-desktop-style
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	kmime-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/office/marknote.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-29/marknote-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b01e096a058025739c73cefa09040cad810c7007c2b0867d6b3b45451a1229d9f53965b5474848614720e66b1387d9dbab76f57b5575ba408795a3eb60be93d2  marknote-3069d6dadae32ca381ba41e6da4bcd50ff58122c.tar.xz
"
