# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=marknote
pkgver=99999_git20251027
pkgrel=0
_commit="5a29b6c12acd8f0da32e41c1ee3697a01bfa4e52"
pkgdesc="A simple markdown note management app"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://apps.kde.org/marknote/"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	kirigami
	kirigami-addons
	kitemmodels
	qqc2-desktop-style
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	kmime-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/office/marknote.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-28/marknote-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2e50de5d7bff916b53b5bb6edcfabea938d21d1033b14268a8ef7a7ea808f9f96b3a9309cd0343b17f1279f111ce951d4c4980937cf70ccb77342c40e7e5a817  marknote-5a29b6c12acd8f0da32e41c1ee3697a01bfa4e52.tar.xz
"
