# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdiagram
pkgver=99999_git20260106
pkgrel=0
_commit="c21533022ab758a6ce4d434c4fbe0eb1b633ebfd"
pkgdesc="Powerful libraries (KChart, KGantt) for creating business diagrams"
arch="all"
url="https://kontact.kde.org/"
license="GPL-2.0-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/graphics/kdiagram.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-07/kdiagram-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kdiagram-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# TestDrawIntoPainter times out
	xvfb-run ctest --test-dir build -E "TestDrawIntoPainter"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f73a6757641a3ca6c1013a16163a68707e3eacf2376e522c9b0ad2b9bff6bd1f81ca1e3ab609cdb8aaee3260f76722f79a671f87216c8c2004f8db7c5fd76197  kdiagram-c21533022ab758a6ce4d434c4fbe0eb1b633ebfd.tar.xz
"
