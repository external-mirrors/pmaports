# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdiagram
pkgver=99999_git20251129
pkgrel=0
_commit="643968976ea52c5272101e9e499044b9b36e90f5"
pkgdesc="Powerful libraries (KChart, KGantt) for creating business diagrams"
arch="all"
url="https://kontact.kde.org/"
license="GPL-2.0-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/graphics/kdiagram.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-12-01/kdiagram-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kdiagram-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# TestDrawIntoPainter times out
	xvfb-run ctest --test-dir build -E "TestDrawIntoPainter"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a55d81cc2212eaba2418305e7c71c0b9f9724d4bff6706a726dd3e5b83e9e9db27b7c2e7fef7af1e06599771164288a0c1bb9a811cfa6a24870220d048f0547a  kdiagram-643968976ea52c5272101e9e499044b9b36e90f5.tar.xz
"
