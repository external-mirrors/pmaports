# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdiagram
pkgver=99999_git20260120
pkgrel=0
_commit="e359f853fdd3bae0411601b20edaace37b998ecb"
pkgdesc="Powerful libraries (KChart, KGantt) for creating business diagrams"
arch="all"
url="https://kontact.kde.org/"
license="GPL-2.0-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/graphics/kdiagram.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-22/kdiagram-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kdiagram-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# TestDrawIntoPainter times out
	xvfb-run ctest --test-dir build -E "TestDrawIntoPainter"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f4825e1847def23e263d4a272798c781ce52e4bfad53932416c698772b7a22754a327053891596d00373dd3853f6a7371b21891b561eff0ef502fe03dd026ab1  kdiagram-e359f853fdd3bae0411601b20edaace37b998ecb.tar.xz
"
