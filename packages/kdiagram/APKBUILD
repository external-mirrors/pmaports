# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdiagram
pkgver=99999_git20260218
pkgrel=0
_commit="9e6d7fd562668b21de9664acb28addf574d9098d"
pkgdesc="Powerful libraries (KChart, KGantt) for creating business diagrams"
arch="all"
url="https://kontact.kde.org/"
license="GPL-2.0-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/graphics/kdiagram.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-19/kdiagram-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kdiagram-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# TestDrawIntoPainter times out
	xvfb-run ctest --test-dir build -E "TestDrawIntoPainter"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d37d56bd8234ac4e44bd60802d8eac8d8991f35ae8f409bd37c7683d039ec039ee938428ded6621c6886dc831d928e1ac7b2d3c78a5ee7cddd4fb99a27d6ddf4  kdiagram-9e6d7fd562668b21de9664acb28addf574d9098d.tar.xz
"
