# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdiagram
pkgver=99999_git20260130
pkgrel=0
_commit="bc1519bbfe327c90a6113adf8174847e424f4dd2"
pkgdesc="Powerful libraries (KChart, KGantt) for creating business diagrams"
arch="all"
url="https://kontact.kde.org/"
license="GPL-2.0-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/graphics/kdiagram.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-31/kdiagram-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kdiagram-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# TestDrawIntoPainter times out
	xvfb-run ctest --test-dir build -E "TestDrawIntoPainter"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
40ae29e667d5b3304a5e3d3cae049408c9e430e16a2af6a335562a1b5f0ebfcaa0e371979405b52958eaccc1cb7679a239c680701d485f70b31d329d0f56ef5e  kdiagram-bc1519bbfe327c90a6113adf8174847e424f4dd2.tar.xz
"
