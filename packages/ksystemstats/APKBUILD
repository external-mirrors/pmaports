# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksystemstats
pkgver=99999_git20260106
pkgrel=0
_commit="a3c5144651692ad2c9b6b7656b99cfbe5059fd03"
pkgdesc="A plugin based system monitoring daemon"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LicenseRef-KDE-Accepted-GPL AND LicenseRef-KDE-Accepted-LGPL AND CC0-1.0"
makedepends="
	eudev-dev
	extra-cmake-modules
	kcoreaddons-dev
	kdbusaddons-dev
	kio-dev
	libksysguard-dev
	libnl3-dev
	lm-sensors-dev
	networkmanager-qt-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/ksystemstats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-07/ksystemstats-$_commit.tar.xz"
options="!check" # Broken, requires specific sensor setup

builddir="$srcdir/ksystemstats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
cfd52d2c58de3bb4e83f738a90e2738db5328ed66ac994b492c28cf0235ac9f7262da3d703c7c428bc54b5b87ccd4ce3ad7ed2e59262f66227b0da2797ff61ae  ksystemstats-a3c5144651692ad2c9b6b7656b99cfbe5059fd03.tar.xz
"
