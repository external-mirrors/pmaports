# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksystemstats
pkgver=99999_git20260220
pkgrel=0
_commit="83229b9341f4e497aee10ff6228fec13ead7812b"
pkgdesc="A plugin based system monitoring daemon"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LicenseRef-KDE-Accepted-GPL AND LicenseRef-KDE-Accepted-LGPL AND CC0-1.0"
makedepends="
	eudev-dev
	extra-cmake-modules
	kcoreaddons-dev
	kdbusaddons-dev
	kio-dev
	libksysguard-dev
	libnl3-dev
	lm-sensors-dev
	networkmanager-qt-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/ksystemstats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-20/ksystemstats-$_commit.tar.xz"
options="!check" # Broken, requires specific sensor setup

builddir="$srcdir/ksystemstats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0e08b7407e4fc42ed6476a649191ec6072abcd7673a605682c6b185d85a85bfcec300d9715143bdd3a22c2c1fa3f63d509a68632b0765be4d670850c638ac9d5  ksystemstats-83229b9341f4e497aee10ff6228fec13ead7812b.tar.xz
"
