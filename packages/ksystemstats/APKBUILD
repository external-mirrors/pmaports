# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksystemstats
pkgver=99999_git20260120
pkgrel=0
_commit="4e3c994af6b379fa92e476ee5e06af7fdab78887"
pkgdesc="A plugin based system monitoring daemon"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LicenseRef-KDE-Accepted-GPL AND LicenseRef-KDE-Accepted-LGPL AND CC0-1.0"
makedepends="
	eudev-dev
	extra-cmake-modules
	kcoreaddons-dev
	kdbusaddons-dev
	kio-dev
	libksysguard-dev
	libnl3-dev
	lm-sensors-dev
	networkmanager-qt-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/ksystemstats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-22/ksystemstats-$_commit.tar.xz"
options="!check" # Broken, requires specific sensor setup

builddir="$srcdir/ksystemstats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b63dfe321b3a863abf3ac917941d2e3f0f07b3e647d3d50c8a25bc690052529463a4745b4fd2522cf3d0310fc01e8a0441234db74e2dd8e450a77ca48bd9d838  ksystemstats-4e3c994af6b379fa92e476ee5e06af7fdab78887.tar.xz
"
