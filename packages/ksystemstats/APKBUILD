# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksystemstats
pkgver=99999_git20260110
pkgrel=0
_commit="5f3cd26b15802aeb654f8bf87ab64ff3fb49b921"
pkgdesc="A plugin based system monitoring daemon"
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LicenseRef-KDE-Accepted-GPL AND LicenseRef-KDE-Accepted-LGPL AND CC0-1.0"
makedepends="
	eudev-dev
	extra-cmake-modules
	kcoreaddons-dev
	kdbusaddons-dev
	kio-dev
	libksysguard-dev
	libnl3-dev
	lm-sensors-dev
	networkmanager-qt-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/ksystemstats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-10/ksystemstats-$_commit.tar.xz"
options="!check" # Broken, requires specific sensor setup

builddir="$srcdir/ksystemstats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
71273f786c2c8b0ca3e2dfc005072f1a9ce2aea97e2292a109d4a570c70ed9ba5b0147f8577f29b26c70f51e2fdfc248f9ac7fbde9edd7a4eca1ab9e906e7c5a  ksystemstats-5f3cd26b15802aeb654f8bf87ab64ff3fb49b921.tar.xz
"
