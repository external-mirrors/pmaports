# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=ksystemstats
pkgver=99999_git20251030
pkgrel=0
_commit="0d36f2bcd0268c778d0b7982617dd101e986f1d2"
pkgdesc="A plugin based system monitoring daemon"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LicenseRef-KDE-Accepted-GPL AND LicenseRef-KDE-Accepted-LGPL AND CC0-1.0"
makedepends="
	eudev-dev
	extra-cmake-modules
	kcoreaddons-dev
	kdbusaddons-dev
	kio-dev
	libksysguard-dev
	libnl3-dev
	lm-sensors-dev
	networkmanager-qt-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/ksystemstats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-30/ksystemstats-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # Broken, requires specific sensor setup

options="!check"
builddir="$srcdir/ksystemstats-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	# We don't ship systemd
	rm -r "$pkgdir"/usr/lib/systemd
}

sha512sums="
a3359646cb9c75f15206b5d54202ca43e0afb4914e395cd1fd9a87f43796ce126bd3dd94173bdde16f984d1ae7f82617c35115ed80d420896e4bf11b937f516a  ksystemstats-0d36f2bcd0268c778d0b7982617dd101e986f1d2.tar.xz
"
