# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kactivitymanagerd
pkgver=99999_git20260205
pkgrel=0
_commit="1c7c90802be9c7e92f7329d930d0fbc1c1082d50"
pkgdesc="System service to manage user's activities and track the usage patterns"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-only OR GPL-3.0-only"
depends="qt6-qtbase-sqlite"
makedepends="
	boost-dev
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kglobalaccel-dev
	ki18n-dev
	kio-dev
	kwindowsystem-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="
	$pkgname-systemd
	$pkgname-lang
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kactivitymanagerd.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-07/kactivitymanagerd-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kactivitymanagerd-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
856ec5838cc54ed9c62d61cb66092179c727efa986e169fe33a89a427e900ae481b5ce8d9bc621d6a58eb71a336c1e6c35ed0de564569bdb900baac79f13cf5a  kactivitymanagerd-1c7c90802be9c7e92f7329d930d0fbc1c1082d50.tar.xz
"
