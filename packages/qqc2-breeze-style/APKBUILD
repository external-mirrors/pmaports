# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=qqc2-breeze-style
pkgver=99999_git20250918
pkgrel=0
_commit="4766d5cc968773ab0b08ffda3a448d858b77d2e3"
pkgdesc="Breeze inspired QQC2 style"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://www.plasma-mobile.org/"
license="LicenseRef-KDE-Accepted-LGPL AND LicenseRef-KFQF-Accepted-GPL"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kguiaddons-dev
	kiconthemes-dev
	kirigami-dev
	kquickcharts-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/qqc2-breeze-style.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-09-20/qqc2-breeze-style-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/qqc2-breeze-style-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
cc8f82b2b83ca8d196a7814de3461761e817fd62a142e02d6ead92566c915d93cebf4e05a312ee44a6e39c81fae57cc0c3816a338b272bbe5f102843d7af17cb  qqc2-breeze-style-4766d5cc968773ab0b08ffda3a448d858b77d2e3.tar.xz
"
