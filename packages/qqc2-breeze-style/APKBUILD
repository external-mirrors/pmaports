# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=qqc2-breeze-style
pkgver=99999_git20250723
pkgrel=0
_commit="e9f9e1b8f7f6bb1217402975539ac769719b1c35"
pkgdesc="Breeze inspired QQC2 style"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://www.plasma-mobile.org/"
license="LicenseRef-KDE-Accepted-LGPL AND LicenseRef-KFQF-Accepted-GPL"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kguiaddons-dev
	kiconthemes-dev
	kirigami-dev
	kquickcharts-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/qqc2-breeze-style.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-07-23/qqc2-breeze-style-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/qqc2-breeze-style-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
14fa6362a7fdff533af719c02e3f3e4de96dc23d27b097b4f9fd2cbd2bcceac126eac6fbf16ed30aaaedc1d45f5c0f406751e5ab4793f6f385cac577223a2a1e  qqc2-breeze-style-e9f9e1b8f7f6bb1217402975539ac769719b1c35.tar.xz
"
