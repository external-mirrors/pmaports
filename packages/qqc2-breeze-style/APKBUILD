# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=qqc2-breeze-style
pkgver=99999_git20251012
pkgrel=0
_commit="d607d3fd3f2a229aa91311e67941502954030a68"
pkgdesc="Breeze inspired QQC2 style"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://www.plasma-mobile.org/"
license="LicenseRef-KDE-Accepted-LGPL AND LicenseRef-KFQF-Accepted-GPL"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kguiaddons-dev
	kiconthemes-dev
	kirigami-dev
	kquickcharts-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/qqc2-breeze-style.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-28/qqc2-breeze-style-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/qqc2-breeze-style-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
afab9261f6bd252a36eb87a3b5748ac50b56ad2eb8b749cb3dfede54347d0b585989745228192cd53140091d6d87cb03e0f2515dc17c9d2097c0d128cd4cc35d  qqc2-breeze-style-d607d3fd3f2a229aa91311e67941502954030a68.tar.xz
"
