# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=qqc2-breeze-style
pkgver=99999_git20260212
pkgrel=0
_commit="328d764cfccb6e717d2b32979bb82ba692f9c337"
pkgdesc="Breeze inspired QQC2 style"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://www.plasma-mobile.org/"
license="LicenseRef-KDE-Accepted-LGPL AND LicenseRef-KFQF-Accepted-GPL"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kguiaddons-dev
	kiconthemes-dev
	kirigami-dev
	kquickcharts-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/qqc2-breeze-style.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-02-16/qqc2-breeze-style-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/qqc2-breeze-style-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eda1c44f3d76c552a419ccfa952d58b9cfd11981ce9fb1287b122ee0805d44228dcc12ed46a1d48dd543f7f0f13d8705ea76b383e27d27d0fb94c7a944225707  qqc2-breeze-style-328d764cfccb6e717d2b32979bb82ba692f9c337.tar.xz
"
