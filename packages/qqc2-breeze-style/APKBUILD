# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=qqc2-breeze-style
pkgver=99999_git20251004
pkgrel=0
_commit="e6d589951613c1f4c57d3d11d200bf851f8f6414"
pkgdesc="Breeze inspired QQC2 style"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://www.plasma-mobile.org/"
license="LicenseRef-KDE-Accepted-LGPL AND LicenseRef-KFQF-Accepted-GPL"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfigwidgets-dev
	kguiaddons-dev
	kiconthemes-dev
	kirigami-dev
	kquickcharts-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/qqc2-breeze-style.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-10-06/qqc2-breeze-style-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/qqc2-breeze-style-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e68eb904e74cdd63976d9d69c2cb0f8461272a2cdb5889ed3fce1a91ae62b05a65375c83db34bb80f147b6fc372fd809989a634555bb7c6bdbcb44aaadf08238  qqc2-breeze-style-e6d589951613c1f4c57d3d11d200bf851f8f6414.tar.xz
"
