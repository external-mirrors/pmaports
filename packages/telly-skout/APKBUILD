# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=telly-skout
pkgver=99999_git20260118
pkgrel=0
_commit="2654bb25e97eadd19debd65c0cef9468f8640444"
pkgdesc="Convergent TV guide based on Kirigami"
url="https://invent.kde.org/plasma-mobile/telly-skout"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-2.0-or-later AND LicenseRef-KDE-Accepted-GPL"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	ki18n-dev
	kirigami-addons-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/telly-skout.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2026-01-18/telly-skout-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/telly-skout-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

