# Reference: https://postmarketos.org/uipkg
maintainer="Clayton Craft <clayton@craftyguy.net>"
pkgname=postmarketos-ui-console
pkgver=0.1
pkgrel=11
pkgdesc="Console environment, with no graphical/touch UI"
url="https://postmarketos.org/"
arch="noarch"
license="GPL-3.0-or-later"
depends_openrc="networkmanager-openrc"
depends="
	dnsmasq
	postmarketos-base-ui
	postmarketos-base-ui-networkmanager
	wireless-tools
	"
install="$pkgname-openrc.post-install $pkgname-openrc.post-upgrade"
subpackages="$pkgname-openrc"
options="!check pmb:systemd" # No testsuite

package() {
	mkdir -p "$pkgdir"
}

openrc() {
	default_openrc
	mkdir -p "$subpkgdir"
}
