# Reference: https://postmarketos.org/uipkg
maintainer="hexaheximal <hexaheximal@proton.me>"
pkgname=postmarketos-ui-openbox
pkgver=1
pkgrel=3
pkgdesc="(X11) A highly configurable and lightweight X11 window manager (keyboard required)"
url="https://openbox.org/"
arch="noarch"
license="GPL-3.0-or-later"
depends_openrc="
	tinydm-openrc
	elogind-openrc
	networkmanager-openrc
"
depends="
	dmenu-virtual
	dnsmasq
	elogind
	openbox
	tinydm
	mesa-egl
	polkit-elogind
	postmarketos-base-ui
	postmarketos-base-ui-audio
	postmarketos-base-ui-networkmanager
	postmarketos-artwork-wallpapers
	xterm
	xorg-server
	"
install="$pkgname-openrc.post-install $pkgname-openrc.post-upgrade"
subpackages="$pkgname-openrc"
options="!check"

package() {
	mkdir -p "$pkgdir"
}

openrc() {
	default_openrc
	mkdir -p "$subpkgdir"
}
