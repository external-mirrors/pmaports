# Reference: https://postmarketos.org/uipkg
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=postmarketos-base-ui-plasma
pkgver=2
pkgrel=18
pkgdesc="Meta package for shared configuration for Plasma-based UIs"
url="https://postmarketos.org"
arch="noarch !armhf" # armhf is not supported
license="GPL-3.0-or-later"
depends="
	bluedevil
	breeze
	dnsmasq
	iio-sensor-proxy
	kunifiedpush
	kscreen
	kwallet-pam
	kwayland-integration
	modemmanager
	polkit-kde-agent-1
	postmarketos-base-ui
	postmarketos-base-ui-audio
	postmarketos-base-ui-networkmanager
	powerdevil
	urfkill
	xdg-desktop-portal-kde
	"
replaces="plasma-mobile-meta"
# Required to launch
depends="$depends
	xorg-server
	"
_pmb_recommends="
	breeze-gtk
	discover
	flatpak
	kaccounts-providers
	kde-gtk-config
	maliit-keyboard
	plasma-camera
	postmarketos-artwork-wallpapers
	tuned-ppd
	xdg-user-dirs
	"
subpackages="$pkgname-openrc $pkgname-systemd $pkgname-recommended"
source="
	drkonqirc
	gtk-app-wayland.sh
	kdewallet.kwl
	kdewallet.salt
	qtlogging.ini
	"
options="!check pmb:gpu-accel"

package() {
	install -Dm644 \
		"$srcdir"/qtlogging.ini \
		-t "$pkgdir"/etc/xdg/QtProject/

	install -Dm755 \
		"$srcdir"/gtk-app-wayland.sh \
		-t "$pkgdir"/etc/profile.d/

	install -Dm644 \
		"$srcdir"/drkonqirc \
		-t "$pkgdir"/etc/xdg/

	# TODO: remove once keyboard input bug is fixed
	# https://bugs.kde.org/show_bug.cgi?id=435183
	install -Dm600 -t "$pkgdir"/etc/skel/.local/share/kwalletd \
		"$srcdir"/kdewallet.kwl \
		"$srcdir"/kdewallet.salt
}

openrc() {
	install_if="$pkgname=$pkgver-r$pkgrel openrc"
	install="$subpkgname.post-install $subpkgname.post-upgrade"
	depends="
		bluez-openrc
		elogind
		elogind-openrc
		iio-sensor-proxy-openrc
		openrc
		networkmanager-openrc
		urfkill-openrc
	"

	mkdir -p "$subpkgdir"
}

systemd() {
	install_if="$pkgname=$pkgver-r$pkgrel systemd"
	depends="
		drkonqi
	"
	mkdir "$subpkgdir"
}

recommended() {
	pkgdesc="$pkgdesc (recommended apps)"
	depends="$_pmb_recommends"
	install_if="$pkgname=$pkgver-r$pkgrel postmarketos-duranium"

	mkdir -p "$subpkgdir"
}

