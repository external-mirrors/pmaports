pkgname=beebzzr
pkgver=0_git20251214
pkgrel=0
pkgdesc="Simple minimal vibration tool"
url="https://scm.dersco.re/utils/beebzzr.git"
arch="all"
license="AGPL-3.0-only"
options="!check" # no test suite
makedepends="clang llvm linux-headers"
_rev="2e32b7dbc8ca4633840e5dbc6b1c30e4ea0c4d00"
source="https://scm.dersco.re/utils/beebzzr.git/snapshot/beebzzr-$_rev.tar.gz"
builddir="$srcdir/beebzzr-$_rev"

build() {
	make
}

package() {
	mkdir -p "$pkgdir"/usr/bin/
	cp "$builddir"/beebzzr "$pkgdir"/usr/bin/
}

