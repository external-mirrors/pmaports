# Reference: https://postmarketos.org/uipkg
maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=postmarketos-ui-i3wm
pkgver=2
pkgrel=3
pkgdesc="(X11) Tiling WM (keyboard required)"
url="https://i3wm.org"
arch="noarch"
license="GPL-3.0-or-later"
source="
	i3-exec
	i3wm-pmos
	"
depends_openrc="
	elogind-openrc
	networkmanager-openrc
	tinydm-openrc
	"
depends="
	dmenu-virtual
	dnsmasq
	elogind
	feh
	i3status
	i3wm
	tinydm
	mesa-egl
	polkit-elogind
	postmarketos-base-ui
	postmarketos-base-ui-audio
	postmarketos-base-ui-networkmanager
	postmarketos-artwork-wallpapers
	st-virtual
	xorg-server
	"
install="$pkgname-openrc.post-install $pkgname-openrc.post-upgrade"
subpackages="$pkgname-openrc"
options="!check"
replaces="i3wm"

package() {
	install -D -m644 "$srcdir"/i3wm-pmos \
		"$pkgdir"/usr/share/i3/config.pmos
	install -Dm644 "$srcdir"/i3-exec \
		"$pkgdir"/usr/share/xsessions/i3.desktop
}

openrc() {
	default_openrc
	mkdir -p "$subpkgdir"
}

