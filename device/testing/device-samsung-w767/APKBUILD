# Reference: <https://postmarketos.org/devicepkg>
maintainer=""
pkgname=device-samsung-w767
pkgdesc="Samsung Galaxy Book S"
pkgver=6
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	linux-postmarketos-qcom-sc8180x>=6.6.0
	postmarketos-base
	soc-qcom-sc8180x
	systemd-boot
"
makedepends="devicepkg-dev"
source="deviceinfo kernel-cmdline.conf modules-initfs"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="WiFi firmware"
	depends="firmware-samsung-w767 linux-firmware-ath10k soc-qcom-sc8180x-nonfree-firmware"
	mkdir "$subpkgdir"
}


