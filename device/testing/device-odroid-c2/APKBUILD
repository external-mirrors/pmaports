# Reference: <https://postmarketos.org/devicepkg>
# Maintainer: Ferass El Hafidi <funderscore@postmarketos.org>
pkgname=device-odroid-c2
pkgdesc="HardKernel ODROID-C2"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	linux-postmarketos-amlogic
	postmarketos-base
	soc-amlogic-aarch64
	u-boot-amlogic-odroid-c2
"
makedepends="devicepkg-dev"
source="
	deviceinfo
	modules-initfs
"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="vdec firmware"
	depends="linux-firmware-meson"
	mkdir "$subpkgdir"
}

