# Archived: Downstream port, only for testing. Use mainline port (htc-flounder)!
# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-htc-flounder-downstream
pkgdesc="Google Nexus 9"
pkgver=4
pkgrel=0
url="https://postmarketos.org"
license="gpl-v3"
arch="aarch64"
options="!check !archcheck"
depends="postmarketos-base linux-htc-flounder-downstream mkbootimg"
makedepends="devicepkg-dev"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"
source="deviceinfo kernel-cmdline.conf"

build() {
	devicepkg_build $startdir $pkgname
}
package() {
	devicepkg_package $startdir $pkgname

}
nonfree_firmware() {
	pkgdesc="Firmware"
	depends="linux-firmware-brcm linux-firmware-cypress firmware-htc-flounder-downstream"
	mkdir "$subpkgdir"
}
