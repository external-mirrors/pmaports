build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Firmware for wifi."
	depends="firmware-samsung-nevisp"
	mkdir "$subpkgdir"
}
