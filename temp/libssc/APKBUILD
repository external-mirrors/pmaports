# Forked from Alpine to test Craftyguy patch

pkgname=libssc
pkgver=99990.2.2
_pkgver=5e699fc97d92684c6882741fc9f71cb57a33e25b
pkgrel=0
pkgdesc="Library to expose Qualcomm Sensor Core sensors"
url="https://codeberg.org/DylanVanAssche/libssc"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	eudev-dev
	glib-dev
	libgudev-dev
	linux-headers
	libqmi-dev
	meson
	protobuf-c-dev
	protobuf-dev
	python3-dev
	py3-gobject3
	py3-protobuf
	qrtr-libs
"
subpackages="$pkgname-dbg $pkgname-dev $pkgname-pyc"
builddir="$srcdir/$pkgname"
options="!check" # socket(AF_QIPCRTR): Address family not supported by protocol on many arches in CI
source="
  $pkgname-$_pkgver.tar.gz::https://codeberg.org/DylanVanAssche/libssc/archive/$_pkgver.tar.gz
  20251205-PR103.patch
"

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

check() {
	cd "$srcdir"/"$pkgname" && sh run-tests.sh
}

sha512sums="
