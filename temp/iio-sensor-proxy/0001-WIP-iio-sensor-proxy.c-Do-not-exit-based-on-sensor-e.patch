+	g_debug ("No sensors or missing kernel drivers for the sensors. Waiting for hotplug sensors");
 }
 
 static gboolean
@@ -1050,9 +1049,6 @@ sensor_changes (GUdevClient *client,
 				send_driver_changed_dbus_event (data, i);
 			}
 		}
